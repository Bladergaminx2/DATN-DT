@model IEnumerable<DATN_DT.Models.Pin>

@{
    ViewData["Title"] = "Quản lý Pin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Pin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Pin</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Pin
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Loại Pin</th>
                    <th>Dung lượng Pin</th>
                    <th>Công nghệ sạc</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdPin</td>
                        <td>@item.LoaiPin</td>
                        <td>@item.DungLuongPin</td>
                        <td>@item.CongNgheSac</td>
                        <td>@item.MoTaPin</td>
                        <td>
                            <button class="btn btn-sm btn-warning btn-edit"
                                    data-id="@item.IdPin"
                                    data-loai="@item.LoaiPin"
                                    data-dungluong="@item.DungLuongPin"
                                    data-congnghe="@item.CongNgheSac"
                                    data-mota="@item.MoTaPin">
                                Sửa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Pin</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Loại Pin <span class="text-danger">*</span></label>
                            <input type="text" id="LoaiPin" class="form-control" placeholder="Nhập loại pin" />
                            <small id="errorLoaiPin" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dung lượng Pin <span class="text-danger">*</span></label>
                            <input type="text" id="DungLuongPin" class="form-control" placeholder="Nhập dung lượng pin" />
                            <small id="errorDungLuongPin" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Công nghệ sạc <span class="text-danger">*</span></label>
                            <input type="text" id="CongNgheSac" class="form-control" placeholder="Nhập công nghệ sạc" />
                            <small id="errorCongNgheSac" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaPin" class="form-control" rows="3" placeholder="Nhập mô tả (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Pin</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdPin" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Loại Pin <span class="text-danger">*</span></label>
                            <input type="text" id="EditLoaiPin" class="form-control" />
                            <small id="errorEditLoaiPin" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dung lượng Pin <span class="text-danger">*</span></label>
                            <input type="text" id="EditDungLuongPin" class="form-control" />
                            <small id="errorEditDungLuongPin" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Công nghệ sạc <span class="text-danger">*</span></label>
                            <input type="text" id="EditCongNgheSac" class="form-control" />
                            <small id="errorEditCongNgheSac" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaPin" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // addda
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const pin = {
                LoaiPin: LoaiPin.value.trim(),
                DungLuongPin: DungLuongPin.value.trim(),
                CongNgheSac: CongNgheSac.value.trim(),
                MoTaPin: MoTaPin.value.trim()
            };

            const response = await fetch('/Pin/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(pin)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            ["errorLoaiPin", "errorDungLuongPin", "errorCongNgheSac"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.LoaiPin) showError("errorLoaiPin", data.LoaiPin);
                    if (data.DungLuongPin) showError("errorDungLuongPin", data.DungLuongPin);
                    if (data.CongNgheSac) showError("errorCongNgheSac", data.CongNgheSac);
                    return;
                }

                if (response.status === 409 && data.message) {
                    ["errorLoaiPin", "errorDungLuongPin", "errorCongNgheSac"]
                        .forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể thêm Pin. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

    
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdPin.value = btn.dataset.id;
                EditLoaiPin.value = btn.dataset.loai;
                EditDungLuongPin.value = btn.dataset.dungluong;
                EditCongNgheSac.value = btn.dataset.congnghe;
                EditMoTaPin.value = btn.dataset.mota;
                new bootstrap.Modal(editModal).show();
            });
        });

        // up update
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdPin.value;
            const pin = {
                IdPin: id,
                LoaiPin: EditLoaiPin.value.trim(),
                DungLuongPin: EditDungLuongPin.value.trim(),
                CongNgheSac: EditCongNgheSac.value.trim(),
                MoTaPin: EditMoTaPin.value.trim()
            };

            ["errorEditLoaiPin", "errorEditDungLuongPin", "errorEditCongNgheSac"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            const response = await fetch('/Pin/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(pin)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.LoaiPin) showError("errorEditLoaiPin", data.LoaiPin);
                    if (data.DungLuongPin) showError("errorEditDungLuongPin", data.DungLuongPin);
                    if (data.CongNgheSac) showError("errorEditCongNgheSac", data.CongNgheSac);
                    return;
                }

                if (response.status === 409 && data.message) {
                    ["errorEditLoaiPin", "errorEditDungLuongPin", "errorEditCongNgheSac"]
                        .forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể cập nhật Pin. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // Reset form khi đóng modal
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
</body>
</html>