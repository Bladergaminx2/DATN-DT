@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Thông tin cá nhân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
            padding-bottom: 50px;
        }

        .container {
            margin-top: 30px;
            max-width: 1200px;
        }

        .card {
            background-color: #1e1e2a;
            border: 1px solid #2b2b33;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .profile-header {
            background-color: #2b2b33;
            border-radius: 10px 10px 0 0;
            padding: 30px 20px;
            text-align: center;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid #4a90e2;
            margin: 0 auto 20px;
            overflow: hidden;
            background-color: #1e1e2a;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            position: relative;
        }

            .profile-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .profile-avatar i {
                font-size: 60px;
                color: #4a90e2;
            }

            .profile-avatar:hover {
                opacity: 0.8;
            }

        .avatar-upload-label {
            display: block;
            margin-top: 10px;
            color: #4a90e2;
            cursor: pointer;
            font-size: 0.9rem;
        }

            .avatar-upload-label:hover {
                color: #357ab8;
            }

        .profile-name {
            color: #ffffff !important;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .nav-tabs {
            border-bottom: 2px solid #2b2b33;
        }

        .nav-tabs .nav-link {
            color: #aaa;
            border: none;
            border-bottom: 3px solid transparent;
            padding: 15px 25px;
            background: transparent;
        }

            .nav-tabs .nav-link:hover {
                color: #fff;
                border-bottom-color: #4a90e2;
            }

            .nav-tabs .nav-link.active {
                color: #4a90e2;
                background: transparent;
                border-bottom-color: #4a90e2;
                font-weight: 600;
            }

        .tab-content {
            padding: 30px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
            border-radius: 6px;
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.25);
                background-color: #1e1e2a;
                color: white;
            }

        .form-label {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 5px;
            font-weight: 500;
            color: #ddd;
        }

        .required-star {
            color: #ff4d4d;
        }

        .btn-primary {
            background-color: #4a90e2;
            border: none;
        }

            .btn-primary:hover {
                background-color: #357ab8;
            }

        .stats-box {
            background-color: #2b2b33;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            text-align: center;
        }

            .stats-box .stat-label {
                color: #aaa;
                font-size: 0.9rem;
                margin-bottom: 5px;
            }

            .stats-box .stat-value {
                color: #4a90e2;
                font-size: 1.5rem;
                font-weight: 600;
            }

        .order-card {
            background-color: #2b2b33;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid #4a90e2;
            overflow: hidden;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: #2b2b33;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .order-header:hover {
            background-color: #36363f;
        }

        .order-header * {
            color: #ffffff !important;
        }

        .order-content {
            padding: 20px;
            background-color: #1e1e2a;
            border-top: 1px solid #444;
        }

        .order-status {
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-waiting {
            background-color: rgba(255, 193, 7, 0.2);
            color: #ffc107 !important;
        }

        .status-processing {
            background-color: rgba(0, 123, 255, 0.2);
            color: #007bff !important;
        }

        .status-completed {
            background-color: rgba(40, 167, 69, 0.2);
            color: #28a745 !important;
        }

        .order-item {
            display: flex;
            gap: 15px;
            padding: 10px;
            background-color: #2b2b33;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .order-item * {
            color: #ffffff !important;
        }

        .order-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 6px;
        }

        .status-group {
            margin-bottom: 30px;
        }


        .status-group-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #ffffff !important;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #4a90e2;
        }

        .accordion-button {
            background-color: #2b2b33;
            color: #ffffff !important;
            border: none;
        }

        .accordion-button:not(.collapsed) {
            background-color: #36363f;
            color: #ffffff !important;
        }

        .accordion-button:focus {
            box-shadow: none;
            border-color: #4a90e2;
        }

        .accordion-body {
            background-color: #1e1e2a;
            color: #ffffff !important;
        }

        .accordion-body * {
            color: #ffffff !important;
        }

        .text-muted {
            color: #aaa !important;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
            display: none;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1060;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #4a90e2;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .point-badge {
            background-color: rgba(255, 193, 7, 0.2);
            color: #ffc107;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            display: inline-block;
        }

        .address-card {
            background-color: #2b2b33;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid #4a90e2;
            transition: transform 0.2s;
        }

        .address-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .address-card.default {
            border-left-color: #ffc107;
            background-color: rgba(255, 193, 7, 0.1);
        }

        .address-card .card-title {
            color: #fff;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .address-card .card-text {
            color: #aaa;
            margin-bottom: 8px;
        }

        .address-card .badge {
            background-color: rgba(255, 193, 7, 0.3);
            color: #ffc107;
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 0.85rem;
        }

        .modal-content {
            background-color: #1e1e2a;
            border: 1px solid #2b2b33;
        }

        .modal-header {
            border-bottom: 1px solid #2b2b33;
        }

        .modal-title {
            color: white;
        }

        .modal-footer {
            border-top: 1px solid #2b2b33;
        }

        .btn-outline-primary {
            border-color: #4a90e2;
            color: #4a90e2;
        }

        .btn-outline-primary:hover {
            background-color: #4a90e2;
            border-color: #4a90e2;
            color: white;
        }

        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #12121d;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

        .nav-pills .nav-link {
            color: #aaa;
            background-color: #2b2b33;
            border: 1px solid #444;
            margin-right: 5px;
            margin-bottom: 5px;
        }

        .nav-pills .nav-link.active {
            background-color: #4a90e2;
            color: white;
            border-color: #4a90e2;
        }

        .nav-pills .nav-link:hover {
            color: #fff;
            background-color: #357ab8;
            border-color: #357ab8;
        }

        .order-detail-item {
            background-color: #2b2b33;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .status-0 {
            background-color: rgba(255, 193, 7, 0.2);
            color: #ffc107;
        }

        .status-1 {
            background-color: rgba(0, 123, 255, 0.2);
            color: #007bff;
        }

        .status-2 {
            background-color: rgba(23, 162, 184, 0.2);
            color: #17a2b8;
        }

        .status-3 {
            background-color: rgba(40, 167, 69, 0.2);
            color: #28a745;
        }

        .status-4 {
            background-color: rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Alerts -->
    <div class="alert alert-success alert-dismissible fade show" id="successAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span id="successMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('successAlert')"></button>
    </div>

    <div class="alert alert-danger alert-dismissible fade show" id="errorAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="errorMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('errorAlert')"></button>
    </div>

    <div class="container">
        <!-- Back Button and Logout -->
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-primary" onclick="goToHomePage()">
                <i class="bi bi-arrow-left me-2"></i>Quay lại trang mua hàng
            </button>
            <button type="button" class="btn btn-danger" onclick="logout()">
                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
            </button>
        </div>

        <div class="card">
            <!-- Profile Header -->
            <div class="profile-header">
                <div class="profile-avatar" id="avatarContainer" onclick="document.getElementById('avatarInput').click()">
                    <i class="bi bi-person-circle" id="avatarIcon"></i>
                </div>
                <label class="avatar-upload-label" for="avatarInput">
                    <i class="bi bi-camera me-1"></i>Thay đổi ảnh
                </label>
                <input type="file" id="avatarInput" accept="image/*" style="display: none;">
                <div class="mt-3">
                    <h1 class="profile-name" id="profileName" style="color: #ffffff; font-size: 1.8rem; font-weight: 600; margin-bottom: 10px;">Khách hàng</h1>
                    <div class="mt-3">
                        <span class="point-badge">
                            <i class="bi bi-star-fill me-1"></i>Điểm tích lũy: <span id="diemTichLuy">0</span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="personal-tab" data-bs-toggle="tab" data-bs-target="#personal" type="button" role="tab">
                        <i class="bi bi-person-vcard me-2"></i>Thông tin cá nhân
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="account-tab" data-bs-toggle="tab" data-bs-target="#account" type="button" role="tab">
                        <i class="bi bi-shield-lock me-2"></i>Tài khoản & Bảo mật
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="address-tab" data-bs-toggle="tab" data-bs-target="#address" type="button" role="tab">
                        <i class="bi bi-geo-alt me-2"></i>Địa chỉ giao hàng
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">
                        <i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="profileTabContent">
                <!-- Tab 1: Thông tin cá nhân -->
                <div class="tab-pane fade show active" id="personal" role="tabpanel">
                    <form id="profileForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        Họ và tên <span class="required-star">*</span>
                                    </label>
                                    <input type="text" id="HoTenKhachHang" class="form-control" required maxlength="100" />
                                    <div id="errorHoTenKhachHang" class="text-danger d-none"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        Số điện thoại <span class="required-star">*</span>
                                    </label>
                                    <input type="tel" id="SdtKhachHang" class="form-control" required maxlength="15" />
                                    <div id="errorSdtKhachHang" class="text-danger d-none"></div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" id="EmailKhachHang" class="form-control" maxlength="100" />
                            <div id="errorEmailKhachHang" class="text-danger d-none"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày sinh</label>
                                    <input type="date" id="NgaySinh" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giới tính</label>
                                    <select id="GioiTinh" class="form-control">
                                        <option value="">Chọn giới tính</option>
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="button" class="btn btn-primary" onclick="saveProfile()">
                                <i class="bi bi-save me-1"></i>Lưu thông tin
                            </button>
                            <button type="button" class="btn btn-secondary ms-2" onclick="cancelChanges()">
                                <i class="bi bi-x-circle me-1"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Tab 2: Tài khoản & Bảo mật -->
                <div class="tab-pane fade" id="account" role="tabpanel">
                    <div class="mb-4">
                        <h5><i class="bi bi-envelope me-2"></i>Quản lý Email</h5>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group">
                                <input type="email" id="EmailKhachHangDisplay" class="form-control" readonly style="background-color: #2b2b33; color: #aaa; cursor: not-allowed;" />
                                <button type="button" class="btn btn-outline-primary" onclick="openChangeEmailModal()">
                                    <i class="bi bi-pencil-square me-1"></i>Đổi email
                                </button>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h5><i class="bi bi-key me-2"></i>Đổi mật khẩu</h5>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu hiện tại</label>
                            <input type="password" id="CurrentPassword" class="form-control" />
                            <div id="errorCurrentPassword" class="text-danger d-none"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mật khẩu mới</label>
                                    <input type="password" id="NewPassword" class="form-control" />
                                    <div id="errorNewPassword" class="text-danger d-none"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Xác nhận mật khẩu</label>
                                    <input type="password" id="ConfirmPassword" class="form-control" />
                                    <div id="errorConfirmPassword" class="text-danger d-none"></div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="changePassword()">
                            <i class="bi bi-key me-1"></i>Đổi mật khẩu
                        </button>
                    </div>
                </div>

                <!-- Tab 3: Địa chỉ giao hàng -->
                <div class="tab-pane fade" id="address" role="tabpanel">
                    <div id="addressList" class="row">
                        <div class="col-12">
                        <p class="text-muted">Đang tải địa chỉ...</p>
                    </div>
                    </div>
                    <button type="button" class="btn btn-primary mt-3" onclick="openAddAddressModal()">
                        <i class="bi bi-plus-circle me-1"></i>Thêm địa chỉ mới
                    </button>
                </div>

                <!-- Tab 4: Lịch sử đơn hàng -->
                <div class="tab-pane fade" id="orders" role="tabpanel">
                    <!-- Filter Tabs -->
                    <ul class="nav nav-pills mb-4" id="orderStatusTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-orders-tab" data-status="all" type="button">
                                <i class="bi bi-list-ul me-1"></i>Tất cả đơn hàng
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pending-orders-tab" data-status="0" type="button">
                                <i class="bi bi-hourglass-split me-1"></i>Chờ xác nhận
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="confirmed-orders-tab" data-status="1" type="button">
                                <i class="bi bi-check-circle me-1"></i>Đã xác nhận
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="shipping-orders-tab" data-status="2" type="button">
                                <i class="bi bi-truck me-1"></i>Đang vận chuyển
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="completed-orders-tab" data-status="3" type="button">
                                <i class="bi bi-check2-circle me-1"></i>Giao hàng thành công
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="cancelled-orders-tab" data-status="4" type="button">
                                <i class="bi bi-x-circle me-1"></i>Hủy đơn hàng
                            </button>
                        </li>
                    </ul>

                    <!-- Orders List -->
                    <div id="ordersList">
                        <p class="text-muted">Đang tải đơn hàng...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Đổi Email -->
    <div class="modal fade" id="changeEmailModal" tabindex="-1" aria-labelledby="changeEmailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: #1e1e2a; border: 1px solid #2b2b33;">
                <div class="modal-header" style="border-bottom: 1px solid #2b2b33;">
                    <h5 class="modal-title" id="changeEmailModalLabel" style="color: white;">
                        <i class="bi bi-envelope me-2"></i>Đổi email
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="changeEmailForm">
                        <div class="mb-3">
                            <label class="form-label">Email hiện tại</label>
                            <input type="email" id="currentEmail" class="form-control" readonly style="background-color: #2b2b33; color: #aaa; cursor: not-allowed;" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                Email mới <span class="required-star">*</span>
                            </label>
                            <input type="email" id="newEmail" class="form-control" placeholder="Nhập email mới" />
                            <div id="errorNewEmail" class="text-danger d-none mt-1"></div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                Mật khẩu xác nhận <span class="required-star">*</span>
                            </label>
                            <input type="password" id="confirmPasswordForEmail" class="form-control" placeholder="Nhập mật khẩu để xác nhận" />
                            <div id="errorConfirmPasswordForEmail" class="text-danger d-none mt-1"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer" style="border-top: 1px solid #2b2b33;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
