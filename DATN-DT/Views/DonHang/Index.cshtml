        // Kiểm tra IMEI và số lượng tồn kho trước khi thanh toán
        async function checkImeiAndInventory() {
            var errors = [];
            
            for (var i = 0; i < selectedProducts.length; i++) {
                var product = selectedProducts[i];
                
                // Kiểm tra số lượng tồn kho hiện tại và danh sách IMEI còn hàng
                try {
                    var tonKhoResponse = await $.get('@Url.Action("GetProductDetail", "DonHang")', { id: product.idModelSanPham });
                    if (tonKhoResponse && tonKhoResponse.success) {
                        var soLuongTon = tonKhoResponse.data.soLuongTon || 0;
                        if (soLuongTon <= 0) {
                            errors.push('Sản phẩm "' + product.tenSanPham + ' - ' + product.tenModel + '" đã hết hàng (số lượng tồn = 0)');
                            continue;
                        }
                        
                        // Lấy danh sách IMEI còn hàng từ response
                        var availableImeis = tonKhoResponse.data.imeis || [];
                        
                        // Kiểm tra từng IMEI đã chọn có còn trong danh sách IMEI còn hàng không
                        if (product.selectedImeis && product.selectedImeis.length > 0) {
                            for (var j = 0; j < product.selectedImeis.length; j++) {
                                var imeiId = parseInt(product.selectedImeis[j]);
                                
                                // Tìm IMEI trong danh sách còn hàng (so sánh cả number và string)
                                var imeiFound = availableImeis.some(function(imei) {
                                    return parseInt(imei.idImei) === imeiId;
                                });
                                
                                if (!imeiFound) {
                                    // Tìm mã IMEI để hiển thị trong thông báo lỗi
                                    var imeiInfo = product.imeis ? product.imeis.find(function(i) { 
                                        return parseInt(i.idImei) === imeiId; 
                                    }) : null;
                                    var imeiCode = imeiInfo ? imeiInfo.maImei : (product.maImei || imeiId);
                                    errors.push('IMEI "' + imeiCode + '" của sản phẩm "' + product.tenModel + '" đã được bán hoặc không còn khả dụng');
                                }
                            }
                        }
                    } else {
                        errors.push('Không thể kiểm tra số lượng tồn kho của sản phẩm "' + product.tenModel + '"');
                    }
                } catch (error) {
                    errors.push('Lỗi khi kiểm tra sản phẩm "' + product.tenModel + '": ' + (error.message || 'Không xác định'));
                }
            }
            
            return errors;
        }

        async function thanhToan() {
            // Lấy nút thanh toán và disable ngay lập tức
            var btnThanhToan = $('button[onclick="thanhToan()"]');
            var originalBtnHtml = btnThanhToan.html();
            
            // Validation checks trước khi disable nút
            if (selectedProducts.length === 0) {
                alert('Vui lòng chọn ít nhất một sản phẩm');
                return;
            }

            var hasMissingImei = selectedProducts.some(function (p) { return !p.selectedImeis || p.selectedImeis.length === 0; });
            if (hasMissingImei) {
                alert('Vui lòng chọn IMEI cho tất cả sản phẩm trước khi thanh toán');
                return;
            }

            if (!validateKhachHang()) {
                alert('Vui lòng kiểm tra lại thông tin khách hàng');
                return;
            }

            var tongThanhToan = parseFloat($('#tongThanhToan').text().replace(/[^0-9]/g, '')) || 0;
            var tienKhachDua = parseFloat($('#tienKhachDua').val()) || 0;
            var tienThua = tienKhachDua - tongThanhToan;
            
            if (tienThua < 0) {
                alert('Không thanh toán - Số tiền khách đưa chưa đủ! Còn thiếu: ' + Math.abs(tienThua).toLocaleString() + ' đ');
                return;
            }

            // Sau khi validation thành công, disable nút và hiển thị loading
            btnThanhToan.prop('disabled', true).addClass('disabled').html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...');

            try {

                // Hiển thị loading overlay ngay từ đầu
                showLoading("Đang kiểm tra IMEI và số lượng tồn kho...");
                
                try {
                    var checkErrors = await checkImeiAndInventory();
                    if (checkErrors && checkErrors.length > 0) {
                        hideLoading();
                        btnThanhToan.prop('disabled', false).removeClass('disabled').html(originalBtnHtml);
                        var errorMessage = 'Không thể thanh toán vì:\n\n' + checkErrors.join('\n');
                        alert(errorMessage);
                        return;
                    }
                } catch (error) {
                    hideLoading();
                    btnThanhToan.prop('disabled', false).removeClass('disabled').html(originalBtnHtml);
                    console.error('Lỗi khi kiểm tra IMEI và tồn kho:', error);
                    alert('Lỗi khi kiểm tra IMEI và số lượng tồn kho. Vui lòng thử lại.');
                    return;
                }

                // Cập nhật text loading khi bắt đầu xử lý thanh toán
                showLoading("Đang xử lý thanh toán...");

                var orderData = {
                    IdKhachHang: $('#khachHangSelect').val() || null,
                    TenKhachHang: $('#tenKhachHang').val().trim() || '',
                    SdtKhachHang: $('#sdtKhachHang').val().trim() || '',
                    DiaChiGiaoHang: 'Thanh Toán Tại Quầy',
                    PhuongThucThanhToan: $('#phuongThucTT').val(),
                    ChiTietDonHang: selectedProducts.map(function (p) {
                        return {
                            IdModelSanPham: p.idModelSanPham,
                            SoLuong: p.soLuong,
                            SelectedImeis: p.selectedImeis,
                            IdKhuyenMai: p.idKhuyenMai || null
                        };
                    })
                };

                $.post('@Url.Action("Create", "DonHang")', orderData, function (response) {
                    hideLoading();
                    btnThanhToan.prop('disabled', false).removeClass('disabled').html(originalBtnHtml);
                    
                    if (response && response.success) {
                        var message = 'Thanh toán thành công!\nMã đơn: ' + response.maDon + '\nNgày bảo hành: ' + response.ngayBaoHanh;
                        alert(message);
                        
                        if (response.pdfUrl && response.maDon) {
                            window.location.href = response.pdfUrl;
                        } else {
                            setTimeout(function() {
                                location.reload();
                            }, 2000);
                        }
                    } else {
                        alert('Lỗi: ' + (response ? response.message : 'Không xác định'));
                    }
                }).fail(function(xhr, status, error) {
                    hideLoading();
                    btnThanhToan.prop('disabled', false).removeClass('disabled').html(originalBtnHtml);
                    console.error('Lỗi AJAX:', error);
                    alert('Có lỗi xảy ra khi thanh toán. Vui lòng thử lại.');
                });
            } catch (error) {
                hideLoading();
                btnThanhToan.prop('disabled', false).removeClass('disabled').html(originalBtnHtml);
                console.error('Lỗi không mong đợi:', error);
                alert('Có lỗi xảy ra. Vui lòng thử lại.');
            }
        }

        $(document).ready(function () {
            $('#tienKhachDua').on('input', function() {
                var tongThanhToan = parseFloat($('#tongThanhToan').text().replace(/[^0-9]/g, '')) || 0;
                var tienKhachDua = parseFloat($(this).val()) || 0;
                var tienThua = tienKhachDua - tongThanhToan;
                
                if (tienThua >= 0) {
                    $('#tienThua').text(renderPrice(tienThua)).removeClass('text-danger').addClass('text-info');
                    $('#tienThuaWarning').addClass('d-none');
                } else {
                    $('#tienThua').text(renderPrice(Math.abs(tienThua)) + ' (thiếu)').removeClass('text-info').addClass('text-danger');
                    $('#tienThuaWarning').removeClass('d-none');
                }
            });

            $('#khachHangSelect').on('change', function () {
                var diem = $(this).find('option:selected').data('diem');
                $('#diemTichLuy').text('Điểm: ' + (diem || 0));
                $('#idKhachHang').val($(this).val());
                var selectedText = $(this).find('option:selected').text() || '';
                var parts = selectedText.split(' - ');
                $('#tenKhachHang').val(parts[0] || '').prop('disabled', !!$(this).val());
                $('#sdtKhachHang').val(parts[1] || '').prop('disabled', !!$(this).val());
                $('#tenKhachHangError').addClass('d-none').text('');
                $('#sdtKhachHangError').addClass('d-none').text('');
            });

            $('#tenKhachHang').on('blur', function() {
                if (!$(this).prop('disabled')) {
                    validateKhachHang();
                }
            });

            $('#sdtKhachHang').on('blur', function() {
                if (!$(this).prop('disabled')) {
                    validateKhachHang();
                }
            });

            $('#sdtKhachHang').on('input', function() {
                var value = $(this).val().replace(/\s/g, '');
                if (value !== $(this).val()) {
                    $(this).val(value);
                }
            });

            $('#searchProduct').keypress(function (e) {
                if (e.which === 13) {
                    searchProducts();
                }
            });

            // Event handler cho việc chọn IMEI trong modal
            $(document).on('change', '#modalImeiSelect', function() {
                var selectedImei = $(this).val();
                var addButton = $('#productDetailModal .btn-primary');
                
                if (selectedImei && selectedImei !== '') {
                    addButton.prop('disabled', false).removeClass('disabled').html('<i class="fas fa-plus me-1"></i>Thêm vào hóa đơn');
                } else {
                    addButton.prop('disabled', true).addClass('disabled').html('<i class="fas fa-ban me-1"></i>Vui lòng chọn IMEI');
                }
            });
            });

        window.searchProducts = searchProducts;
        window.showModelDetail = showModelDetail;
        window.addSelectedProduct = addSelectedProduct;
        window.removeSelectedProduct = removeSelectedProduct;
        window.selectProduct = selectProduct;
    </script>
</body>
