@{
    ViewData["Title"] = "Quản lý Hóa Đơn Offline";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Hóa Đơn Offline</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-sidebar: #1e293b;
            --bg-header: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary) !important;
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            font-size: 14px;
            min-height: 100vh;
        }
        
        * {
            color: inherit;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: var(--text-primary) !important;
            font-weight: 700;
            font-size: 28px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .table-container {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            box-shadow: var(--shadow-lg);
            color: var(--text-primary) !important;
        }
        
        .table-container * {
            color: var(--text-primary) !important;
        }
        
        .text-muted {
            color: var(--text-secondary) !important;
        }

        table {
            background-color: transparent;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 0;
        }

        th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%) !important;
            color: var(--text-primary) !important;
            font-weight: 600;
            font-size: 14px;
            border-bottom: 2px solid var(--border-color);
            padding: 15px 10px;
        }

        td {
            color: var(--text-primary) !important;
            background-color: var(--bg-card) !important;
            padding: 14px 10px;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
            font-size: 14px;
            font-weight: 400;
        }
        
        td strong {
            color: var(--text-primary) !important;
            font-weight: 600 !important;
            font-size: 14px !important;
        }

        tr {
            background-color: var(--bg-card) !important;
        }

        tr:hover {
            background-color: rgba(99, 102, 241, 0.1) !important;
            transition: 0.3s;
        }
        
        tr:hover td {
            background-color: rgba(99, 102, 241, 0.1) !important;
            color: var(--text-primary) !important;
        }

        .btn-action {
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin: 2px;
            transition: all 0.3s ease;
            white-space: nowrap;
        }
        
        .d-flex.gap-2 {
            gap: 8px;
        }

        .btn-view {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            color: white;
        }

        .btn-view:hover {
            background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .modal-content {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 12px;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-bottom: 1px solid var(--border-color);
            padding: 20px;
            color: white;
        }

        .modal-title {
            font-weight: 600;
            color: white;
        }

        .modal-body {
            padding: 20px;
            color: var(--text-primary);
        }

        .modal-body * {
            color: var(--text-primary);
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            padding: 20px;
            background-color: var(--bg-card);
        }

        .form-control, .form-select {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 10px 15px;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            background-color: #1e293b;
            color: var(--text-primary);
        }

        .form-label {
            font-weight: 500;
            color: var(--text-primary) !important;
            margin-bottom: 8px;
            font-size: 14px;
        }
        
        .form-control::placeholder {
            color: var(--text-secondary) !important;
            opacity: 1;
        }

        .filter-container {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 13px !important;
            font-weight: 600 !important;
            display: inline-block;
            min-width: 120px;
            text-align: center;
        }

        .status-0 {
            background-color: rgba(245, 158, 11, 0.1);
            color: var(--warning-color);
        }

        .status-1 {
            background-color: rgba(16, 185, 129, 0.1);
            color: var(--success-color);
        }

        .payment-badge {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .payment-offline {
            background-color: rgba(14, 165, 233, 0.15);
            color: #0ea5e9;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: linear-gradient(135deg, var(--bg-card) 0%, #0f172a 100%);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            box-shadow: var(--shadow-md);
            border-left: 4px solid var(--primary-color);
        }

        .stat-card.offline {
            border-left-color: #0ea5e9;
        }

        .stat-card .stat-label {
            color: var(--text-secondary);
            font-size: 13px;
            margin-bottom: 8px;
        }

        .stat-card .stat-value {
            color: var(--text-primary);
            font-size: 24px;
            font-weight: 700;
        }

        .invoice-item {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .invoice-item * {
            color: var(--text-primary);
        }

        .invoice-detail-row {
            display: flex;
            gap: 15px;
            padding: 10px;
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .invoice-detail-row img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="bi bi-shop me-2"></i>Quản lý Hóa Đơn Offline</h2>

        <!-- Statistics Section -->
        <div class="stats-row" id="statsContainer">
            <div class="stat-card">
                <div class="stat-label">Tổng số đơn hàng</div>
                <div class="stat-value" id="totalOrders">0</div>
            </div>
            <div class="stat-card offline">
                <div class="stat-label">Đơn hàng Offline</div>
                <div class="stat-value" id="offlineOrders">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Tổng doanh thu</div>
                <div class="stat-value" id="totalRevenue">0 ₫</div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-container">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" id="searchInput" class="form-control" placeholder="Mã đơn, tên khách hàng, SĐT...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" id="fromDate" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" id="toDate" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary w-100" onclick="loadOrders()">
                        <i class="bi bi-search me-1"></i>Tìm kiếm
                    </button>
                </div>
            </div>

            <!-- Payment Method Filter -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <label class="form-label">Phương thức thanh toán</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="paymentType" id="allType" value="" checked>
                        <label class="btn btn-outline-primary" for="allType">
                            <i class="bi bi-grid-3x3-gap me-1"></i>Tất cả
                        </label>
                        
                        <input type="radio" class="btn-check" name="paymentType" id="cashType" value="Tiền mặt">
                        <label class="btn btn-outline-success" for="cashType">
                            <i class="bi bi-cash-coin me-1"></i>Tiền mặt
                        </label>
                        
                        <input type="radio" class="btn-check" name="paymentType" id="transferType" value="Chuyển khoản">
                        <label class="btn btn-outline-info" for="transferType">
                            <i class="bi bi-bank me-1"></i>Chuyển khoản
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Container -->
        <div class="table-container">
            <div id="ordersTableContainer">
                <p class="text-center text-muted">Đang tải dữ liệu...</p>
            </div>
        </div>
    </div>

    <!-- Modal Chi tiết Đơn hàng -->
    <div class="modal fade" id="orderDetailModal" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderDetailModalLabel">
                        <i class="bi bi-receipt me-2"></i>Chi tiết Đơn hàng
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="orderDetailContent">
                    <p class="text-muted">Đang tải chi tiết...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Format tiền
        function formatMoney(amount) {
            return new Intl.NumberFormat('vi-VN').format(amount) + ' ₫';
        }

        // Load danh sách đơn hàng offline
        async function loadOrders() {
            try {
                var search = document.getElementById('searchInput').value;
                var fromDate = document.getElementById('fromDate').value;
                var toDate = document.getElementById('toDate').value;
                
                // Lấy phương thức thanh toán đã chọn
                var paymentMethod = '';
                var paymentRadio = document.querySelector('input[name="paymentType"]:checked');
                if (paymentRadio && paymentRadio.value) {
                    paymentMethod = paymentRadio.value;
                }

                var url = '/DonHang/GetOfflineOrders?';
                if (search) url += 'search=' + encodeURIComponent(search) + '&';
                if (fromDate) url += 'fromDate=' + encodeURIComponent(fromDate) + '&';
                if (toDate) url += 'toDate=' + encodeURIComponent(toDate) + '&';
                if (paymentMethod) url += 'paymentMethod=' + encodeURIComponent(paymentMethod) + '&';

                const response = await fetch(url);
                const result = await response.json();

                var container = document.getElementById('ordersTableContainer');
                if (!result.success) {
                    container.innerHTML = '<p class="text-center text-danger" style="color: #dc3545 !important;">Lỗi: ' + (result.message || 'Không thể tải dữ liệu') + '</p>';
                    return;
                }

                var html = '<table class="table table-hover" style="width: 100%;">' +
                    '<thead>' +
                    '<tr>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Mã đơn</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Phương thức</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Khách hàng</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Nhân viên</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Ngày đặt</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Trạng thái</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Tổng tiền</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Số lượng SP</th>' +
                    '<th style="color: #ffffff !important; font-size: 15px !important; font-weight: 700 !important;">Thao tác</th>' +
                    '</tr>' +
                    '</thead>' +
                    '<tbody>';

                if (!result.data || result.data.length === 0) {
                    html += '<tr><td colspan="9" class="text-center" style="color: #b0b0b0 !important; font-size: 15px !important; padding: 30px !important;"><i class="bi bi-inbox me-2"></i>Không có đơn hàng nào.</td></tr>';
                } else {
                    // Tính thống kê
                    var totalCount = result.data.length;
                    var totalRevenue = 0;

                    for (var i = 0; i < result.data.length; i++) {
                        var order = result.data[i];
                        totalRevenue += (order.tongTien || 0);
                    }

                    // Cập nhật thống kê
                    document.getElementById('totalOrders').textContent = totalCount;
                    document.getElementById('offlineOrders').textContent = totalCount;
                    document.getElementById('totalRevenue').textContent = formatMoney(totalRevenue);

                    for (var i = 0; i < result.data.length; i++) {
                        var order = result.data[i];
                        
                        var statusClass = 'status-' + (order.trangThaiSo !== undefined ? order.trangThaiSo : 1);
                        var statusName = order.trangThaiSo === 1 ? 'Đã thanh toán' : 'Chưa thanh toán';
                        
                        var maDon = order.maDon || 'N/A';
                        var hoTen = order.hoTenKhachHang || 'N/A';
                        var sdt = order.sdtKhachHang || '';
                        var hoTenNhanVien = order.hoTenNhanVien || 'N/A';
                        var ngayDat = order.ngayDat || 'N/A';
                        var tongTien = order.tongTien !== undefined && order.tongTien !== null ? order.tongTien : 0;
                        var soLuongSP = order.soLuongSanPham !== undefined && order.soLuongSanPham !== null ? order.soLuongSanPham : 0;
                        var phuongThuc = order.phuongThucThanhToan || 'Tiền mặt';
                        var paymentBadge = phuongThuc === 'Tiền mặt'
                            ? '<span class="payment-badge payment-offline"><i class="bi bi-cash-coin me-1"></i>Tiền mặt</span>'
                            : '<span class="payment-badge payment-offline"><i class="bi bi-bank me-1"></i>Chuyển khoản</span>';

                        html += '<tr>' +
                            '<td style="color: #ffffff !important; font-size: 14px !important;"><strong style="color: #ffffff !important; font-weight: 600 !important;">' + maDon + '</strong></td>' +
                            '<td style="font-size: 14px !important;">' + paymentBadge + '</td>' +
                            '<td style="color: #ffffff !important; font-size: 14px !important;">' +
                            '<div style="font-weight: 600; color: #ffffff !important; margin-bottom: 4px;">' + hoTen + '</div>' +
                            (sdt ? '<small style="color: #b0b0b0 !important; font-size: 12px !important;"><i class="bi bi-telephone me-1"></i>' + sdt + '</small>' : '') +
                            '</td>' +
                            '<td style="color: #f1f5f9 !important; font-size: 14px !important;">' +
                            (hoTenNhanVien !== 'N/A' ? '<span style="color: #667eea !important; font-weight: 500;"><i class="bi bi-person-badge me-1"></i>' + hoTenNhanVien + '</span>' : '<span class="text-muted">Chưa có</span>') +
                            '</td>' +
                            '<td style="color: #f1f5f9 !important; font-size: 14px !important;">' + ngayDat + '</td>' +
                            '<td style="font-size: 14px !important;"><span class="status-badge ' + statusClass + '">' + statusName + '</span></td>' +
                            '<td style="font-size: 14px !important;"><strong style="color: #28a745 !important; font-weight: 600 !important; font-size: 14px !important;">' + formatMoney(tongTien) + '</strong></td>' +
                            '<td style="font-size: 14px !important;"><span class="badge bg-secondary" style="font-size: 12px !important;">' + soLuongSP + '</span></td>' +
                            '<td>' +
                            '<div class="d-flex gap-2 flex-wrap">' +
                            '<button class="btn btn-view btn-action" onclick="showOrderDetail(' + order.idDonHang + ')">' +
                            '<i class="bi bi-eye me-1"></i>Chi tiết</button>' +
                            '</div>' +
                            '</td>' +
                            '</tr>';
                    }
                }

                html += '</tbody></table>';
                container.innerHTML = html;
            } catch (error) {
                console.error('Error loading orders:', error);
                document.getElementById('ordersTableContainer').innerHTML =
                    '<p class="text-center text-danger">Lỗi khi tải danh sách đơn hàng.</p>';
            }
        }

        // Xem chi tiết đơn hàng
        async function showOrderDetail(id) {
            try {
                const response = await fetch('/DonHang/GetOfflineOrderDetail?id=' + id);
                const result = await response.json();

                if (!result.success || !result.data) {
                    alert('Không tìm thấy chi tiết đơn hàng');
                    return;
                }

                var order = result.data;
                var statusClass = 'status-' + order.trangThaiSo;
                var statusName = order.trangThaiSo === 1 ? 'Đã thanh toán' : 'Chưa thanh toán';

                var chiTietHtml = '';
                if (order.chiTiet && order.chiTiet.length > 0) {
                    for (var i = 0; i < order.chiTiet.length; i++) {
                        var item = order.chiTiet[i];
                        var imeiHtml = '';
                        if (item.imeis && item.imeis.length > 0) {
                            imeiHtml = '<p class="mb-1" style="color: #aaa !important; font-size: 12px;"><strong>IMEI:</strong> ' + item.imeis.join(', ') + '</p>';
                        }
                        chiTietHtml += '<div class="invoice-detail-row">' +
                            '<img src="' + (item.hinhAnh || '/images/default-product.jpg') + '" alt="' + (item.tenSanPham || '') + '" ' +
                            'onerror="this.src=\'/images/default-product.jpg\'">' +
                            '<div class="flex-grow-1">' +
                            '<h6 style="color: #ffffff !important;">' + (item.tenSanPham || '') + '</h6>' +
                            '<p class="text-muted mb-1" style="color: #aaa !important;">Model: ' + (item.tenModel || '') + ' - Màu: ' + (item.mau || '') + '</p>' +
                            '<p class="mb-1" style="color: #aaa !important;">RAM/ROM: ' + (item.ram || '') + ' / ' + (item.rom || '') + '</p>' +
                            imeiHtml +
                            '<p class="mb-1" style="color: #ffffff !important;">Đơn giá: ' + formatMoney(item.donGia || 0) + '</p>' +
                            '<p class="mb-0" style="color: #ffffff !important;"><strong>Thành tiền: ' + formatMoney(item.thanhTien || 0) + '</strong></p>' +
                            '</div>' +
                            '</div>';
                    }
                }

                var paymentInfoHtml = '';
                if (order.tienKhachDua !== null && order.tienKhachDua !== undefined) {
                    paymentInfoHtml = '<p class="mb-1" style="color: #ffffff !important;"><strong>Tiền khách đưa:</strong> ' + formatMoney(order.tienKhachDua) + '</p>';
                    if (order.tienThua !== null && order.tienThua !== undefined) {
                        paymentInfoHtml += '<p class="mb-1" style="color: #ffffff !important;"><strong>Tiền thừa:</strong> ' + formatMoney(order.tienThua) + '</p>';
                    }
                }

                var detailHtml = '<div class="invoice-item">' +
                    '<h6>Thông tin đơn hàng</h6>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Mã đơn:</strong> ' + (order.maDon || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Ngày đặt:</strong> ' + (order.ngayDat || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Trạng thái:</strong> <span class="status-badge ' + statusClass + '">' + statusName + '</span></p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Phương thức thanh toán:</strong> ' + (order.phuongThucThanhToan || 'Tiền mặt') + '</p>' +
                    paymentInfoHtml +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Tổng tiền:</strong> <strong class="text-primary">' + formatMoney(order.tongTien || 0) + '</strong></p>' +
                    '</div>' +
                    '<div class="invoice-item">' +
                    '<h6>Thông tin khách hàng</h6>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Họ tên:</strong> ' + (order.hoTenKhachHang || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>SĐT:</strong> ' + (order.sdtKhachHang || '') + '</p>' +
                    '</div>' +
                    '<div class="invoice-item">' +
                    '<h6>Thông tin nhân viên</h6>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Nhân viên bán hàng:</strong> ' + 
                    ((order.hoTenNhanVien && order.hoTenNhanVien !== 'N/A') ? '<span style="color: #667eea !important;"><i class="bi bi-person-badge me-1"></i>' + order.hoTenNhanVien + '</span>' : '<span class="text-muted">Chưa có</span>') + '</p>' +
                    '</div>' +
                    '<div class="invoice-item">' +
                    '<h6>Chi tiết sản phẩm</h6>' +
                    chiTietHtml +
                    '</div>';

                document.getElementById('orderDetailContent').innerHTML = detailHtml;

                var modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
                modal.show();
            } catch (error) {
                console.error('Error loading order detail:', error);
                alert('Lỗi khi tải chi tiết đơn hàng');
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            loadOrders();

            // Setup payment method filter
            var paymentRadios = document.querySelectorAll('input[name="paymentType"]');
            for (var i = 0; i < paymentRadios.length; i++) {
                paymentRadios[i].addEventListener('change', function () {
                    loadOrders();
                });
            }

            // Search on Enter
            document.getElementById('searchInput').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    loadOrders();
                }
            });
        });
    </script>
