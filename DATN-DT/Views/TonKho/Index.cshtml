        }

        function removeSearch() {
            const url = new URL(window.location.href);
            url.searchParams.delete('search');
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        // ====== LOAD MODEL SAN PHAM ======
        async function loadModelSanPham() {
            try {
                const createSelect = document.getElementById('createIdModelSanPham');
                const editSelect = document.getElementById('editIdModelSanPham');

                createSelect.innerHTML = '<option value="">Đang tải model...</option>';
                editSelect.innerHTML = '<option value="">Đang tải model...</option>';

                const response = await fetch('/TonKho/GetModelSanPham');

                if (!response.ok) {
                    throw new Error(`Lỗi HTTP! status: ${response.status}`);
                }

                const data = await response.json();

                // Xóa options cũ
                createSelect.innerHTML = '<option value="">Chọn model sản phẩm</option>';
                editSelect.innerHTML = '<option value="">Chọn model sản phẩm</option>';

                // Kiểm tra và thêm model vào dropdown
                if (data && data.length > 0) {
                    data.forEach(model => {
                        const id = model.idModelSanPham !== undefined ? model.idModelSanPham :
                            model.IdModelSanPham !== undefined ? model.IdModelSanPham :
                                model.id !== undefined ? model.id :
                                    model.Id !== undefined ? model.Id : null;

                        const ten = model.tenModel !== undefined ? model.tenModel :
                            model.TenModel !== undefined ? model.TenModel :
                                model.ten !== undefined ? model.ten :
                                    model.Ten !== undefined ? model.Ten : null;

                        const sanPhamTen = model.sanPham?.tenSanPham || model.sanPham?.TenSanPham || '';
                        const mau = model.mau || model.Mau || '';
                        const isInKho = model.isInKho || false;

                        if (id && ten) {
                            const displayText = `${sanPhamTen} - ${ten}${mau ? ` (${mau})` : ''}${isInKho ? ' ⚠️ Đã có trong kho' : ''}`;

                            const option = document.createElement('option');
                            option.value = id;
                            option.textContent = displayText;
                            option.disabled = isInKho; // Disable nếu đã có trong kho

                            createSelect.appendChild(option.cloneNode(true));
                            editSelect.appendChild(option);
                        }
                    });
                } else {
                    createSelect.innerHTML += '<option value="" disabled>Không có model nào</option>';
                    editSelect.innerHTML += '<option value="" disabled>Không có model nào</option>';
                }
            } catch (error) {
                console.error('❌ Lỗi khi tải model sản phẩm:', error);

                const createSelect = document.getElementById('createIdModelSanPham');
                const editSelect = document.getElementById('editIdModelSanPham');

                createSelect.innerHTML = '<option value="">Lỗi khi tải model</option>';
                editSelect.innerHTML = '<option value="">Lỗi khi tải model</option>';
            }
        }

        // ====== LOAD KHO ======
        async function loadKho() {
            try {
                const createSelect = document.getElementById('createIdKho');
                const editSelect = document.getElementById('editIdKho');

                createSelect.innerHTML = '<option value="">Đang tải kho...</option>';
                editSelect.innerHTML = '<option value="">Đang tải kho...</option>';

                const response = await fetch('/TonKho/GetKho');

                if (!response.ok) {
                    throw new Error(`Lỗi HTTP! status: ${response.status}`);
                }

                const data = await response.json();

                // Xóa options cũ
                createSelect.innerHTML = '<option value="">Chọn kho</option>';
                editSelect.innerHTML = '<option value="">Chọn kho</option>';

                // Kiểm tra và thêm kho vào dropdown
                if (data && data.length > 0) {
                    data.forEach(kho => {
                        const id = kho.idKho !== undefined ? kho.idKho :
                            kho.IdKho !== undefined ? kho.IdKho :
                                kho.id !== undefined ? kho.id :
                                    kho.Id !== undefined ? kho.Id : null;

                        const ten = kho.tenKho !== undefined ? kho.tenKho :
                            kho.TenKho !== undefined ? kho.TenKho :
                                kho.ten !== undefined ? kho.ten :
                                    kho.Ten !== undefined ? kho.Ten : null;

                        if (id && ten) {
                            createSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                            editSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                        }
                    });
                } else {
                    createSelect.innerHTML += '<option value="" disabled>Không có kho nào</option>';
                    editSelect.innerHTML += '<option value="" disabled>Không có kho nào</option>';
                }
            } catch (error) {
                console.error('❌ Lỗi khi tải kho:', error);

                const createSelect = document.getElementById('createIdKho');
                const editSelect = document.getElementById('editIdKho');

                createSelect.innerHTML = '<option value="">Lỗi khi tải kho</option>';
                editSelect.innerHTML = '<option value="">Lỗi khi tải kho</option>';
            }
        }

        // ====== GET IMEI COUNT ======
        async function getImeiCount(idModelSanPham) {
            try {
                const response = await fetch(`/TonKho/GetSoLuongImeiConHang/${idModelSanPham}`);
                if (!response.ok) return 0;

                const data = await response.json();
                return data.soLuongImeiConHang || 0;
            } catch (error) {
                console.error('Lỗi khi lấy số lượng IMEI:', error);
                return 0;
            }
