                                data = JSON.parse(text);
                            } catch {
                                data = { message: text || 'Cập nhật thành công!' };
                            }
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                    if (response.ok) {
                        data = { message: 'Cập nhật thành công!' };
                    }
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Cập nhật tồn kho thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.IdModelSanPham) showError('errorEditIdModelSanPham', data.IdModelSanPham);
                        if (data.IdKho) showError('errorEditIdKho', data.IdKho);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorEdit${field}`, error);
                            });
                        }
                        if (data.Message) showAlert('error', data.Message);
                    } else if (response.status === 404) {
                        showAlert('error', data.message || `Không tìm thấy tồn kho với ID=${currentEditId}!`);
                    } else if (response.status === 409) {
                        showAlert('error', data.message || 'Model sản phẩm đã có trong kho khác!');
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Update error:', error);
                showAlert('error', 'Lỗi kết nối đến server: ' + error.message);
            } finally {
                hideLoading();
                console.log('=== UPDATE TON KHO END ===');
            }
        }

        // ====== SHOW IMEI INFO ======
        async function showImeiInfo(modelId, modelName) {
            try {
                showLoading();

                const response = await fetch(`/TonKho/GetSoLuongImeiConHang/${modelId}`);
                if (!response.ok) {
                    throw new Error('Lỗi khi lấy thông tin IMEI');
                }

                const data = await response.json();

                const modalTitle = document.getElementById('imeiModalTitle');
                const imeiContent = document.getElementById('imeiContent');

                modalTitle.textContent = `IMEI: ${modelName}`;

                imeiContent.innerHTML = `
                            <div class="text-center">
                                <h4><i class="bi bi-upc-scan"></i> Thông tin IMEI</h4>
                                <div class="mt-4">
                                    <div class="quantity-badge ${data.soLuongImeiConHang > 0 ? 'quantity-high' : 'quantity-zero'}" style="font-size: 2rem; padding: 15px 30px;">
                                        ${data.soLuongImeiConHang}
                                    </div>
                                    <p class="mt-3">IMEI có trạng thái "Còn hàng"</p>
                                </div>
                                <div class="alert alert-info mt-4">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Số lượng tồn kho được tự động đồng bộ từ số lượng IMEI "Còn hàng"
                                </div>
                                <div class="mt-4">
                                    <button class="btn btn-primary" onclick="refreshTonKho(${modelId})">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Refresh Tồn Kho
                                    </button>
                                </div>
                            </div>
                        `;

                const imeiModal = new bootstrap.Modal(document.getElementById('imeiModal'));
                imeiModal.show();

            } catch (error) {
                console.error('Lỗi khi lấy thông tin IMEI:', error);
                showAlert('error', 'Không thể lấy thông tin IMEI');
            } finally {
                hideLoading();
            }
        }

        // ====== REFRESH TON KHO ======
        async function refreshTonKho(modelId) {
            try {
                showLoading();

                const response = await fetch(`/TonKho/RefreshTonKho/${modelId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    showAlert('success', 'Refresh tồn kho thành công!');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showAlert('error', 'Lỗi khi refresh tồn kho');
                }
            } catch (error) {
                console.error('Lỗi khi refresh tồn kho:', error);
                showAlert('error', 'Lỗi kết nối đến server');
            } finally {
                hideLoading();
            }
        }

        // ====== DELETE TON KHO ======
        let tonKhoToDelete = null;

        function confirmDelete(id, name) {
            console.log('Confirm delete for ton kho ID:', id);
            tonKhoToDelete = id;
            document.getElementById('deleteTonKhoName').textContent = name || 'Không có tên';

            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        async function deleteTonKho() {
            if (!tonKhoToDelete) {
                console.error('No ton kho to delete!');
                return;
            }

            console.log('=== DELETE TON KHO START ===');
            console.log('Deleting ton kho ID:', tonKhoToDelete);

            showLoading();

            try {
                const response = await fetch(`/TonKho/Delete/${tonKhoToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                console.log('Final DELETE response status:', response.status);

                let data = {};
                try {
                    if (response.status === 204) {
                        data = { message: 'Xóa thành công!' };
                    } else {
                        const text = await response.text();
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Xóa tồn kho thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showAlert('error', data.message || 'Lỗi khi xóa tồn kho!');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                tonKhoToDelete = null;
                console.log('=== DELETE TON KHO END ===');
            }
        }

        // ====== INITIALIZATION ======
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded. Total ton kho:', @Model.Count());

            setTimeout(() => {
                hideAlert('successAlert');
                hideAlert('errorAlert');
            }, 5000);

            // Setup create modal
            const createModal = document.getElementById('createModal');
            if (createModal) {
                createModal.addEventListener('show.bs.modal', function () {
                    loadModelSanPham();
                    loadKho();
                });

                createModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('createForm');
                });

                // Update IMEI count when model changes
                document.getElementById('createIdModelSanPham').addEventListener('change', async function () {
                    const modelId = this.value;
                    if (modelId) {
                        const imeiCount = await getImeiCount(modelId);
                        const preview = document.getElementById('createImeiCountPreview');
                        preview.textContent = imeiCount;

                        // Update badge color based on quantity
                        preview.className = 'quantity-badge ';
                        if (imeiCount == 0) preview.className += 'quantity-zero';
                        else if (imeiCount < 10) preview.className += 'quantity-low';
                        else if (imeiCount < 50) preview.className += 'quantity-medium';
                        else preview.className += 'quantity-high';
                    }
                });
            }

            // Setup edit modal
            const editModal = document.getElementById('editModal');
            if (editModal) {
                editModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('editForm');
                    currentEditId = null;
                    currentModelId = null;
                    currentKhoId = null;
                });

                // Update IMEI count when model changes in edit
                document.getElementById('editIdModelSanPham').addEventListener('change', updateEditImeiCount);
            }

            // Tự động focus vào ô tìm kiếm
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput && '@search' !== '') {
                searchInput.focus();
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }
        });
    </script>
