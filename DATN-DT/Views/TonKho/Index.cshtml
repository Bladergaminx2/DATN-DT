        // ====== CREATE TON KHO ======
        async function createTonKho() {
            console.log('=== CREATE TON KHO START ===');

            hideError('errorCreateIdModelSanPham');
            hideError('errorCreateIdKho');

            const tonKho = {
                IdModelSanPham: parseInt(document.getElementById('createIdModelSanPham').value) || 0,
                IdKho: parseInt(document.getElementById('createIdKho').value) || 0
            };

            console.log('Creating ton kho:', tonKho);

            let isValid = true;

            if (!tonKho.IdModelSanPham) {
                showError('errorCreateIdModelSanPham', 'Phải chọn model sản phẩm!');
                isValid = false;
            }

            if (!tonKho.IdKho) {
                showError('errorCreateIdKho', 'Phải chọn kho!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/TonKho/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(tonKho)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Thêm thành công!' };
                    } else {
                        const text = await response.text();
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Thêm tồn kho thành công!');

                    document.getElementById('createForm').reset();

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.IdModelSanPham) showError('errorCreateIdModelSanPham', data.IdModelSanPham);
                        if (data.IdKho) showError('errorCreateIdKho', data.IdKho);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorCreate${field}`, error);
                            });
                        }
                    } else if (response.status === 409) {
                        showAlert('error', data.message || 'Model sản phẩm đã có trong kho khác!');
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Create error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                console.log('=== CREATE TON KHO END ===');
            }
        }

        // ====== EDIT TON KHO ======
        let currentEditId = null;
        let currentModelId = null;
        let currentKhoId = null;

        async function openEditModal(button) {
            const id = button.getAttribute('data-id');
            const modelId = button.getAttribute('data-model');
            const khoId = button.getAttribute('data-kho');

            console.log('Opening edit modal for ID:', id);

            document.getElementById('editIdTonKho').value = id;
            currentEditId = id;
            currentModelId = modelId;
            currentKhoId = khoId;

            hideError('errorEditIdModelSanPham');
            hideError('errorEditIdKho');

            // Load danh sách model và kho
            await Promise.all([loadModelSanPham(), loadKho()]);

            // Set giá trị sau khi load
            setTimeout(() => {
                document.getElementById('editIdModelSanPham').value = modelId;
                document.getElementById('editIdKho').value = khoId;

                // Load số lượng IMEI
                updateEditImeiCount();
            }, 100);

            const editModal = new bootstrap.Modal(document.getElementById('editModal'));
            editModal.show();
        }

        async function updateEditImeiCount() {
            const modelId = document.getElementById('editIdModelSanPham').value;
            if (modelId) {
                const imeiCount = await getImeiCount(modelId);
                const preview = document.getElementById('editImeiCountPreview');
                preview.textContent = imeiCount;

                // Update badge color based on quantity
                preview.className = 'quantity-badge ';
                if (imeiCount == 0) preview.className += 'quantity-zero';
                else if (imeiCount < 10) preview.className += 'quantity-low';
                else if (imeiCount < 50) preview.className += 'quantity-medium';
                else preview.className += 'quantity-high';
            }
        }

