<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Success Alert -->
    <div class="alert alert-success alert-dismissible fade show" id="successAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span id="successMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('successAlert')"></button>
    </div>

    <!-- Error Alert -->
    <div class="alert alert-danger alert-dismissible fade show" id="errorAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="errorMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('errorAlert')"></button>
    </div>

    <div class="container">
        <div class="card p-4">
            <h2 class="mb-4">📦 Quản Lý Tồn Kho</h2>

            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Tổng số tồn kho</div>
                        <div class="stat-value">@Model.Count()</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Đang hiển thị</div>
                        <div class="stat-value">@totalItems</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Tổng số lượng</div>
                        <div class="stat-value">@Model.Sum(tk => tk.SoLuong ?? 0)</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Trang hiện tại</div>
                        <div class="stat-value">@pageNumber/@(totalPages > 0 ? totalPages : 1)</div>
                    </div>
                </div>
            </div>

            <!-- Tìm kiếm -->
            <div class="search-filter-section">
                <form id="searchForm" method="get" action="@Url.Action("Index", "TonKho")">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <input type="text"
                                   class="form-control search-input"
                                   name="search"
                                   placeholder="Tìm kiếm theo tên sản phẩm, model, kho..."
                                   value="@search">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100" style="height: 45px;">
                                <i class="bi bi-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-clear w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-2"></i>Xóa lọc
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Hiển thị bộ lọc hiện tại -->
                @if (!string.IsNullOrEmpty(search))
                {
                    <div class="mt-3">
                        <small class="text-muted">Bộ lọc hiện tại:</small>
                        <span class="filter-badge ms-2">
                            Từ khóa: "@search"
                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeSearch()"></button>
                        </span>
                    </div>
                }
            </div>

            <!-- Header với nút thêm mới -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Hiển thị <strong>@paginatedTonKhos.Count()</strong> trong tổng số <strong>@totalItems</strong> tồn kho
                    <span class="ms-3">
                        <i class="bi bi-lightbulb me-1"></i>
                        <small>Số lượng được tự động tính từ IMEI "Còn hàng"</small>
                    </span>
                </div>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle me-2"></i>Thêm Tồn Kho Mới
                </button>
            </div>

            @if (paginatedTonKhos.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-stt">STT</th>
                                <th class="col-sanpham">Sản phẩm</th>
                                <th class="col-model">Model</th>
                                <th class="col-kho">Kho</th>
                                <th class="col-soluong">Số lượng tồn</th>
                                <th class="col-imei">IMEI "Còn hàng"</th>
                                <th class="col-action">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = (pageNumber - 1) * pageSize + 1;
                            }
                            @foreach (var item in paginatedTonKhos)
                            {
                                var soLuongImeiConHang = item.ModelSanPham?.Imeis?.Count(i => i.TrangThai == "Còn hàng") ?? 0;
                                var isSynchronized = item.SoLuong == soLuongImeiConHang;
                                var quantityClass = "quantity-badge ";

                                if (item.SoLuong == null || item.SoLuong == 0)
                                    quantityClass += "quantity-zero";
                                else if (item.SoLuong < 10)
                                    quantityClass += "quantity-low";
                                else if (item.SoLuong < 50)
                                    quantityClass += "quantity-medium";
                                else
                                    quantityClass += "quantity-high";

                                <tr>
                                    <td class="text-center">@(counter++)</td>
                                    <td>
                                        @if (item.ModelSanPham?.SanPham != null)
                                        {
                                            <div class="fw-bold">@item.ModelSanPham.SanPham.TenSanPham</div>
                                            <small class="text-muted">@item.ModelSanPham.SanPham.MaSanPham</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có sản phẩm</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ModelSanPham != null)
                                        {
                                            <span class="model-badge">
                                                @item.ModelSanPham.TenModel
                                                @if (!string.IsNullOrEmpty(item.ModelSanPham.Mau))
                                                {
                                                    <small class="ms-1">(@item.ModelSanPham.Mau)</small>
                                                }
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có model</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Kho != null)
                                        {
                                            <span class="kho-badge">@item.Kho.TenKho</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có kho</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="@quantityClass">
                                            @(item.SoLuong?.ToString() ?? "0")
                                            @if (isSynchronized)
                                            {
                                                <span class="synchronized-badge">✓</span>
                                            }
                                            else
                                            {
                                                <span class="not-synchronized-badge">!</span>
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted">@soLuongImeiConHang IMEI</span>
                                    </td>
                                    <td class="col-action">
                                        <div class="action-buttons-horizontal">
                                            <button class="action-button btn-info"
                                                    onclick="showImeiInfo(@item.IdModelSanPham, '@item.ModelSanPham?.TenModel')">
                                                <i class="bi bi-upc-scan me-1"></i>IMEI
                                            </button>
                                            <button class="action-button btn-edit"
                                                    data-id="@item.IdTonKho"
                                                    data-model="@item.IdModelSanPham"
                                                    data-kho="@item.IdKho"
                                                    onclick="openEditModal(this)">
                                                <i class="bi bi-pencil me-1"></i>Sửa
                                            </button>
                                            <button class="action-button btn-delete"
                                                    onclick="confirmDelete(@item.IdTonKho, '@item.ModelSanPham?.TenModel')">
                                                <i class="bi bi-trash me-1"></i>Xóa
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                @if (totalPages > 1)
                {
                    <div class="pagination-container">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <!-- Nút về trang đầu -->
                                @if (pageNumber > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(1))" aria-label="First">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(pageNumber - 1))" aria-label="Previous">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-double-left"></i></span>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-left"></i></span>
                                    </li>
                                }

                                <!-- Các trang -->
                                @{
                                    int startPage = Math.Max(1, pageNumber - 2);
                                    int endPage = Math.Min(totalPages, startPage + 4);
                                    if (endPage - startPage < 4)
                                    {
                                        startPage = Math.Max(1, endPage - 4);
                                    }

                                    for (int i = startPage; i <= endPage; i++)
