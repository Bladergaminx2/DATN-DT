@model IEnumerable<DATN_DT.Models.TonKho>

@{
    ViewData["Title"] = "Quản lý Tồn Kho";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Tồn Kho</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .quantity-high {
            color: #28a745;
            font-weight: bold;
        }

        .quantity-medium {
            color: #ffc107;
            font-weight: bold;
        }

        .quantity-low {
            color: #dc3545;
            font-weight: bold;
        }

        .text-muted {
            color: #6c757d !important;
            font-style: italic;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Tồn Kho</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Tồn Kho
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Model Sản Phẩm</th>
                    <th>Kho</th>
                    <th>Số Lượng</th>
                    <th>Trạng Thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdTonKho</td>
                        <td>
                            @if (item.ModelSanPham != null)
                            {
                                @item.ModelSanPham.TenModel
                            }
                            else
                            {
                                <span class="text-muted">Chưa chọn model</span>
                            }
                        </td>
                        <td>
                            @if (item.Kho != null)
                            {
                                @item.Kho.TenKho
                            }
                            else
                            {
                                <span class="text-muted">Chưa chọn kho</span>
                            }
                        </td>
                        <td>
                            @{
                                var quantityClass = "quantity-high";
                                if (item.SoLuong <= 5)
                                {
                                    quantityClass = "quantity-low";
                                }
                                else if (item.SoLuong <= 20)
                                {
                                    quantityClass = "quantity-medium";
                                }
                            }
                            <span class="@quantityClass">@item.SoLuong</span>
                        </td>
                        <td>
                            @if (item.SoLuong <= 0)
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                            else if (item.SoLuong <= 5)
                            {
                                <span class="badge bg-warning">Sắp hết</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdTonKho"
                                        data-idmodelsanpham="@item.IdModelSanPham"
                                        data-idkho="@item.IdKho"
                                        data-soluong="@item.SoLuong">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdTonKho"
                                        data-model="@(item.ModelSanPham?.TenModel ?? "N/A")">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Tồn Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Model Sản Phẩm <span class="text-danger">*</span></label>
                            <select id="IdModelSanPham" class="form-control">
                                <option value="">Chọn model sản phẩm</option>
                            </select>
                            <small id="errorIdModelSanPham" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kho <span class="text-danger">*</span></label>
                            <select id="IdKho" class="form-control">
                                <option value="">Chọn kho</option>
                            </select>
                            <small id="errorIdKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số Lượng <span class="text-danger">*</span></label>
                            <input type="number" id="SoLuong" class="form-control" min="1" value="1"
                                   placeholder="Nhập số lượng sản phẩm" />
                            <small id="errorSoLuong" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập số lượng sản phẩm tồn kho (phải lớn hơn 0)</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Tồn Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdTonKho" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Model Sản Phẩm <span class="text-danger">*</span></label>
                            <select id="EditIdModelSanPham" class="form-control">
                                <option value="">Chọn model sản phẩm</option>
                            </select>
                            <small id="errorEditIdModelSanPham" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kho <span class="text-danger">*</span></label>
                            <select id="EditIdKho" class="form-control">
                                <option value="">Chọn kho</option>
                            </select>
                            <small id="errorEditIdKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số Lượng <span class="text-danger">*</span></label>
                            <input type="number" id="EditSoLuong" class="form-control" min="1"
                                   placeholder="Nhập số lượng sản phẩm" />
                            <small id="errorEditSoLuong" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập số lượng sản phẩm tồn kho (phải lớn hơn 0)</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Ẩn tất cả lỗi
        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

        // Tải dữ liệu dropdown từ API
        async function loadDropdownData() {
            try {
                const modelResponse = await fetch('/api/ModelSanPham');
                const khoResponse = await fetch('/api/Kho');

                if (modelResponse.ok && khoResponse.ok) {
                    const modelSanPhamList = await modelResponse.json();
                    const khoList = await khoResponse.json();

                    populateDropdown('IdModelSanPham', modelSanPhamList, 'idModelSanPham', 'tenModel');
                    populateDropdown('IdKho', khoList, 'idKho', 'tenKho');
                    populateDropdown('EditIdModelSanPham', modelSanPhamList, 'idModelSanPham', 'tenModel');
                    populateDropdown('EditIdKho', khoList, 'idKho', 'tenKho');
                } else {
                    throw new Error('Không thể tải dữ liệu dropdown');
                }
            } catch (error) {
                console.error('Error loading dropdown data:', error);
                showAlert('Không thể tải danh sách model và kho', 'warning');
            }
        }

        function populateDropdown(selectId, dataList, valueField, textField) {
            const select = document.getElementById(selectId);
            if (!select) return;

            const firstOption = select.options[0];
            select.innerHTML = '';
            select.appendChild(firstOption);

            if (dataList && dataList.length > 0) {
                dataList.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item[valueField];
                    option.textContent = item[textField] || `ID: ${item[valueField]}`;
                    select.appendChild(option);
                });
            }
        }

        // Mở modal edit và điền dữ liệu
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const idModelSanPham = btn.dataset.idmodelsanpham;
                const idKho = btn.dataset.idkho;
                const soLuong = btn.dataset.soluong;

                document.getElementById("EditIdTonKho").value = id;
                document.getElementById("EditIdModelSanPham").value = idModelSanPham;
                document.getElementById("EditIdKho").value = idKho;
                document.getElementById("EditSoLuong").value = soLuong;

                hideAllErrors();
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý xóa tồn kho
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const modelName = btn.dataset.model;

                if (confirm(`Bạn có chắc chắn muốn xóa tồn kho của model "${modelName}"?`)) {
                    try {
                        const response = await fetch(`/TonKho/Delete?id=${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            const result = await response.json();
                            showAlert(result.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Lỗi khi xóa tồn kho', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Xử lý thêm tồn kho
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const tonKhoData = {
                IdModelSanPham: parseInt(document.getElementById("IdModelSanPham").value) || 0,
                IdKho: parseInt(document.getElementById("IdKho").value) || 0,
                SoLuong: parseInt(document.getElementById("SoLuong").value) || 0
            };

            // Kiểm tra validation
            let isValid = true;
            hideAllErrors();

            if (tonKhoData.IdModelSanPham === 0) {
                showError("errorIdModelSanPham", "Phải chọn model sản phẩm!");
                isValid = false;
            }
            if (tonKhoData.IdKho === 0) {
                showError("errorIdKho", "Phải chọn kho!");
                isValid = false;
            }
            if (tonKhoData.SoLuong <= 0) {
                showError("errorSoLuong", "Số lượng phải lớn hơn 0!");
                isValid = false;
            }

            if (!isValid) return;

            try {
                const response = await fetch('/TonKho/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(tonKhoData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.IdModelSanPham) showError('errorIdModelSanPham', error.IdModelSanPham);
                        if (error.IdKho) showError('errorIdKho', error.IdKho);
                        if (error.SoLuong) showError('errorSoLuong', error.SoLuong);
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showAlert(error.message, 'warning');
                    } else {
                        showAlert(error.message || 'Lỗi khi thêm tồn kho', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Xử lý sửa tồn kho
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdTonKho").value;
            const tonKhoData = {
                IdModelSanPham: parseInt(document.getElementById("EditIdModelSanPham").value) || 0,
                IdKho: parseInt(document.getElementById("EditIdKho").value) || 0,
                SoLuong: parseInt(document.getElementById("EditSoLuong").value) || 0
            };

            // Kiểm tra validation
            let isValid = true;
            hideAllErrors();

            if (tonKhoData.IdModelSanPham === 0) {
                showError("errorEditIdModelSanPham", "Phải chọn model sản phẩm!");
                isValid = false;
            }
            if (tonKhoData.IdKho === 0) {
                showError("errorEditIdKho", "Phải chọn kho!");
                isValid = false;
            }
            if (tonKhoData.SoLuong <= 0) {
                showError("errorEditSoLuong", "Số lượng phải lớn hơn 0!");
                isValid = false;
            }

            if (!isValid) return;

            try {
                const response = await fetch(`/TonKho/Edit?id=${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(tonKhoData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.IdModelSanPham) showError('errorEditIdModelSanPham', error.IdModelSanPham);
                        if (error.IdKho) showError('errorEditIdKho', error.IdKho);
                        if (error.SoLuong) showError('errorEditSoLuong', error.SoLuong);
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showAlert(error.message, 'warning');
                    } else {
                        showAlert(error.message || 'Lỗi khi cập nhật tồn kho', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Reset form và ẩn lỗi khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            document.getElementById('SoLuong').value = 1;
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideAllErrors();
        });

        // Tải dữ liệu dropdown khi trang được load
        document.addEventListener('DOMContentLoaded', function() {
            loadDropdownData();
        });
    </script>
</body>
</html>