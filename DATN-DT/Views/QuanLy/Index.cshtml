    <script>
        // ========== INITIALIZATION
        document.addEventListener('DOMContentLoaded', function () {
            setupMenuNavigation();
            loadDashboardStats();
        });

        // ========== LOAD DASHBOARD STATS
        async function loadDashboardStats() {
            try {
                const response = await fetch('/QuanLy/GetStats');
                const result = await response.json();

                if (result.success && result.data) {
                    // Animate counter
                    animateCounter('statNhanVien', result.data.nhanVien);
                    animateCounter('statKhachHang', result.data.khachHang);
                    animateCounter('statSanPham', result.data.sanPham);
                    animateCounter('statHoaDon', result.data.hoaDon);
                    animateCounter('statVoucher', result.data.voucher || 0);
                } else {
                    console.error('Failed to load stats:', result.message);
                    // Keep showing "--" if error
                }
            } catch (error) {
                console.error('Error loading dashboard stats:', error);
                // Keep showing "--" if error
            }
        }

        // ========== ANIMATE COUNTER
        function animateCounter(elementId, targetValue) {
            const element = document.getElementById(elementId);
            if (!element) return;

            const duration = 1000; // 1 second
            const steps = 30;
            const increment = targetValue / steps;
            const stepDuration = duration / steps;
            let currentValue = 0;

            const timer = setInterval(function() {
                currentValue += increment;
                if (currentValue >= targetValue) {
                    element.textContent = formatNumber(targetValue);
                    clearInterval(timer);
                } else {
                    element.textContent = formatNumber(Math.floor(currentValue));
                }
            }, stepDuration);
        }

        // ========== FORMAT NUMBER
        function formatNumber(num) {
            return new Intl.NumberFormat('vi-VN').format(num);
        }

        // ========== LOGOUT FUNCTION
        const logoutBtn = document.getElementById('logoutBtn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', async function() {
                if (!confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    return;
                }

                try {
                    const response = await fetch('/Login/Logout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        // Xóa tất cả dữ liệu ứng dụng
                        localStorage.clear();
                        sessionStorage.clear();

                        // Redirect về trang login
                        window.location.href = result.redirectUrl || '/Login';
                    } else {
                        alert('Đăng xuất thất bại, vui lòng thử lại.');
                    }
                } catch (error) {
                    console.error('Error logging out:', error);
                    // Vẫn redirect về login nếu có lỗi
                    localStorage.clear();
                    sessionStorage.clear();
                    window.location.href = '/Login';
                }
            });
        }

        // ========== SIDEBAR FUNCTIONS
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");
        const menuBtn = document.getElementById("menuBtn");
        const productMenu = document.getElementById("productMenu");
        const productSubmenu = document.getElementById("productSubmenu");
        const mainContent = document.getElementById("mainContent");

        menuBtn.addEventListener("click", (e) => {
            e.stopPropagation();
            sidebar.classList.toggle("active");
            overlay.classList.toggle("active");
            updateMainContentMargin();
        });

        overlay.addEventListener("click", closeSidebar);

        document.addEventListener("click", (e) => {
            if (
                sidebar.classList.contains("active") &&
                !sidebar.contains(e.target) &&
                !menuBtn.contains(e.target)
            ) {
                closeSidebar();
            }
        });

        function closeSidebar() {
            sidebar.classList.remove("active");
            overlay.classList.remove("active");
            updateMainContentMargin();
        }

        function updateMainContentMargin() {
            if (sidebar.classList.contains("active")) {
                mainContent.classList.add("sidebar-open");
            } else {
                mainContent.classList.remove("sidebar-open");
            }
        }

        // Toggle product submenu
        if (productMenu && productSubmenu) {
            productMenu.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                productSubmenu.classList.toggle("show");
                
                // Rotate arrow icon if exists
                const arrow = productMenu.querySelector('.submenu-arrow');
                if (arrow) {
                    arrow.style.transform = productSubmenu.classList.contains("show") ? "rotate(90deg)" : "rotate(0deg)";
                }
            });
        }

        // Add active state to menu items
        function setActiveMenuItem(pageId) {
            // Remove all active states
            document.querySelectorAll('.sidebar a').forEach(link => {
                link.classList.remove('active');
            });
            
            // Find and activate current page
            const activeLink = document.querySelector(`.sidebar a[data-page="${pageId}"]`);
            if (activeLink) {
                activeLink.classList.add('active');
            }
        }

        // ========== PAGE NAVIGATION - CẬP NHẬT PHẦN NÀY
        function setupMenuNavigation() {
            const menuLinks = document.querySelectorAll('.sidebar a[data-page]');

            menuLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const page = this.getAttribute('data-page');

                    // Thêm các trang mới vào đây
                    if (page === 'nhanvien') {
                        showPage('nhanVienPage');
                    } else if (page === 'khachhang') {
                        showPage('khachHangPage');
                    } else if (page === 'productoverview') {
                        showPage('productOverviewPage');
                    } else if (page === 'modelsanpham') {
                        showPage('modelSanPhamPage');
                    } else if (page === 'sanpham') {
                        showPage('sanPhamPage');
                    } else if (page === 'thuonghieu') {
                        showPage('thuongHieuPage');
                    } else if (page === 'manhinh') {
                        showPage('manHinhPage');
                    } else if (page === 'cameratruoc') {
                        showPage('cameraTruocPage');
                    } else if (page === 'camerasau') {
                        showPage('cameraSauPage');
                    } else if (page === 'pin') {
                        showPage('pinPage');
                    } else if (page === 'ram') {
                        showPage('ramPage');
                    } else if (page === 'rom') {
                        showPage('romPage');
                    } else if (page === 'tonkho') {
                        showPage('tonKhoPage');
                    } else if (page === 'kho') {
                        showPage('khoPage');
                    } else if (page === 'imei') {
                        showPage('imeiPage');
                    } else if (page === 'khuyenmai') {
                        showPage('khuyenMaiPage');
                    } else if (page === 'voucher') {
                        showPage('voucherPage');
                    } else if (page === 'thanhtoan') {
                        showPage('thanhToanPage');
                    } else if (page === 'donhang') {
                        showPage('donHangPage');
                    } else if (page === 'hoadon') {
                        showPage('hoaDonPage');
                    } else if (page === 'quanlybanhang') {
                        showPage('quanlybanhangPage');
                    } else if (page === 'baohanh') {
                        showPage('baoHanhPage');
                    } else {
                        showToast('Trang ' + page + ' chưa được triển khai', 'info');
                    }

                    closeSidebar();
                });
            });
        }

        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-container').forEach(page => {
                page.classList.remove('active');
            });

            // Show selected page
            const targetPage = document.getElementById(pageId);
            if (targetPage) {
                targetPage.classList.add('active');
            }
            
            // Update active menu item
            const pageMapping = {
                'nhanvienPage': 'nhanvien',
                'khachhangPage': 'khachhang',
                'productOverviewPage': 'productoverview',
                'modelSanPhamPage': 'modelsanpham',
                'sanPhamPage': 'sanpham',
                'thuongHieuPage': 'thuonghieu',
                'manHinhPage': 'manhinh',
                'cameraTruocPage': 'cameratruoc',
                'cameraSauPage': 'camerasau',
                'pinPage': 'pin',
                'ramPage': 'ram',
                'romPage': 'rom',
                'tonKhoPage': 'tonkho',
                'khoPage': 'kho',
                'imeiPage': 'imei',
                'khuyenMaiPage': 'khuyenmai',
                'voucherPage': 'voucher',
                'thanhToanPage': 'thanhtoan',
                'donHangPage': 'donhang',
                'hoaDonPage': 'hoadon',
                'quanlybanhangPage': 'quanlybanhang',
                'baoHanhPage': 'baohanh'
            };
            
            const pageKey = pageMapping[pageId];
            if (pageKey) {
                setActiveMenuItem(pageKey);
            }
        }

        function showWelcomePage() {
            showPage('welcomePage');
        }

        // ========== UTILITY FUNCTIONS
        function showToast(message, type = 'info') {
            const toastContainer = document.createElement('div');
            toastContainer.className = 'toast-container';

            const toastId = 'toast-' + Date.now();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'danger' ? 'danger' : type === 'success' ? 'success' : type === 'warning' ? 'warning' : 'info'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            toast.id = toastId;

            toast.innerHTML = `
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'warning' ? 'fa-exclamation-triangle' : type === 'danger' ? 'fa-times-circle' : 'fa-info-circle'} me-2"></i>
                                        ${message}
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" onclick="this.parentElement.parentElement.remove()"></button>
                                </div>
                            `;

            document.body.appendChild(toastContainer);
            toastContainer.appendChild(toast);

            // Auto remove after 4 seconds
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
                if (toastContainer.parentElement && toastContainer.children.length === 0) {
                    toastContainer.remove();
                }
            }, 4000);
        }
    </script>
