            .welcome-box {
                padding: 40px 20px;
                margin: 20px;
            }

                .welcome-box h1 {
                    font-size: 28px;
                }

            .page-header {
                padding: 15px 20px;
                flex-direction: column;
                gap: 10px;
                align-items: stretch;
            }

                .page-header h2 {
                    font-size: 20px;
                }

            .iframe-container {
                height: calc(100vh - 200px);
            }
        }
    </style>
