@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Trang Quản Lý</title>
    <style>
        body {
            margin: 0;
            background-color: #12121d;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden;
        }

        header {
            background-color: #36363f;
            height: 100px;
            width: 100%;
            display: flex;
            align-items: center;
            padding-left: 30px;
            gap: 20px;
            z-index: 200;
            position: relative;
        }

        .menu-button {
            width: 60px;
            height: 60px;
            background-color: #2b2b33;
            border: none;
            border-radius: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .menu-button:hover {
                background-color: #4a4a55;
            }

        .menu-icon, .icon {
            width: 28px;
            height: 28px;
            filter: invert(1);
        }

        header img {
            height: 80px;
            width: auto;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: -260px;
            width: 250px;
            height: 100%;
            background-color: #2b2b33;
            color: white;
            padding: 30px 20px;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.3);
            transition: left 0.3s ease;
            z-index: 150;
            overflow-y: auto;
        }

            .sidebar.active {
                left: 0;
            }

            .sidebar h2 {
                margin-top: 0;
                font-size: 24px;
                text-align: center;
                margin-bottom: 40px;
                border-bottom: 2px solid #444;
                padding-bottom: 10px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: white;
                text-decoration: none;
                padding: 12px;
                border-radius: 8px;
                transition: background-color 0.3s;
                gap: 10px;
                cursor: pointer;
            }

                .sidebar a:hover {
                    background-color: #444;
                }

        /* Submenu */
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease;
            margin-left: 25px;
        }

            .submenu a {
                font-size: 14px;
                padding: 8px 0;
            }

            .submenu.show {
                max-height: 300px;
            }

        /* Overlay */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease;
            z-index: 100;
        }

            .overlay.active {
                opacity: 1;
                visibility: visible;
            }

        /* Main Content Area */
        main {
            padding: 20px;
            margin-top: 100px;
            margin-left: 0;
            transition: margin-left 0.3s ease;
            min-height: calc(100vh - 100px);
        }

            main.with-sidebar {
                margin-left: 250px;
            }

        /* Content Container */
        .content-container {
            background-color: #1e1e2d;
            border-radius: 15px;
            padding: 25px;
            color: white;
            min-height: calc(100vh - 140px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        /* Welcome Box */
        .welcome-box {
            background-color: #36363f;
            color: white;
            padding: 80px 120px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            display: block;
        }

            .welcome-box h1 {
                font-size: 42px;
                margin: 0;
                letter-spacing: 1px;
            }

        /* Iframe for loading external content */
        .content-iframe {
            width: 100%;
            height: calc(100vh - 140px);
            border: none;
            border-radius: 15px;
            background-color: white;
        }

        /* Hide content when not active */
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <header>
        <button class="menu-button" id="menuBtn">
            <img src="~/ImgResource/Icons/list-solid-full.svg" alt="Menu" class="menu-icon" />
        </button>
        <img src="~/ImgResource/LogoPhoneTech.png" alt="Logo PhoneTech" />
    </header>

    <div class="sidebar" id="sidebar">
        <h2>Menu</h2>
        <a href="#" data-page="nhanvien" class="nav-link">
            <img src="~/ImgResource/Icons/id-card-regular-full.svg" class="icon" />Nhân Viên
        </a>
        <a href="#" data-page="khachhang" class="nav-link">
            <img src="~/ImgResource/Icons/user-regular-full.svg" class="icon" />Khách Hàng
        </a>

        <a href="#" id="productMenu">
            <img src="~/ImgResource/Icons/mobile-screen-solid-full.svg" class="icon" />Sản Phẩm
        </a>
        <div class="submenu" id="productSubmenu">
            <a href="#" data-page="sanpham">Tất Cả Sản Phẩm</a>
            <a href="#" data-page="manhinh">Màn Hình</a>
            <a href="#" data-page="cameratruoc">Camera Trước</a>
            <a href="#" data-page="camerasau">Camera Sau</a>
            <a href="#" data-page="pin">Pin</a>
            <a href="#" data-page="ram">RAM</a>
            <a href="#" data-page="rom">ROM</a>
            <a href="#" data-page="thuonghieu">Thương hiệu</a>
            <a href="#" data-page="kho">Kho</a>
        </div>

        <a href="#" data-page="khuyenmai" class="nav-link">
            <img src="~/ImgResource/Icons/percent-solid-full.svg" class="icon" />Khuyến Mãi
        </a>
        <a href="#" data-page="thanhtoan" class="nav-link">
            <img src="~/ImgResource/Icons/money-bill-solid-full.svg" class="icon" />Thanh Toán
        </a>
        <a href="#" data-page="donhang" class="nav-link">
            <img src="~/ImgResource/Icons/boxes-packing-solid-full.svg" class="icon" />Đơn Hàng
        </a>
        <a href="#" data-page="hoadon" class="nav-link">
            <img src="~/ImgResource/Icons/file-invoice-dollar-solid-full.svg" class="icon" />Hóa Đơn
        </a>
        <a href="#" data-page="baohanh" class="nav-link">
            <img src="~/ImgResource/Icons/screwdriver-wrench-solid-full.svg" class="icon" />Bảo Hành
        </a>
    </div>

    <div class="overlay" id="overlay"></div>

    <main id="mainContent">
        <!-- Welcome Screen (Default) -->
        <div id="welcomeScreen" class="content-container welcome-box">
            <h1>Welcome to Tech Phone Management</h1>
        </div>

        <!-- Content Area for loaded pages -->
        <div id="contentArea" class="content-container hidden">
            <iframe id="contentFrame" class="content-iframe" sandbox="allow-same-origin allow-scripts allow-forms allow-popups"></iframe>
        </div>
    </main>

    <script>
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");
        const menuBtn = document.getElementById("menuBtn");
        const productMenu = document.getElementById("productMenu");
        const productSubmenu = document.getElementById("productSubmenu");
        const mainContent = document.getElementById("mainContent");
        const welcomeScreen = document.getElementById("welcomeScreen");
        const contentArea = document.getElementById("contentArea");
        const contentFrame = document.getElementById("contentFrame");

        // Page URL mapping
        const pageUrls = {
            'nhanvien': 'https://localhost:7150/NhanVien',
            'khachhang': 'https://localhost:7150/KhachHang',
            'sanpham': 'https://localhost:7150/SanPham',
            'manhinh': 'https://localhost:7150/ManHinh',
            'cameratruoc': 'https://localhost:7150/CameraTruoc',
            'camerasau': 'https://localhost:7150/CameraSau',
            'pin': 'https://localhost:7150/Pin',
            'ram': 'https://localhost:7150/RAM',
            'rom': 'https://localhost:7150/ROM',
            'thuonghieu': 'https://localhost:7150/ThuongHieu',
            'kho': 'https://localhost:7150/Kho',
            'khuyenmai': 'https://localhost:7150/KhuyenMai',
            'thanhtoan': 'https://localhost:7150/ThanhToan',
            'donhang': 'https://localhost:7150/DonHang',
            'hoadon': 'https://localhost:7150/HoaDon',
            'baohanh': 'https://localhost:7150/BaoHanh'
        };

        // Menu toggle
        menuBtn.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleSidebar();
        });

        overlay.addEventListener("click", closeSidebar);

        document.addEventListener("click", (e) => {
            if (
                sidebar.classList.contains("active") &&
                !sidebar.contains(e.target) &&
                !menuBtn.contains(e.target)
            ) {
                closeSidebar();
            }
        });

        // Toggle sidebar
        function toggleSidebar() {
            const isActive = sidebar.classList.toggle("active");
            overlay.classList.toggle("active");

            if (isActive) {
                mainContent.classList.add("with-sidebar");
            } else {
                mainContent.classList.remove("with-sidebar");
            }
        }

        function closeSidebar() {
            sidebar.classList.remove("active");
            overlay.classList.remove("active");
            mainContent.classList.remove("with-sidebar");
        }

        // Toggle product submenu
        productMenu.addEventListener("click", (e) => {
            e.preventDefault();
            productSubmenu.classList.toggle("show");
        });

        // Navigation click handlers
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const page = this.getAttribute('data-page');
                loadPage(page);
                closeSidebar();
            });
        });

        // Submenu item click handlers
        document.querySelectorAll('#productSubmenu a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const page = this.getAttribute('data-page');
                loadPage(page);
                closeSidebar();
            });
        });

        // Load page function
        function loadPage(pageKey) {
            const url = pageUrls[pageKey];

            if (url && url !== '#') {
                // Show content area, hide welcome screen
                welcomeScreen.classList.add('hidden');
                contentArea.classList.remove('hidden');

                // Load the page in iframe
                contentFrame.src = url;
            } else {
                // For pages without URL, show welcome screen
                welcomeScreen.classList.remove('hidden');
                contentArea.classList.add('hidden');
                contentFrame.src = '';
            }
        }

        // Handle iframe navigation (optional - for back/forward buttons)
        contentFrame.addEventListener('load', function() {
            // You can add additional logic here if needed
            console.log('Page loaded in iframe');
        });

        // Close sidebar when clicking outside on mobile
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                closeSidebar();
            }
        });

        // Initialize
        closeSidebar();
    </script>
</body>
</html>