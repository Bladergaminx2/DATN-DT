    <script>
        // ========== INITIALIZATION
        document.addEventListener('DOMContentLoaded', function () {
            setupMenuNavigation();
        });

        // ========== SIDEBAR FUNCTIONS
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");
        const menuBtn = document.getElementById("menuBtn");
        const productMenu = document.getElementById("productMenu");
        const productSubmenu = document.getElementById("productSubmenu");
        const mainContent = document.getElementById("mainContent");

        menuBtn.addEventListener("click", (e) => {
            e.stopPropagation();
            sidebar.classList.toggle("active");
            overlay.classList.toggle("active");
            updateMainContentMargin();
        });

        overlay.addEventListener("click", closeSidebar);

        document.addEventListener("click", (e) => {
            if (
                sidebar.classList.contains("active") &&
                !sidebar.contains(e.target) &&
                !menuBtn.contains(e.target)
            ) {
                closeSidebar();
            }
        });

        function closeSidebar() {
            sidebar.classList.remove("active");
            overlay.classList.remove("active");
            updateMainContentMargin();
        }

        function updateMainContentMargin() {
            if (sidebar.classList.contains("active")) {
                mainContent.classList.add("sidebar-open");
            } else {
                mainContent.classList.remove("sidebar-open");
            }
        }

        // Toggle product submenu
        productMenu.addEventListener("click", (e) => {
            e.preventDefault();
            productSubmenu.classList.toggle("show");
        });

        // ========== PAGE NAVIGATION - CẬP NHẬT PHẦN NÀY
        function setupMenuNavigation() {
            const menuLinks = document.querySelectorAll('.sidebar a[data-page]');

            menuLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const page = this.getAttribute('data-page');

                    // Thêm các trang mới vào đây
                    if (page === 'nhanvien') {
                        showPage('nhanvienPage');
                    } else if (page === 'chucvu') {
                        showPage('chucvuPage');
                    } else if (page === 'khachhang') {
                        showPage('khachhangPage');
                    } else if (page === 'productoverview') {
                        showPage('productOverviewPage');
                    } else if (page === 'modelsanpham') {
                        showPage('modelSanPhamPage');
                    } else if (page === 'sanpham') {
                        showPage('sanPhamPage');
                    } else if (page === 'manhinh') {
                        showPage('manHinhPage');
                    } else if (page === 'cameratruoc') {
                        showPage('cameraTruocPage');
                    } else if (page === 'camerasau') {
                        showPage('cameraSauPage');
                    } else if (page === 'pin') {
                        showPage('pinPage');
                    } else if (page === 'ram') {
                        showPage('ramPage');
                    } else if (page === 'rom') {
                        showPage('romPage');
                    } else if (page === 'tonkho') {
                        showPage('tonKhoPage');
                    } else if (page === 'kho') {
                        showPage('khoPage');
                    } else if (page === 'imei') {
                        showPage('imeiPage');
                    } else if (page === 'khuyenmai') {
                        showPage('khuyenMaiPage');
                    } else if (page === 'thanhtoan') {
                        showPage('thanhToanPage');
                    } else if (page === 'donhang') {
                        showPage('donHangPage');
                    } else if (page === 'hoadon') {
                        showPage('hoaDonPage');
                    } else if (page === 'baohanh') {
                        showPage('baoHanhPage');
                    } else {
                        showToast('Trang ' + page + ' chưa được triển khai', 'info');
                    }

                    closeSidebar();
                });
            });
        }

        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-container').forEach(page => {
                page.classList.remove('active');
            });

            // Show selected page
            document.getElementById(pageId).classList.add('active');
        }

        function showWelcomePage() {
            showPage('welcomePage');
        }

        // ========== UTILITY FUNCTIONS
        function showToast(message, type = 'info') {
            const toastContainer = document.createElement('div');
            toastContainer.className = 'toast-container';

            const toastId = 'toast-' + Date.now();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'danger' ? 'danger' : type === 'success' ? 'success' : type === 'warning' ? 'warning' : 'info'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            toast.id = toastId;

            toast.innerHTML = `
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'warning' ? 'fa-exclamation-triangle' : type === 'danger' ? 'fa-times-circle' : 'fa-info-circle'} me-2"></i>
                                        ${message}
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" onclick="this.parentElement.parentElement.remove()"></button>
                                </div>
                            `;

            document.body.appendChild(toastContainer);
            toastContainer.appendChild(toast);

            // Auto remove after 4 seconds
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
                if (toastContainer.parentElement && toastContainer.children.length === 0) {
                    toastContainer.remove();
                }
            }, 4000);
        }
    </script>
