@model IEnumerable<DATN_DT.Models.RAM>

@{
    ViewData["Title"] = "Quản lý RAM";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý RAM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .form-text {
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 300px;
            line-height: 1.5;
        }

        .btn-edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý RAM</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm RAM
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Dung lượng RAM</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdRAM</td>
                        <td>@item.DungLuongRAM</td>
                        <td class="description-cell">@item.MoTaRAM</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdRAM"
                                        data-dungluong="@item.DungLuongRAM"
                                        data-mota="@item.MoTaRAM">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdRAM"
                                        data-dungluong="@item.DungLuongRAM">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm RAM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng RAM <span class="text-danger">*</span></label>
                            <input type="text" id="CreateDungLuongRAM" class="form-control" required
                                   placeholder="VD: 4GB, 8GB, 16GB, 32GB, 64GB" />
                            <small id="errorCreateDungLuongRAM" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập dung lượng RAM theo định dạng: số + GB (ví dụ: 8GB, 16GB)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="CreateMoTaRAM" class="form-control" rows="3" placeholder="Nhập mô tả về RAM (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa RAM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdRAM" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng RAM <span class="text-danger">*</span></label>
                            <input type="text" id="EditDungLuongRAM" class="form-control" required
                                   placeholder="VD: 4GB, 8GB, 16GB, 32GB, 64GB" />
                            <small id="errorEditDungLuongRAM" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập dung lượng RAM theo định dạng: số + GB (ví dụ: 8GB, 16GB)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaRAM" class="form-control" rows="3" placeholder="Nhập mô tả về RAM (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            // Tự động ẩn sau 3 giây
            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Mở modal edit và điền dữ liệu
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const dungLuong = btn.dataset.dungluong;
                const moTa = btn.dataset.mota || '';

                document.getElementById("EditIdRAM").value = id;
                document.getElementById("EditDungLuongRAM").value = dungLuong;
                document.getElementById("EditMoTaRAM").value = moTa;
                hideError('errorEditDungLuongRAM');

                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý xóa RAM
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const dungLuong = btn.dataset.dungluong;

                if (confirm(`Bạn có chắc chắn muốn xóa RAM "${dungLuong}"?`)) {
                    try {
                        const response = await fetch(`/RAM/Delete?id=${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            showAlert('Xóa RAM thành công!', 'success');
                            // Reload trang sau 1 giây
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Lỗi khi xóa RAM', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Xử lý thêm RAM
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const ramData = {
                DungLuongRAM: document.getElementById("CreateDungLuongRAM").value.trim(),
                MoTaRAM: document.getElementById("CreateMoTaRAM").value.trim()
            };

            hideError('errorCreateDungLuongRAM');

            try {
                const response = await fetch('/RAM/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(ramData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    // Reload trang sau 1 giây
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.DungLuongRAM) {
                            showError('errorCreateDungLuongRAM', error.DungLuongRAM);
                        }
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showError('errorCreateDungLuongRAM', error.message);
                    } else {
                        showAlert(error.message || 'Lỗi khi thêm RAM', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Xử lý sửa RAM
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdRAM").value;
            const ramData = {
                DungLuongRAM: document.getElementById("EditDungLuongRAM").value.trim(),
                MoTaRAM: document.getElementById("EditMoTaRAM").value.trim()
            };

            hideError('errorEditDungLuongRAM');

            try {
                const response = await fetch(`/RAM/Edit?id=${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(ramData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    // Reload trang sau 1 giây
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.DungLuongRAM) {
                            showError('errorEditDungLuongRAM', error.DungLuongRAM);
                        }
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showError('errorEditDungLuongRAM', error.message);
                    } else if (response.status === 404) {
                        showAlert(error.message, 'danger');
                    } else {
                        showAlert(error.message || 'Lỗi khi cập nhật RAM', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Reset form và ẩn lỗi khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            hideError('errorCreateDungLuongRAM');
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideError('errorEditDungLuongRAM');
        });
    </script>
</body>
</html>