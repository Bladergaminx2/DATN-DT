@model IEnumerable<DATN_DT.Models.RAM>

@{
    ViewData["Title"] = "Quản lý RAM";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý RAM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .form-text {
            font-size: 0.875em;
            margin-top: 0.25rem;
        }


        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus::placeholder {
            color: transparent;
        }


        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 300px;
            line-height: 1.5;
        }


        .btn-edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý RAM</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm RAM
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Dung lượng RAM</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdRAM</td>
                        <td>@item.DungLuongRAM</td>
                        <td class="description-cell">@item.MoTaRAM</td>
                        <td>
                            <div class="btn-edit-container">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdRAM"
                                        data-dungluong="@item.DungLuongRAM"
                                        data-mota="@item.MoTaRAM">
                                    Sửa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm RAM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng RAM <span class="text-danger">*</span></label>
                            <input type="text" id="DungLuongRAM" class="form-control"
                                   placeholder="VD: 4GB, 8GB, 16GB, 32GB, 64GB" />
                            <small id="errorDungLuongRAM" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập dung lượng RAM theo định dạng: số + GB (ví dụ: 8GB, 16GB) - Lưu ý: GB phải viết hoa</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaRAM" class="form-control" rows="3" placeholder="Nhập mô tả về RAM (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa RAM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdRAM" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng RAM <span class="text-danger">*</span></label>
                            <input type="text" id="EditDungLuongRAM" class="form-control"
                                   placeholder="VD: 4GB, 8GB, 16GB, 32GB, 64GB" />
                            <small id="errorEditDungLuongRAM" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập dung lượng RAM theo định dạng: số + GB (ví dụ: 8GB, 16GB) - Lưu ý: GB phải viết hoa</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaRAM" class="form-control" rows="3" placeholder="Nhập mô tả về RAM (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>

        function isValidRAMFormat(input) {
            const pattern = /^\d+GB$/;
            return pattern.test(input.trim());
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        function hideError(id) {
            const el = document.getElementById(id);
            el.classList.add("d-none");
        }


        const createModal = document.getElementById('createModal');


        createModal.addEventListener('show.bs.modal', function () {
            document.getElementById('DungLuongRAM').placeholder = "VD: 4GB, 8GB, 16GB, 32GB, 64GB";
            document.getElementById('MoTaRAM').placeholder = "Nhập mô tả về RAM (nếu có)";
            hideError("errorDungLuongRAM");
        });


        createModal.addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            document.getElementById('DungLuongRAM').placeholder = "VD: 4GB, 8GB, 16GB, 32GB, 64GB";
            document.getElementById('MoTaRAM').placeholder = "Nhập mô tả về RAM (nếu có)";
            hideError("errorDungLuongRAM");
        });


        const editModal = document.getElementById('editModal');


        editModal.addEventListener('hidden.bs.modal', function () {
            document.getElementById('EditDungLuongRAM').placeholder = "VD: 4GB, 8GB, 16GB, 32GB, 64GB";
            document.getElementById('EditMoTaRAM').placeholder = "Nhập mô tả về RAM (nếu có)";
            hideError("errorEditDungLuongRAM");
        });


        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('input[type="text"], textarea');

            inputs.forEach(input => {
                input.addEventListener('focus', function () {
                    this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
                    this.setAttribute('placeholder', '');
                });

                input.addEventListener('blur', function () {
                    if (this.value === '') {
                        this.setAttribute('placeholder', this.getAttribute('data-placeholder') || '');
                    }
                });
            });
        });

        // Thêm RAM
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const dungLuongValue = DungLuongRAM.value.trim();

            if (!isValidRAMFormat(dungLuongValue)) {
                showError("errorDungLuongRAM", "Định dạng không hợp lệ! Vui lòng nhập theo định dạng: số + GB (ví dụ: 8GB, 16GB) - Lưu ý: GB phải viết hoa");
                return;
            }

            const ram = {
                DungLuongRAM: dungLuongValue,
                MoTaRAM: MoTaRAM.value.trim()
            };

            const response = await fetch('/RAM/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(ram)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DungLuongRAM) showError("errorDungLuongRAM", data.DungLuongRAM);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorDungLuongRAM", data.message);
                    return;
                }

                alert(data.message || "Không thể thêm RAM. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // Sửa RAM
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdRAM.value = btn.dataset.id;
                EditDungLuongRAM.value = btn.dataset.dungluong;
                EditMoTaRAM.value = btn.dataset.mota;
                hideError("errorEditDungLuongRAM");
                new bootstrap.Modal(editModal).show();
            });
        });

        // Cập nhật RAM
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdRAM.value;
            const dungLuongValue = EditDungLuongRAM.value.trim();
            if (!isValidRAMFormat(dungLuongValue)) {
                showError("errorEditDungLuongRAM", "Định dạng không hợp lệ! Vui lòng nhập theo định dạng: số + GB (ví dụ: 8GB, 16GB) - Lưu ý: GB phải viết hoa");
                return;
            }

            const ram = {
                IdRAM: id,
                DungLuongRAM: dungLuongValue,
                MoTaRAM: EditMoTaRAM.value.trim()
            };

            const response = await fetch('/RAM/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(ram)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DungLuongRAM) showError("errorEditDungLuongRAM", data.DungLuongRAM);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorEditDungLuongRAM", data.message);
                    return;
                }

                alert(data.message || "Không thể cập nhật RAM. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });
    </script>
</body>
</html>