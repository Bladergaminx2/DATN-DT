            "available" or "còn hàng" => "status-available",
            "sold" or "đã bán" => "status-sold",
            _ => "status-other"
        };
    }

    // Helper function để lấy CSS class cho dot
    public string GetDotClass(string status)
    {
        return status?.ToLower() switch
        {
            "available" or "còn hàng" => "dot-available",
            "sold" or "đã bán" => "dot-sold",
            _ => "dot-other"
        };
    }

    // Helper function để hiển thị tên trạng thái
    public string GetStatusDisplayName(string status)
    {
        return status?.ToLower() switch
        {
            "available" or "còn hàng" => "Còn hàng",
            "sold" or "đã bán" => "Đã bán",
            "returned" or "đã trả hàng" => "Đã trả hàng",
