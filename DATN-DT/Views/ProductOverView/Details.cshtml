    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let imeiTable;
        let currentProductId = @Model?.IdModelSanPham;
        let allImeiData = []; // Lưu tất cả dữ liệu IMEI

        // ========== THÔNG BÁO CẬP NHẬT CHO TRANG INDEX ==========
        function notifyIndexPageAboutImeiUpdate() {
            const productId = currentProductId;

            if (productId) {
                console.log('Notifying Index page about IMEI update for product:', productId);

                // Gọi hàm trong parent window (trang Index)
                if (window.opener) {
                    // Nếu mở từ popup
                    if (window.opener.notifyImeiUpdate) {
                        window.opener.notifyImeiUpdate(productId);
                    }
                } else if (window.parent) {
                    // Nếu trong iframe
                    if (window.parent.notifyImeiUpdate) {
                        window.parent.notifyImeiUpdate(productId);
                    }
                } else {
                    // Sử dụng localStorage để giao tiếp giữa các tab
                    localStorage.setItem('imei_updated', JSON.stringify({
                        productId: productId,
                        timestamp: Date.now()
                    }));

                    // Remove sau 100ms
                    setTimeout(() => {
                        localStorage.removeItem('imei_updated');
                    }, 100);
                }

                // Gọi API để cập nhật server
                fetch('/ProductOverview/NotifyImeiUpdate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        ProductId: productId,
                        Action: 'update',
                        Timestamp: new Date().toISOString()
                    })
                }).then(response => {
                    if (response.ok) {
                        console.log('Stock update notification sent to server');
                    }
                }).catch(error => {
                    console.error('Error sending stock update:', error);
                });

                // Hiển thị thông báo
                showUpdateNotification('Đã cập nhật tồn kho trên trang danh sách');
            }
        }

        function showUpdateNotification(message) {
            // Xóa notification cũ 
            const oldNotification = document.querySelector('.update-notification');
            if (oldNotification) {
                oldNotification.remove();
            }

            // Tạo notification mới
            const notification = document.createElement('div');
            notification.className = 'update-notification';
            notification.innerHTML = `
                        <i class="fas fa-check-circle"></i>
                        <span>${message}</span>
                        <button class="btn-close btn-close-white ms-2" onclick="this.parentElement.remove()"></button>
                    `;

            document.body.appendChild(notification);

           
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 3000);
        }

        // ========== STATUS DISPLAY FUNCTIONS 
        function getStatusDisplayName(status) {
            if (!status) return "Không xác định";

            switch (status.toLowerCase()) {
                case 'còn hàng': return 'Còn hàng';
                case 'đã bán': return 'Đã bán';
                case 'đã trả hàng': return 'Đã trả hàng';
                case 'bảo hành': return 'Bảo hành';
                default: return status;
            }
        }

        function getStatusBadgeClass(status) {
            if (!status) return 'badge-available';

            switch (status.toLowerCase()) {
                case 'còn hàng': return 'badge-available';
                case 'đã bán': return 'badge-sold';
                case 'đã trả hàng': return 'badge-returned';
                case 'bảo hành': return 'badge-warranty';
                default: return 'badge-available';
            }
        }

        // ========== INITIALIZATION 
        document.addEventListener('DOMContentLoaded', function () {
            loadImeiData(); // Tải danh sách IMEI
            loadImeiOverview(); // Tải tổng quan IMEI
            loadModelSanPhamDropdown();
            setupUpdateListener();
        });

        // ========== SETUP UPDATE LISTENER 
        function setupUpdateListener() {
            window.addEventListener('storage', function (event) {
                if (event.key === 'imei_updated') {
                    try {
                        const data = JSON.parse(event.newValue || '{}');
                        if (data.productId && data.productId === currentProductId) {
                            loadImeiData();
                            loadImeiOverview();
                        }
                    } catch (e) {
                        console.error('Error parsing storage event:', e);
                    }
                }
            });
        }

        // ========== IMEI DATA MANAGEMENT
        async function loadImeiData() {
            showImeiLoading(true);

            try {
                const searchTerm = document.getElementById('searchImei').value;
                const statusFilter = document.getElementById('statusFilter').value;
                const productId = currentProductId;

                
                const response = await fetch(`/ProductOverview/GetImeiByProduct?productId=${productId}&searchTerm=${encodeURIComponent(searchTerm)}&status=${encodeURIComponent(statusFilter)}`);

                if (!response.ok) {
                    throw new Error('Không thể tải dữ liệu IMEI');
                }

                const imeis = await response.json();
                allImeiData = imeis; 
                renderImeiTable(imeis);
            } catch (error) {
                console.error('Error loading IMEI data:', error);
                showAlert('Lỗi khi tải danh sách IMEI: ' + error.message, 'danger');
            } finally {
                showImeiLoading(false);
            }
        }

        async function loadImeiOverview() {
            try {
                const productId = currentProductId;
                const response = await fetch(`/ProductOverview/GetImeiOverview?productId=${productId}`);

                if (!response.ok) {
                    throw new Error('Không thể tải tổng quan IMEI');
                }

                const overview = await response.json();
                updateImeiSummary(overview);
            } catch (error) {
                console.error('Error loading IMEI overview:', error);
                showAlert('Lỗi khi tải tổng quan IMEI: ' + error.message, 'danger');
            }
        }

        function renderImeiTable(imeis) {
            const tbody = document.getElementById('imeiTableBody');
            tbody.innerHTML = '';

            if (!imeis || imeis.length === 0) {
                tbody.innerHTML = `
                                            <tr>
                                                <td colspan="4" class="text-center py-4">
                                                    <i class="fas fa-box-open fa-2x mb-3 text-muted"></i>
                                                    <p class="text-muted">Không tìm thấy IMEI nào</p>
                                                </td>
                                            </tr>`;
                return;
            }

            imeis.forEach(imei => {
                const row = document.createElement('tr');
                row.setAttribute('data-imei-id', imei.idImei);

                const statusClass = getStatusBadgeClass(imei.trangThai);
                const statusText = getStatusDisplayName(imei.trangThai);

                row.innerHTML = `
                                            <td class="imei-code">${escapeHtml(imei.maImei)}</td>
                                            <td>
                                                <span class="status-badge ${statusClass}">${statusText}</span>
                                            </td>
                                            <td>
                                                ${imei.moTa ?
                        `<span title="${escapeHtml(imei.moTa)}">
                                                        ${escapeHtml(imei.moTa.length > 50 ? imei.moTa.substring(0, 50) + '...' : imei.moTa)}
                                                    </span>` :
                        '<span class="text-muted">Không có mô tả</span>'
                    }
                                            </td>
                                            <td>
                                                <button class="btn btn-warning btn-sm" onclick="openEditModal(
                                                    ${imei.idImei},
                                                    '${escapeHtml(imei.maImei)}',
                                                    ${imei.idModelSanPham},
                                                    '${escapeHtml(imei.moTa || '')}',
                                                    '${escapeHtml(imei.trangThai)}'
                                                )">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </button>
                                            </td>
                                        `;
                tbody.appendChild(row);
            });

            
            if ($.fn.DataTable.isDataTable('#imeiTable')) {
                imeiTable.destroy();
            }

            imeiTable = $('#imeiTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                },
                pageLength: 10,
                ordering: true,
                order: [[0, 'asc']]
            });
        }

        // ========== CẬP NHẬT NGAY LẬP TỨC TRÊN GIAO DIỆN 
        function updateImeiRowInTable(imeiId, updatedData) {
            // Tìm dòng cần cập nhật
            const row = document.querySelector(`tr[data-imei-id="${imeiId}"]`);
            if (!row) return;

            // Thêm class updating để hiệu ứng
            row.classList.add('updating-row');

            // Cập nhật dữ liệu trong mảng allImeiData
            const index = allImeiData.findIndex(i => i.idImei == imeiId);
            if (index !== -1) {
                allImeiData[index] = { ...allImeiData[index], ...updatedData };
            }

            // Cập nhật trực tiếp trên giao diện
            const statusCell = row.cells[1];
            const maImeiCell = row.cells[0];
            const moTaCell = row.cells[2];

            // Cập nhật mã IMEI
            if (updatedData.MaImei) {
                maImeiCell.textContent = updatedData.MaImei;
            }

            // Cập nhật trạng thái
            const statusClass = getStatusBadgeClass(updatedData.TrangThai);
            const statusText = getStatusDisplayName(updatedData.TrangThai);
            statusCell.innerHTML = `<span class="status-badge ${statusClass}">${statusText}</span>`;

            // Cập nhật mô tả
            if (updatedData.MoTa !== undefined) {
                const displayText = updatedData.MoTa
                    ? (updatedData.MoTa.length > 50 ? updatedData.MoTa.substring(0, 50) + '...' : updatedData.MoTa)
                    : 'Không có mô tả';

                moTaCell.innerHTML = updatedData.MoTa
                    ? `<span title="${escapeHtml(updatedData.MoTa)}">${escapeHtml(displayText)}</span>`
                    : '<span class="text-muted">Không có mô tả</span>';
            }

            // Hiệu ứng hoàn thành
            setTimeout(() => {
                row.classList.remove('updating-row');
                row.classList.add('updated-row');

                setTimeout(() => {
                    row.classList.remove('updated-row');
                }, 2000);
            }, 500);

            // Tải lại tổng quan IMEI từ server để đảm bảo đồng bộ
            loadImeiOverview();
        }

        // Cập nhật thống kê IMEI (sử dụng data từ API)
        function updateImeiSummary(overview) {
            if (!overview) return;

            // Tính tổng số IMEI
            document.getElementById('imeiTotalCount').textContent = `Tổng: ${overview.totalImei}`;

            // Cập nhật hiển thị
            const statusContainer = document.getElementById('imeiStatusContainer');
            if (statusContainer) {
                if (!overview.statusCounts || overview.statusCounts.length === 0) {
                    statusContainer.innerHTML = `
                                        <div class="text-center text-muted py-3">
                                            <i class="fas fa-info-circle"></i> Không có dữ liệu IMEI
                                        </div>`;
                    return;
                }

                let html = '';
                overview.statusCounts.forEach(item => {
                    const status = item.status || 'Không xác định';
                    const count = item.count || 0;
                    const statusKey = status.replace(/ /g, '-');

                    const statusClass = status.toLowerCase().includes('còn hàng') ? 'status-available' :
                        status.toLowerCase().includes('đã bán') ? 'status-sold' : 'status-other';
                    const dotClass = status.toLowerCase().includes('còn hàng') ? 'dot-available' :
                        status.toLowerCase().includes('đã bán') ? 'dot-sold' : 'dot-other';

                    html += `
                                        <div class="imei-status-item ${statusClass}" id="status-${statusKey}">
                                            <div class="status-info">
                                                <div class="status-dot ${dotClass}"></div>
                                                <span class="status-name">${getStatusDisplayName(status)}</span>
                                            </div>
                                            <span class="status-count" id="count-${statusKey}">${count}</span>
                                        </div>`;
                });
                statusContainer.innerHTML = html;
            }
        }

        // ========== MODAL FUNCTIONS 
        async function loadModelSanPhamDropdown() {
            try {
                const response = await fetch('/Imei/GetAllModelSanPham');
                if (!response.ok) throw new Error('Network error');

                const models = await response.json();
                const dropdown = document.getElementById('editIdModelSanPham');

                dropdown.innerHTML = '<option value="">Chọn model sản phẩm</option>';
                models.forEach(model => {
                    const option = document.createElement('option');
                    option.value = model.idModelSanPham;
                    option.textContent = model.displayText;
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading models:', error);
            }
        }

        function openEditModal(id, maImei, idModelSanPham, moTa, trangThai) {
            document.getElementById('editImeiId').value = id;
            document.getElementById('editMaImei').value = maImei;
            document.getElementById('editIdModelSanPham').value = idModelSanPham;
            document.getElementById('editMoTa').value = moTa;
            document.getElementById('editTrangThai').value = trangThai;

       
            clearEditErrors();

            const modal = new bootstrap.Modal(document.getElementById('editImeiModal'));
            modal.show();
        }

        // ========== FORM HANDLING 
        document.getElementById('editImeiForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            // Vô hiệu hóa nút để tránh click nhiều lần
            const updateBtn = document.getElementById('btnUpdateImei');
            const updateSpinner = document.getElementById('updateSpinner');
            const updateText = document.getElementById('updateText');

            updateBtn.disabled = true;
            updateSpinner.classList.remove('d-none');
            updateText.textContent = 'Đang xử lý...';

            try {
                const imeiId = document.getElementById('editImeiId').value;
                const imeiData = {
                    MaImei: document.getElementById('editMaImei').value.trim(),
                    IdModelSanPham: parseInt(document.getElementById('editIdModelSanPham').value),
                    MoTa: document.getElementById('editMoTa').value.trim(),
                    TrangThai: document.getElementById('editTrangThai').value
                };

                // Validate
                if (!validateImeiForm(imeiData)) {
                    updateBtn.disabled = false;
                    updateSpinner.classList.add('d-none');
                    updateText.textContent = 'Cập nhật';
                    return;
                }

                const response = await fetch(`/Imei/Edit/${imeiId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(imeiData)
                });

                let result;
                try {
                    result = await response.json();
                } catch {
                    result = { message: 'Cập nhật thành công!' };
                }

                if (response.ok) {
                    // Success - CẬP NHẬT NGAY TRÊN GIAO DIỆN
                    updateImeiRowInTable(imeiId, imeiData);

                    // Đóng modal
                    bootstrap.Modal.getInstance(document.getElementById('editImeiModal')).hide();

                    // Hiển thị thông báo
                    showAlert('Cập nhật IMEI thành công!', 'success');

                    // GỬI THÔNG BÁO CẬP NHẬT CHO TRANG INDEX
                    notifyIndexPageAboutImeiUpdate();

                    // Tải lại danh sách IMEI để đảm bảo đồng bộ
                    setTimeout(() => {
                        loadImeiData();
                        loadImeiOverview();
                    }, 500);

                } else {
                    // Show errors
                    if (typeof result === 'object') {
                        if (result.MaImei) showEditError('errorEditMaImei', result.MaImei);
                        if (result.IdModelSanPham) showEditError('errorEditIdModelSanPham', result.IdModelSanPham);
                        if (result.TrangThai) showEditError('errorEditTrangThai', result.TrangThai);
                        if (result.message) showAlert(result.message, 'danger');
                    }
                }
            } catch (error) {
                console.error('Error updating IMEI:', error);
                showAlert('Lỗi khi cập nhật IMEI: ' + error.message, 'danger');
            } finally {
                // Khôi phục trạng thái nút
                updateBtn.disabled = false;
                updateSpinner.classList.add('d-none');
                updateText.textContent = 'Cập nhật';
            }
        });

        // ========== VALIDATION ==========
        function validateImeiForm(imeiData) {
            let isValid = true;
            clearEditErrors();

            if (!imeiData.MaImei) {
                showEditError('errorEditMaImei', 'Vui lòng nhập mã IMEI');
                isValid = false;
            } else if (!/^\d{15}$/.test(imeiData.MaImei)) {
                showEditError('errorEditMaImei', 'Mã IMEI phải có đúng 15 chữ số');
                isValid = false;
            }

            if (!imeiData.IdModelSanPham) {
                showEditError('errorEditIdModelSanPham', 'Vui lòng chọn model sản phẩm');
                isValid = false;
            }

            if (!imeiData.TrangThai) {
                showEditError('errorEditTrangThai', 'Vui lòng chọn trạng thái');
                isValid = false;
            }

            return isValid;
        }

        function clearEditErrors() {
            document.querySelectorAll('#editImeiForm .text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

        function showEditError(elementId, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.classList.remove('d-none');
        }

        // ========== UTILITY FUNCTIONS ==========
        function showImeiLoading(show) {
            const spinner = document.getElementById('loadingSpinner');
            const tableBody = document.getElementById('imeiTableBody');

            if (show) {
                spinner.style.display = 'block';
                tableBody.innerHTML = '';
            } else {
                spinner.style.display = 'none';
            }
        }

        function changeMainImage(src, element) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            element.classList.add('active');
        }

        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                                        <div class="d-flex align-items-center">
                                            <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                                            <div>${message}</div>
                                        </div>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                                    `;

            alertContainer.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // ========== EVENT LISTENERS ==========
        document.getElementById('searchImei').addEventListener('input', function () {
            clearTimeout(this.searchTimeout);
            this.searchTimeout = setTimeout(() => loadImeiData(), 500);
        });

        document.getElementById('statusFilter').addEventListener('change', loadImeiData);

        // Reset form khi modal đóng
        document.getElementById('editImeiModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editImeiForm').reset();
            clearEditErrors();
        });

        // Format currency
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(amount);
        }
    </script>
</body>
