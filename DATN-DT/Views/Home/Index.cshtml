@{
    ViewData["Title"] = "Trang chủ";
}

<div class="page-section">
    <section class="hero">
        <div class="banner-img">
            <div class="banner-content">
                <h2>iPhone 17 Pro Series<br>Titan Tự Nhiên</h2>
                <p style="margin: 15px 0 25px;">Chip A19 Pro mạnh mẽ nhất lịch sử. Đặt trước nhận bộ quà 5 triệu.</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-danger">MUA NGAY</a>
            </div>
        </div>
    </section>

    <section class="products">
        <div class="section-header">
            <h3 class="section-title">Sản phẩm nổi bật</h3>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline" style="padding: 5px 15px; font-size: 13px;">Xem tất cả</a>
        </div>

        <div class="product-grid">
            <div class="product-card">
                <a asp-controller="Product" asp-action="Detail" style="text-decoration:none; color: inherit;">
                    <div class="badge-sale">-10%</div>
                    <div class="product-img">
                        <img src="https://placehold.co/200x200/png?text=iPhone+17+Pro" alt="iPhone 17 Pro">
                    </div>
                    <div class="product-info">
                        <span class="specs-tag">256GB</span>
                        <div class="product-name">iPhone 17 Pro Max 256GB Titan Tự Nhiên</div>
                        <div class="price-box">
                            <span class="price-current">33.200.000₫</span>
                            <span class="price-old">35.990.000₫</span>
                        </div>
                        <button class="btn btn-outline btn-sm" style="width:100%">Chi tiết</button>
                    </div>
                </a>
            </div>
            <div class="product-card">
                <a asp-controller="Product" asp-action="Detail" style="text-decoration:none; color: inherit;">
                    <div class="product-img">
                        <img src="https://placehold.co/200x200/png?text=Samsung+S24" alt="Samsung S24">
                    </div>
                    <div class="product-info">
                        <span class="specs-tag">512GB</span>
                        <div class="product-name">Samsung Galaxy S24 Ultra 5G</div>
                        <div class="price-box">
                            <span class="price-current">29.990.000₫</span>
                        </div>
                        <button class="btn btn-outline btn-sm" style="width:100%">Chi tiết</button>
                    </div>
                </a>
            </div>
            <div class="product-card">
                <a asp-controller="Product" asp-action="Detail" style="text-decoration:none; color: inherit;">
                    <div class="badge-sale">HOT</div>
                    <div class="product-img">
                        <img src="https://placehold.co/200x200/png?text=Xiaomi+14" alt="Xiaomi 14">
                    </div>
                    <div class="product-info">
                        <span class="specs-tag">12GB/256GB</span>
                        <div class="product-name">Xiaomi 14 5G Chính hãng</div>
                        <div class="price-box">
                            <span class="price-current">19.990.000₫</span>
                            <span class="price-old">22.990.000₫</span>
                        </div>
                        <button class="btn btn-outline btn-sm" style="width:100%">Chi tiết</button>
                    </div>
                </a>
            </div>
            <div class="product-card">
                <a asp-controller="Product" asp-action="Detail" style="text-decoration:none; color: inherit;">
                    <div class="product-img">
                        <img src="https://placehold.co/200x200/png?text=OPPO+Find+X7" alt="OPPO">
                    </div>
                    <div class="product-info">
                        <span class="specs-tag">16GB/512GB</span>
                        <div class="product-name">OPPO Find X7 Ultra</div>
                        <div class="price-box">
                            <span class="price-current">21.500.000₫</span>
                        </div>
                        <button class="btn btn-outline btn-sm" style="width:100%">Chi tiết</button>
                    </div>
                </a>
            </div>
        </div>
    </section>
</div>