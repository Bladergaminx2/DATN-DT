@model IEnumerable<DATN_DT.Models.ChucVu>

@{
    ViewData["Title"] = "Quản lý Chức Vụ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Chức Vụ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h2 {
            margin: 0 0 30px 0;
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
        }

        .table-container {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        table {
            margin: 0;
            width: 100%;
            background-color: var(--bg-card);
        }

        thead {
            background: linear-gradient(135deg, var(--bg-card) 0%, #0f172a 100%);
        }

        th {
            color: var(--text-primary);
            font-weight: 600;
            padding: 15px;
            text-align: center;
            border-bottom: 2px solid var(--border-color);
        }

        td {
            color: var(--text-secondary);
            padding: 16px;
            text-align: center;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
        }

        tbody tr:hover {
            background: rgba(99, 102, 241, 0.05);
        }

        .btn-sm {
            border-radius: 8px;
            padding: 6px 16px;
            font-weight: 600;
            font-size: 13px;
            border: none;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            color: white;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
            color: white;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            color: white;
        }

        .modal-content {
            background: var(--bg-card);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
        }

        .modal-header {
            border-bottom: 1px solid var(--border-color);
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
        }

        .modal-body {
            padding: 24px;
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            background-color: var(--bg-card);
        }

        .form-control {
            background: rgba(30, 41, 59, 0.5);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 12px 16px;
        }

        .form-control:focus {
            background: rgba(30, 41, 59, 0.8);
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 600;
            margin-bottom: 8px;
        }

        .text-danger {
            color: var(--danger-color) !important;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            color: white;
        }

        .btn-secondary {
            background: rgba(100, 116, 139, 0.2);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        .btn-secondary:hover {
            background: rgba(100, 116, 139, 0.3);
            color: var(--text-primary);
        }

        .badge-admin {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger-color);
            padding: 4px 12px;
            border-radius: 12px;
            font-weight: 600;
        }

        .badge-normal {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success-color);
            padding: 4px 12px;
            border-radius: 12px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 15px;">
            <h2><i class="fas fa-user-tie me-2"></i>Quản Lý Chức Vụ</h2>
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fas fa-plus me-2"></i>+ Thêm Chức Vụ
            </button>
        </div>

        <div class="table-container">
            <table class="table table-hover text-center align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Chức Vụ</th>
                        <th>Mã Chức Vụ</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdChucVu</td>
                            <td>@item.TenChucVu</td>
                            <td>
                                @if (item.TenChucVuVietHoa == "ADMIN")
                                {
                                    <span class="badge-admin">@item.TenChucVuVietHoa</span>
                                }
                                else
                                {
                                    <span class="badge-normal">@item.TenChucVuVietHoa</span>
                                }
                            </td>
                            <td>
                                @if (item.TenChucVuVietHoa != "ADMIN")
                                {
                                    <div style="display: flex; gap: 8px; justify-content: center;">
                                        <button class="btn btn-sm btn-warning btn-edit"
                                                data-id="@item.IdChucVu"
                                                data-ten="@item.TenChucVu"
                                                data-tenviethoa="@item.TenChucVuVietHoa">
                                            <i class="fas fa-edit me-1"></i>Sửa
                                        </button>
                                        <button class="btn btn-sm btn-danger btn-delete"
                                                data-id="@item.IdChucVu"
                                                data-ten="@item.TenChucVu">
                                            <i class="fas fa-trash me-1"></i>Xóa
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Không thể chỉnh sửa</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Chức Vụ</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên Chức Vụ <span class="text-danger">*</span></label>
                            <input type="text" id="TenChucVu" class="form-control" placeholder="Ví dụ: Nhân viên bán hàng" />
                            <small id="errorTenChucVu" class="text-danger d-none"></small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mã Chức Vụ (tự động)</label>
                            <input type="text" id="TenChucVuVietHoa" class="form-control" placeholder="Sẽ tự động tạo từ tên chức vụ" readonly />
                            <small class="text-muted">Mã chức vụ sẽ được tạo tự động từ tên chức vụ (viết hoa, bỏ khoảng trắng)</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Chức Vụ</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdChucVu" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên Chức Vụ <span class="text-danger">*</span></label>
                            <input type="text" id="EditTenChucVu" class="form-control" />
                            <small id="errorEditTenChucVu" class="text-danger d-none"></small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mã Chức Vụ</label>
                            <input type="text" id="EditTenChucVuVietHoa" class="form-control" />
                            <small class="text-muted">Mã chức vụ (viết hoa, không khoảng trắng)</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // Tự động tạo mã chức vụ từ tên
        document.getElementById('TenChucVu').addEventListener('input', function() {
            const tenChucVu = this.value.trim();
            const tenVietHoa = tenChucVu.toUpperCase().replace(/\s+/g, '');
            document.getElementById('TenChucVuVietHoa').value = tenVietHoa;
        });

        // Thêm Chức Vụ
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const tenChucVu = document.getElementById("TenChucVu").value.trim();
            const tenChucVuVietHoa = document.getElementById("TenChucVuVietHoa").value.trim();

            if (!tenChucVu) {
                showError('errorTenChucVu', 'Tên chức vụ không được để trống');
                return;
            }

            const cvData = {
                TenChucVu: tenChucVu,
                TenChucVuVietHoa: tenChucVuVietHoa || tenChucVu.toUpperCase().replace(/\s+/g, '')
            };

            try {
                const response = await fetch('/ChucVu/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(cvData)
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Thêm chức vụ thành công!');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    location.reload();
                } else {
                    alert(result.message || 'Lỗi khi thêm chức vụ');
                }
            } catch (error) {
                alert('Lỗi kết nối: ' + error.message);
            }
        });

        // Lắng nghe sự kiện mở modal Sửa
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                document.getElementById("EditIdChucVu").value = btn.dataset.id;
                document.getElementById("EditTenChucVu").value = btn.dataset.ten;
                document.getElementById("EditTenChucVuVietHoa").value = btn.dataset.tenviethoa;
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Cập nhật Chức Vụ
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdChucVu").value;
            const tenChucVu = document.getElementById("EditTenChucVu").value.trim();
            const tenChucVuVietHoa = document.getElementById("EditTenChucVuVietHoa").value.trim();

            if (!tenChucVu) {
                showError('errorEditTenChucVu', 'Tên chức vụ không được để trống');
                return;
            }

            const cvData = {
                TenChucVu: tenChucVu,
                TenChucVuVietHoa: tenChucVuVietHoa || tenChucVu.toUpperCase().replace(/\s+/g, '')
            };

            try {
                const response = await fetch(`/ChucVu/Update/${id}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(cvData)
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Cập nhật chức vụ thành công!');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    location.reload();
                } else {
                    alert(result.message || 'Lỗi khi cập nhật chức vụ');
                }
            } catch (error) {
                alert('Lỗi kết nối: ' + error.message);
            }
        });

        // Xóa Chức Vụ
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const ten = btn.dataset.ten;

                if (confirm(`Bạn có chắc chắn muốn xóa chức vụ "${ten}"?`)) {
                    try {
                        const response = await fetch(`/ChucVu/Delete/${id}`, {
                            method: 'DELETE'
                        });

                        const result = await response.json();

                        if (response.ok) {
                            alert(result.message || 'Xóa chức vụ thành công!');
                            location.reload();
                        } else {
                            alert(result.message || 'Lỗi khi xóa chức vụ');
                        }
                    } catch (error) {
                        alert('Lỗi kết nối: ' + error.message);
                    }
                }
            });
        });

        // Reset form khi đóng modal
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            document.querySelectorAll('.text-danger').forEach(el => el.classList.add('d-none'));
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            document.querySelectorAll('.text-danger').forEach(el => el.classList.add('d-none'));
        });
    </script>
</body>
</html>

