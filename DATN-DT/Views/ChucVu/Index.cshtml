@model IEnumerable<DATN_DT.Models.ChucVu>

@{
    ViewData["Title"] = "Quản lý Chức Vụ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Chức Vụ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h2 {
            margin: 0 0 30px 0;
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
        }

        .table-container {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
        }

        .badge-admin {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger-color);
            padding: 4px 12px;
            border-radius: 12px;
            font-weight: 600;
        }

        .badge-normal {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success-color);
            padding: 4px 12px;
            border-radius: 12px;
            font-weight: 600;
        }

        .modal-content {
            background: var(--bg-card);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
        }

        .form-control {
            background: rgba(30, 41, 59, 0.5);
            border: 1px solid var(--border-color);
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
            <h2><i class="fas fa-user-tie me-2"></i>Quản Lý Chức Vụ</h2>
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fas fa-plus me-2"></i>Thêm Chức Vụ
            </button>
        </div>

        <div class="table-container">
            <table class="table table-hover text-center align-middle text-white">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Chức Vụ</th>
                        <th>Mã Chức Vụ</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdChucVu</td>
                            <td>@item.TenChucVu</td>
                            <td>
                                <span class="@(item.TenChucVuVietHoa == "ADMIN" ? "badge-admin" : "badge-normal")">
                                    @item.TenChucVuVietHoa
                                </span>
                            </td>
                            <td>
                                @if (item.TenChucVuVietHoa != "ADMIN")
                                {
                                    <button class="btn btn-sm btn-warning btn-edit" data-id="@item.IdChucVu" data-ten="@item.TenChucVu" data-tenviethoa="@item.TenChucVuVietHoa">Sửa</button>
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@item.IdChucVu" data-ten="@item.TenChucVu">Xóa</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><h5>Thêm Chức Vụ</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
                <form id="createForm">
                    <div class="modal-body">
                        <label class="form-label">Tên Chức Vụ</label>
                        <input type="text" id="TenChucVu" class="form-control" required />
                        <label class="form-label mt-3">Mã Chức Vụ (tự động)</label>
                        <input type="text" id="TenChucVuVietHoa" class="form-control" readonly />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><h5>Sửa Chức Vụ</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
                <form id="editForm">
                    <input type="hidden" id="EditIdChucVu" />
                    <div class="modal-body">
                        <label class="form-label">Tên Chức Vụ</label>
                        <input type="text" id="EditTenChucVu" class="form-control" required />
                        <label class="form-label mt-3">Mã Chức Vụ</label>
                        <input type="text" id="EditTenChucVuVietHoa" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Tự động tạo mã chức vụ
        document.getElementById('TenChucVu').addEventListener('input', function() {
            document.getElementById('TenChucVuVietHoa').value = this.value.trim().toUpperCase().replace(/\s+/g, '');
        });

        // Xử lý Thêm
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const data = {
                TenChucVu: document.getElementById("TenChucVu").value,
                TenChucVuVietHoa: document.getElementById("TenChucVuVietHoa").value
            };
            const res = await fetch('/ChucVu/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            if (res.ok) location.reload();
            else alert("Lỗi khi thêm!");
        });

        // Mở modal sửa
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                document.getElementById("EditIdChucVu").value = btn.dataset.id;
                document.getElementById("EditTenChucVu").value = btn.dataset.ten;
                document.getElementById("EditTenChucVuVietHoa").value = btn.dataset.tenviethoa;
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý Cập nhật
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const id = document.getElementById("EditIdChucVu").value;
            const data = {
                TenChucVu: document.getElementById("EditTenChucVu").value,
                TenChucVuVietHoa: document.getElementById("EditTenChucVuVietHoa").value
            };
            const res = await fetch(`/ChucVu/Update/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            if (res.ok) location.reload();
            else alert("Lỗi khi cập nhật!");
        });

        // Xử lý Xóa
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                if (confirm(`Xóa chức vụ ${btn.dataset.ten}?`)) {
                    const res = await fetch(`/ChucVu/Delete/${btn.dataset.id}`, { method: 'DELETE' });
                    if (res.ok) location.reload();
                }
            });
        });
    </script>
</body>
</html>