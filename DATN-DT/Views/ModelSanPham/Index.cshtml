@model IEnumerable<DATN_DT.Models.ModelSanPham>

@{
    ViewData["Title"] = "Quản lý Model Sản Phẩm";

    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Model Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .price-highlight {
            color: #28a745;
            font-weight: bold;
        }

        .text-muted {
            color: #6c757d !important;
            font-style: italic;
        }

        .search-container {
            background-color: #1e1e2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .search-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .search-input-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
        }

        /* Style cho phần quản lý ảnh */
        .image-gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .image-item {
            position: relative;
            width: 120px;
            min-height: 120px;
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid #444;
            transition: all 0.3s ease;
            background: #2a2a2a;
        }

            .image-item:hover {
                border-color: #4a90e2;
                transform: scale(1.05);
            }

            .image-item img {
                width: 100%;
                height: 100px;
                object-fit: cover;
            }

        .image-info {
            padding: 5px;
            background: rgba(0, 0, 0, 0.7);
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .image-name {
            color: white;
            font-size: 11px;
            margin: 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .image-actions {
            position: absolute;
            top: 5px;
            right: 5px;
            display: none;
        }

        .image-item:hover .image-actions {
            display: block;
        }

        .btn-image-delete {
            background: rgba(255, 0, 0, 0.8);
            color: white;
            border: none;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            cursor: pointer;
        }

        .upload-area {
            border: 2px dashed #4a90e2;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            background: rgba(74, 144, 226, 0.1);
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 15px;
        }

            .upload-area:hover {
                background: rgba(74, 144, 226, 0.2);
            }

            .upload-area i {
                font-size: 48px;
                color: #4a90e2;
                margin-bottom: 10px;
            }

        .btn-manage-images {
            background: #17a2b8;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            font-size: 12px;
            transition: 0.3s;
        }

            .btn-manage-images:hover {
                background: #138496;
            }

        .btn-manage-imei {
            background: #6f42c1;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            font-size: 12px;
            transition: 0.3s;
        }

            .btn-manage-imei:hover {
                background: #5a32a3;
            }

        .image-preview-container {
            max-height: 300px;
            overflow-y: auto;
        }

        .no-images {
            text-align: center;
            color: #6c757d;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Model Sản Phẩm</h2>

        <div class="search-container">
            <div class="search-header">
                <h4 class="mb-0">Tìm kiếm model sản phẩm</h4>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    + Thêm Model Sản Phẩm
                </button>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Chọn Sản Phẩm:</strong></label>
                <select id="sanPhamFilter" class="form-control" onchange="filterBySanPham()">
                    <option value="">-- Tất cả sản phẩm --</option>
                    @if (ViewBag.AllSanPhams != null)
                    {
                        foreach (var sp in ViewBag.AllSanPhams)
                        {
                            var isSelected = ViewBag.SelectedSanPhamId != null && ViewBag.SelectedSanPhamId == sp.IdSanPham;
                            if (isSelected)
                            {
                                <option value="@sp.IdSanPham" selected>@sp.MaSanPham - @sp.TenSanPham</option>
                            }
                            else
                            {
                                <option value="@sp.IdSanPham">@sp.MaSanPham - @sp.TenSanPham</option>
                            }
                        }
                    }
                </select>
            </div>

            <div class="search-input-group">
                <input type="text" id="searchInput" class="form-control search-input" placeholder="Tìm theo tên model, màu sắc..." />
                <button class="btn btn-primary" onclick="performSearch()">
                    Tìm kiếm
                </button>
                <button class="btn btn-secondary" onclick="clearSearch()">
                    Reset
                </button>
            </div>
        </div>

        <table class="table table-hover text-center align-middle" id="productsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Model</th>
                    <th>Sản Phẩm</th>
                    <th>Màn Hình</th>
                    <th>Camera Trước</th>
                    <th>Camera Sau</th>
                    <th>Pin</th>
                    <th>RAM</th>
                    <th>ROM</th>
                    <th>Màu</th>
                    <th>Giá Bán</th>
                    <th>Ảnh</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="productsTableBody">
                @foreach (var item in Model)

                {
                    var anhSanPhams = ViewBag.AnhSanPhams != null ?
                    ((Dictionary<int, List<DATN_DT.Models.AnhSanPham>>)ViewBag.AnhSanPhams).GetValueOrDefault(item.IdModelSanPham) :
                    null;

                    <tr data-tenmodel="@item.TenModel" data-mau="@item.Mau" data-sanpham="@(ViewBag.SanPhams != null && item.IdSanPham.HasValue ? ((Dictionary<int, DATN_DT.Models.SanPham>)ViewBag.SanPhams).GetValueOrDefault(item.IdSanPham.Value)?.TenSanPham : "")">
                        <td>@item.IdModelSanPham</td>
                        <td>@item.TenModel</td>
                        <td>
                            @if (ViewBag.SanPhams != null && item.IdSanPham.HasValue)

                            {

                                var sanPham = ((Dictionary<int, DATN_DT.Models.SanPham>)ViewBag.SanPhams).GetValueOrDefault(item.IdSanPham.Value);

                                if (sanPham != null)

                                {
                                    @sanPham.TenSanPham
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdSanPham)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.ManHinhs != null && item.IdManHinh.HasValue)

                            {

                                var manHinh = ((Dictionary<int, DATN_DT.Models.ManHinh>)ViewBag.ManHinhs).GetValueOrDefault(item.IdManHinh.Value);

                                if (manHinh != null)

                                {
                                    @manHinh.CongNgheManHinh
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdManHinh)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.CameraTruocs != null && item.IdCameraTruoc.HasValue)

                            {

                                var cameraTruoc = ((Dictionary<int, DATN_DT.Models.CameraTruoc>)ViewBag.CameraTruocs).GetValueOrDefault(item.IdCameraTruoc.Value);

                                if (cameraTruoc != null)

                                {
                                    @cameraTruoc.DoPhanGiaiCamTruoc
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdCameraTruoc)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.CameraSaus != null && item.IdCameraSau.HasValue)

                            {

                                var cameraSau = ((Dictionary<int, DATN_DT.Models.CameraSau>)ViewBag.CameraSaus).GetValueOrDefault(item.IdCameraSau.Value);

                                if (cameraSau != null)

                                {
                                    @cameraSau.DoPhanGiaiCamSau
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdCameraSau)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.Pins != null && item.IdPin.HasValue)

                            {

                                var pin = ((Dictionary<int, DATN_DT.Models.Pin>)ViewBag.Pins).GetValueOrDefault(item.IdPin.Value);

                                if (pin != null)

                                {
                                    @pin.DungLuongPin
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdPin)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.RAMs != null && item.IdRAM.HasValue)

                            {

                                var ram = ((Dictionary<int, DATN_DT.Models.RAM>)ViewBag.RAMs).GetValueOrDefault(item.IdRAM.Value);

                                if (ram != null)

                                {
                                    @ram.DungLuongRAM
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdRAM)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>
                            @if (ViewBag.ROMs != null && item.IdROM.HasValue)

                            {

                                var rom = ((Dictionary<int, DATN_DT.Models.ROM>)ViewBag.ROMs).GetValueOrDefault(item.IdROM.Value);

                                if (rom != null)

                                {
                                    @rom.DungLuongROM
                                }

                                else

                                {
                                    <span class="text-muted">Không tìm thấy (ID: @item.IdROM)</span>
                                }

                            }

                            else

                            {
                                <span class="text-muted">Chưa chọn</span>
                            }
                        </td>
                        <td>@item.Mau</td>
                        <td class="price-highlight">@item.GiaBanModel?.ToString("N0") đ</td>
                        <td>
                            @if (anhSanPhams != null && anhSanPhams.Any())

                            {
                                <span class="badge bg-success">@anhSanPhams.Count ảnh</span>
                            }

                            else

                            {
                                <span class="badge bg-secondary">Chưa có ảnh</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdModelSanPham"
                                        data-tenmodel="@item.TenModel"
                                        data-idsanpham="@item.IdSanPham"
                                        data-idmanhinh="@item.IdManHinh"
                                        data-idcameratruoc="@item.IdCameraTruoc"
                                        data-idcamerasau="@item.IdCameraSau"
                                        data-idpin="@item.IdPin"
                                        data-idram="@item.IdRAM"
                                        data-idrom="@item.IdROM"
                                        data-mau="@item.Mau"
                                        data-giabanmodel="@item.GiaBanModel">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-manage-images btn-manage-images-modal"
                                        data-id="@item.IdModelSanPham"
                                        data-tenmodel="@item.TenModel">
                                    <i class="fas fa-images"></i> Ảnh
                                </button>
                                <button class="btn btn-sm btn-info btn-manage-imei"
                                        data-id="@item.IdModelSanPham"
                                        data-tenmodel="@item.TenModel">
                                    <i class="fas fa-mobile-alt"></i> IMEI
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdModelSanPham"
                                        data-tenmodel="@item.TenModel">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center mt-5">
                <i class="fas fa-box-open fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">
                    @if (ViewBag.SelectedSanPhamId != null)
                    {
                        <text>Chưa có model nào cho sản phẩm này</text>
                    }
                    else
                    {
                        <text>Chưa có model sản phẩm nào. Vui lòng chọn sản phẩm để xem model.</text>
                    }
                </h4>
                @if (ViewBag.SelectedSanPhamId == null)
                {
                    <p class="text-muted">Nhấn "Thêm Model Sản Phẩm" để bắt đầu</p>
                }
            </div>
        }
    </div>

    <!-- Modal Thêm Model Sản Phẩm -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Model Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên Model <span class="text-danger">*</span></label>
                                    <input type="text" id="TenModel" class="form-control" placeholder="Nhập tên model" />
                                    <small id="errorTenModel" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Sản Phẩm <span class="text-danger">*</span></label>
                                    <select id="IdSanPham" class="form-control">
                                        <option value="">Chọn sản phẩm</option>
                                    </select>
                                    <small id="errorIdSanPham" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Màn Hình <span class="text-danger">*</span></label>
                                    <select id="IdManHinh" class="form-control">
                                        <option value="">Chọn màn hình</option>
                                    </select>
                                    <small id="errorIdManHinh" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Camera Trước <span class="text-danger">*</span></label>
                                    <select id="IdCameraTruoc" class="form-control">
                                        <option value="">Chọn camera trước</option>
                                    </select>
                                    <small id="errorIdCameraTruoc" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Camera Sau <span class="text-danger">*</span></label>
                                    <select id="IdCameraSau" class="form-control">
                                        <option value="">Chọn camera sau</option>
                                    </select>
                                    <small id="errorIdCameraSau" class="text-danger d-none"></small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Pin <span class="text-danger">*</span></label>
                                    <select id="IdPin" class="form-control">
                                        <option value="">Chọn pin</option>
                                    </select>
                                    <small id="errorIdPin" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">RAM <span class="text-danger">*</span></label>
                                    <select id="IdRAM" class="form-control">
                                        <option value="">Chọn RAM</option>
                                    </select>
                                    <small id="errorIdRAM" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">ROM <span class="text-danger">*</span></label>
                                    <select id="IdROM" class="form-control">
                                        <option value="">Chọn ROM</option>
                                    </select>
                                    <small id="errorIdROM" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Màu <span class="text-danger">*</span></label>
                                    <input type="text" id="Mau" class="form-control" placeholder="Nhập màu sắc" />
                                    <small id="errorMau" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Giá Bán <span class="text-danger">*</span></label>
                                    <input type="number" id="GiaBanModel" class="form-control" placeholder="Nhập giá bán" min="0" />
                                    <small id="errorGiaBanModel" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Sửa Model Sản Phẩm -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Model Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdModelSanPham" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên Model <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenModel" class="form-control" />
                                    <small id="errorEditTenModel" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Sản Phẩm <span class="text-danger">*</span></label>
                                    <select id="EditIdSanPham" class="form-control" disabled></select>
                                    <input type="hidden" id="EditIdSanPhamHidden" />
                                    <small id="errorEditIdSanPham" class="text-danger d-none"></small>
                                    <small class="text-muted">Không thể thay đổi sản phẩm sau khi đã tạo model</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Màn Hình <span class="text-danger">*</span></label>
                                    <select id="EditIdManHinh" class="form-control"></select>
                                    <small id="errorEditIdManHinh" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Camera Trước <span class="text-danger">*</span></label>
                                    <select id="EditIdCameraTruoc" class="form-control"></select>
                                    <small id="errorEditIdCameraTruoc" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Camera Sau <span class="text-danger">*</span></label>
                                    <select id="EditIdCameraSau" class="form-control"></select>
                                    <small id="errorEditIdCameraSau" class="text-danger d-none"></small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Pin <span class="text-danger">*</span></label>
                                    <select id="EditIdPin" class="form-control"></select>
                                    <small id="errorEditIdPin" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">RAM <span class="text-danger">*</span></label>
                                    <select id="EditIdRAM" class="form-control"></select>
                                    <small id="errorEditIdRAM" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">ROM <span class="text-danger">*</span></label>
                                    <select id="EditIdROM" class="form-control"></select>
                                    <small id="errorEditIdROM" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Màu <span class="text-danger">*</span></label>
                                    <input type="text" id="EditMau" class="form-control" />
                                    <small id="errorEditMau" class="text-danger d-none"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Giá Bán <span class="text-danger">*</span></label>
                                    <input type="number" id="EditGiaBanModel" class="form-control" min="0" />
                                    <small id="errorEditGiaBanModel" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
