            const response = await fetch('/ModelSanPham/UploadImage', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (response.ok) {
                successCount++;
            } else {
                failedFiles.push({
                    name: file.name,
                    reason: result.message || 'Upload thất bại'
                });
            }
        } catch (error) {
            failedFiles.push({
                name: file.name,
                reason: 'Lỗi kết nối'
            });
        }
    }

    // ===== Thông báo kết quả =====
    let message = '';

    if (successCount > 0) {
        message += `✅ Upload thành công ${successCount} ảnh.\n`;
    }

    if (failedFiles.length > 0) {
        message += `\n❌ ${failedFiles.length} ảnh lỗi:\n`;
        failedFiles.forEach(f => {
            message += `- ${f.name}: ${f.reason}\n`;
        });
    }

    alert(message || 'Không có ảnh nào được upload');

    document.getElementById('fileInput').value = '';
    document.getElementById('imageCountInfo').classList.add('d-none');

    loadImagesForModel(modelId);
}

        async function loadImagesForModel(modelId) {
            try {
                const response = await fetch(`/ModelSanPham/GetImagesByModel?idModelSanPham=${modelId}`);
                const images = await response.json();

                const gallery = document.getElementById('imageGallery');
                const noImagesMessage = document.getElementById('noImagesMessage');

                gallery.innerHTML = '';

                if (images && images.length > 0) {
                    noImagesMessage.classList.add('d-none');

                    images.forEach(image => {
                        const imageItem = document.createElement('div');
                        imageItem.className = 'image-item';
                        const imageName = image.tenFile || image.duongDan.split('/').pop() || 'Ảnh';
                        imageItem.innerHTML = `
                                    <img src="${image.duongDan}" alt="${imageName}" />
                                    <div class="image-info">
                                        <p class="image-name" title="${imageName}">${imageName.length > 20 ? imageName.substring(0, 20) + '...' : imageName}</p>
                                    </div>
                                    <div class="image-actions">
                                        <button class="btn-image-delete" onclick="deleteImage(${image.idAnh}, ${modelId})" title="Xóa ảnh">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                `;
                        gallery.appendChild(imageItem);
                    });
                } else {
                    noImagesMessage.classList.remove('d-none');
                }
            } catch (error) {
                console.error('Error loading images:', error);
                alert('Lỗi khi tải danh sách ảnh!');
            }
        }

        async function deleteImage(imageId, modelId) {
            // Kiểm tra số lượng ảnh hiện có trước khi xóa
            try {
                const response = await fetch(`/ModelSanPham/GetImagesByModel?idModelSanPham=${modelId}`);
                const existingImages = await response.json();
                const currentImageCount = existingImages ? existingImages.length : 0;

                // Nếu đã có ảnh ban đầu, phải giữ lại ít nhất 1 ảnh
                if (currentImageCount <= 1) {
                    alert('Không thể xóa ảnh! Sản phẩm phải có ít nhất 1 ảnh.');
                    return;
                }

                if (!confirm('Bạn có chắc chắn muốn xóa ảnh này?')) {
                    return;
                }

                const deleteResponse = await fetch('/ModelSanPham/DeleteImage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `idAnh=${imageId}`
                });

                const result = await deleteResponse.json();

                if (deleteResponse.ok) {
                    // Reload images after successful deletion
                    loadImagesForModel(modelId);
                    alert('Xóa ảnh thành công!');
                } else {
                    alert(result.message || 'Xóa ảnh thất bại!');
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Lỗi khi xóa ảnh!');
            }
        }

        // ========== MODAL CLEANUP ==========
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
            // Re-enable IdSanPham khi đóng modal
            EditIdSanPham.disabled = false;
            EditIdSanPhamHidden.value = '';
        });

        imageManagementModal.addEventListener("hidden.bs.modal", () => {
            document.getElementById('imageGallery').innerHTML = '';
            document.getElementById('noImagesMessage').classList.remove('d-none');
        });

        // ========== QUẢN LÝ IMEI ==========
        document.querySelectorAll('.btn-manage-imei').forEach(btn => {
            btn.addEventListener('click', function () {
                const modelId = this.dataset.id;
                const modelName = this.dataset.tenmodel;

                document.getElementById('currentImeiModelId').value = modelId;
                document.getElementById('imeiModalModelName').textContent = modelName;

                loadImeisForModel(modelId);
                new bootstrap.Modal(document.getElementById('imeiManagementModal')).show();
            });
        });

        async function loadImeisForModel(modelId) {
            try {
                const response = await fetch(`/ModelSanPham/GetImeisByModel?modelId=${modelId}`);
                const result = await response.json();

                const tbody = document.getElementById('imeiListBody');
                const noImeiMessage = document.getElementById('noImeiMessage');
                tbody.innerHTML = '';

                if (result.success && result.data && result.data.length > 0) {
                    noImeiMessage.classList.add('d-none');

                    result.data.forEach(imei => {
                        const row = document.createElement('tr');
                        const statusBadge = imei.trangThai === 'Còn hàng' 
                            ? '<span class="badge bg-success">Còn hàng</span>'
                            : imei.trangThai === 'Đã bán'
                            ? '<span class="badge bg-danger">Đã bán</span>'
                            : '<span class="badge bg-warning">Hỏng</span>';

                        const deleteBtn = imei.canDelete
                            ? `<button class="btn btn-sm btn-danger" onclick="deleteImei(${imei.idImei}, ${modelId})">
                                <i class="fas fa-trash"></i> Xóa
                               </button>`
                            : `<button class="btn btn-sm btn-secondary" disabled title="IMEI đã có trong hóa đơn, không thể xóa">
                                <i class="fas fa-lock"></i> Khóa
                               </button>`;

                        row.innerHTML = `
                            <td><code>${imei.maImei}</code></td>
                            <td>${statusBadge}</td>
                            <td>${imei.moTa || '-'}</td>
                            <td>${deleteBtn}</td>
                        `;
                        tbody.appendChild(row);
                    });
                } else {
                    noImeiMessage.classList.remove('d-none');
                }
            } catch (error) {
                console.error('Error loading IMEIs:', error);
                alert('Lỗi khi tải danh sách IMEI!');
            }
        }

        async function addNewImei() {
            const modelId = parseInt(document.getElementById('currentImeiModelId').value);
            const maImei = document.getElementById('newImeiCode').value.trim();
            const trangThai = document.getElementById('newImeiStatus').value;
            const moTa = document.getElementById('newImeiMoTa').value.trim();

            // Validation
            document.getElementById('errorNewImeiCode').classList.add('d-none');
            document.getElementById('errorNewImeiStatus').classList.add('d-none');

            let hasError = false;

            if (!maImei) {
                showError('errorNewImeiCode', 'Phải nhập mã IMEI!');
                hasError = true;
            } else {
                // Kiểm tra IMEI phải là 15 chữ số
                const imeiRegex = /^\d{15}$/;
                if (!imeiRegex.test(maImei)) {
                    showError('errorNewImeiCode', 'Mã IMEI phải gồm đúng 15 chữ số!');
                    hasError = true;
                }
            }
            if (!trangThai) {
                showError('errorNewImeiStatus', 'Phải chọn trạng thái!');
                hasError = true;
            }

            if (hasError) return;

            try {
                const response = await fetch('/ModelSanPham/AddImei', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        MaImei: maImei,
                        IdModelSanPham: modelId,
                        TrangThai: trangThai,
                        MoTa: moTa || null
                    })
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    alert('Thêm IMEI thành công!');
                    // Reset form
                    document.getElementById('newImeiCode').value = '';
                    document.getElementById('newImeiStatus').value = '';
                    document.getElementById('newImeiMoTa').value = '';
                    // Reload danh sách
                    loadImeisForModel(modelId);
                } else {
                    if (result.errors) {
                        if (result.errors.MaImei) showError('errorNewImeiCode', result.errors.MaImei);
                        if (result.errors.TrangThai) showError('errorNewImeiStatus', result.errors.TrangThai);
                    } else {
                        alert(result.message || 'Lỗi khi thêm IMEI!');
                    }
                }
            } catch (error) {
                console.error('Error adding IMEI:', error);
                alert('Lỗi kết nối khi thêm IMEI!');
            }
        }

        async function deleteImei(imeiId, modelId) {
            if (!confirm('Bạn có chắc chắn muốn xóa IMEI này?')) {
                return;
            }

            try {
                const response = await fetch('/ModelSanPham/DeleteImei', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(imeiId)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    alert('Xóa IMEI thành công!');
                    loadImeisForModel(modelId);
                } else {
                    alert(result.message || 'Lỗi khi xóa IMEI!');
                }
            } catch (error) {
                console.error('Error deleting IMEI:', error);
                alert('Lỗi kết nối khi xóa IMEI!');
            }
        }

        // Cleanup modal IMEI
        document.getElementById('imeiManagementModal').addEventListener("hidden.bs.modal", () => {
            document.getElementById('imeiListBody').innerHTML = '';
            document.getElementById('noImeiMessage').classList.add('d-none');
            document.getElementById('newImeiCode').value = '';
            document.getElementById('newImeiStatus').value = '';
            document.getElementById('newImeiMoTa').value = '';
        });
    </script>
