        // Validate và hiển thị thông tin ảnh trước khi upload
        async function validateAndShowImageInfo(files) {
    const maxSize = 5 * 1024 * 1024; // 5MB
    const maxImages = 8;
    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];

    const modelId = document.getElementById('currentModelId').value;
    const fileInput = document.getElementById('fileInput');
    const imageCountInfo = document.getElementById('imageCountInfo');
    const imageCountText = document.getElementById('imageCountText');

    let currentImageCount = 0;

    // ===== 1. Lấy số ảnh hiện có trong DB =====
    try {
        const response = await fetch(`/ModelSanPham/GetImagesByModel?idModelSanPham=${modelId}`);
        const existingImages = await response.json();
        currentImageCount = existingImages ? existingImages.length : 0;
    } catch (error) {
        console.error('Error loading existing images:', error);
        alert('Không thể kiểm tra số lượng ảnh hiện có!');
        return;
    }

    // ===== 2. Check tổng số ảnh =====
    const totalImages = currentImageCount + files.length;

    if (totalImages > maxImages) {
        alert(
            `❌ Quá số lượng ảnh cho phép!\n\n` +
            `Ảnh hiện có: ${currentImageCount}\n` +
            `Ảnh vừa chọn: ${files.length}\n` +
            `Tối đa cho phép: ${maxImages}\n\n` +
            `👉 Vui lòng xóa bớt ảnh cũ trước khi thêm mới.`
        );

        fileInput.value = '';
        imageCountInfo.classList.add('d-none');
        return; // ⛔ DỪNG HOÀN TOÀN – KHÔNG CHECK, KHÔNG UPLOAD
    }

    // ===== 3. Validate từng file =====
    const validFiles = [];
    const invalidFiles = [];

    for (let file of files) {
        if (!allowedTypes.includes(file.type)) {
            invalidFiles.push(`${file.name} - Định dạng không hỗ trợ`);
        } else if (file.size > maxSize) {
            invalidFiles.push(`${file.name} - Kích thước > 5MB`);
        } else {
            validFiles.push(file);
        }
    }

    // ===== 4. Báo lỗi nếu có file không hợp lệ =====
    if (invalidFiles.length > 0) {
        alert(
            '❌ Các ảnh không hợp lệ:\n' +
            invalidFiles.map(x => `- ${x}`).join('\n')
        );

        fileInput.value = '';
        imageCountInfo.classList.add('d-none');
        return;
    }

    // ===== 5. Hiển thị thông tin & xác nhận upload =====
    const fileNames = validFiles.map(f => f.name).join(', ');
    imageCountText.innerHTML = `Đã chọn <strong>${validFiles.length}</strong> ảnh: ${fileNames}`;
    imageCountInfo.classList.remove('d-none');

    const confirmMessage =
        `Bạn đang thêm ${validFiles.length} ảnh.\n` +
        `Tổng sau khi thêm: ${currentImageCount + validFiles.length}/${maxImages}\n\n` +
        `Bạn có muốn tiếp tục upload không?`;

    if (confirm(confirmMessage)) {
        uploadFiles(validFiles);
    } else {
        fileInput.value = '';
        imageCountInfo.classList.add('d-none');
    }
}


        async function uploadFiles(files) {
