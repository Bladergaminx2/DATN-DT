@model IEnumerable<DATN_DT.Models.NhanVien>
@inject DATN_DT.IServices.INhanVienService _nhanVienService

@{
    ViewData["Title"] = "Quản lý Nhân Viên";
    Layout = null;

    // Lấy danh sách chức vụ trừ admin trực tiếp từ service
    var chucVus = await _nhanVienService.GetChucVusExceptAdmin();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Nhân Viên</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Giữ nguyên các style cũ */
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }

        .status-warning {
            color: #ffc107;
            font-weight: bold;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Nhân Viên</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Nhân Viên
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tài Khoản</th>
                    <th>Họ Tên</th>
                    <th>Chức Vụ</th>
                    <th>SĐT</th>
                    <th>Email</th>
                    <th>Ngày Vào Làm</th>
                    <th>Trạng Thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdNhanVien</td>
                        <td>@item.TenTaiKhoanNV</td>
                        <td class="text-start">@item.HoTenNhanVien</td>
                        <td>@item.ChucVu?.TenChucVu</td>
                        <td>@item.SdtNhanVien</td>
                        <td class="text-start">@item.EmailNhanVien</td>
                        <td>@item.NgayVaoLam?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var statusClass = "status-active";
                                var statusText = "Đang làm việc";

                                if (item.TrangThaiNV == 1)
                                {
                                    statusClass = "status-inactive";
                                    statusText = "Đã nghỉ";
                                }
                                else if (item.TrangThaiNV == 2)
                                {
                                    statusClass = "status-warning";
                                    statusText = "Nghỉ phép";
                                }
                            }
                            <span class="@statusClass">
                                @statusText
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdNhanVien"
                                        data-taikhoan="@item.TenTaiKhoanNV"
                                        data-hoten="@item.HoTenNhanVien"
                                        data-chucvu="@item.IdChucVu"
                                        data-sdt="@item.SdtNhanVien"
                                        data-email="@item.EmailNhanVien"
                                        data-diachi="@item.DiaChiNV"
                                        data-ngayvaolam="@item.NgayVaoLam?.ToString("yyyy-MM-dd")"
                                        data-trangthai="@item.TrangThaiNV">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdNhanVien"
                                        data-hoten="@item.HoTenNhanVien">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Nhân Viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tài Khoản <span class="text-danger">*</span></label>
                                    <input type="text" id="TenTaiKhoanNV" class="form-control" placeholder="Tên tài khoản đăng nhập" />
                                    <small id="errorTenTaiKhoanNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                    <input type="password" id="Password" class="form-control" placeholder="Mật khẩu" />
                                    <small id="errorPassword" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên <span class="text-danger">*</span></label>
                                    <input type="text" id="HoTenNhanVien" class="form-control" placeholder="Họ tên nhân viên" />
                                    <small id="errorHoTenNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chức vụ <span class="text-danger">*</span></label>
                                    <select id="IdChucVu" class="form-control">
                                        <option value="">Chọn chức vụ</option>
                                        @foreach (var cv in chucVus)
                                        {
                                            <option value="@cv.IdChucVu">@cv.TenChucVu</option>
                                        }
                                    </select>
                                    <small id="errorIdChucVu" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="SdtNhanVien" class="form-control" placeholder="Số điện thoại" />
                                    <small id="errorSdtNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EmailNhanVien" class="form-control" placeholder="Email (tùy chọn)" />
                                    <small id="errorEmailNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Vào Làm</label>
                                    <input type="date" id="NgayVaoLam" class="form-control" />
                                    <small id="errorNgayVaoLam" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="TrangThaiNV" class="form-control">
                                        <option value="0">Đang làm việc</option>
                                        <option value="2">Nghỉ phép</option>
                                        <option value="1">Đã nghỉ</option>
                                    </select>
                                    <small id="errorTrangThaiNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ</label>
                            <textarea id="DiaChiNV" class="form-control" placeholder="Nhập địa chỉ" rows="2"></textarea>
                            <small id="errorDiaChiNV" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Nhân Viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdNhanVien" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tài Khoản <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenTaiKhoanNV" class="form-control" />
                                    <small id="errorEditTenTaiKhoanNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Đổi Mật khẩu</label>
                                    <input type="password" id="EditPassword" class="form-control" placeholder="Để trống nếu không muốn đổi mật khẩu" />
                                    <small id="errorEditPassword" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên <span class="text-danger">*</span></label>
                                    <input type="text" id="EditHoTenNhanVien" class="form-control" />
                                    <small id="errorEditHoTenNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chức vụ <span class="text-danger">*</span></label>
                                    <select id="EditIdChucVu" class="form-control">
                                        <option value="">Chọn chức vụ</option>
                                        @foreach (var cv in chucVus)
                                        {
                                            <option value="@cv.IdChucVu">@cv.TenChucVu</option>
                                        }
                                    </select>
                                    <small id="errorEditIdChucVu" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="EditSdtNhanVien" class="form-control" />
                                    <small id="errorEditSdtNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EditEmailNhanVien" class="form-control" />
                                    <small id="errorEditEmailNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Vào Làm</label>
                                    <input type="date" id="EditNgayVaoLam" class="form-control" />
                                    <small id="errorEditNgayVaoLam" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="EditTrangThaiNV" class="form-control">
                                        <option value="0">Đang làm việc</option>
                                        <option value="2">Nghỉ phép</option>
                                        <option value="1">Đã nghỉ</option>
                                    </select>
                                    <small id="errorEditTrangThaiNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ</label>
                            <textarea id="EditDiaChiNV" class="form-control" rows="2"></textarea>
                            <small id="errorEditDiaChiNV" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Ẩn tất cả lỗi
        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

                // Thêm Nhân Viên
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const nvData = {
                TenTaiKhoanNV: document.getElementById("TenTaiKhoanNV").value.trim(),
                Password: document.getElementById("Password").value,
                HoTenNhanVien: document.getElementById("HoTenNhanVien").value.trim(),
                IdChucVu: parseInt(document.getElementById("IdChucVu").value) || null,
                SdtNhanVien: document.getElementById("SdtNhanVien").value.trim(),
                EmailNhanVien: document.getElementById("EmailNhanVien").value.trim() || null,
                DiaChiNV: document.getElementById("DiaChiNV").value.trim() || null,
                TrangThaiNV: parseInt(document.getElementById("TrangThaiNV").value) || null
            };

            // Validate dữ liệu
            if (!nvData.TenTaiKhoanNV) {
                showError('errorTenTaiKhoanNV', 'Tài khoản không được để trống');
                return;
            }
            if (!nvData.Password) {
                showError('errorPassword', 'Mật khẩu không được để trống');
                return;
            }
            if (!nvData.HoTenNhanVien) {
                showError('errorHoTenNhanVien', 'Họ tên không được để trống');
                return;
            }
            if (!nvData.IdChucVu) {
                showError('errorIdChucVu', 'Chức vụ không được để trống');
                return;
            }
            if (!nvData.SdtNhanVien) {
                showError('errorSdtNhanVien', 'Số điện thoại không được để trống');
                return;
            }

            hideAllErrors();

            try {
                const response = await fetch('/NhanVien/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(nvData)
                });

                const result = await response.json();

                if (response.ok) {
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message || 'Lỗi khi thêm nhân viên', 'danger');
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

                // Cập nhật Nhân Viên
                // Cập nhật Nhân Viên
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdNhanVien").value;
            const nvData = {
                TenTaiKhoanNV: document.getElementById("EditTenTaiKhoanNV").value.trim(),
                HoTenNhanVien: document.getElementById("EditHoTenNhanVien").value.trim(),
                IdChucVu: parseInt(document.getElementById("EditIdChucVu").value) || null,
                SdtNhanVien: document.getElementById("EditSdtNhanVien").value.trim(),
                EmailNhanVien: document.getElementById("EditEmailNhanVien").value.trim() || null,
                DiaChiNV: document.getElementById("EditDiaChiNV").value.trim() || null,
                TrangThaiNV: parseInt(document.getElementById("EditTrangThaiNV").value) || null
            };

            // Validate dữ liệu
            if (!nvData.TenTaiKhoanNV) {
                showError('errorEditTenTaiKhoanNV', 'Tài khoản không được để trống');
                return;
            }
            if (!nvData.HoTenNhanVien) {
                showError('errorEditHoTenNhanVien', 'Họ tên không được để trống');
                return;
            }
            if (!nvData.IdChucVu) {
                showError('errorEditIdChucVu', 'Chức vụ không được để trống');
                return;
            }
            if (!nvData.SdtNhanVien) {
                showError('errorEditSdtNhanVien', 'Số điện thoại không được để trống');
                return;
            }

            hideAllErrors();

            try {
                const response = await fetch(`/NhanVien/Update/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(nvData)
                });

                // Kiểm tra nếu response không ok
                if (!response.ok) {
                    let errorMessage = `HTTP error! status: ${response.status}`;
                    try {
                        // Thử parse error response
                        const errorText = await response.text();
                        if (errorText) {
                            try {
                                const errorJson = JSON.parse(errorText);
                                errorMessage = errorJson.message || errorText;
                            } catch {
                                errorMessage = errorText;
                            }
                        }
                    } catch {
                        // Nếu không thể đọc response text
                        errorMessage = `Lỗi server: ${response.status} ${response.statusText}`;
                    }
                    throw new Error(errorMessage);
                }

                // Nếu response ok, thử parse JSON
                const result = await response.json();
                showAlert(result.message, 'success');
                bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                setTimeout(() => location.reload(), 1000);

            } catch (error) {
                console.error('Update error:', error);
                showAlert('Lỗi: ' + error.message, 'danger');
            }
        });

         document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const taikhoan = btn.dataset.taikhoan;
                const hoten = btn.dataset.hoten;
                const chucvu = btn.dataset.chucvu;
                const sdt = btn.dataset.sdt;
                const email = btn.dataset.email;
                const diachi = btn.dataset.diachi;
                const ngayvaolam = btn.dataset.ngayvaolam;
                const trangthai = btn.dataset.trangthai;

                document.getElementById("EditIdNhanVien").value = id;
                document.getElementById("EditTenTaiKhoanNV").value = taikhoan;
                document.getElementById("EditHoTenNhanVien").value = hoten;
                document.getElementById("EditIdChucVu").value = chucvu;
                document.getElementById("EditSdtNhanVien").value = sdt;
                document.getElementById("EditEmailNhanVien").value = email || '';
                document.getElementById("EditDiaChiNV").value = diachi || '';
                document.getElementById("EditTrangThaiNV").value = trangthai;

                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

      
        // Xóa Nhân Viên
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const hoten = btn.dataset.hoten;

                if (confirm(`Bạn có chắc chắn muốn xóa nhân viên "${hoten}"?`)) {
                    try {
                        const response = await fetch(`/NhanVien/Delete/${id}`, {
                            method: 'DELETE'
                        });

                        const result = await response.json();

                        if (response.ok) {
                            showAlert(result.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showAlert(result.message || 'Lỗi khi xóa nhân viên', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Reset form khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            hideAllErrors();

            // Set default date
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('NgayVaoLam').value = today;
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideAllErrors();
        });

        // Khởi tạo
        document.addEventListener('DOMContentLoaded', function() {
            // Set default date for create form
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('NgayVaoLam').value = today;
        });
    </script>
</body>
</html>