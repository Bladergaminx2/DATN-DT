        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdNhanVien").value;
            const nvData = {
                TenTaiKhoanNV: document.getElementById("EditTenTaiKhoanNV").value.trim(),
                HoTenNhanVien: document.getElementById("EditHoTenNhanVien").value.trim(),
                IdChucVu: parseInt(document.getElementById("EditIdChucVu").value) || null,
                SdtNhanVien: document.getElementById("EditSdtNhanVien").value.trim(),
                EmailNhanVien: document.getElementById("EditEmailNhanVien").value.trim() || null,
                DiaChiNV: document.getElementById("EditDiaChiNV").value.trim() || null,
                TrangThaiNV: parseInt(document.getElementById("EditTrangThaiNV").value) || null
            };

            // Validate dữ liệu
            if (!nvData.TenTaiKhoanNV) {
                showError('errorEditTenTaiKhoanNV', 'Tài khoản không được để trống');
                return;
            }
            if (!nvData.HoTenNhanVien) {
                showError('errorEditHoTenNhanVien', 'Họ tên không được để trống');
                return;
            }
            if (!nvData.IdChucVu) {
                showError('errorEditIdChucVu', 'Chức vụ không được để trống');
                return;
            }
            if (!nvData.SdtNhanVien) {
                showError('errorEditSdtNhanVien', 'Số điện thoại không được để trống');
                return;
            }

            hideAllErrors();

            try {
                const response = await fetch(`/NhanVien/Update/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(nvData)
                });

                // Kiểm tra nếu response không ok
                if (!response.ok) {
                    let errorMessage = `HTTP error! status: ${response.status}`;
                    try {
                        // Thử parse error response
                        const errorText = await response.text();
                        if (errorText) {
                            try {
                                const errorJson = JSON.parse(errorText);
                                errorMessage = errorJson.message || errorText;
                            } catch {
                                errorMessage = errorText;
                            }
                        }
                    } catch {
                        // Nếu không thể đọc response text
                        errorMessage = `Lỗi server: ${response.status} ${response.statusText}`;
                    }
                    throw new Error(errorMessage);
                }

                // Nếu response ok, thử parse JSON
                const result = await response.json();
                showAlert(result.message, 'success');
                bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                setTimeout(() => location.reload(), 1000);

            } catch (error) {
                console.error('Update error:', error);
                showAlert('Lỗi: ' + error.message, 'danger');
            }
        });

