@model IEnumerable<DATN_DT.Models.NhanVien>

@{
    ViewData["Title"] = "Quản lý Nhân Viên";
    Layout = null;

    // Lấy danh sách chức vụ từ ViewBag (được truyền từ controller)
    var chucVus = ViewBag.ChucVus as List<DATN_DT.Models.ChucVu> ?? new List<DATN_DT.Models.ChucVu>();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Nhân Viên</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            display: none;
        }

        h2 {
            margin: 0;
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-md);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-create:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
                background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
            }

            .btn-create:active {
                transform: translateY(0);
            }

        .table-container {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        table {
            margin: 0;
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background-color: var(--bg-card);
        }

        thead {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
        }

        th {
            background: transparent;
            color: var(--text-primary);
            font-weight: 600;
            padding: 15px;
            text-align: center;
            border-bottom: 2px solid var(--border-color);
            font-size: 14px;
        }

        tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--border-color);
        }

            tbody tr:hover {
                background: rgba(99, 102, 241, 0.05);
                transform: scale(1.01);
            }

        td {
            color: var(--text-secondary);
            padding: 16px;
            text-align: center;
            vertical-align: middle;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: center;
            align-items: center;
        }

        .btn-sm {
            border-radius: 8px;
            padding: 6px 16px;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            color: white;
            box-shadow: var(--shadow-sm);
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
                background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
                color: white;
            }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
            color: white;
            box-shadow: var(--shadow-sm);
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
                background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
                color: white;
            }

        .status-active {
            color: var(--success-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(16, 185, 129, 0.1);
            border-radius: 12px;
            display: inline-block;
        }

        .status-inactive {
            color: var(--danger-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 12px;
            display: inline-block;
        }

        .status-warning {
            color: var(--warning-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(245, 158, 11, 0.1);
            border-radius: 12px;
            display: inline-block;
        }

        .modal-content {
            background: linear-gradient(135deg, var(--bg-card) 0%, #0f172a 100%);
            color: var(--text-primary);
            border-radius: 16px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-xl);
        }

        .modal-header {
            border-bottom: 1px solid var(--border-color);
            padding: 20px 24px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
        }

        .modal-title {
            font-size: 20px;
            font-weight: 600;
            color: white;
        }

        .modal-body {
            padding: 24px;
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            padding: 20px 24px;
            background-color: var(--bg-card);
        }

        .form-control {
            background: rgba(30, 41, 59, 0.5);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background: rgba(30, 41, 59, 0.8);
                border-color: var(--primary-color);
                color: var(--text-primary);
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            }

            .form-control::placeholder {
                color: var(--text-secondary);
            }

        select.form-control {
            cursor: pointer;
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .text-danger {
            color: var(--danger-color) !important;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
                background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
            }

        .btn-secondary {
            background: rgba(100, 116, 139, 0.2);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background: rgba(100, 116, 139, 0.3);
                border-color: var(--primary-color);
                color: var(--text-primary);
            }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
            border-radius: 12px;
            border: none;
            box-shadow: var(--shadow-xl);
            animation: slideInRight 0.3s ease;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success-color);
            border-left: 4px solid var(--success-color);
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger-color);
            border-left: 4px solid var(--danger-color);
        }

        .btn-close-white {
            filter: invert(1) grayscale(100%) brightness(200%);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .container {
                padding: 10px;
            }

            h2 {
                font-size: 24px;
            }

            .page-header {
                flex-direction: column;
                gap: 16px;
                align-items: stretch;
            }

            .btn-create {
                width: 100%;
                justify-content: center;
            }

            table {
                font-size: 12px;
            }

            th, td {
                padding: 10px 8px;
            }

            .action-buttons {
                flex-direction: column;
                gap: 4px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 15px;">
            <h2 style="margin: 0; font-size: 28px; font-weight: 700; background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"><i class="fas fa-users me-2"></i>Quản Lý Nhân Viên</h2>
            <div style="display: flex; gap: 10px; align-items: center;">
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="fas fa-plus me-2"></i>+ Thêm Nhân Viên
                </button>
            </div>
        </div>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="table-container">
            <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tài Khoản</th>
                    <th>Họ Tên</th>
                    <th>Chức Vụ</th>
                    <th>SĐT</th>
                    <th>Email</th>
                    <th>Ngày Vào Làm</th>
                    <th>Trạng Thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdNhanVien</td>
                        <td>@item.TenTaiKhoanNV</td>
                        <td class="text-start">@item.HoTenNhanVien</td>
                        <td>@item.ChucVu?.TenChucVu</td>
                        <td>@item.SdtNhanVien</td>
                        <td class="text-start">@item.EmailNhanVien</td>
                        <td>@item.NgayVaoLam?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var statusClass = "status-active";
                                var statusText = "Đang làm việc";

                                if (item.TrangThaiNV == 1)
                                {
                                    statusClass = "status-inactive";
                                    statusText = "Đã nghỉ";
                                }
                                else if (item.TrangThaiNV == 2)
                                {
                                    statusClass = "status-warning";
                                    statusText = "Nghỉ phép";
                                }
                            }
                            <span class="@statusClass">
                                @statusText
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdNhanVien"
                                        data-taikhoan="@item.TenTaiKhoanNV"
                                        data-hoten="@item.HoTenNhanVien"
                                        data-chucvu="@item.IdChucVu"
                                        data-sdt="@item.SdtNhanVien"
                                        data-email="@item.EmailNhanVien"
                                        data-diachi="@item.DiaChiNV"
                                        data-ngayvaolam="@item.NgayVaoLam?.ToString("yyyy-MM-dd")"
                                        data-trangthai="@item.TrangThaiNV">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdNhanVien"
                                        data-hoten="@item.HoTenNhanVien">
                                    <i class="fas fa-trash me-1"></i>Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Nhân Viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tài Khoản <span class="text-danger">*</span></label>
                                    <input type="text" id="TenTaiKhoanNV" class="form-control" placeholder="Tên tài khoản đăng nhập" />
                                    <small id="errorTenTaiKhoanNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                    <input type="password" id="Password" class="form-control" placeholder="Mật khẩu" />
                                    <small id="errorPassword" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên <span class="text-danger">*</span></label>
                                    <input type="text" id="HoTenNhanVien" class="form-control" placeholder="Họ tên nhân viên" />
                                    <small id="errorHoTenNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chức vụ <span class="text-danger">*</span></label>
                                    <select id="IdChucVu" class="form-control">
                                        <option value="">Chọn chức vụ</option>
                                        @foreach (var cv in chucVus)
                                        {
                                            <option value="@cv.IdChucVu">@cv.TenChucVu</option>
                                        }
                                    </select>
                                    <small id="errorIdChucVu" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="SdtNhanVien" class="form-control" placeholder="Số điện thoại" />
                                    <small id="errorSdtNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EmailNhanVien" class="form-control" placeholder="Email (tùy chọn)" />
                                    <small id="errorEmailNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Vào Làm</label>
                                    <input type="date" id="NgayVaoLam" class="form-control" />
                                    <small id="errorNgayVaoLam" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="TrangThaiNV" class="form-control">
                                        <option value="0">Đang làm việc</option>
                                        <option value="2">Nghỉ phép</option>
                                        <option value="1">Đã nghỉ</option>
                                    </select>
                                    <small id="errorTrangThaiNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ</label>
                            <textarea id="DiaChiNV" class="form-control" placeholder="Nhập địa chỉ" rows="2"></textarea>
                            <small id="errorDiaChiNV" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Nhân Viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdNhanVien" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tài Khoản <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenTaiKhoanNV" class="form-control" />
                                    <small id="errorEditTenTaiKhoanNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Đổi Mật khẩu</label>
                                    <input type="password" id="EditPassword" class="form-control" placeholder="Để trống nếu không muốn đổi mật khẩu" />
                                    <small id="errorEditPassword" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên <span class="text-danger">*</span></label>
                                    <input type="text" id="EditHoTenNhanVien" class="form-control" />
                                    <small id="errorEditHoTenNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chức vụ <span class="text-danger">*</span></label>
                                    <select id="EditIdChucVu" class="form-control">
                                        <option value="">Chọn chức vụ</option>
                                        @foreach (var cv in chucVus)
                                        {
                                            <option value="@cv.IdChucVu">@cv.TenChucVu</option>
                                        }
                                    </select>
                                    <small id="errorEditIdChucVu" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="EditSdtNhanVien" class="form-control" />
                                    <small id="errorEditSdtNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EditEmailNhanVien" class="form-control" />
                                    <small id="errorEditEmailNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Vào Làm</label>
                                    <input type="date" id="EditNgayVaoLam" class="form-control" />
                                    <small id="errorEditNgayVaoLam" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="EditTrangThaiNV" class="form-control">
                                        <option value="0">Đang làm việc</option>
                                        <option value="2">Nghỉ phép</option>
                                        <option value="1">Đã nghỉ</option>
                                    </select>
                                    <small id="errorEditTrangThaiNV" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ</label>
                            <textarea id="EditDiaChiNV" class="form-control" rows="2"></textarea>
                            <small id="errorEditDiaChiNV" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
