    <script>
        // ====== UTILITY FUNCTIONS ======
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        function showAlert(type, message) {
            if (type === 'success') {
                document.getElementById('successMessage').textContent = message;
                document.getElementById('successAlert').style.display = 'block';
                setTimeout(() => hideAlert('successAlert'), 5000);
            } else {
                document.getElementById('errorMessage').textContent = message;
                document.getElementById('errorAlert').style.display = 'block';
            }
        }

        function hideAlert(alertId) {
            document.getElementById(alertId).style.display = 'none';
        }

        function showError(elementId, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.classList.remove('d-none');
        }

        function hideError(elementId) {
            const element = document.getElementById(elementId);
            element.classList.add('d-none');
        }

        function resetForm(formId) {
            const form = document.getElementById(formId);
            if (form) {
                form.reset();
                form.querySelectorAll('.text-danger').forEach(el => {
                    el.classList.add('d-none');
                });
            }
        }

        // ====== FILTER FUNCTIONS ======
        function clearFilters() {
            window.location.href = '@Url.Action("Index", "ManHinh")';
        }

        function removeSearch() {
            const url = new URL(window.location.href);
            url.searchParams.delete('search');
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        // ====== CREATE MAN HINH ======
        async function createManHinh() {
            console.log('=== CREATE MAN HINH START ===');

            hideError('errorCreateKichThuoc');
            hideError('errorCreateDoPhanGiai');
            hideError('errorCreateCongNgheManHinh');

            const manHinh = {
                KichThuoc: document.getElementById('createKichThuoc').value.trim(),
                DoPhanGiai: document.getElementById('createDoPhanGiai').value.trim(),
                CongNgheManHinh: document.getElementById('createCongNgheManHinh').value.trim(),
                TinhNangMan: document.getElementById('createTinhNangMan').value.trim(),
                MoTaMan: document.getElementById('createMoTaMan').value.trim()
            };

            console.log('Creating man hinh:', manHinh);

            let isValid = true;

            if (!manHinh.KichThuoc) {
                showError('errorCreateKichThuoc', 'Phải nhập kích thước màn hình!');
                isValid = false;
            }

            if (!manHinh.DoPhanGiai) {
                showError('errorCreateDoPhanGiai', 'Phải nhập độ phân giải!');
                isValid = false;
            }

            if (!manHinh.CongNgheManHinh) {
                showError('errorCreateCongNgheManHinh', 'Phải nhập công nghệ màn hình!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/ManHinh/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(manHinh)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Thêm thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Thêm màn hình thành công!');

                    document.getElementById('createForm').reset();

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.KichThuoc) showError('errorCreateKichThuoc', data.KichThuoc);
                        if (data.DoPhanGiai) showError('errorCreateDoPhanGiai', data.DoPhanGiai);
                        if (data.CongNgheManHinh) showError('errorCreateCongNgheManHinh', data.CongNgheManHinh);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorCreate${field}`, error);
                            });
                        }
                    } else if (response.status === 409) {
                        showAlert('error', data.message || 'Màn hình đã tồn tại!');
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Create error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                console.log('=== CREATE MAN HINH END ===');
            }
        }

        // ====== EDIT MAN HINH ======
        let currentEditId = null;

        function openEditModal(button) {
            const id = button.getAttribute('data-id');
            const kichThuoc = button.getAttribute('data-kichthuoc');
            const doPhanGiai = button.getAttribute('data-dophangiai');
            const congNghe = button.getAttribute('data-congnghe');
            const tinhNang = button.getAttribute('data-tinhnang') || '';
            const moTa = button.getAttribute('data-mota') || '';

            console.log('Opening edit modal for ID:', id);

            document.getElementById('editIdManHinh').value = id;
            document.getElementById('editKichThuoc').value = kichThuoc;
            document.getElementById('editDoPhanGiai').value = doPhanGiai;
            document.getElementById('editCongNgheManHinh').value = congNghe;
            document.getElementById('editTinhNangMan').value = tinhNang;
            document.getElementById('editMoTaMan').value = moTa;

            hideError('errorEditKichThuoc');
            hideError('errorEditDoPhanGiai');
            hideError('errorEditCongNgheManHinh');

            currentEditId = id;

            const editModal = new bootstrap.Modal(document.getElementById('editModal'));
            editModal.show();
        }

        async function updateManHinh() {
            if (!currentEditId) {
                console.error('No currentEditId!');
                showAlert('error', 'Không tìm thấy ID màn hình!');
                return;
            }

            console.log('=== UPDATE MAN HINH START ===');
            console.log('Updating man hinh ID:', currentEditId);

            hideError('errorEditKichThuoc');
            hideError('errorEditDoPhanGiai');
            hideError('errorEditCongNgheManHinh');

            const manHinh = {
                IdManHinh: parseInt(currentEditId),
                KichThuoc: document.getElementById('editKichThuoc').value.trim(),
                DoPhanGiai: document.getElementById('editDoPhanGiai').value.trim(),
                CongNgheManHinh: document.getElementById('editCongNgheManHinh').value.trim(),
                TinhNangMan: document.getElementById('editTinhNangMan').value.trim(),
                MoTaMan: document.getElementById('editMoTaMan').value.trim()
            };

            console.log('Update data:', manHinh);

            let isValid = true;

            if (!manHinh.KichThuoc) {
                showError('errorEditKichThuoc', 'Phải nhập kích thước màn hình!');
                isValid = false;
            }

            if (!manHinh.DoPhanGiai) {
                showError('errorEditDoPhanGiai', 'Phải nhập độ phân giải!');
                isValid = false;
            }

            if (!manHinh.CongNgheManHinh) {
                showError('errorEditCongNgheManHinh', 'Phải nhập công nghệ màn hình!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch(`/ManHinh/Edit?id=${currentEditId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(manHinh)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Cập nhật thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            try {
                                data = JSON.parse(text);
                            } catch {
                                data = { message: text || 'Cập nhật thành công!' };
                            }
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                    if (response.ok) {
                        data = { message: 'Cập nhật thành công!' };
                    }
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Cập nhật màn hình thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.KichThuoc) showError('errorEditKichThuoc', data.KichThuoc);
                        if (data.DoPhanGiai) showError('errorEditDoPhanGiai', data.DoPhanGiai);
                        if (data.CongNgheManHinh) showError('errorEditCongNgheManHinh', data.CongNgheManHinh);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorEdit${field}`, error);
                            });
                        }
                        if (data.Message) showAlert('error', data.Message);
                    } else if (response.status === 404) {
                        showAlert('error', data.message || `Không tìm thấy màn hình với ID=${currentEditId}!`);
                    } else if (response.status === 409) {
                        showAlert('error', data.message || 'Màn hình đã tồn tại!');
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Update error:', error);
                showAlert('error', 'Lỗi kết nối đến server: ' + error.message);
            } finally {
                hideLoading();
                console.log('=== UPDATE MAN HINH END ===');
            }
        }

        // ====== DELETE MAN HINH ======
        let manHinhToDelete = null;

        function confirmDelete(id, name) {
            console.log('Confirm delete for man hinh ID:', id);
            manHinhToDelete = id;
            document.getElementById('deleteManHinhName').textContent = name;

            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        async function deleteManHinh() {
            if (!manHinhToDelete) {
                console.error('No man hinh to delete!');
                return;
            }

            console.log('=== DELETE MAN HINH START ===');
            console.log('Deleting man hinh ID:', manHinhToDelete);

            showLoading();

            try {
                const response = await fetch(`/ManHinh/Delete?id=${manHinhToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                console.log('Final DELETE response status:', response.status);

                let data = {};
                try {
                    if (response.status === 204) {
                        data = { message: 'Xóa thành công!' };
                    } else {
                        const text = await response.text();
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Xóa màn hình thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showAlert('error', data.message || 'Lỗi khi xóa màn hình!');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                manHinhToDelete = null;
                console.log('=== DELETE MAN HINH END ===');
            }
        }

        // ====== INITIALIZATION ======
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded. Total Man Hinhs:', @Model.Count());

            setTimeout(() => {
                hideAlert('successAlert');
                hideAlert('errorAlert');
            }, 5000);

            const createModal = document.getElementById('createModal');
            if (createModal) {
                createModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('createForm');
                });
            }

            const editModal = document.getElementById('editModal');
            if (editModal) {
                editModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('editForm');
                    currentEditId = null;
                });
            }

            // Tự động focus vào ô tìm kiếm
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput && '@search' !== '') {
                searchInput.focus();
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }
        });
