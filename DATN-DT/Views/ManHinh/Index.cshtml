@model IEnumerable<DATN_DT.Models.ManHinh>

@{
    ViewData["Title"] = "Quản lý Màn Hình";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Màn Hình</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 200px;
            line-height: 1.5;
        }

        .btn-edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }


        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus::placeholder {
            color: transparent;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Màn Hình</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Màn Hình
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Công nghệ</th>
                    <th>Kích thước</th>
                    <th>Độ phân giải</th>
                    <th>Tính năng</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdManHinh</td>
                        <td>@item.CongNgheManHinh</td>
                        <td>@item.KichThuoc</td>
                        <td>@item.DoPhanGiai</td>
                        <td>@item.TinhNangMan</td>
                        <td class="description-cell">@item.MoTaMan</td>
                        <td>
                            <div class="btn-edit-container">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdManHinh"
                                        data-congnghe="@item.CongNgheManHinh"
                                        data-kichthuoc="@item.KichThuoc"
                                        data-dophangiai="@item.DoPhanGiai"
                                        data-tinhnang="@item.TinhNangMan"
                                        data-mota="@item.MoTaMan">
                                    Sửa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Màn Hình</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Công nghệ màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="CongNgheManHinh" class="form-control" placeholder="Công nghệ màn hình" />
                            <small id="errorCongNgheManHinh" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kích thước <span class="text-danger">*</span></label>
                            <input type="text" id="KichThuoc" class="form-control" placeholder="Kích thước" />
                            <small id="errorKichThuoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="DoPhanGiai" class="form-control" placeholder="Độ phân giải" />
                            <small id="errorDoPhanGiai" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="TinhNangMan" class="form-control" placeholder="Tính năng màn hình" />
                            <small id="errorTinhNangMan" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaMan" class="form-control" rows="3" placeholder="Mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Màn Hình</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdManHinh" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Công nghệ màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="EditCongNgheManHinh" class="form-control" placeholder="Công nghệ màn hình" />
                            <small id="errorEditCongNgheManHinh" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kích thước <span class="text-danger">*</span></label>
                            <input type="text" id="EditKichThuoc" class="form-control" placeholder="Kích thước" />
                            <small id="errorEditKichThuoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="EditDoPhanGiai" class="form-control" placeholder="Độ phân giải" />
                            <small id="errorEditDoPhanGiai" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="EditTinhNangMan" class="form-control" placeholder="Tính năng màn hình" />
                            <small id="errorEditTinhNangMan" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaMan" class="form-control" rows="3" placeholder="Mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const mh = {
                CongNgheManHinh: CongNgheManHinh.value.trim(),
                KichThuoc: KichThuoc.value.trim(),
                DoPhanGiai: DoPhanGiai.value.trim(),
                TinhNangMan: TinhNangMan.value.trim(),
                MoTaMan: MoTaMan.value.trim()
            };

            const response = await fetch('/ManHinh/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(mh)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            ["errorCongNgheManHinh", "errorKichThuoc", "errorDoPhanGiai", "errorTinhNangMan"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.CongNgheManHinh) showError("errorCongNgheManHinh", data.CongNgheManHinh);
                    if (data.KichThuoc) showError("errorKichThuoc", data.KichThuoc);
                    if (data.DoPhanGiai) showError("errorDoPhanGiai", data.DoPhanGiai);
                    if (data.TinhNangMan) showError("errorTinhNangMan", data.TinhNangMan);
                    return;
                }

                if (response.status === 409 && data.message) {
                    ["errorCongNgheManHinh", "errorKichThuoc", "errorDoPhanGiai", "errorTinhNangMan"]
                        .forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể thêm Màn Hình. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });


        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdManHinh.value = btn.dataset.id;
                EditCongNgheManHinh.value = btn.dataset.congnghe;
                EditKichThuoc.value = btn.dataset.kichthuoc;
                EditDoPhanGiai.value = btn.dataset.dophangiai;
                EditTinhNangMan.value = btn.dataset.tinhnang;
                EditMoTaMan.value = btn.dataset.mota;
                new bootstrap.Modal(editModal).show();
            });
        });

        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdManHinh.value;
            const mh = {
                IdManHinh: id,
                CongNgheManHinh: EditCongNgheManHinh.value.trim(),
                KichThuoc: EditKichThuoc.value.trim(),
                DoPhanGiai: EditDoPhanGiai.value.trim(),
                TinhNangMan: EditTinhNangMan.value.trim(),
                MoTaMan: EditMoTaMan.value.trim()
            };

            ["errorEditCongNgheManHinh", "errorEditKichThuoc", "errorEditDoPhanGiai", "errorEditTinhNangMan"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            const response = await fetch('/ManHinh/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(mh)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.CongNgheManHinh) showError("errorEditCongNgheManHinh", data.CongNgheManHinh);
                    if (data.KichThuoc) showError("errorEditKichThuoc", data.KichThuoc);
                    if (data.DoPhanGiai) showError("errorEditDoPhanGiai", data.DoPhanGiai);
                    if (data.TinhNangMan) showError("errorEditTinhNangMan", data.TinhNangMan);
                    return;
                }

                if (response.status === 409 && data.message) {
                    ["errorEditCongNgheManHinh", "errorEditKichThuoc", "errorEditDoPhanGiai", "errorEditTinhNangMan"]
                        .forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể cập nhật Màn Hình. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
</body>
</html>