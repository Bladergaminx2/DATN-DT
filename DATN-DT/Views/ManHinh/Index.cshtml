<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Success Alert -->
    <div class="alert alert-success alert-dismissible fade show" id="successAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span id="successMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('successAlert')"></button>
    </div>

    <!-- Error Alert -->
    <div class="alert alert-danger alert-dismissible fade show" id="errorAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="errorMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('errorAlert')"></button>
    </div>

    <div class="container">
        <div class="card p-4">
            <h2 class="mb-4">🖥️ Quản Lý Màn Hình</h2>

            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="stats-box">
                        <div class="stat-label">Tổng số màn hình</div>
                        <div class="stat-value">@Model.Count()</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="stats-box">
                        <div class="stat-label">Đang hiển thị</div>
                        <div class="stat-value">@totalItems</div>
                    </div>
                </div>
            </div>

            <!-- Tìm kiếm -->
            <div class="search-filter-section">
                <form id="searchForm" method="get" action="@Url.Action("Index", "ManHinh")">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <input type="text"
                                   class="form-control search-input"
                                   name="search"
                                   placeholder="Tìm kiếm theo ID, kích thước, độ phân giải, công nghệ..."
                                   value="@search">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100" style="height: 45px;">
                                <i class="bi bi-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-clear w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-2"></i>Xóa lọc
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Hiển thị bộ lọc hiện tại -->
                @if (!string.IsNullOrEmpty(search))
                {
                    <div class="mt-3">
                        <small class="text-muted">Bộ lọc hiện tại:</small>
                        <span class="filter-badge ms-2">
                            Từ khóa: "@search"
                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeSearch()"></button>
                        </span>
                    </div>
                }
            </div>

            <!-- Header với nút thêm mới -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Hiển thị <strong>@paginatedManHinhs.Count()</strong> trong tổng số <strong>@totalItems</strong> màn hình
                </div>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle me-2"></i>Thêm Màn Hình Mới
                </button>
            </div>

            @if (paginatedManHinhs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-stt">STT</th>
                                <th class="col-id">ID</th>
                                <th class="col-kichthuoc">Kích thước</th>
                                <th class="col-dophangiai">Độ phân giải</th>
                                <th class="col-congnghe">Công nghệ</th>
                                <th class="col-tinhnang">Tính năng</th>
                                <th class="col-mota">Mô tả</th>
                                <th class="col-action">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = (pageNumber - 1) * pageSize + 1;
                            }
                            @foreach (var item in paginatedManHinhs)
                            {
                                <tr>
                                    <td class="text-center">@(counter++)</td>
                                    <td><strong>#@item.IdManHinh</strong></td>
                                    <td>
                                        <span class="kichthuoc-badge">
                                            @item.KichThuoc
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@item.DoPhanGiai</strong>
                                    </td>
                                    <td>
                                        <span class="congnghe-badge">
                                            @item.CongNgheManHinh
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TinhNangMan))
                                        {
                                            <small>@item.TinhNangMan</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="mota-cell">
                                        <div class="mota-text">
                                            @if (!string.IsNullOrEmpty(item.MoTaMan))
                                            {
                                                @if (item.MoTaMan.Length > 100)
                                                {
                                                    @item.MoTaMan.Substring(0, 100)
                                                    <span class="text-muted">...</span>
                                                }
                                                else
                                                {
                                                    @item.MoTaMan
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có mô tả</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="col-action">
                                        <div class="action-buttons-horizontal">
                                            <button class="action-button btn-edit"
                                                    data-id="@item.IdManHinh"
                                                    data-kichthuoc="@item.KichThuoc"
                                                    data-dophangiai="@item.DoPhanGiai"
                                                    data-congnghe="@item.CongNgheManHinh"
                                                    data-tinhnang="@item.TinhNangMan"
                                                    data-mota="@item.MoTaMan"
                                                    onclick="openEditModal(this)">
                                                <i class="bi bi-pencil me-1"></i>Sửa
                                            </button>
                                            <button class="action-button btn-delete"
                                                    onclick="confirmDelete(@item.IdManHinh, '@item.KichThuoc?.Replace("'", "\\'") - @item.DoPhanGiai?.Replace("'", "\\'")')">
                                                <i class="bi bi-trash me-1"></i>Xóa
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                @if (totalPages > 1)
                {
                    <div class="pagination-container">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <!-- Nút về trang đầu -->
                                @if (pageNumber > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(1))" aria-label="First">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(pageNumber - 1))" aria-label="Previous">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-double-left"></i></span>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-left"></i></span>
                                    </li>
                                }

                                <!-- Các trang -->
                                @{
                                    int startPage = Math.Max(1, pageNumber - 2);
                                    int endPage = Math.Min(totalPages, startPage + 4);
                                    if (endPage - startPage < 4)
                                    {
                                        startPage = Math.Max(1, endPage - 4);
                                    }

                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        if (i == pageNumber)
                                        {
                                            <li class="page-item active">
                                                <span class="page-link">@i</span>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Html.Raw(CreatePageUrl(i))">@i</a>
                                            </li>
                                        }
                                    }
                                }

                                <!-- Nút đến trang cuối -->
                                @if (pageNumber < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(pageNumber + 1))" aria-label="Next">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(totalPages))" aria-label="Last">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-right"></i></span>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-double-right"></i></span>
                                    </li>
                                }
                            </ul>
                        </nav>

                        <div class="page-info">
                            Trang @pageNumber/@totalPages - Hiển thị @((pageNumber - 1) * pageSize + 1)-@Math.Min(pageNumber * pageSize, totalItems) của @totalItems
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-search"></i>
                    <h4 class="mt-3">
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <text>Không tìm thấy màn hình phù hợp</text>
                        }
                        else
                        {
                            <text>Chưa có dữ liệu màn hình</text>
                        }
                    </h4>
                    <p class="text-muted">
