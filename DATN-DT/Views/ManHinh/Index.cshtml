@model IEnumerable<DATN_DT.Models.ManHinh>

@{
    ViewData["Title"] = "Quản lý Màn Hình";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Màn Hình</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 200px;
            line-height: 1.5;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Màn Hình</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Màn Hình
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Công nghệ</th>
                    <th>Kích thước</th>
                    <th>Độ phân giải</th>
                    <th>Tính năng</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdManHinh</td>
                        <td>@item.CongNgheManHinh</td>
                        <td>@item.KichThuoc</td>
                        <td>@item.DoPhanGiai</td>
                        <td>@item.TinhNangMan</td>
                        <td class="description-cell">@item.MoTaMan</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdManHinh"
                                        data-congnghe="@item.CongNgheManHinh"
                                        data-kichthuoc="@item.KichThuoc"
                                        data-dophangiai="@item.DoPhanGiai"
                                        data-tinhnang="@item.TinhNangMan"
                                        data-mota="@item.MoTaMan">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdManHinh"
                                        data-congnghe="@item.CongNgheManHinh">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Màn Hình</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Công nghệ màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="CongNgheManHinh" class="form-control" placeholder="Công nghệ màn hình" />
                            <small id="errorCongNgheManHinh" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kích thước <span class="text-danger">*</span></label>
                            <input type="text" id="KichThuoc" class="form-control" placeholder="Kích thước" />
                            <small id="errorKichThuoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="DoPhanGiai" class="form-control" placeholder="Độ phân giải" />
                            <small id="errorDoPhanGiai" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="TinhNangMan" class="form-control" placeholder="Tính năng màn hình" />
                            <small id="errorTinhNangMan" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaMan" class="form-control" rows="3" placeholder="Mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Màn Hình</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdManHinh" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Công nghệ màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="EditCongNgheManHinh" class="form-control" placeholder="Công nghệ màn hình" />
                            <small id="errorEditCongNgheManHinh" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kích thước <span class="text-danger">*</span></label>
                            <input type="text" id="EditKichThuoc" class="form-control" placeholder="Kích thước" />
                            <small id="errorEditKichThuoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="EditDoPhanGiai" class="form-control" placeholder="Độ phân giải" />
                            <small id="errorEditDoPhanGiai" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng màn hình <span class="text-danger">*</span></label>
                            <input type="text" id="EditTinhNangMan" class="form-control" placeholder="Tính năng màn hình" />
                            <small id="errorEditTinhNangMan" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaMan" class="form-control" rows="3" placeholder="Mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Ẩn tất cả lỗi
        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

        // Mở modal edit và điền dữ liệu
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const congnghe = btn.dataset.congnghe;
                const kichthuoc = btn.dataset.kichthuoc;
                const dophangiai = btn.dataset.dophangiai;
                const tinhnang = btn.dataset.tinhnang;
                const mota = btn.dataset.mota || '';

                document.getElementById("EditIdManHinh").value = id;
                document.getElementById("EditCongNgheManHinh").value = congnghe;
                document.getElementById("EditKichThuoc").value = kichthuoc;
                document.getElementById("EditDoPhanGiai").value = dophangiai;
                document.getElementById("EditTinhNangMan").value = tinhnang;
                document.getElementById("EditMoTaMan").value = mota;

                hideAllErrors();
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý xóa màn hình
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const congnghe = btn.dataset.congnghe;

                if (confirm(`Bạn có chắc chắn muốn xóa màn hình "${congnghe}"?`)) {
                    try {
                        const response = await fetch(`/ManHinh/Delete?id=${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            const result = await response.json();
                            showAlert(result.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Lỗi khi xóa màn hình', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Xử lý thêm màn hình
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const mhData = {
                CongNgheManHinh: document.getElementById("CongNgheManHinh").value.trim(),
                KichThuoc: document.getElementById("KichThuoc").value.trim(),
                DoPhanGiai: document.getElementById("DoPhanGiai").value.trim(),
                TinhNangMan: document.getElementById("TinhNangMan").value.trim(),
                MoTaMan: document.getElementById("MoTaMan").value.trim()
            };

            hideAllErrors();

            try {
                const response = await fetch('/ManHinh/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(mhData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === "object") {
                        if (error.CongNgheManHinh) showError("errorCongNgheManHinh", error.CongNgheManHinh);
                        if (error.KichThuoc) showError("errorKichThuoc", error.KichThuoc);
                        if (error.DoPhanGiai) showError("errorDoPhanGiai", error.DoPhanGiai);
                        if (error.TinhNangMan) showError("errorTinhNangMan", error.TinhNangMan);
                        return;
                    }

                    if (response.status === 409 && error.message) {
                        showAlert(error.message, 'warning');
                        return;
                    }

                    showAlert(error.message || "Không thể thêm Màn Hình", 'danger');
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Xử lý sửa màn hình
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdManHinh").value;
            const mhData = {
                CongNgheManHinh: document.getElementById("EditCongNgheManHinh").value.trim(),
                KichThuoc: document.getElementById("EditKichThuoc").value.trim(),
                DoPhanGiai: document.getElementById("EditDoPhanGiai").value.trim(),
                TinhNangMan: document.getElementById("EditTinhNangMan").value.trim(),
                MoTaMan: document.getElementById("EditMoTaMan").value.trim()
            };

            hideAllErrors();

            try {
                const response = await fetch(`/ManHinh/Edit?id=${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(mhData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === "object") {
                        if (error.CongNgheManHinh) showError("errorEditCongNgheManHinh", error.CongNgheManHinh);
                        if (error.KichThuoc) showError("errorEditKichThuoc", error.KichThuoc);
                        if (error.DoPhanGiai) showError("errorEditDoPhanGiai", error.DoPhanGiai);
                        if (error.TinhNangMan) showError("errorEditTinhNangMan", error.TinhNangMan);
                        return;
                    }

                    if (response.status === 409 && error.message) {
                        showAlert(error.message, 'warning');
                        return;
                    }

                    if (response.status === 404) {
                        showAlert(error.message, 'danger');
                        return;
                    }

                    showAlert(error.message || "Không thể cập nhật Màn Hình", 'danger');
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Reset form khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideAllErrors();
        });
    </script>
</body>
</html>