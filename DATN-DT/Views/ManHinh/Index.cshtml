@model IEnumerable<DATN_DT.Models.ManHinh>

@{
    ViewData["Title"] = "Quản lý Màn hình";
    Layout = null;

    // Tham số từ query string
    string search = Context.Request.Query["search"].ToString();
    int pageSize = 10;
    int pageNumber = 1;

    if (Context.Request.Query.ContainsKey("page"))
    {
        int.TryParse(Context.Request.Query["page"], out pageNumber);
    }

    // Lọc dữ liệu
    var filteredManHinhs = Model;

    if (!string.IsNullOrEmpty(search))
    {
        filteredManHinhs = filteredManHinhs.Where(p =>
            (p.IdManHinh.ToString().Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.KichThuoc != null && p.KichThuoc.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.DoPhanGiai != null && p.DoPhanGiai.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.CongNgheManHinh != null && p.CongNgheManHinh.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.TinhNangMan != null && p.TinhNangMan.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.MoTaMan != null && p.MoTaMan.Contains(search, StringComparison.OrdinalIgnoreCase))
        );
    }

    // Phân trang
    int totalItems = filteredManHinhs.Count();
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    if (pageNumber > totalPages) pageNumber = totalPages;
    if (pageNumber < 1) pageNumber = 1;

    var paginatedManHinhs = filteredManHinhs
        .Skip((pageNumber - 1) * pageSize)
        .Take(pageSize)
        .ToList();

    // Tạo URL cho phân trang
    string CreatePageUrl(int page)
    {
        var queryParams = new Dictionary<string, string>();
        if (!string.IsNullOrEmpty(search)) queryParams["search"] = search;
        queryParams["page"] = page.ToString();

        var queryString = string.Join("&", queryParams.Select(x => $"{x.Key}={Uri.EscapeDataString(x.Value)}"));
        return queryString.Length > 0 ? $"?{queryString}" : "";
    }
}

