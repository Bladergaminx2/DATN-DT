<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Success Alert -->
    <div class="alert alert-success alert-dismissible fade show" id="successAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span id="successMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('successAlert')"></button>
    </div>

    <!-- Error Alert -->
    <div class="alert alert-danger alert-dismissible fade show" id="errorAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="errorMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('errorAlert')"></button>
    </div>

    <div class="container">
        <div class="card p-4">
            <h2 class="mb-4">📱 Quản Lý IMEI</h2>

            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Tổng số IMEI</div>
                        <div class="stat-value">@Model.Count()</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Còn hàng</div>
                        <div class="stat-value">@Model.Count(i => i.TrangThai == "Còn hàng")</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Đã bán</div>
                        <div class="stat-value">@Model.Count(i => i.TrangThai == "Đã bán")</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-box">
                        <div class="stat-label">Đang hiển thị</div>
                        <div class="stat-value">@totalItems</div>
                    </div>
                </div>
            </div>

            <!-- Tìm kiếm và lọc -->
            <div class="search-filter-section">
                <form id="searchForm" method="get" action="@Url.Action("Index", "Imei")">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <input type="text"
                                   class="form-control search-input"
                                   name="search"
                                   placeholder="Tìm kiếm theo mã IMEI, mô tả..."
                                   value="@search">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select filter-select" name="status" id="statusFilter">
                                @{
                                    var statuses = new[]
                                    {
                                new { Value = "all", Text = "Tất cả trạng thái" },
                                new { Value = "Còn hàng", Text = "Còn hàng" },
                                new { Value = "Đã bán", Text = "Đã bán" },
                                new { Value = "Đã trả hàng", Text = "Đã trả hàng" },
                                new { Value = "Bảo hành", Text = "Bảo hành" }
                                };
                                }
                                @foreach (var s in statuses)
                                {
                                    if (status == s.Value)
                                    {
                                        <option value="@s.Value" selected>@s.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@s.Value">@s.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100" style="height: 45px;">
                                <i class="bi bi-funnel me-2"></i>Lọc
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-clear w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-2"></i>Xóa lọc
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Hiển thị bộ lọc hiện tại -->
                @if (!string.IsNullOrEmpty(search) || (!string.IsNullOrEmpty(status) && status != "all"))
                {
                    <div class="mt-3">
                        <small class="text-muted">Bộ lọc hiện tại:</small>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <span class="filter-badge ms-2">
                                Từ khóa: "@search"
                                <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeSearch()"></button>
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(status) && status != "all")
                        {
                            var statusText = status == "Còn hàng" ? "Còn hàng" :
                            status == "Đã bán" ? "Đã bán" :
                            status == "Đã trả hàng" ? "Đã trả hàng" : "Bảo hành";
                            <span class="filter-badge ms-2">
                                Trạng thái: @statusText
                                <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeStatusFilter()"></button>
                            </span>
                        }
                    </div>
                }
            </div>

            <!-- Header với nút thêm mới -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Hiển thị <strong>@paginatedImeis.Count()</strong> trong tổng số <strong>@totalItems</strong> IMEI
                </div>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle me-2"></i>Thêm IMEI Mới
                </button>
            </div>

            @if (paginatedImeis.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-id">ID</th>
                                <th class="col-imei">Mã IMEI</th>
                                <th class="col-model">Model Sản Phẩm</th>
                                <th class="col-mota">Mô Tả</th>
                                <th class="col-trangthai">Trạng Thái</th>
                                <th class="col-action">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in paginatedImeis)
                            {
                                <tr>
                                    <td class="text-center">@item.IdImei</td>
                                    <td class="imei-code">@item.MaImei</td>
                                    <td>
                                        @if (ViewBag.ModelSanPhams != null && item.IdModelSanPham.HasValue)
                                        {
                                            var modelSanPham = ((Dictionary<int, DATN_DT.Models.ModelSanPham>)ViewBag.ModelSanPhams).GetValueOrDefault(item.IdModelSanPham.Value);
                                            if (modelSanPham != null)
                                            {
                                                <span class="model-badge">@modelSanPham.TenModel</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">ID: @item.IdModelSanPham</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa chọn</span>
                                        }
                                    </td>
                                    <td class="mota-cell">
                                        @if (!string.IsNullOrEmpty(item.MoTa))
                                        {
                                            <div class="mota-text" title="@item.MoTa">
                                                @item.MoTa
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có mô tả</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = "status-badge ";
                                            if (item.TrangThai == "Còn hàng")
                                            {
                                                statusClass += "status-available";
                                            }
                                            else if (item.TrangThai == "Đã bán")
                                            {
                                                statusClass += "status-sold";
                                            }
                                            else if (item.TrangThai == "Đã trả hàng")
                                            {
                                                statusClass += "status-returned";
                                            }
                                            else if (item.TrangThai == "Bảo hành")
                                            {
                                                statusClass += "status-warranty";
                                            }
                                            else
                                            {
                                                statusClass += "status-available";
                                            }
                                        }
                                        <span class="@statusClass">
                                            @item.TrangThai
                                        </span>
                                    </td>
                                    <td class="col-action">
                                        <div class="action-buttons-horizontal">
                                            <!-- Chỉ giữ lại nút Sửa -->
                                            <button class="action-button btn-edit"
                                                    data-id="@item.IdImei"
                                                    data-maimei="@item.MaImei"
                                                    data-idmodelsanpham="@item.IdModelSanPham"
                                                    data-mota="@item.MoTa"
                                                    data-trangthai="@item.TrangThai"
                                                    onclick="openEditModal(this)">
                                                <i class="bi bi-pencil me-1"></i>Sửa
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                @if (totalPages > 1)
                {
                    <div class="pagination-container">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <!-- Nút về trang đầu -->
                                @if (pageNumber > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(1))" aria-label="First">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Html.Raw(CreatePageUrl(pageNumber - 1))" aria-label="Previous">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-double-left"></i></span>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link"><i class="bi bi-chevron-left"></i></span>
                                    </li>
                                }

                                <!-- Các trang -->
                                @{
                                    int startPage = Math.Max(1, pageNumber - 2);
                                    int endPage = Math.Min(totalPages, startPage + 4);
                                    if (endPage - startPage < 4)
                                    {
                                        startPage = Math.Max(1, endPage - 4);
                                    }

