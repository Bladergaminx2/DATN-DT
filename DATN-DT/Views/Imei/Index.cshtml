    <script>
        // ====== UTILITY FUNCTIONS ======
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        function showAlert(type, message) {
            if (type === 'success') {
                document.getElementById('successMessage').textContent = message;
                document.getElementById('successAlert').style.display = 'block';
                setTimeout(() => hideAlert('successAlert'), 5000);
            } else {
                document.getElementById('errorMessage').textContent = message;
                document.getElementById('errorAlert').style.display = 'block';
            }
        }

        function hideAlert(alertId) {
            document.getElementById(alertId).style.display = 'none';
        }

        function showError(elementId, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.classList.remove('d-none');
        }

        function hideError(elementId) {
            const element = document.getElementById(elementId);
            element.classList.add('d-none');
        }

        function resetForm(formId) {
            const form = document.getElementById(formId);
            if (form) {
                form.reset();
                form.querySelectorAll('.text-danger').forEach(el => {
                    el.classList.add('d-none');
                });
            }
        }

        // ====== FILTER FUNCTIONS ======
        function clearFilters() {
            window.location.href = '@Url.Action("Index", "Imei")';
        }

        function removeSearch() {
            const url = new URL(window.location.href);
            url.searchParams.delete('search');
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        function removeStatusFilter() {
            const url = new URL(window.location.href);
            url.searchParams.delete('status');
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        // ====== LOAD MODEL SAN PHAM ======
        async function loadModelSanPham() {
            try {
                const createSelect = document.getElementById('createIdModelSanPham');
                const editSelect = document.getElementById('editIdModelSanPham');

                createSelect.innerHTML = '<option value="">Đang tải danh sách model...</option>';
                editSelect.innerHTML = '<option value="">Đang tải danh sách model...</option>';

                const response = await fetch('/Imei/GetAllModelSanPham');

                if (!response.ok) {
                    throw new Error(`Lỗi HTTP! status: ${response.status}`);
                }

                const data = await response.json();

                // Xóa options cũ
                createSelect.innerHTML = '<option value="">Chọn model sản phẩm</option>';
                editSelect.innerHTML = '<option value="">Chọn model sản phẩm</option>';

                // Kiểm tra và thêm vào dropdown
                if (data && data.length > 0) {
                    data.forEach(model => {
                        const id = model.idModelSanPham !== undefined ? model.idModelSanPham :
                            model.IdModelSanPham !== undefined ? model.IdModelSanPham :
                                model.id !== undefined ? model.id :
                                    model.Id !== undefined ? model.Id : null;

                        const ten = model.displayText !== undefined ? model.displayText :
                            model.DisplayText !== undefined ? model.DisplayText :
                                model.ten !== undefined ? model.ten :
                                    model.Ten !== undefined ? model.Ten :
                                        model.tenModel !== undefined ? model.tenModel : null;

                        if (id && ten) {
                            createSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                            editSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                        }
                    });
                } else {
                    createSelect.innerHTML += '<option value="" disabled>Không có model nào</option>';
                    editSelect.innerHTML += '<option value="" disabled>Không có model nào</option>';
                }
            } catch (error) {
                console.error('❌ Lỗi khi tải danh sách model:', error);

                const createSelect = document.getElementById('createIdModelSanPham');
                const editSelect = document.getElementById('editIdModelSanPham');

                createSelect.innerHTML = '<option value="">Lỗi khi tải danh sách model</option>';
                editSelect.innerHTML = '<option value="">Lỗi khi tải danh sách model</option>';
            }
        }

        // ====== VALIDATE IMEI FORMAT ======
        function validateImeiFormat(imei) {
            const imeiRegex = /^\d{15}$/;
            return imeiRegex.test(imei);
        }

        // ====== CREATE IMEI ======
        async function createImei() {
            console.log('=== CREATE IMEI START ===');

            hideError('errorCreateMaImei');
            hideError('errorCreateIdModelSanPham');
            hideError('errorCreateTrangThai');

            const imei = {
                MaImei: document.getElementById('createMaImei').value.trim(),
                IdModelSanPham: parseInt(document.getElementById('createIdModelSanPham').value) || 0,
                MoTa: document.getElementById('createMoTa').value.trim(),
                TrangThai: document.getElementById('createTrangThai').value
            };

            console.log('Creating imei:', imei);

            let isValid = true;

            if (!imei.MaImei) {
                showError('errorCreateMaImei', 'Phải nhập mã IMEI!');
                isValid = false;
            } else if (!validateImeiFormat(imei.MaImei)) {
                showError('errorCreateMaImei', 'Mã IMEI phải có đúng 15 chữ số!');
                isValid = false;
            }

            if (!imei.IdModelSanPham) {
                showError('errorCreateIdModelSanPham', 'Phải chọn model sản phẩm!');
                isValid = false;
            }

            if (!imei.TrangThai) {
                showError('errorCreateTrangThai', 'Phải chọn trạng thái!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/Imei/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(imei)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Thêm thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Thêm IMEI thành công!');

                    document.getElementById('createForm').reset();

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.MaImei) showError('errorCreateMaImei', data.MaImei);
                        if (data.IdModelSanPham) showError('errorCreateIdModelSanPham', data.IdModelSanPham);
                        if (data.TrangThai) showError('errorCreateTrangThai', data.TrangThai);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorCreate${field}`, error);
                            });
                        }
                    } else if (response.status === 409) {
                        if (data.message.includes("Mã")) {
                            showError('errorCreateMaImei', data.message);
                        } else {
                            showAlert('error', data.message || 'IMEI đã tồn tại!');
                        }
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Create error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                console.log('=== CREATE IMEI END ===');
            }
        }

        // ====== EDIT IMEI ======
        let currentEditId = null;

        function openEditModal(button) {
            const id = button.getAttribute('data-id');
            const maImei = button.getAttribute('data-maimei');
            const idModelSanPham = button.getAttribute('data-idmodelsanpham');
            const moTa = button.getAttribute('data-mota') || '';
            const trangThai = button.getAttribute('data-trangthai');

            console.log('Opening edit modal for ID:', id);

            document.getElementById('editIdImei').value = id;
            document.getElementById('editMaImei').value = maImei;
            document.getElementById('editIdModelSanPham').value = idModelSanPham;
            document.getElementById('editMoTa').value = moTa;
            document.getElementById('editTrangThai').value = trangThai;

            hideError('errorEditMaImei');
            hideError('errorEditIdModelSanPham');
            hideError('errorEditTrangThai');

            currentEditId = id;

            // Tải lại danh sách model
            loadModelSanPham().then(() => {
                document.getElementById('editIdModelSanPham').value = idModelSanPham;
            });

            const editModal = new bootstrap.Modal(document.getElementById('editModal'));
            editModal.show();
        }

        async function updateImei() {
            if (!currentEditId) {
                console.error('No currentEditId!');
                showAlert('error', 'Không tìm thấy ID IMEI!');
                return;
            }

            console.log('=== UPDATE IMEI START ===');
            console.log('Updating imei ID:', currentEditId);

            hideError('errorEditMaImei');
            hideError('errorEditIdModelSanPham');
            hideError('errorEditTrangThai');

            const imei = {
                MaImei: document.getElementById('editMaImei').value.trim(),
                IdModelSanPham: parseInt(document.getElementById('editIdModelSanPham').value) || 0,
                MoTa: document.getElementById('editMoTa').value.trim(),
                TrangThai: document.getElementById('editTrangThai').value
            };

            console.log('Update data:', imei);

            let isValid = true;

            if (!imei.MaImei) {
                showError('errorEditMaImei', 'Phải nhập mã IMEI!');
                isValid = false;
            } else if (!validateImeiFormat(imei.MaImei)) {
                showError('errorEditMaImei', 'Mã IMEI phải có đúng 15 chữ số!');
                isValid = false;
            }

            if (!imei.IdModelSanPham) {
                showError('errorEditIdModelSanPham', 'Phải chọn model sản phẩm!');
                isValid = false;
            }

            if (!imei.TrangThai) {
                showError('errorEditTrangThai', 'Phải chọn trạng thái!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch(`/Imei/Edit/${currentEditId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(imei)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Cập nhật thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            try {
                                data = JSON.parse(text);
                            } catch {
                                data = { message: text || 'Cập nhật thành công!' };
                            }
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                    if (response.ok) {
                        data = { message: 'Cập nhật thành công!' };
                    }
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Cập nhật IMEI thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.MaImei) showError('errorEditMaImei', data.MaImei);
                        if (data.IdModelSanPham) showError('errorEditIdModelSanPham', data.IdModelSanPham);
                        if (data.TrangThai) showError('errorEditTrangThai', data.TrangThai);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorEdit${field}`, error);
                            });
                        }
                        if (data.Message) showAlert('error', data.Message);
                    } else if (response.status === 404) {
                        showAlert('error', data.message || `Không tìm thấy IMEI với ID=${currentEditId}!`);
                    } else if (response.status === 409) {
                        if (data.message.includes("Mã")) {
                            showError('errorEditMaImei', data.message);
                        } else {
                            showAlert('error', data.message || 'IMEI đã tồn tại!');
                        }
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Update error:', error);
                showAlert('error', 'Lỗi kết nối đến server: ' + error.message);
            } finally {
                hideLoading();
                console.log('=== UPDATE IMEI END ===');
            }
        }

        // ====== INITIALIZATION ======
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded. Total IMEIs:', @Model.Count());

            setTimeout(() => {
                hideAlert('successAlert');
                hideAlert('errorAlert');
            }, 5000);

            const createModal = document.getElementById('createModal');
            if (createModal) {
                createModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('createForm');
                });
            }

            const editModal = document.getElementById('editModal');
            if (editModal) {
                editModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('editForm');
                    currentEditId = null;
                });
            }

            // Tự động focus vào ô tìm kiếm
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput && '@search' !== '') {
                searchInput.focus();
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }

            // Tải model sản phẩm khi mở modal tạo mới
            createModal.addEventListener('show.bs.modal', function () {
                loadModelSanPham();
            });

            // Validate IMEI format on blur
            document.getElementById('createMaImei').addEventListener('blur', function () {
                const imei = this.value.trim();
                if (imei && !validateImeiFormat(imei)) {
                    showError('errorCreateMaImei', 'Mã IMEI phải có đúng 15 chữ số');
                }
            });

            document.getElementById('editMaImei').addEventListener('blur', function () {
                const imei = this.value.trim();
                if (imei && !validateImeiFormat(imei)) {
                    showError('errorEditMaImei', 'Mã IMEI phải có đúng 15 chữ số');
                }
            });
        });
    </script>
</body>
