@model IEnumerable<DATN_DT.Models.BaoHanh>

@{
    ViewData["Title"] = "Quản lý Bảo Hành";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Bảo Hành</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-sidebar: #1e293b;
            --bg-header: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
        }

        .container {
            margin-top: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: var(--text-primary);
            font-weight: 700;
            font-size: 28px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        table {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        .table thead th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
            color: var(--text-primary);
            border-bottom: 2px solid var(--border-color);
            font-weight: 600;
            padding: 15px;
            text-align: center;
        }

        .table tbody td {
            background-color: var(--bg-card);
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-color);
            padding: 12px 15px;
        }

        .table tbody tr:hover {
            background-color: rgba(99, 102, 241, 0.1);
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            transition: all 0.3s ease;
            font-weight: 500;
            box-shadow: var(--shadow-md);
        }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            transition: all 0.3s ease;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
        }

        .modal-content {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 12px;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-bottom: 1px solid var(--border-color);
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            background-color: var(--bg-card);
        }

        .btn-close-white {
            filter: invert(1);
        }

        .form-control, .form-select {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 10px 15px;
        }

        .form-control:focus, .form-select:focus {
            background-color: #1e293b;
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            margin-bottom: 8px;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        .text-muted {
            color: var(--text-secondary) !important;
        }

        .status-success {
            color: var(--success-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(16, 185, 129, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-pending {
            color: var(--warning-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(245, 158, 11, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-danger {
            color: var(--danger-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-info {
            color: #0ea5e9;
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(14, 165, 233, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .cost-value {
            font-weight: 700;
            color: var(--danger-color);
            font-size: 1.05rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-secondary {
            background: rgba(148, 163, 184, 0.2);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        .btn-secondary:hover {
            background: rgba(148, 163, 184, 0.3);
            color: var(--text-primary);
        }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Bảo Hành</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Tạo Phiếu Bảo Hành
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID Phiếu</th>
                    <th>Imei</th>
                    <th>Khách Hàng</th>
                    <th>Nhân Viên Nhận</th>
                    <th>Ngày Nhận</th>
                    <th>Ngày Trả (dự kiến)</th>
                    <th>Mô Tả Lỗi</th>
                    <th>Chi Phí PS</th>
                    <th>Trạng Thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdBaoHanh</td>
                        <td>@item.Imei?.MaImei</td>
                        <td class="text-start">@item.KhachHang?.HoTenKhachHang</td>
                        <td>@item.NhanVien?.HoTenNhanVien</td>
                        <td>@item.NgayNhan?.ToString("dd/MM/yyyy")</td>
                        <td>@(item.NgayTra.HasValue? item.NgayTra.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</td>
                        <td>@item.MoTaLoi</td>
                        <td class="cost-value">@item.ChiPhiPhatSinh?.ToString("N0") ₫</td>
                        <td>
                            @{
                                var statusClass = "status-info";
                                if (item.TrangThai == "Đã hoàn thành")
                                {
                                    statusClass = "status-success";
                                }
                                else if (item.TrangThai == "Đang xử lý")
                                {
                                    statusClass = "status-pending";
                                }
                                else if (item.TrangThai == "Từ chối bảo hành")
                                {
                                    statusClass = "status-danger";
                                }
                            }
                            <span class="@statusClass">
                                @item.TrangThai
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning btn-edit"
                                    data-id="@item.IdBaoHanh"
                                    data-imei="@item.IdImei"
                                    data-khachhang="@item.IdKhachHang"
                                    data-nhanvien="@item.IdNhanVien"
                                    data-ngaynhan="@item.NgayNhan?.ToString("yyyy-MM-dd")"
                                    data-ngaytra="@item.NgayTra?.ToString("yyyy-MM-dd")"
                                    data-trangthai="@item.TrangThai"
                                    data-motaloi="@item.MoTaLoi"
                                    data-xuly="@item.XuLy"
                                    data-chiphi="@item.ChiPhiPhatSinh">
                                Sửa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Tạo Phiếu Bảo Hành</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Imei Sản Phẩm <span class="text-danger">*</span></label>
                                    <select id="IdImei" class="form-control">
                                        <option value="">Chọn Imei</option>
                                    </select>
                                    <small id="errorIdImei" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khách Hàng <span class="text-danger">*</span></label>
                                    <select id="IdKhachHang" class="form-control">
                                        <option value="">Chọn Khách Hàng</option>
                                    </select>
                                    <small id="errorIdKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nhân Viên Tiếp Nhận <span class="text-danger">*</span></label>
                                    <select id="IdNhanVien" class="form-control">
                                        <option value="">Chọn Nhân Viên</option>
                                    </select>
                                    <small id="errorIdNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Nhận</label>
                                    <input type="date" id="NgayNhan" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô Tả Lỗi Khách Hàng</label>
                            <textarea id="MoTaLoi" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng Thái</label>
                                    <select id="TrangThai" class="form-control">
                                        <option value="Đang tiếp nhận" selected>Đang tiếp nhận</option>
                                        <option value="Đang xử lý">Đang xử lý</option>
                                        <option value="Đã hoàn thành">Đã hoàn thành</option>
                                        <option value="Từ chối bảo hành">Từ chối bảo hành</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chi Phí Phát Sinh (₫)</label>
                                    <input type="number" id="ChiPhiPhatSinh" class="form-control" value="0" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Phiếu Bảo Hành</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdBaoHanh" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Imei Sản Phẩm <span class="text-danger">*</span></label>
                                    <select id="EditIdImei" class="form-control"></select>
                                    <small id="errorEditIdImei" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khách Hàng <span class="text-danger">*</span></label>
                                    <select id="EditIdKhachHang" class="form-control"></select>
                                    <small id="errorEditIdKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nhân Viên Xử Lý <span class="text-danger">*</span></label>
                                    <select id="EditIdNhanVien" class="form-control"></select>
                                    <small id="errorEditIdNhanVien" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Nhận</label>
                                    <input type="date" id="EditNgayNhan" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô Tả Lỗi <span class="text-danger">*</span></label>
                            <textarea id="EditMoTaLoi" class="form-control" rows="3" minlength="10" maxlength="500" placeholder="Mô tả chi tiết lỗi của sản phẩm (10-500 ký tự)"></textarea>
                            <small id="errorEditMoTaLoi" class="text-danger d-none"></small>
                            <small class="text-muted">Tối thiểu 10 ký tự, tối đa 500 ký tự. <span id="editMoTaLoiCharCount">0</span>/500</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Xử Lý (Nội bộ)</label>
                            <textarea id="EditXuLy" class="form-control" placeholder="Mô tả công việc đã xử lý" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng Thái</label>
                                    <select id="EditTrangThai" class="form-control">
                                        <option value="Đang tiếp nhận">Đang tiếp nhận</option>
                                        <option value="Đang xử lý">Đang xử lý</option>
                                        <option value="Đã hoàn thành">Đã hoàn thành</option>
                                        <option value="Từ chối bảo hành">Từ chối bảo hành</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Trả</label>
                                    <input type="date" id="EditNgayTra" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Chi Phí Phát Sinh (₫)</label>
                            <input type="number" id="EditChiPhiPhatSinh" class="form-control" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // --- Load Data cho Dropdown ---
        async function loadDropdownData() {
            try {
                // Load Imei
                const imeisResponse = await fetch('/BaoHanh/GetImeis');
                const imeis = await imeisResponse.json();
                populateSelect('IdImei', imeis, 'idImei', 'displayText');
                populateSelect('EditIdImei', imeis, 'idImei', 'displayText');

                // Load Khách Hàng
                const khachHangsResponse = await fetch('/BaoHanh/GetKhachHangs');
                const khachHangs = await khachHangsResponse.json();
                populateSelect('IdKhachHang', khachHangs, 'idKhachHang', 'displayText');
                populateSelect('EditIdKhachHang', khachHangs, 'idKhachHang', 'displayText');

                // Load Nhân Viên
                const nhanViensResponse = await fetch('/BaoHanh/GetNhanViens');
                const nhanViens = await nhanViensResponse.json();
                populateSelect('IdNhanVien', nhanViens, 'idNhanVien', 'displayText');
                populateSelect('EditIdNhanVien', nhanViens, 'idNhanVien', 'displayText');

            } catch (error) {
                console.error('Lỗi khi load dữ liệu dropdown:', error);
            }
        }

        function populateSelect(selectId, data, valueField, textField) {
            const select = document.getElementById(selectId);
            select.innerHTML = '<option value="">Chọn...</option>';
            data.forEach(item => {
                select.innerHTML += `<option value="${item[valueField]}">${item[textField]}</option>`;
            });
        }

        // --- Thêm Bảo Hành ---
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            // Client-side validation
            const errors = [];
            
            // Validate MôTaLoi
            const moTaLoi = MoTaLoi.value.trim();
            if (moTaLoi.length < 10) {
                errors.push("Mô tả lỗi phải có ít nhất 10 ký tự!");
            }
            if (moTaLoi.length > 500) {
                errors.push("Mô tả lỗi không được vượt quá 500 ký tự!");
            }

            // Validate ChiPhiPhatSinh
            const chiPhi = parseFloat(ChiPhiPhatSinh.value) || 0;
            if (chiPhi < 0) {
                errors.push("Chi phí phát sinh không được âm!");
            }

            if (errors.length > 0) {
                alert(errors.join("\n"));
                return;
            }

            const bh = {
                IdImei: parseInt(IdImei.value) || 0,
                IdKhachHang: parseInt(IdKhachHang.value) || 0,
                IdNhanVien: parseInt(IdNhanVien.value) || 0,
                NgayNhan: NgayNhan.value,
                TrangThai: TrangThai.value,
                MoTaLoi: MoTaLoi.value.trim(),
                XuLy: '', // Mới tạo chưa có xử lý
                ChiPhiPhatSinh: parseFloat(ChiPhiPhatSinh.value) || 0
            };

            // Reset errors
            document.querySelectorAll("#createForm small.text-danger").forEach(e => e.classList.add("d-none"));

            const response = await fetch('/BaoHanh/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(bh)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.IdImei) showError("errorIdImei", data.IdImei);
                    if (data.IdKhachHang) showError("errorIdKhachHang", data.IdKhachHang);
                    if (data.IdNhanVien) showError("errorIdNhanVien", data.IdNhanVien);
                    if (data.MoTaLoi) showError("errorMoTaLoi", data.MoTaLoi);
                    if (data.ChiPhiPhatSinh) showError("errorChiPhiPhatSinh", data.ChiPhiPhatSinh);
                    if (data.NgayNhan) showError("errorNgayNhan", data.NgayNhan);
                    return;
                }
                alert(data.message || "Không thể thêm Phiếu Bảo Hành. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // --- Lắng nghe sự kiện mở modal Sửa ---
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdBaoHanh.value = btn.dataset.id;
                EditIdImei.value = btn.dataset.imei;
                EditIdKhachHang.value = btn.dataset.khachhang;
                EditIdNhanVien.value = btn.dataset.nhanvien;
                EditNgayNhan.value = btn.dataset.ngaynhan;
                EditNgayTra.value = btn.dataset.ngaytra || ''; // Có thể null
                EditTrangThai.value = btn.dataset.trangthai;
                EditMoTaLoi.value = btn.dataset.motaloi;
                EditXuLy.value = btn.dataset.xuly || '';
                EditChiPhiPhatSinh.value = btn.dataset.chiphi || 0;

                // Cập nhật đếm ký tự
                const editCounter = document.getElementById('editMoTaLoiCharCount');
                if (editCounter) {
                    editCounter.textContent = EditMoTaLoi.value.length;
                }

                // Kiểm tra trạng thái để hiển thị ngày trả bắt buộc
                const ngayTraRequired = document.getElementById('ngayTraRequired');
                const ngayTraHint = document.getElementById('ngayTraHint');
                if (EditTrangThai.value === "Đã hoàn thành") {
                    if (ngayTraRequired) ngayTraRequired.classList.remove('d-none');
                    if (ngayTraHint) ngayTraHint.classList.remove('d-none');
                    EditNgayTra.setAttribute('required', 'required');
                } else {
                    if (ngayTraRequired) ngayTraRequired.classList.add('d-none');
                    if (ngayTraHint) ngayTraHint.classList.add('d-none');
                    EditNgayTra.removeAttribute('required');
                }

                new bootstrap.Modal(editModal).show();
            });
        });

        // --- Cập nhật Bảo Hành ---
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            // Client-side validation
            const errors = [];
            
            // Validate MôTaLoi
            const moTaLoi = EditMoTaLoi.value.trim();
            if (moTaLoi.length < 10) {
                errors.push("Mô tả lỗi phải có ít nhất 10 ký tự!");
            }
            if (moTaLoi.length > 500) {
                errors.push("Mô tả lỗi không được vượt quá 500 ký tự!");
            }

            // Validate ChiPhiPhatSinh
            const chiPhi = parseFloat(EditChiPhiPhatSinh.value) || 0;
            if (chiPhi < 0) {
                errors.push("Chi phí phát sinh không được âm!");
            }

            // Validate NgayTra >= NgayNhan
            if (EditNgayNhan.value && EditNgayTra.value) {
                const ngayNhan = new Date(EditNgayNhan.value);
                const ngayTra = new Date(EditNgayTra.value);
                if (ngayTra < ngayNhan) {
                    errors.push("Ngày trả phải lớn hơn hoặc bằng ngày nhận!");
                }
            }

            // Validate trạng thái "Đã hoàn thành" phải có NgayTra
            if (EditTrangThai.value === "Đã hoàn thành" && !EditNgayTra.value) {
                errors.push("Khi trạng thái là 'Đã hoàn thành', bắt buộc phải có ngày trả!");
            }

            if (errors.length > 0) {
                alert(errors.join("\n"));
                return;
            }

            const id = EditIdBaoHanh.value;
            const bh = {
                IdBaoHanh: parseInt(id),
                IdImei: parseInt(EditIdImei.value) || 0,
                IdKhachHang: parseInt(EditIdKhachHang.value) || 0,
                IdNhanVien: parseInt(EditIdNhanVien.value) || 0,
                NgayNhan: EditNgayNhan.value,
                NgayTra: EditNgayTra.value || null,
                TrangThai: EditTrangThai.value,
                MoTaLoi: EditMoTaLoi.value.trim(),
                XuLy: EditXuLy.value.trim() || null,
                ChiPhiPhatSinh: parseFloat(EditChiPhiPhatSinh.value) || 0
            };

            // Reset errors
            document.querySelectorAll("#editForm small.text-danger").forEach(e => e.classList.add("d-none"));

            const response = await fetch('/BaoHanh/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(bh)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.IdImei) showError("errorEditIdImei", data.IdImei);
                    if (data.IdKhachHang) showError("errorEditIdKhachHang", data.IdKhachHang);
                    if (data.IdNhanVien) showError("errorEditIdNhanVien", data.IdNhanVien);
                    if (data.MoTaLoi) showError("errorEditMoTaLoi", data.MoTaLoi);
                    if (data.ChiPhiPhatSinh) showError("errorEditChiPhiPhatSinh", data.ChiPhiPhatSinh);
                    if (data.NgayTra) showError("errorEditNgayTra", data.NgayTra);
                    if (data.NgayNhan) showError("errorEditNgayNhan", data.NgayNhan);
                    if (data.TrangThai) showError("errorEditTrangThai", data.TrangThai);
                    return;
                }
                alert(data.message || "Không thể cập nhật Phiếu Bảo Hành. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // --- Đếm ký tự MôTaLoi ---
        function updateCharCount(textareaId, counterId) {
            const textarea = document.getElementById(textareaId);
            const counter = document.getElementById(counterId);
            if (textarea && counter) {
                textarea.addEventListener('input', function() {
                    counter.textContent = this.value.length;
                    if (this.value.length < 10) {
                        counter.classList.add('text-danger');
                        counter.classList.remove('text-muted');
                    } else {
                        counter.classList.remove('text-danger');
                        counter.classList.add('text-muted');
                    }
                });
            }
        }

        // --- Kiểm tra trạng thái để hiển thị ngày trả bắt buộc ---
        function handleTrangThaiChange() {
            const trangThai = document.getElementById('EditTrangThai');
            const ngayTraRequired = document.getElementById('ngayTraRequired');
            const ngayTraHint = document.getElementById('ngayTraHint');
            
            if (trangThai && ngayTraRequired && ngayTraHint) {
                trangThai.addEventListener('change', function() {
                    if (this.value === "Đã hoàn thành") {
                        ngayTraRequired.classList.remove('d-none');
                        ngayTraHint.classList.remove('d-none');
                        document.getElementById('EditNgayTra').setAttribute('required', 'required');
                    } else {
                        ngayTraRequired.classList.add('d-none');
                        ngayTraHint.classList.add('d-none');
                        document.getElementById('EditNgayTra').removeAttribute('required');
                    }
                });
            }
        }

        // --- Validate ngày trả >= ngày nhận khi edit ---
        function validateNgayTra() {
            const ngayNhan = document.getElementById('EditNgayNhan');
            const ngayTra = document.getElementById('EditNgayTra');
            const errorNgayTra = document.getElementById('errorEditNgayTra');
            
            if (ngayNhan && ngayTra && errorNgayTra) {
                ngayTra.addEventListener('change', function() {
                    if (ngayNhan.value && this.value) {
                        const nhan = new Date(ngayNhan.value);
                        const tra = new Date(this.value);
                        if (tra < nhan) {
                            showError("errorEditNgayTra", "Ngày trả phải lớn hơn hoặc bằng ngày nhận!");
                        } else {
                            errorNgayTra.classList.add('d-none');
                        }
                    }
                });
            }
        }

        // --- Khởi tạo ---
        document.addEventListener('DOMContentLoaded', function() {
            loadDropdownData();
            updateCharCount('MoTaLoi', 'moTaLoiCharCount');
            updateCharCount('EditMoTaLoi', 'editMoTaLoiCharCount');
            handleTrangThaiChange();
            validateNgayTra();
        });

        // --- Reset form khi đóng modal ---
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small.text-danger").forEach(e => e.classList.add("d-none"));
            document.getElementById('TrangThai').value = "Đang tiếp nhận";
            document.getElementById('ChiPhiPhatSinh').value = "0";
            // Reset Ngày nhận về ngày hiện tại
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('NgayNhan').value = today;
            // Reset char counter
            const moTaLoiCounter = document.getElementById('moTaLoiCharCount');
            if (moTaLoiCounter) {
                moTaLoiCounter.textContent = "0";
                moTaLoiCounter.classList.remove('text-danger');
                moTaLoiCounter.classList.add('text-muted');
            }
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
