@model DATN_DT.Form.LoginNhanVienForm
@{
    ViewData["Title"] = "Đăng Nhập Nhân Viên";
    Layout = "~/Views/Shared/_NonLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    :root {
        --bg-body: #0b0e14;
        --card-bg: rgba(21, 25, 33, 0.9);
        --bg-input: rgba(30, 35, 45, 0.6);
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --accent-glow: rgba(168, 85, 247, 0.3);
        --text-main: #ffffff;
        --text-muted: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    body {
        background-color: var(--bg-body);
        background-image: radial-gradient(circle at top right, rgba(99, 102, 241, 0.1), transparent), radial-gradient(circle at bottom left, rgba(168, 85, 247, 0.05), transparent);
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
        margin: 0;
    }

    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .auth-card {
        background: var(--card-bg);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid var(--border-glass);
        border-radius: 24px;
        padding: 40px;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        border-top: 4px solid #a855f7; /* Điểm nhấn riêng cho Admin */
    }

    .auth-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .admin-icon-box {
        background: var(--primary-gradient);
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        transform: rotate(45deg);
        box-shadow: 0 10px 20px rgba(168, 85, 247, 0.3);
    }

        .admin-icon-box i {
            transform: rotate(-45deg);
            font-size: 1.5rem;
            color: white;
        }

    .auth-header h2 {
        font-size: 1.75rem;
        font-weight: 800;
        margin: 0;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .auth-header p {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-top: 8px;
    }

    .field-group {
        margin-bottom: 22px;
    }

    .field-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-muted);
        margin-bottom: 8px;
        display: block;
        padding-left: 4px;
    }

    .input-wrapper {
        position: relative;
    }

        .input-wrapper i.prefix-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            transition: 0.3s;
        }

    .form-control {
        background: var(--bg-input) !important;
        border: 1px solid var(--border-glass);
        color: white !important;
        border-radius: 14px;
        padding: 14px 16px 14px 48px;
        width: 100%;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #a855f7;
            box-shadow: 0 0 15px var(--accent-glow);
            outline: none;
            background: rgba(30, 35, 45, 0.9) !important;
        }

            .form-control:focus + .prefix-icon {
                color: #a855f7;
            }

    .toggle-password {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--text-muted);
        z-index: 10;
    }

    .btn-submit {
        background: var(--primary-gradient);
        border: none;
        color: white;
        padding: 15px;
        font-weight: 700;
        font-size: 1rem;
        border-radius: 14px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(168, 85, 247, 0.4);
            filter: brightness(1.1);
        }

    .auth-footer {
        margin-top: 25px;
        text-align: center;
        border-top: 1px solid var(--border-glass);
        padding-top: 20px;
    }

    .auth-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .auth-link:hover {
            color: white;
        }

    .alert {
        border-radius: 12px;
        padding: 12px;
        font-size: 0.9rem;
        margin-bottom: 20px;
        display: none;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.15);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.15);
        color: #4ade80;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="admin-icon-box">
                <i class="fa-solid fa-user-shield"></i>
            </div>
            <h2>Admin Portal</h2>
            <p>Hệ thống đăng nhập dành cho Nhân viên</p>
        </div>

        <form id="nhanVienForm">
            <div id="loginMessage" class="alert"></div>

            <div class="field-group">
                <label class="field-label">Tài khoản hoặc Email</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-user-tie prefix-icon"></i>
                    <input asp-for="TenTaiKhoanNV" class="form-control" placeholder="admin_polytech" required />
                </div>
            </div>

            <div class="field-group">
                <label class="field-label">Mật khẩu bảo mật</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-key prefix-icon"></i>
                    <input asp-for="Password" type="password" class="form-control" id="staffPass" placeholder="••••••••" required />
                    <i class="fa-solid fa-eye toggle-password" onclick="togglePass('staffPass', this)"></i>
                </div>
            </div>

            <button type="submit" class="btn-submit" id="loginBtn">
                Vào Hệ Thống
            </button>
        </form>

        <div class="auth-footer">
            <a href="/Login" class="auth-link">
                <i class="fa-solid fa-arrow-left-long me-2"></i> Quay lại đăng nhập khách hàng
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Hàm ẩn hiện mật khẩu
        function togglePass(id, icon) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        $(document).ready(function() {
            $('#nhanVienForm').on('submit', function(e) {
                e.preventDefault();

                var btn = $('#loginBtn');
                var msgDiv = $('#loginMessage');

                msgDiv.hide();
                btn.prop('disabled', true).html('<i class="fa-solid fa-circle-notch fa-spin me-2"></i> Đang xác thực...');

                $.ajax({
                    url: '/Login/LoginNhanVien',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        TenTaiKhoanNV: $('#TenTaiKhoanNV').val(),
                        Password: $('#staffPass').val()
                    }),
                    success: function(response) {
                        var isSuccess = response.Success === true || response.success === true;

                        if (isSuccess) {
                            msgDiv.removeClass('alert-danger').addClass('alert-success')
                                 .text(response.Message || response.message || 'Xác thực thành công!')
                                 .fadeIn();

                            localStorage.setItem('role', response.Role || response.role || 'NHANVIEN');
                            localStorage.setItem('isNhanVien', 'true');
                            if (response.Data || response.data) {
                                localStorage.setItem('nhanvien', JSON.stringify(response.Data || response.data));
                            }

                            setTimeout(() => { window.location.href = '/QuanLy'; }, 1000);
                        } else {
                            msgDiv.removeClass('alert-success').addClass('alert-danger')
                                 .text(response.Message || response.message || 'Tài khoản hoặc mật khẩu không đúng')
                                 .fadeIn();
                            btn.prop('disabled', false).html('Vào Hệ Thống');
                        }
                    },
                    error: function(xhr) {
                        msgDiv.removeClass('alert-success').addClass('alert-danger')
                             .text('Lỗi kết nối server hệ thống. Vui lòng thử lại sau.')
                             .fadeIn();
                        btn.prop('disabled', false).html('Vào Hệ Thống');
                    }
                });
            });
        });
    </script>
}