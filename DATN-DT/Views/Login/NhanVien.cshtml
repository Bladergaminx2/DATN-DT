@model DATN_DT.Form.LoginNhanVienForm
@{
    ViewData["Title"] = "Đăng Nhập Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="text-center mb-4">Đăng Nhập Nhân Viên</h2>
        
        <form id="nhanVienForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TenTaiKhoanNV" class="form-label">Tên tài khoản</label>
                <input asp-for="TenTaiKhoanNV" class="form-control" />
                <span asp-validation-for="TenTaiKhoanNV" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" id="loginBtn">
                    Đăng Nhập
                </button>
            </div>
        </form>

        <div id="loginMessage" class="mt-3"></div>

        <div class="text-center mt-3">
            <p><a href="/Login" class="text-primary">← Quay lại đăng nhập khách hàng</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#nhanVienForm').on('submit', function(e) {
                e.preventDefault();

                var btn = $('#loginBtn');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status"></span> Đang xử lý...');

                $.ajax({
                    url: '/Login/LoginNhanVien',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        TenTaiKhoanNV: $('#TenTaiKhoanNV').val(),
                        Password: $('#Password').val()
                    }),
                    success: function(response) {
                        if (response.success) {
                            $('#loginMessage').html('<div class="alert alert-success">' + response.message + '</div>');

                            localStorage.setItem('role', response.role);
                            localStorage.setItem('nhanvien', JSON.stringify(response.data));
                            localStorage.setItem('isNhanVien', 'true');

                            setTimeout(() => {
                                window.location.href = '/quanly';
                            }, 1000);
                        } else {
                            $('#loginMessage').html('<div class="alert alert-danger">' + response.message + '</div>');
                        }
                    },
                    error: function(xhr) {
                        let response = xhr.responseJSON;
                        $('#loginMessage').html('<div class="alert alert-danger">' + (response?.message || 'Lỗi server') + '</div>');
                    },
                    complete: function() {
                        btn.prop('disabled', false).html('Đăng Nhập');
                    }
                });
            });
        });
    </script>
}
