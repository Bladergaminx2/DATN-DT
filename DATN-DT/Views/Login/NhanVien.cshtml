@model DATN_DT.Form.LoginNhanVienForm
@{
    ViewData["Title"] = "Đăng Nhập Nhân Viên";
    Layout = "~/Views/Shared/_NonLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="text-center mb-4">Đăng Nhập Nhân Viên</h2>
        
        <form id="nhanVienForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TenTaiKhoanNV" class="form-label">Tên tài khoản hoặc Email</label>
                <input asp-for="TenTaiKhoanNV" class="form-control" placeholder="Nhập tên tài khoản hoặc email" />
                <span asp-validation-for="TenTaiKhoanNV" class="text-danger"></span>
                <small class="text-muted">Bạn có thể đăng nhập bằng tên tài khoản hoặc email</small>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" id="loginBtn">
                    Đăng Nhập
                </button>
            </div>
        </form>

        <div id="loginMessage" class="mt-3"></div>

        <div class="text-center mt-3">
            <p><a href="/Login" class="text-primary">← Quay lại đăng nhập khách hàng</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#nhanVienForm').on('submit', function(e) {
                e.preventDefault();

                var btn = $('#loginBtn');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status"></span> Đang xử lý...');

                $.ajax({
                    url: '/Login/LoginNhanVien',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        TenTaiKhoanNV: $('#TenTaiKhoanNV').val(),
                        Password: $('#Password').val()
                    }),
                    success: function(response) {
                        console.log('Login response:', response);
                        
                        // Kiểm tra cả Success (chữ hoa) và success (chữ thường)
                        var isSuccess = response.Success === true || response.success === true;
                        
                        if (isSuccess) {
                            $('#loginMessage').html('<div class="alert alert-success">' + (response.Message || response.message || 'Đăng nhập thành công') + '</div>');

                            // Lưu thông tin vào localStorage
                            var role = response.Role || response.role || 'NHANVIEN';
                            localStorage.setItem('role', role);
                            if (response.Data || response.data) {
                                localStorage.setItem('nhanvien', JSON.stringify(response.Data || response.data));
                            }
                            localStorage.setItem('isNhanVien', 'true');

                            // Redirect sau 1 giây
                            setTimeout(() => {
                                window.location.href = '/QuanLy';
                            }, 1000);
                        } else {
                            var errorMsg = response.Message || response.message || 'Đăng nhập thất bại';
                            $('#loginMessage').html('<div class="alert alert-danger">' + errorMsg + '</div>');
                            btn.prop('disabled', false).html('Đăng Nhập');
                        }
                    },
                    error: function(xhr) {
                        console.error('Login error:', xhr);
                        let response = xhr.responseJSON;
                        var errorMsg = 'Lỗi server';
                        
                        if (response) {
                            errorMsg = response.Message || response.message || response.error || 'Lỗi server';
                        } else if (xhr.status === 400) {
                            errorMsg = 'Sai tài khoản hoặc mật khẩu';
                        } else if (xhr.status === 500) {
                            errorMsg = 'Lỗi server. Vui lòng thử lại sau.';
                        }
                        
                        $('#loginMessage').html('<div class="alert alert-danger">' + errorMsg + '</div>');
                        btn.prop('disabled', false).html('Đăng Nhập');
                    },
                    complete: function() {
                        // Không cần làm gì ở đây vì đã xử lý trong success/error
                    }
                });
            });
        });
    </script>
}
