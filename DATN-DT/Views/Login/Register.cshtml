@model DATN_DT.Form.RegisterForm
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "~/Views/Shared/_NonLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    :root {
        --bg-body: #0b0e14;
        --bg-card: #151921;
        --bg-input: #1e232d;
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --text-main: #ffffff;
        --text-muted: #94a3b8;
        --border-color: #2d3748;
    }

    body {
        background-color: var(--bg-body);
        color: var(--text-main);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
    }

    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .auth-card {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 550px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
    }

        .auth-card h2 {
            font-weight: 700;
            text-align: center;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 25px;
            letter-spacing: -1px;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        color: var(--text-muted);
        font-size: 0.85rem;
        margin-bottom: 8px;
        display: block;
    }

    /* FIX: Đảm bảo chữ nhập vào luôn trắng và không bị lỗi hiển thị */
    .form-control {
        background-color: var(--bg-input) !important;
        border: 1px solid var(--border-color);
        color: #ffffff !important;
        border-radius: 12px;
        padding: 12px 16px;
        width: 100%;
        transition: all 0.3s ease;
        box-sizing: border-box;
        font-size: 1rem;
    }

        .form-control::placeholder {
            color: #4b5563 !important;
        }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
            outline: none;
            background-color: #242a35 !important;
        }

    .password-wrapper {
        position: relative;
    }

    /* FIX: Khoảng cách padding bên phải để chữ không chạm icon */
    .form-control-pass {
        padding-right: 45px !important;
    }

    .toggle-password {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--text-muted);
        transition: 0.3s;
        z-index: 10;
        font-size: 1.1rem;
    }

        .toggle-password:hover {
            color: #818cf8;
        }

    .btn-auth {
        background: var(--primary-gradient);
        border: none;
        color: white;
        padding: 14px;
        font-weight: 600;
        border-radius: 12px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        margin-top: 10px;
    }

        .btn-auth:hover {
            transform: translateY(-2px);
            opacity: 0.95;
        }

        .btn-auth:disabled {
            opacity: 0.7;
            transform: none;
            cursor: not-allowed;
        }

    .auth-footer {
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
        text-align: center;
        font-size: 0.9rem;
    }

    .auth-link {
        color: #818cf8;
        text-decoration: none;
        font-weight: 600;
    }

        .auth-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.8rem;
        color: #f87171;
        display: block;
        margin-top: 5px;
    }

    .alert {
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 15px;
        font-size: 0.9rem;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.2);
        color: #4ade80;
        border: 1px solid #22c55e;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.2);
        color: #f87171;
        border: 1px solid #ef4444;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h2>Đăng Ký Tài Khoản</h2>
        <form id="registerForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HoTenKhachHang" class="form-label">Họ và tên *</label>
                <input asp-for="HoTenKhachHang" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="HoTenKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailKhachHang" class="form-label">Email *</label>
                <input asp-for="EmailKhachHang" class="form-control" placeholder="name@company.com" />
                <span asp-validation-for="EmailKhachHang" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu *</label>
                    <div class="password-wrapper">
                        <input asp-for="Password" type="password" class="form-control form-control-pass" id="RegPassword" placeholder="••••••••" />
                        <i class="fa-solid fa-eye toggle-password" data-target="RegPassword"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Xác nhận mật khẩu *</label>
                    <div class="password-wrapper">
                        <input type="password" class="form-control form-control-pass" id="ConfirmPassword" placeholder="••••••••" />
                        <i class="fa-solid fa-eye toggle-password" data-target="ConfirmPassword"></i>
                    </div>
                    <span id="confirmPasswordError" class="text-danger" style="display:none;">Mật khẩu không khớp</span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SdtKhachHang" class="form-label">Số điện thoại *</label>
                <input asp-for="SdtKhachHang" class="form-control" placeholder="09xxxxxxxx" />
                <span asp-validation-for="SdtKhachHang" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-auth" id="registerBtn">Đăng Ký Ngay</button>
        </form>

        <div id="registerMessage" class="mt-3"></div>

        <div class="auth-footer">
            <p style="color: var(--text-muted)">Đã có tài khoản? <a href="/Login" class="auth-link">Đăng nhập ngay</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Logic ẩn/hiện mật khẩu
            $('.toggle-password').on('click', function() {
                const inputId = $(this).data('target');
                const input = $('#' + inputId);
                const icon = $(this);

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Kiểm tra mật khẩu khớp khi gõ
            $('#ConfirmPassword, #RegPassword').on('keyup', function() {
                const p = $('#RegPassword').val();
                const cp = $('#ConfirmPassword').val();
                if (cp !== '' && p !== cp) {
                    $('#confirmPasswordError').show();
                } else {
                    $('#confirmPasswordError').hide();
                }
            });

            // Xử lý gửi form
            $('#registerForm').on('submit', function(e) {
                e.preventDefault();

                // Kiểm tra validation của ASP.NET Core
                if (!$('#registerForm').valid()) return;

                // Kiểm tra khớp mật khẩu lần cuối trước khi gửi
                if ($('#RegPassword').val() !== $('#ConfirmPassword').val()) {
                    $('#confirmPasswordError').show();
                    return;
                }

                var btn = $('#registerBtn');
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

                var formData = {
                    HoTenKhachHang: $('#HoTenKhachHang').val(),
                    EmailKhachHang: $('#EmailKhachHang').val(),
                    Password: $('#RegPassword').val(),
                    SdtKhachHang: $('#SdtKhachHang').val()
                };

                $.ajax({
                    url: '/Login/Register',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(res) {
                        if (res.success) {
                            $('#registerMessage').html('<div class="alert alert-success">' + res.message + '</div>');
                            setTimeout(() => { window.location.href = '/Login'; }, 2000);
                        } else {
                            $('#registerMessage').html('<div class="alert alert-danger">' + res.message + '</div>');
                            btn.prop('disabled', false).html('Đăng Ký Ngay');
                        }
                    },
                    error: function(xhr) {
                        let errorMsg = "Lỗi kết nối server!";
                        try {
                           const response = JSON.parse(xhr.responseText);
                           errorMsg = response.message || errorMsg;
                        } catch(e) {}
                        $('#registerMessage').html('<div class="alert alert-danger">' + errorMsg + '</div>');
                        btn.prop('disabled', false).html('Đăng Ký Ngay');
                    }
                });
            });
        });
    </script>
}