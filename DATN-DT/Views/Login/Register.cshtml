@model DATN_DT.Form.RegisterForm
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "~/Views/Shared/_NonLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card register-card">
        <h2 class="text-center mb-4">Đăng Ký Tài Khoản</h2>
        
        <form id="registerForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="HoTenKhachHang" class="form-label">Họ và tên *</label>
                <input asp-for="HoTenKhachHang" class="form-control" />
                <span asp-validation-for="HoTenKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailKhachHang" class="form-label">Email *</label>
                <input asp-for="EmailKhachHang" class="form-control" />
                <span asp-validation-for="EmailKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu *</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Xác nhận mật khẩu *</label>
                <input type="password" class="form-control" id="ConfirmPassword" />
                <span id="confirmPasswordError" class="text-danger" style="display:none;">Mật khẩu xác nhận không khớp</span>
            </div>

            <div class="form-group">
                <label asp-for="SdtKhachHang" class="form-label">Số điện thoại *</label>
                <input asp-for="SdtKhachHang" class="form-control" />
                <span asp-validation-for="SdtKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block" id="registerBtn">
                    Đăng Ký
                </button>
            </div>
        </form>

        <div id="registerMessage" class="mt-3"></div>

        <div class="text-center mt-3">
            <p>Đã có tài khoản? <a href="/Login" class="text-primary">Đăng nhập ngay</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Kiểm tra mật khẩu xác nhận
            $('#ConfirmPassword').on('keyup', function() {
                var password = $('#Password').val();
                var confirmPassword = $(this).val();
                
                if (confirmPassword !== '' && password !== confirmPassword) {
                    $('#confirmPasswordError').show();
                } else {
                    $('#confirmPasswordError').hide();
                }
            });

            $('#Password').on('keyup', function() {
                $('#ConfirmPassword').trigger('keyup');
            });

            $('#registerForm').on('submit', function(e) {
                e.preventDefault();
                
                // Kiểm tra mật khẩu xác nhận
                var password = $('#Password').val();
                var confirmPassword = $('#ConfirmPassword').val();
                
                if (password !== confirmPassword) {
                    $('#confirmPasswordError').show();
                    return;
                } else {
                    $('#confirmPasswordError').hide();
                }
                
                // Kiểm tra validation
                if (!$('#registerForm').valid()) {
                    return;
                }
                
                var btn = $('#registerBtn');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status"></span> Đang xử lý...');
                
                var formData = {
                    HoTenKhachHang: $('#HoTenKhachHang').val(),
                    EmailKhachHang: $('#EmailKhachHang').val(),
                    Password: $('#Password').val(),
                    SdtKhachHang: $('#SdtKhachHang').val(),
                };
                
                console.log('Sending data:', formData); // Debug log
                
                $.ajax({
                    url: '/Login/Register',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(response) {
                        console.log('Response:', response); // Debug log
                        if (response.success) {
                            $('#registerMessage').html('<div class="alert alert-success">' + response.message + '</div>');
                            $('#registerForm')[0].reset();
                            
                            setTimeout(() => {
                                window.location.href = '/Login';
                            }, 2000);
                        } else {
                            $('#registerMessage').html('<div class="alert alert-danger">' + response.message + '</div>');
                        }
                    },
                    error: function(xhr) {
                        console.log('Error:', xhr); // Debug log
                        try {
                            var response = JSON.parse(xhr.responseText);
                            $('#registerMessage').html('<div class="alert alert-danger">' + response.message + '</div>');
                        } catch (e) {
                            $('#registerMessage').html('<div class="alert alert-danger">Có lỗi xảy ra khi kết nối đến server</div>');
                        }
                    },
                    complete: function() {
                        btn.prop('disabled', false).html('Đăng Ký');
                    }
                });
            });
        });
    </script>
}