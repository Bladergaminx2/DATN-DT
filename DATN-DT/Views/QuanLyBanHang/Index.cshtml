@{
    ViewData["Title"] = "Thống Kê Bán Hàng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-sidebar: #1e293b;
            --bg-header: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            color: var(--text-primary);
            min-height: 100vh;
        }

        h2 {
            color: var(--text-primary);
            font-weight: 700;
            margin-bottom: 30px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 20px;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-radius: 12px 12px 0 0 !important;
            padding: 15px 20px;
            font-weight: 600;
            border-bottom: none;
        }

        .card-header-online {
            background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
        }

        .card-header-offline {
            background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        }

        .card-body {
            background-color: var(--bg-card);
            color: var(--text-primary);
            padding: 20px;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-color);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .stat-value-online {
            color: #0ea5e9;
        }

        .stat-value-offline {
            color: #f59e0b;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-top: 8px;
        }

        .date-filter {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: var(--shadow-lg);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            margin-bottom: 8px;
        }

        .form-control {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
        }

        .form-control:focus {
            background-color: #1e293b;
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
        }

        .btn {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-secondary {
            background: rgba(148, 163, 184, 0.2);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: rgba(148, 163, 184, 0.3);
            color: var(--text-primary);
        }

        .btn-info {
            background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
            color: white;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            color: white;
        }

        .btn-date-option {
            margin: 5px;
        }

        .table {
            background-color: transparent;
            color: var(--text-primary);
            margin-bottom: 0;
        }

        .table thead th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
            color: var(--text-primary);
            border-bottom: 2px solid var(--border-color);
            font-weight: 600;
            padding: 15px;
        }

        .table tbody td {
            background-color: var(--bg-card);
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-color);
            padding: 12px 15px;
        }

        .table tbody tr:hover {
            background-color: rgba(99, 102, 241, 0.1);
        }

        .chart-container {
            position: relative;
            height: 300px;
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            padding: 20px;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--text-primary);
        }

        .text-muted {
            color: var(--text-secondary) !important;
        }

        .badge {
            padding: 6px 12px;
            border-radius: 6px;
            font-weight: 500;
        }
        .modal-content {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-bottom: 1px solid var(--border-color);
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            background-color: var(--bg-card);
        }

        .btn-close-white {
            filter: invert(1);
        }

        #detailModal .modal-body {
            max-height: 80vh;
            overflow-y: auto;
            background-color: var(--bg-card);
            color: var(--text-primary);
        }

        #detailModal .table {
            width: 100%;
            table-layout: auto;
            background-color: transparent;
        }

        #detailModal .table th,
        #detailModal .table td {
            white-space: nowrap;
            vertical-align: middle;
            color: var(--text-primary);
        }

        #detailModal .table th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
            border-bottom: 2px solid var(--border-color);
        }

        #detailModal .table td {
            border-bottom: 1px solid var(--border-color);
        }

        #detailModal .table th:nth-child(2),
        #detailModal .table td:nth-child(2) {
            white-space: normal;
            width: auto;
            min-width: 120px;
        }

        #detailModal .table img {
            max-width: 200px;
            max-height: 200px;
            width: auto;
            height: auto;
            object-fit: contain;
            display: block;
            margin: 0 auto;
            border-radius: 8px;
            border: 2px solid var(--border-color);
        }

        #detailModal .table td:nth-child(8) {
            white-space: normal;
            word-break: break-all;
            max-width: 200px;
            font-size: 0.85em;
        }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <h2 class="mb-4"><i class="fas fa-chart-line"></i> Thống Kê Bán Hàng</h2>

        <!-- Date Filter -->
        <div class="date-filter">
            <div class="row align-items-end">
                <div class="col-md-12 mb-3">
                    <label class="form-label"><strong>Chọn thời gian:</strong></label>
                    <div>
                        <button type="button" class="btn btn-primary btn-date-option" onclick="selectDateOption('today')">
                            <i class="fas fa-calendar-day"></i> Hôm nay
                        </button>
                        <button type="button" class="btn btn-secondary btn-date-option" onclick="selectDateOption('yesterday')">
                            <i class="fas fa-calendar-minus"></i> Hôm qua
                        </button>
                        <button type="button" class="btn btn-info btn-date-option" onclick="selectDateOption('custom')">
                            <i class="fas fa-calendar-alt"></i> Tùy chỉnh
                        </button>
                    </div>
                </div>
                <div class="col-md-4" id="customDateRange" style="display: none;">
                    <label class="form-label">Từ ngày:</label>
                    <input type="date" id="fromDate" class="form-control" />
                </div>
                <div class="col-md-4" id="customDateRange2" style="display: none;">
                    <label class="form-label">Đến ngày:</label>
                    <input type="date" id="toDate" class="form-control" />
                </div>
                <div class="col-md-4" id="searchButtonContainer" style="display: none;">
                    <button type="button" class="btn btn-success" onclick="loadData()">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <button type="button" class="btn btn-warning" onclick="exportExcel()" id="btnExportExcel" disabled>
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </button>
                </div>
            </div>
        </div>

        <!-- Tổng Doanh Thu -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Biểu Đồ Doanh Thu Tổng</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-value" id="tongDoanhThu">0</div>
                            <div class="stat-label">Tổng Doanh Thu (VNĐ)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-value stat-value-online" id="tongDoanhThuOn">0</div>
                            <div class="stat-label">Doanh Thu Online (VNĐ)</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-value stat-value-offline" id="tongDoanhThuOff">0</div>
                            <div class="stat-label">Doanh Thu Offline (VNĐ)</div>
                        </div>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="revenueChartTotal"></canvas>
                </div>
            </div>
        </div>

        <!-- Bán Hàng Online và Offline -->
        <div class="row">
            <!-- Bán Hàng Online -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-online">
                        <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Bán Hàng Online</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="stat-card">
                                    <div class="stat-value stat-value-online" id="soLuongDonHangOn">0</div>
                                    <div class="stat-label">Tổng Số Đơn</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-card">
                                    <div class="stat-value stat-value-online" id="tongDoanhThuOnCard">0</div>
                                    <div class="stat-label">Tổng Doanh Thu</div>
                                </div>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="revenueChartOnline"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bán Hàng Offline -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-offline">
                        <h5 class="mb-0"><i class="fas fa-store"></i> Bán Hàng Offline</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="stat-card">
                                    <div class="stat-value stat-value-offline" id="soLuongDonHangOff">0</div>
                                    <div class="stat-label">Tổng Số Đơn</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-card">
                                    <div class="stat-value stat-value-offline" id="tongDoanhThuOffCard">0</div>
                                    <div class="stat-label">Tổng Doanh Thu</div>
                                </div>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="revenueChartOffline"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh Sách Hóa Đơn -->
        <div class="row">
            <!-- Hóa Đơn Online -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-online">
                        <h5 class="mb-0"><i class="fas fa-receipt"></i> Danh Sách Hóa Đơn Online</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody id="invoiceTableBodyOnline">
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            <i class="fas fa-spinner fa-spin"></i> Đang tải dữ liệu...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hóa Đơn Offline -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-offline">
                        <h5 class="mb-0"><i class="fas fa-receipt"></i> Danh Sách Hóa Đơn Offline</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody id="invoiceTableBodyOffline">
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            <i class="fas fa-spinner fa-spin"></i> Đang tải dữ liệu...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Chi tiết hóa đơn -->
    <div class="modal fade" id="detailModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Chi tiết hóa đơn</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detailModalBody">
                    <!-- Nội dung chi tiết sẽ được load ở đây -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let revenueChartTotal = null;
        let revenueChartOnline = null;
        let revenueChartOffline = null;
        let currentFromDate = null;
        let currentToDate = null;
        let hoaDonData = [];
        let donHangData = [];

        // Khởi tạo: mặc định là hôm nay
        document.addEventListener('DOMContentLoaded', function() {
            selectDateOption('today');
            loadData();
        });

        function selectDateOption(option) {
            const today = new Date();
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);

            // Reset buttons
            document.querySelectorAll('.btn-date-option').forEach(btn => {
                btn.classList.remove('active');
            });

            if (option === 'today') {
                document.querySelector('[onclick="selectDateOption(\'today\')"]').classList.add('active');
                document.getElementById('fromDate').value = formatDate(today);
                document.getElementById('toDate').value = formatDate(today);
                document.getElementById('customDateRange').style.display = 'none';
                document.getElementById('customDateRange2').style.display = 'none';
                document.getElementById('searchButtonContainer').style.display = 'none';
                loadData();
            } else if (option === 'yesterday') {
                document.querySelector('[onclick="selectDateOption(\'yesterday\')"]').classList.add('active');
                document.getElementById('fromDate').value = formatDate(yesterday);
                document.getElementById('toDate').value = formatDate(yesterday);
                document.getElementById('customDateRange').style.display = 'none';
                document.getElementById('customDateRange2').style.display = 'none';
                document.getElementById('searchButtonContainer').style.display = 'none';
                loadData();
            } else if (option === 'custom') {
                document.querySelector('[onclick="selectDateOption(\'custom\')"]').classList.add('active');
                document.getElementById('customDateRange').style.display = 'block';
                document.getElementById('customDateRange2').style.display = 'block';
                document.getElementById('searchButtonContainer').style.display = 'block';
                if (!document.getElementById('fromDate').value) {
                    document.getElementById('fromDate').value = formatDate(today);
                    document.getElementById('toDate').value = formatDate(today);
                }
            }
        }

        function formatDate(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        function formatCurrency(value) {
            return new Intl.NumberFormat('vi-VN').format(value) + ' đ';
        }

        function getValue(obj, ...keys) {
            if (!obj) return null;
            for (const key of keys) {
                if (obj[key] !== undefined && obj[key] !== null) {
                    return obj[key];
                }
            }
            return null;
        }

        function parseDate(dateString) {
            if (!dateString || typeof dateString !== 'string') {
                return new Date(0);
            }
            const parts = dateString.split('/');
            if (parts.length !== 3) {
                return new Date(0);
            }
            return new Date(parseInt(parts[2]), parseInt(parts[1]) - 1, parseInt(parts[0]));
        }

        async function loadData() {
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            if (!fromDate || !toDate) {
                alert('Vui lòng chọn ngày!');
                return;
            }

            currentFromDate = fromDate;
            currentToDate = toDate;

            try {
                const response = await fetch(`/QuanLyBanHang/GetData?fromDate=${fromDate}&toDate=${toDate}`);
                const data = await response.json();

                if (data.success) {
                    console.log('Data received:', data);

                    // Cập nhật thống kê tổng
                    document.getElementById('tongDoanhThu').textContent = formatCurrency(data.tongDoanhThu || 0);
                    document.getElementById('tongDoanhThuOn').textContent = formatCurrency(data.tongDoanhThuOn || 0);
                    document.getElementById('tongDoanhThuOff').textContent = formatCurrency(data.tongDoanhThuOff || 0);
                    document.getElementById('tongDoanhThuOnCard').textContent = formatCurrency(data.tongDoanhThuOn || 0);
                    document.getElementById('tongDoanhThuOffCard').textContent = formatCurrency(data.tongDoanhThuOff || 0);
                    document.getElementById('soLuongDonHangOn').textContent = data.soLuongDonHangOn || 0;
                    document.getElementById('soLuongDonHangOff').textContent = data.soLuongDonHangOff || 0;

                    // Cập nhật biểu đồ
                    if (data.hoaDons && data.donHangs) {
                        updateTotalChart(data.hoaDons, data.donHangs);
                        updateOnlineChart(data.hoaDons);
                        updateOfflineChart(data.donHangs);
                    }

                    // Cập nhật bảng
                    if (data.hoaDons) {
                        updateOnlineTable(data.hoaDons);
                        hoaDonData = data.hoaDons;
                    }
                    if (data.donHangs) {
                        updateOfflineTable(data.donHangs);
                        donHangData = data.donHangs;
                    }

                    // Enable nút xuất Excel
                    document.getElementById('btnExportExcel').disabled = false;
                } else {
                    alert('Lỗi: ' + (data.message || 'Không thể tải dữ liệu'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Lỗi kết nối!');
            }
        }

        function updateTotalChart(hoaDons, donHangs) {
            const ctx = document.getElementById('revenueChartTotal');
            if (!ctx) return;

            if (revenueChartTotal) {
                revenueChartTotal.destroy();
            }

            // Nhóm theo ngày
            const dailyRevenue = {};
            const dailyRevenueOn = {};
            const dailyRevenueOff = {};

            // Xử lý online
            hoaDons.forEach(h => {
                const ngayDat = getValue(h, 'ngayDat', 'NgayDat');
                const tongTien = getValue(h, 'tongTien', 'TongTien') || 0;
                const dateKey = ngayDat ? ngayDat.split(' ')[0] : null;
