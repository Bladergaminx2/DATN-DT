@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DATN_DT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="~/css/auth.css" rel="stylesheet" />
    <link href="~/css/template.css" rel="stylesheet" />

    
</head>
<body>
    <header>
        <div class="container header-inner">
            @* 1. Logo: Sử dụng Tag Helper để link về trang chủ *@
            <a asp-controller="Home" asp-action="Index" class="logo">SmartViet</a>

            @* 2. Search Box: Chuyển thành Form để submit dữ liệu về Server *@
            <div class="search-box">
                <form asp-controller="Product" asp-action="Search" method="get" style="display: flex; width: 100%;">
                    @* name="query" để bind với tham số trong Controller *@
                    <input type="text" name="query" placeholder="Bạn tìm gì hôm nay? (Ví dụ: iPhone 17...)">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="header-actions">
                <nav class="nav-menu">
                    @* 3. Menu điều hướng: Sử dụng asp-controller và asp-action *@
                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>

                    @* Ví dụ truyền tham số category *@
                    <a asp-controller="Product" asp-action="Index" asp-route-category="phone">Điện thoại</a>
                    <a asp-controller="Product" asp-action="Index" asp-route-category="accessories">Phụ kiện</a>
                    <a asp-controller="Home" asp-action="Warranty">Bảo hành</a>
                </nav>
                <!-- User avatar (sẽ được đồng bộ từ UserProfile) -->
                <div id="headerAvatar" style="display:flex;align-items:center;margin-left:16px;">
                    <a asp-controller="UserProfile" asp-action="Index" title="Tài khoản">
                        <div style="width:40px;height:40px;border-radius:50%;overflow:hidden;background:#fff;display:flex;align-items:center;justify-content:center;">
                            <i class="bi bi-person-circle" id="headerAvatarIcon" style="font-size:28px;color:#333"></i>
                        </div>
                    </a>
                </div>
            </div>     
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer-grid">
            <div class="footer-col">
                <div class="footer-title">SMARTVIET</div>
                <p style="font-size: 13px; color: #666; line-height: 1.6;">
                    Hệ thống bán lẻ điện thoại di động chính hãng uy tín tại Việt Nam. Cam kết giá tốt nhất, dịch vụ hậu mãi chu đáo.
                </p>
            </div>

            <div class="footer-col">
                <div class="footer-title">Hỗ trợ khách hàng</div>
                <a asp-controller="Support" asp-action="BuyingGuide" class="footer-link">Hướng dẫn mua hàng online</a>
                <a asp-controller="Policy" asp-action="Installment" class="footer-link">Chính sách trả góp</a>
                <a asp-controller="Policy" asp-action="Warranty" class="footer-link">Chính sách bảo hành</a>
                <a asp-controller="Warranty" asp-action="Request" class="footer-link">Gửi yêu cầu bảo hành</a>
            </div>

            <div class="footer-col">
                <div class="footer-title">Thông tin chính sách</div>
                <a asp-controller="Policy" asp-action="Return" class="footer-link">Chính sách đổi trả</a>
                <a asp-controller="Home" asp-action="Privacy" class="footer-link">Chính sách bảo mật</a>
                <a asp-controller="Policy" asp-action="Terms" class="footer-link">Quy chế hoạt động</a>
                <a asp-controller="Recruitment" asp-action="Index" class="footer-link">Tuyển dụng</a>
            </div>

            <div class="footer-col">
                <div class="footer-title">Tổng đài hỗ trợ (Miễn phí)</div>

                <a href="tel:0941088000" class="footer-link">
                    <i class="fas fa-phone-alt"></i> Gọi mua: <strong>0941.088.000</strong>
                </a>
                <a href="tel:1800xxxx" class="footer-link">
                    <i class="fas fa-tools"></i> Kỹ thuật: <strong>1800.xxxx</strong>
                </a>

                <div style="margin-top: 15px;">
                    <a href="" target="_blank" style="margin-right: 10px; font-size: 20px; color: #3b5998;">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a href="" target="_blank" style="margin-right: 10px; font-size: 20px; color: #ff0000;">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a href="" target="_blank" style="margin-right: 10px; font-size: 20px; color: #000;">
                        <i class="fab fa-tiktok"></i>
                    </a>
                </div>
            </div>
        </div>

        <div style="text-align: center; padding-top: 20px; border-top: 1px solid #eee; margin-top: 30px; font-size: 12px; color: #888;">
            © @DateTime.Now.Year Công ty TNHH Thương mại và Dịch vụ Smartviet. All rights reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script>
        $(document).ready(function() {
                $("#btnLogout").click(function() {
                    $.ajax({
                        url: '/Login/Logout',
                        type: 'POST',
                        success: function(res) {
                            if(res.success) {
                                // Xoá tất cả dữ liệu ứng dụng
                                localStorage.clear();
                                sessionStorage.clear();

                                // Redirect về trang login
                                window.location.href = res.redirectUrl;
                            }
                        },
                        error: function() {
                            alert("Đăng xuất thất bại, vui lòng thử lại.");
                        }
                    });
                });
            });
    </script>
    <script src="/js/header-avatar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
