@model IEnumerable<DATN_DT.Models.ThuongHieu>

@{
    ViewData["Title"] = "Quản lý Thương Hiệu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Thương Hiệu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .form-text {
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }

        .status-error {
            color: #ffc107;
            font-weight: bold;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Thương Hiệu</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Thương Hiệu
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên thương hiệu</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdThuongHieu</td>
                        <td>@item.TenThuongHieu</td>
                        <td>
                            @{
                                var statusClass = "status-active";
                                if (item.TrangThaiThuongHieu == "Ngừng hoạt động")
                                {
                                    statusClass = "status-inactive";
                                }
                                else if (item.TrangThaiThuongHieu == "Lỗi")
                                {
                                    statusClass = "status-error";
                                }
                            }
                            <span class="@statusClass">
                                @item.TrangThaiThuongHieu
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdThuongHieu"
                                        data-ten="@item.TenThuongHieu"
                                        data-trangthai="@item.TrangThaiThuongHieu">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdThuongHieu"
                                        data-ten="@item.TenThuongHieu">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Thương Hiệu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên thương hiệu <span class="text-danger">*</span></label>
                            <input type="text" id="TenThuongHieu" class="form-control" placeholder="VD: Samsung, Apple, Xiaomi, Oppo" />
                            <small id="errorTenThuongHieu" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập tên thương hiệu (ví dụ: Samsung, Apple)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                            <select id="TrangThaiThuongHieu" class="form-control">
                                <option value="">Chọn trạng thái</option>
                                <option value="Còn hoạt động">Còn hoạt động</option>
                                <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                                <option value="Lỗi">Lỗi</option>
                            </select>
                            <small id="errorTrangThaiThuongHieu" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Chọn trạng thái hoạt động của thương hiệu</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Thương Hiệu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdThuongHieu" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên thương hiệu <span class="text-danger">*</span></label>
                            <input type="text" id="EditTenThuongHieu" class="form-control" placeholder="VD: Samsung, Apple, Xiaomi, Oppo" />
                            <small id="errorEditTenThuongHieu" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Nhập tên thương hiệu (ví dụ: Samsung, Apple)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                            <select id="EditTrangThaiThuongHieu" class="form-control">
                                <option value="Còn hoạt động">Còn hoạt động</option>
                                <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                                <option value="Lỗi">Lỗi</option>
                            </select>
                            <small id="errorEditTrangThaiThuongHieu" class="text-danger d-none"></small>
                            <small class="form-text text-muted">Chọn trạng thái hoạt động của thương hiệu</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Ẩn tất cả lỗi
        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

        // Mở modal edit và điền dữ liệu
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const ten = btn.dataset.ten;
                const trangthai = btn.dataset.trangthai;

                document.getElementById("EditIdThuongHieu").value = id;
                document.getElementById("EditTenThuongHieu").value = ten;
                document.getElementById("EditTrangThaiThuongHieu").value = trangthai;

                hideAllErrors();
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý xóa thương hiệu
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const ten = btn.dataset.ten;

                if (confirm(`Bạn có chắc chắn muốn xóa thương hiệu "${ten}"?`)) {
                    try {
                        const response = await fetch(`/ThuongHieu/Delete?id=${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            const result = await response.json();
                            showAlert(result.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Lỗi khi xóa thương hiệu', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Xử lý thêm thương hiệu
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const thData = {
                TenThuongHieu: document.getElementById("TenThuongHieu").value.trim(),
                TrangThaiThuongHieu: document.getElementById("TrangThaiThuongHieu").value
            };

            // Kiểm tra validation cơ bản
            if (!thData.TenThuongHieu) {
                showError("errorTenThuongHieu", "Phải nhập tên thương hiệu!");
                return;
            }
            if (!thData.TrangThaiThuongHieu) {
                showError("errorTrangThaiThuongHieu", "Phải chọn trạng thái!");
                return;
            }

            hideAllErrors();

            try {
                const response = await fetch('/ThuongHieu/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(thData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.TenThuongHieu) showError('errorTenThuongHieu', error.TenThuongHieu);
                        if (error.TrangThaiThuongHieu) showError('errorTrangThaiThuongHieu', error.TrangThaiThuongHieu);
                    } else {
                        showAlert(error.message || 'Lỗi khi thêm thương hiệu', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Xử lý sửa thương hiệu
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdThuongHieu").value;
            const thData = {
                TenThuongHieu: document.getElementById("EditTenThuongHieu").value.trim(),
                TrangThaiThuongHieu: document.getElementById("EditTrangThaiThuongHieu").value
            };

            // Kiểm tra validation cơ bản
            if (!thData.TenThuongHieu) {
                showError("errorEditTenThuongHieu", "Phải nhập tên thương hiệu!");
                return;
            }
            if (!thData.TrangThaiThuongHieu) {
                showError("errorEditTrangThaiThuongHieu", "Phải chọn trạng thái!");
                return;
            }

            hideAllErrors();

            try {
                const response = await fetch(`/ThuongHieu/Edit/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(thData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.TenThuongHieu) showError('errorEditTenThuongHieu', error.TenThuongHieu);
                        if (error.TrangThaiThuongHieu) showError('errorEditTrangThaiThuongHieu', error.TrangThaiThuongHieu);
                    } else {
                        showAlert(error.message || 'Lỗi khi cập nhật thương hiệu', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Reset form và ẩn lỗi khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideAllErrors();
        });
    </script>
</body>
</html>