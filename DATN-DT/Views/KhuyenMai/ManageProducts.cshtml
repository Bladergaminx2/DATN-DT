@model DATN_DT.Models.KhuyenMai
@{
    ViewData["Title"] = "Quản lý Sản Phẩm Khuyến Mãi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Sản Phẩm - @(Model?.MaKM ?? "N/A")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        :root {
            --primary-color: #6366f1;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-primary: #f1f5f9;
            --border-color: #334155;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header-section {
            background: var(--bg-card);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 1px solid var(--border-color);
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 15px;
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
        }

        .product-card.assigned {
            border-color: var(--success-color);
            background: rgba(16, 185, 129, 0.1);
        }

        .product-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .product-name {
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--text-primary);
        }

        .product-brand {
            color: #94a3b8;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .product-price {
            display: flex;
            flex-direction: column;
            gap: 5px;
            margin-bottom: 10px;
        }

        .price-original {
            color: #94a3b8;
            text-decoration: line-through;
            font-size: 14px;
        }

        .price-discounted {
            color: var(--danger-color);
            font-weight: bold;
            font-size: 18px;
        }

        .btn-assign {
            width: 100%;
            background: linear-gradient(135deg, var(--primary-color) 0%, #8b5cf6 100%);
            border: none;
            color: white;
            padding: 8px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-assign:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
        }

        .btn-remove {
            width: 100%;
            background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
            border: none;
            color: white;
            padding: 8px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-remove:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        }

        .badge-assigned {
            background: var(--success-color);
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            margin-bottom: 10px;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2>Quản lý Sản Phẩm - @(Model?.MaKM ?? "N/A")</h2>
                    <p class="text-muted mb-0">
                        @(Model?.LoaiGiam ?? "N/A"): 
                        @if (Model?.LoaiGiam == "Phần trăm")
                        {
                            <span>@(Model?.GiaTri?.ToString("0.##") ?? "0")%</span>
                        }
                        else
                        {
                            <span>@(Model?.GiaTri?.ToString("N0") ?? "0") ₫</span>
                        }
                    </p>
                </div>
                <a href="/KhuyenMai" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Danh sách Sản Phẩm</h4>
            <div>
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm sản phẩm..." style="background: var(--bg-card); border: 1px solid var(--border-color); color: var(--text-primary);">
            </div>
        </div>

        <div id="productsContainer" class="product-grid">
            <div class="text-center" style="grid-column: 1 / -1; padding: 40px;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        const khuyenMaiId = @(Model?.IdKhuyenMai ?? 0);
        const loaiGiam = '@(Model?.LoaiGiam ?? "")';
        const giaTri = @(Model?.GiaTri ?? 0);

        async function loadProducts() {
            try {
                const response = await fetch(`/KhuyenMai/GetAvailableProducts/${khuyenMaiId}`);
                const products = await response.json();
                
                renderProducts(products);
            } catch (error) {
                console.error('Error loading products:', error);
                document.getElementById('productsContainer').innerHTML = `
                    <div class="text-center" style="grid-column: 1 / -1; padding: 40px; color: var(--danger-color);">
                        <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                        <p>Không thể tải danh sách sản phẩm</p>
                    </div>
                `;
            }
        }

        function calculateDiscountedPrice(originalPrice) {
            if (loaiGiam === "Phần trăm") {
                return originalPrice * (1 - giaTri / 100);
            } else if (loaiGiam === "Số tiền") {
                return Math.max(0, originalPrice - giaTri);
            }
            return originalPrice;
        }

        function formatPrice(price) {
            return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }

        function renderProducts(products) {
            const container = document.getElementById('productsContainer');
            
            if (!products || products.length === 0) {
                container.innerHTML = `
                    <div class="text-center" style="grid-column: 1 / -1; padding: 40px;">
                        <i class="fas fa-box-open fa-3x mb-3" style="color: #94a3b8;"></i>
                        <p>Không có sản phẩm nào</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = products.map(product => {
                const giaGoc = product.giaBan || 0;
                const giaSauGiam = calculateDiscountedPrice(giaGoc);

                return `
                    <div class="product-card ${product.isAssigned ? 'assigned' : ''}">
                        ${product.isAssigned ? '<span class="badge-assigned"><i class="fas fa-check"></i> Đã áp dụng</span>' : ''}
                        <img src="${product.hinhAnh}" alt="${product.tenModel}" class="product-image" 
                             onerror="this.src='/ImgResource/default-product.jpg'">
                        <div class="product-name">${product.tenModel}</div>
                        <div class="product-brand">${product.tenThuongHieu}</div>
                        <div class="product-price">
                            ${product.isAssigned ? `
                                <span class="price-discounted">${formatPrice(Math.round(giaSauGiam / 1000) * 1000)} ₫</span>
                            ` : `
                                <span class="price-discounted">${formatPrice(giaGoc)} ₫</span>
                            `}
                        </div>
                        ${product.isAssigned ? `
                            <button class="btn-remove" onclick="removeProduct(${product.idModelSanPham})">
                                <i class="fas fa-times"></i> Gỡ khỏi khuyến mãi
                            </button>
                        ` : `
                            <button class="btn-assign" onclick="addProduct(${product.idModelSanPham})">
                                <i class="fas fa-plus"></i> Áp dụng khuyến mãi
                            </button>
                        `}
                    </div>
                `;
            }).join('');
        }

        async function addProduct(productId) {
            try {
                const response = await fetch(`/KhuyenMai/AddProduct/${khuyenMaiId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ IdModelSanPham: productId })
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Thêm sản phẩm thành công!');
                    loadProducts();
                } else {
                    alert(result.message || 'Không thể thêm sản phẩm!');
                }
            } catch (error) {
                console.error('Error adding product:', error);
                alert('Có lỗi xảy ra khi thêm sản phẩm!');
            }
        }

        async function removeProduct(productId) {
            if (!confirm('Bạn có chắc chắn muốn gỡ sản phẩm này khỏi khuyến mãi?')) {
                return;
            }

            try {
                const response = await fetch(`/KhuyenMai/RemoveProduct/${khuyenMaiId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ IdModelSanPham: productId })
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Gỡ sản phẩm thành công!');
                    loadProducts();
                } else {
                    alert(result.message || 'Không thể gỡ sản phẩm!');
                }
            } catch (error) {
                console.error('Error removing product:', error);
                alert('Có lỗi xảy ra khi gỡ sản phẩm!');
            }
        }

        // Search functionality
        let allProducts = [];
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const filtered = allProducts.filter(p => 
                p.tenModel.toLowerCase().includes(searchTerm) ||
                p.tenSanPham.toLowerCase().includes(searchTerm) ||
                p.tenThuongHieu.toLowerCase().includes(searchTerm)
            );
            renderProducts(filtered);
        });

        // Load products on page load
        document.addEventListener('DOMContentLoaded', async function() {
            await loadProducts();
            // Store all products for search
            const response = await fetch(`/KhuyenMai/GetAvailableProducts/${khuyenMaiId}`);
            allProducts = await response.json();
        });
    </script>
</body>
</html>

