@model IEnumerable<DATN_DT.Models.KhuyenMai>

@{
    ViewData["Title"] = "Quản lý Khuyến Mãi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Khuyến Mãi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-sidebar: #1e293b;
            --bg-header: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: var(--text-primary);
            font-weight: 700;
            font-size: 28px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        table {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        .table thead th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
            color: var(--text-primary);
            border-bottom: 2px solid var(--border-color);
            font-weight: 600;
            padding: 15px;
            text-align: center;
        }

        .table tbody td {
            background-color: var(--bg-card);
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-color);
            padding: 12px 15px;
        }

        .table tbody tr:hover {
            background-color: rgba(99, 102, 241, 0.1);
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-md);
        }

            .btn-create:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
                background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
            }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
                background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
            }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
                background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            }

        .modal-content {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 12px;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-bottom: 1px solid var(--border-color);
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            background-color: var(--bg-card);
        }

        .btn-close-white {
            filter: invert(1);
        }

        .form-control, .form-select {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 10px 15px;
        }

            .form-control:focus, .form-select:focus {
                background-color: #1e293b;
                border-color: var(--primary-color);
                color: var(--text-primary);
                box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            }

        .form-control::placeholder {
            color: var(--text-secondary);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            margin-bottom: 8px;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        .text-muted {
            color: var(--text-secondary) !important;
        }

        .status-active {
            color: var(--success-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(16, 185, 129, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-inactive {
            color: var(--danger-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-warning {
            color: var(--warning-color);
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(245, 158, 11, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .status-info {
            color: #0ea5e9;
            font-weight: 600;
            padding: 4px 12px;
            background: rgba(14, 165, 233, 0.1);
            border-radius: 6px;
            display: inline-block;
        }

        .discount-value {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.05rem;
        }

        /* Product Selection Styles */
        .product-checkbox-list {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .product-checkbox-item {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: rgba(30, 41, 59, 0.3);
            border-radius: 6px;
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .product-checkbox-item:hover {
            background-color: rgba(99, 102, 241, 0.1);
            border-color: var(--primary-color);
        }

        .product-checkbox-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin-right: 12px;
            cursor: pointer;
            accent-color: var(--primary-color);
        }

        .product-checkbox-item label {
            flex: 1;
            cursor: pointer;
            margin: 0;
            color: var(--text-primary);
            font-size: 14px;
        }

        .product-checkbox-item .product-info {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .product-checkbox-item .product-name {
            font-weight: 500;
            color: var(--text-primary);
        }

        .product-checkbox-item .product-details {
            font-size: 12px;
            color: var(--text-secondary);
            margin-top: 2px;
        }

        .product-checkbox-item .product-price {
            font-size: 14px;
            color: var(--primary-color);
            font-weight: 600;
            margin-left: 10px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-secondary {
            background: rgba(148, 163, 184, 0.2);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

            .btn-secondary:hover {
                background: rgba(148, 163, 184, 0.3);
                color: var(--text-primary);
            }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #475569;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Khuyến Mãi</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Khuyến Mãi
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Mã KM</th>
                    <th>Giá Trị</th>
                    <th>Loại Giảm</th>
                    <th>Ngày Bắt Đầu</th>
                    <th>Ngày Kết Thúc</th>
                    <th>Trạng Thái</th>
                    <th>Sản phẩm áp dụng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var productCount = ViewBag.PromotionProductCounts != null && ViewBag.PromotionProductCounts.ContainsKey(item.IdKhuyenMai) 
                        ? ViewBag.PromotionProductCounts[item.IdKhuyenMai] 
                        : 0;
                    <tr>
                        <td>@item.IdKhuyenMai</td>
                        <td>@item.MaKM</td>
                        <td class="discount-value">
                            @if (item.LoaiGiam == "Phần trăm")
                            {
                                <span>@(item.GiaTri.HasValue ? item.GiaTri.Value.ToString("0.##") : "0")%</span>
                            }
                            else
                            {
                                <span>@(item.GiaTri?.ToString("N0") ?? "0") ₫</span>
                            }
                        </td>
                        <td>@item.LoaiGiam</td>
                        <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                        <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var statusClass = "status-info";
                                if (item.TrangThaiKM == "Đang diễn ra")
                                {
                                    statusClass = "status-active";
                                }
                                else if (item.TrangThaiKM == "Đã kết thúc")
                                {
                                    statusClass = "status-inactive";
                                }
                                else if (item.TrangThaiKM == "Sắp diễn ra")
                                {
                                    statusClass = "status-warning";
                                }
                            }
                            <span class="@statusClass">
                                @item.TrangThaiKM
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-info text-dark" style="font-size: 14px; padding: 6px 12px;">
                                <i class="fas fa-box"></i> @productCount sản phẩm
                            </span>
                        </td>
                        <td>
                            <div class="d-flex flex-column gap-1">
                                <button class="btn btn-sm btn-info" onclick="window.location.href='/KhuyenMai/ManageProducts/@item.IdKhuyenMai'">
                                    <i class="fas fa-box"></i> Sản phẩm
                                </button>
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdKhuyenMai"
                                        data-makm="@item.MaKM"
                                        data-mota="@item.MoTaKhuyenMai"
                                        data-loaigiam="@item.LoaiGiam"
                                        data-giatri="@item.GiaTri"
                                        data-batdau="@item.NgayBatDau?.ToString("yyyy-MM-dd")"
                                        data-ketthuc="@item.NgayKetThuc?.ToString("yyyy-MM-dd")"
                                        data-trangthai="@item.TrangThaiKM">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="@item.IdKhuyenMai">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Khuyến Mãi</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã KM <span class="text-danger">*</span></label>
                                    <input type="text" id="MaKM" class="form-control" placeholder="Mã Khuyến Mãi" />
                                    <small id="errorMaKM" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Loại Giảm <span class="text-danger">*</span></label>
                                    <select id="LoaiGiam" class="form-control">
                                        <option value="">Chọn loại giảm</option>
                                        <option value="Phần trăm">Phần trăm (%)</option>
                                        <option value="Số tiền">Số tiền (₫)</option>
                                    </select>
                                    <small id="errorLoaiGiam" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá Trị <span class="text-danger">*</span></label>
                                    <input type="number" id="GiaTri" class="form-control" placeholder="Nhập giá trị giảm" min="0.01" step="0.01" />
                                    <small id="errorGiaTri" class="text-danger d-none"></small>
                                    <small class="text-muted" id="giaTriHint">Với phần trăm: 0-100, với số tiền: > 0</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Bắt Đầu <span class="text-danger">*</span></label>
                                    <input type="date" id="NgayBatDau" class="form-control" />
                                    <small id="errorNgayBatDau" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Kết Thúc <span class="text-danger">*</span></label>
                                    <input type="date" id="NgayKetThuc" class="form-control" />
                                    <small id="errorNgayKetThuc" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô Tả</label>
                            <textarea id="MoTaKhuyenMai" class="form-control" placeholder="Mô tả chi tiết chương trình" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng Thái</label>
                            <select id="TrangThaiKM" class="form-control">
                                <option value="Sắp diễn ra">Sắp diễn ra</option>
                                <option value="Đang diễn ra">Đang diễn ra</option>
                                <option value="Đã kết thúc">Đã kết thúc</option>
                                <option value="Tạm dừng">Tạm dừng</option>
                            </select>
                        </div>

                        <!-- Phần chọn sản phẩm -->
                        <div class="mb-3">
                            <label class="form-label">Áp dụng cho sản phẩm</label>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">Chọn sản phẩm để áp dụng khuyến mãi (có thể chọn sau)</small>
                                <div>
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAllProducts('create')">
                                        <i class="fas fa-check-double"></i> Chọn tất cả
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="deselectAllProducts('create')">
                                        <i class="fas fa-times"></i> Bỏ chọn
                                    </button>
                                </div>
                            </div>
                            <div class="product-selection-container" style="max-height: 300px; overflow-y: auto; border: 1px solid var(--border-color); border-radius: 8px; padding: 15px; background-color: rgba(30, 41, 59, 0.5);">
                                <input type="text" id="searchProductCreate" class="form-control mb-3" placeholder="Tìm kiếm sản phẩm..." 
                                       style="background-color: var(--bg-card); border: 1px solid var(--border-color); color: var(--text-primary);">
                                <div id="productListCreate" class="product-checkbox-list">
                                    <div class="text-center text-muted">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Đang tải...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Khuyến Mãi</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdKhuyenMai" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã KM <span class="text-danger">*</span></label>
                                    <input type="text" id="EditMaKM" class="form-control" />
                                    <small id="errorEditMaKM" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Loại Giảm <span class="text-danger">*</span></label>
                                    <select id="EditLoaiGiam" class="form-control">
                                        <option value="Phần trăm">Phần trăm (%)</option>
                                        <option value="Số tiền">Số tiền (₫)</option>
                                    </select>
                                    <small id="errorEditLoaiGiam" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá Trị <span class="text-danger">*</span></label>
                                    <input type="number" id="EditGiaTri" class="form-control" min="0.01" step="0.01" />
                                    <small id="errorEditGiaTri" class="text-danger d-none"></small>
                                    <small class="text-muted">Với phần trăm: 0-100, với số tiền: > 0</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Bắt Đầu <span class="text-danger">*</span></label>
                                    <input type="date" id="EditNgayBatDau" class="form-control" />
                                    <small id="errorEditNgayBatDau" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Kết Thúc <span class="text-danger">*</span></label>
                                    <input type="date" id="EditNgayKetThuc" class="form-control" />
                                    <small id="errorEditNgayKetThuc" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô Tả</label>
                            <textarea id="EditMoTaKhuyenMai" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng Thái</label>
                            <select id="EditTrangThaiKM" class="form-control">
                                <option value="Sắp diễn ra">Sắp diễn ra</option>
                                <option value="Đang diễn ra">Đang diễn ra</option>
                                <option value="Đã kết thúc">Đã kết thúc</option>
                                <option value="Tạm dừng">Tạm dừng</option>
                            </select>
                        </div>

                        <!-- Phần chọn sản phẩm (Edit) -->
                        <div class="mb-3">
                            <label class="form-label">Áp dụng cho sản phẩm</label>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">Quản lý sản phẩm áp dụng khuyến mãi</small>
                                <div>
                                    <button type="button" class="btn btn-sm btn-info" onclick="window.location.href='/KhuyenMai/ManageProducts/' + EditIdKhuyenMai.value">
                                        <i class="fas fa-box"></i> Quản lý chi tiết
                                    </button>
                                </div>
                            </div>
                            <div class="product-selection-container" style="max-height: 300px; overflow-y: auto; border: 1px solid var(--border-color); border-radius: 8px; padding: 15px; background-color: rgba(30, 41, 59, 0.5);">
                                <div id="productListEdit" class="product-checkbox-list">
                                    <div class="text-center text-muted">
                                        <small>Vui lòng sử dụng nút "Quản lý chi tiết" để quản lý sản phẩm</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" onclick="window.location.href='/KhuyenMai/ManageProducts/' + EditIdKhuyenMai.value">
                            <i class="fas fa-box"></i> Quản lý sản phẩm
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // Cập nhật hint và validation cho giá trị khi thay đổi loại giảm
        function updateGiaTriValidation() {
            const loaiGiam = document.getElementById('LoaiGiam').value;
            const giaTriInput = document.getElementById('GiaTri');
            const giaTriHint = document.getElementById('giaTriHint');
            
            if (loaiGiam === 'Phần trăm') {
                giaTriInput.max = '100';
                giaTriInput.min = '0.01';
                giaTriInput.step = '0.01';
                if (giaTriHint) giaTriHint.textContent = 'Với phần trăm: 0-100';
            } else if (loaiGiam === 'Số tiền') {
                giaTriInput.removeAttribute('max');
                giaTriInput.min = '1000'; // Tối thiểu 1000đ
                giaTriInput.max = '100000000'; // Tối đa 100 triệu
                giaTriInput.step = '1000';
                if (giaTriHint) giaTriHint.textContent = 'Với số tiền: từ 1,000₫ đến 100,000,000₫';
            } else {
                giaTriInput.removeAttribute('max');
                if (giaTriHint) giaTriHint.textContent = 'Với phần trăm: 0-100, với số tiền: > 0';
            }
        }

        // Tương tự cho form edit
        function updateEditGiaTriValidation() {
            const loaiGiam = document.getElementById('EditLoaiGiam').value;
            const giaTriInput = document.getElementById('EditGiaTri');
            
            if (loaiGiam === 'Phần trăm') {
                giaTriInput.max = '100';
                giaTriInput.min = '0.01';
                giaTriInput.step = '0.01';
            } else if (loaiGiam === 'Số tiền') {
                giaTriInput.max = '100000000';
                giaTriInput.min = '1000';
                giaTriInput.step = '1000';
            } else {
                giaTriInput.removeAttribute('max');
            }
        }

        // --- Thêm Khuyến Mãi ---
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            // Validate giá trị theo loại giảm
            const giaTriValue = parseFloat(GiaTri.value);
            if (isNaN(giaTriValue) || giaTriValue <= 0) {
                showError("errorGiaTri", "Giá trị phải lớn hơn 0!");
                return;
            }

            if (LoaiGiam.value === "Phần trăm" && giaTriValue > 100) {
                showError("errorGiaTri", "Giá trị phần trăm không được vượt quá 100%!");
                return;
            }

            if (LoaiGiam.value === "Số tiền") {
                if (giaTriValue < 1000) {
                    showError("errorGiaTri", "Giá trị số tiền tối thiểu là 1,000₫!");
                    return;
                }
                if (giaTriValue > 100000000) {
                    showError("errorGiaTri", "Giá trị số tiền tối đa là 100,000,000₫!");
                    return;
                }
            }

            // Lấy danh sách sản phẩm đã chọn (nếu có)
            const selectedProducts = getSelectedProducts('create');

            const request = {
                KhuyenMai: {
                    MaKM: MaKM.value.trim(),
                    MoTaKhuyenMai: MoTaKhuyenMai.value.trim() || null,
                    LoaiGiam: LoaiGiam.value,
                    GiaTri: giaTriValue,
                    NgayBatDau: NgayBatDau.value,
                    NgayKetThuc: NgayKetThuc.value,
                    TrangThaiKM: TrangThaiKM.value
                },
                ProductIds: selectedProducts && selectedProducts.length > 0 ? selectedProducts : null
            };

            // Validate sản phẩm nếu có
            if (request.ProductIds && request.ProductIds.length > 0) {
                const validateResponse = await fetch('/KhuyenMai/ValidateProducts', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ProductIds: request.ProductIds,
                        FromDate: NgayBatDau.value,
                        ToDate: NgayKetThuc.value
                    })
                });

                const validateData = await validateResponse.json();
                if (!validateData.valid) {
                    alert(validateData.message || 'Có sản phẩm đang trong khuyến mãi khác!');
                    return;
                }
            }

            // Reset errors
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));

            const response = await fetch('/KhuyenMai/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(request)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.MaKM) showError("errorMaKM", data.MaKM);
                    if (data.LoaiGiam) showError("errorLoaiGiam", data.LoaiGiam);
                    if (data.GiaTri) showError("errorGiaTri", data.GiaTri);
                    if (data.NgayBatDau) showError("errorNgayBatDau", data.NgayBatDau);
                    if (data.NgayKetThuc) showError("errorNgayKetThuc", data.NgayKetThuc);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorMaKM", data.message);
                    return;
                }

                alert(data.message || "Không thể thêm Khuyến Mãi. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // --- Lắng nghe sự kiện mở modal Sửa ---
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdKhuyenMai.value = btn.dataset.id;
                EditMaKM.value = btn.dataset.makm;
                EditMoTaKhuyenMai.value = btn.dataset.mota || '';
                EditLoaiGiam.value = btn.dataset.loaigiam;
                EditGiaTri.value = btn.dataset.giatri;
                EditNgayBatDau.value = btn.dataset.batdau;
                EditNgayKetThuc.value = btn.dataset.ketthuc;
                EditTrangThaiKM.value = btn.dataset.trangthai;

                new bootstrap.Modal(editModal).show();
            });
        });

        // --- Cập nhật Khuyến Mãi ---
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            // Validate giá trị theo loại giảm
            const giaTriValue = parseFloat(EditGiaTri.value);
            if (isNaN(giaTriValue) || giaTriValue <= 0) {
                showError("errorEditGiaTri", "Giá trị phải lớn hơn 0!");
                return;
            }

            if (EditLoaiGiam.value === "Phần trăm" && giaTriValue > 100) {
                showError("errorEditGiaTri", "Giá trị phần trăm không được vượt quá 100%!");
                return;
            }

            if (EditLoaiGiam.value === "Số tiền") {
                if (giaTriValue < 1000) {
                    showError("errorEditGiaTri", "Giá trị số tiền tối thiểu là 1,000₫!");
                    return;
                }
                if (giaTriValue > 100000000) {
                    showError("errorEditGiaTri", "Giá trị số tiền tối đa là 100,000,000₫!");
                    return;
                }
            }

            const id = EditIdKhuyenMai.value;
            const km = {
                IdKhuyenMai: parseInt(id),
                MaKM: EditMaKM.value.trim(),
                MoTaKhuyenMai: EditMoTaKhuyenMai.value.trim() || null,
                LoaiGiam: EditLoaiGiam.value,
                GiaTri: giaTriValue,
                NgayBatDau: EditNgayBatDau.value,
                NgayKetThuc: EditNgayKetThuc.value,
                TrangThaiKM: EditTrangThaiKM.value
            };

            // Reset errors
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));

            const response = await fetch('/KhuyenMai/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(km)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.MaKM) showError("errorEditMaKM", data.MaKM);
                    if (data.LoaiGiam) showError("errorEditLoaiGiam", data.LoaiGiam);
                    if (data.GiaTri) showError("errorEditGiaTri", data.GiaTri);
                    if (data.NgayBatDau) showError("errorEditNgayBatDau", data.NgayBatDau);
                    if (data.NgayKetThuc) showError("errorEditNgayKetThuc", data.NgayKetThuc);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorEditMaKM", data.message);
                    return;
                }

                alert(data.message || "Không thể cập nhật Khuyến Mãi. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // --- Xóa Khuyến Mãi ---
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const confirmDelete = confirm("Bạn có chắc chắn muốn xóa Khuyến Mãi ID " + id + " này không?");

                if (confirmDelete) {
                    const response = await fetch('/KhuyenMai/Delete/' + id, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                    });

                    let data = {};
                    try { data = await response.json(); } catch { }

                    if (response.ok) {
                        alert("Xóa Khuyến Mãi thành công!");
                        location.reload();
                    } else {
                        alert(data.message || "Lỗi khi xóa Khuyến Mãi. Vui lòng thử lại!");
                    }
                }
            });
        });

        // --- Reset form khi đóng modal ---
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
            document.getElementById('TrangThaiKM').value = "Sắp diễn ra";
            // Reset danh sách sản phẩm
            if (allProductsList.length > 0) {
                renderProductList('create', allProductsList);
            }
            // Reset search
            const searchInput = document.getElementById('searchProductCreate');
            if (searchInput) searchInput.value = '';
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });

        // Thêm event listeners cho loại giảm
        document.getElementById('LoaiGiam').addEventListener('change', updateGiaTriValidation);
        document.getElementById('EditLoaiGiam').addEventListener('change', updateEditGiaTriValidation);

        // Khởi tạo validation khi load trang
        document.addEventListener('DOMContentLoaded', function() {
            updateGiaTriValidation();
            loadProductsForSelection();
        });

        // Load danh sách sản phẩm để chọn
        let allProductsList = [];
        async function loadProductsForSelection() {
            try {
                const response = await fetch('/KhuyenMai/GetAllProducts');
                if (response.ok) {
                    allProductsList = await response.json();
                    renderProductList('create', allProductsList);
                }
            } catch (error) {
                console.error('Error loading products:', error);
            }
        }

        // Render danh sách sản phẩm với checkbox
        function renderProductList(type, products, selectedIds = []) {
            const container = document.getElementById(`productList${type === 'create' ? 'Create' : 'Edit'}`);
            if (!container) return;

            if (!products || products.length === 0) {
                container.innerHTML = '<div class="text-center text-muted">Không có sản phẩm nào</div>';
                return;
            }

            container.innerHTML = products.map(product => {
                const isChecked = selectedIds.includes(product.idModelSanPham);
                const productName = `${product.tenThuongHieu} - ${product.tenSanPham} - ${product.tenModel}`;
                const productPrice = product.giaBan ? product.giaBan.toLocaleString('vi-VN') : '0';
                
                return `
                    <div class="product-checkbox-item">
                        <input type="checkbox" 
                               id="product_${type}_${product.idModelSanPham}" 
                               value="${product.idModelSanPham}"
                               ${isChecked ? 'checked' : ''}>
                        <label for="product_${type}_${product.idModelSanPham}" class="product-info">
                            <span class="product-name">${escapeHtml(productName)}</span>
                            <span class="product-details">ID: ${product.idModelSanPham}</span>
                        </label>
                        <span class="product-price">${productPrice} ₫</span>
                    </div>
                `;
            }).join('');
        }

        // Tìm kiếm sản phẩm
        document.getElementById('searchProductCreate')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const filtered = allProductsList.filter(p => 
                p.tenModel.toLowerCase().includes(searchTerm) ||
                p.tenSanPham.toLowerCase().includes(searchTerm) ||
                p.tenThuongHieu.toLowerCase().includes(searchTerm)
            );
            renderProductList('create', filtered);
        });

        // Chọn tất cả sản phẩm
        function selectAllProducts(type) {
            const container = document.getElementById(`productList${type === 'create' ? 'Create' : 'Edit'}`);
            if (!container) return;
            const checkboxes = container.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => cb.checked = true);
        }

        // Bỏ chọn tất cả
        function deselectAllProducts(type) {
            const container = document.getElementById(`productList${type === 'create' ? 'Create' : 'Edit'}`);
            if (!container) return;
            const checkboxes = container.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => cb.checked = false);
        }

        // Hàm lấy danh sách sản phẩm đã chọn
        function getSelectedProducts(type = 'create') {
            const container = document.getElementById(`productList${type === 'create' ? 'Create' : 'Edit'}`);
            if (!container) return [];
            
            const checkboxes = container.querySelectorAll('input[type="checkbox"]:checked');
            return Array.from(checkboxes).map(cb => parseInt(cb.value));
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>