                    title.innerHTML = '<i class="fas fa-exclamation-triangle"></i> C·∫£nh b√°o';
                    break;
                default:
                    header.classList.add('bg-info', 'text-white');
                    title.innerHTML = '<i class="fas fa-info-circle"></i> Th√¥ng b√°o';
            }

            // Show modal
            const bsModal = new bootstrap.Modal(modal);
            bsModal.show();

            // Callback after modal is hidden
            if (callback) {
