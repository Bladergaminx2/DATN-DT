        async function deleteSanPham() {
            if (!sanPhamToDelete) {
                console.error('No san pham to delete!');
                return;
            }

            console.log('=== DELETE SAN PHAM START ===');
            console.log('Deleting san pham ID:', sanPhamToDelete);

            showLoading();

            try {
                const response = await fetch(`/SanPham/Delete/${sanPhamToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                console.log('Final DELETE response status:', response.status);

                let data = {};
                try {
                    if (response.status === 204) {
                        data = { message: 'Xóa thành công!' };
                    } else {
                        const text = await response.text();
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Xóa sản phẩm thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showAlert('error', data.message || 'Lỗi khi xóa sản phẩm!');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                sanPhamToDelete = null;
                console.log('=== DELETE SAN PHAM END ===');
            }
        }

        // ====== INITIALIZATION ======
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded. Total products:', @Model.Count());

            setTimeout(() => {
                hideAlert('successAlert');
                hideAlert('errorAlert');
            }, 5000);

            const createModal = document.getElementById('createModal');
            if (createModal) {
                createModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('createForm');
                    updateCreatePrice();
                });
            }

            const editModal = document.getElementById('editModal');
            if (editModal) {
                editModal.addEventListener('hidden.bs.modal', function () {
                    resetForm('editForm');
                    updateEditPrice();
                    currentEditId = null;
                });
            }

            // Tự động focus vào ô tìm kiếm
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput && '@search' !== '') {
                searchInput.focus();
                searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
            }

            // Tải thương hiệu khi mở modal tạo mới
            createModal.addEventListener('show.bs.modal', function () {
                loadThuongHieu();
                updateCreatePrice();
            });
        });
