@model IEnumerable<DATN_DT.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản Phẩm";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }

        .status-warning {
            color: #ffc107;
            font-weight: bold;
        }

        .status-info {
            color: #17a2b8;
            font-weight: bold;
        }

        .price {
            font-weight: bold;
            color: #4a90e2;
        }

        .vat-badge {
            background-color: #6f42c1;
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .form-control::placeholder {
            color: #888 !important;
            opacity: 1 !important;
        }

        .form-control:focus::placeholder {
            color: #666 !important;
        }

        .btn-action-group {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .btn-mota {
            background-color: #6f42c1;
            color: white;
            border: none;
        }

            .btn-mota:hover {
                background-color: #5a32a3;
                color: white;
            }

        .mota-content {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 400px;
            line-height: 1.5;
        }

        .search-container {
            background-color: #1e1e2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .search-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .search-input-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Sản Phẩm</h2>

        <div class="search-container">
            <div class="search-header">
                <h4 class="mb-0">Tìm kiếm sản phẩm</h4>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    + Thêm Sản Phẩm
                </button>
            </div>
            
            <div class="search-input-group">
                <input type="text" id="searchInput" class="form-control search-input" placeholder="Tìm theo mã, tên sản phẩm, thương hiệu..." />
                <select id="searchStatus" class="form-control" style="width: 200px;">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Còn hàng">Còn hàng</option>
                    <option value="Hết hàng">Hết hàng</option>
                    <option value="Đang nhập hàng">Đang nhập hàng</option>
                    <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                </select>
                <button class="btn btn-primary" onclick="performSearch()">
                    Tìm kiếm
                </button>
                <button class="btn btn-secondary" onclick="clearSearch()">
                    Reset
                </button>
            </div>
        </div>

        <table class="table table-hover text-center align-middle" id="productsTable">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Thương hiệu</th>
                    <th>Giá gốc</th>
                    <th>Giá niêm yết</th>
                    <th>VAT</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="productsTableBody">
                @foreach (var item in Model)
                {
                    <tr data-ma="@item.MaSanPham" data-ten="@item.TenSanPham" data-thuonghieu="@item.ThuongHieu?.TenThuongHieu" data-trangthai="@item.TrangThaiSP">
                        <td>@item.MaSanPham</td>
                        <td>@item.TenSanPham</td>
                        <td>@item.ThuongHieu?.TenThuongHieu</td>
                        <td class="price">@item.GiaGoc?.ToString("N0") ₫</td>
                        <td class="price">@item.GiaNiemYet?.ToString("N0") ₫</td>
                        <td><span class="vat-badge">@item.VAT%</span></td>
                        <td>
                            @{
                                var statusClass = "status-active";
                                if (item.TrangThaiSP == "Ngừng kinh doanh")
                                {
                                    statusClass = "status-inactive";
                                }
                                else if (item.TrangThaiSP == "Hết hàng")
                                {
                                    statusClass = "status-warning";
                                }
                                else if (item.TrangThaiSP == "Đang nhập hàng")
                                {
                                    statusClass = "status-info";
                                }
                            }
                            <span class="@statusClass">
                                @item.TrangThaiSP
                            </span>
                        </td>
                        <td>
                            <div class="btn-action-group">
                                <button class="btn btn-sm btn-mota btn-mota-detail"
                                        data-mota="@item.MoTa"
                                        data-ten="@item.TenSanPham">
                                    Mô tả
                                </button>
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdSanPham"
                                        data-ma="@item.MaSanPham"
                                        data-ten="@item.TenSanPham"
                                        data-thuonghieu="@item.IdThuongHieu"
                                        data-mota="@item.MoTa"
                                        data-giagoc="@item.GiaGoc"
                                        data-vat="@item.VAT"
                                        data-trangthai="@item.TrangThaiSP">
                                    Sửa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="MaSanPham" class="form-control" placeholder="VD: IP15PM128" />
                                    <small id="errorMaSanPham" class="text-danger d-none">Phải nhập mã sản phẩm!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="TenSanPham" class="form-control" placeholder="VD: iPhone 15 Pro Max 128GB" />
                                    <small id="errorTenSanPham" class="text-danger d-none">Phải nhập tên sản phẩm!</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="IdThuongHieu" class="form-control">
                                        <option value="">Chọn thương hiệu</option>
                                    </select>
                                    <small id="errorIdThuongHieu" class="text-danger d-none">Phải chọn thương hiệu!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="TrangThaiSP" class="form-control">
                                        <option value="">Chọn trạng thái</option>
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorTrangThaiSP" class="text-danger d-none">Phải chọn trạng thái sản phẩm!</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <input type="number" id="GiaGoc" class="form-control" placeholder="VD: 25000000" min="0" />
                                    <small id="errorGiaGoc" class="text-danger d-none">Giá gốc phải lớn hơn 0!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <input type="number" id="VAT" class="form-control" placeholder="VD: 10" min="0" max="100" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTa" class="form-control" placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong>Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="giaNiemYetPreview">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdSanPham" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditMaSanPham" class="form-control" placeholder="VD: IP15PM128" />
                                    <small id="errorEditMaSanPham" class="text-danger d-none">Phải nhập mã sản phẩm!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenSanPham" class="form-control" placeholder="VD: iPhone 15 Pro Max 128GB" />
                                    <small id="errorEditTenSanPham" class="text-danger d-none">Phải nhập tên sản phẩm!</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="EditIdThuongHieu" class="form-control">
                                        <option value="">Chọn thương hiệu</option>
                                    </select>
                                    <small id="errorEditIdThuongHieu" class="text-danger d-none">Phải chọn thương hiệu!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="EditTrangThaiSP" class="form-control">
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorEditTrangThaiSP" class="text-danger d-none">Phải chọn trạng thái sản phẩm!</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <input type="number" id="EditGiaGoc" class="form-control" placeholder="VD: 25000000" min="0" />
                                    <small id="errorEditGiaGoc" class="text-danger d-none">Giá gốc phải lớn hơn 0!</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <input type="number" id="EditVAT" class="form-control" placeholder="VD: 10" min="0" max="100" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTa" class="form-control" placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong>Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="editGiaNiemYetPreview">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="motaModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title" id="motaModalTitle">Mô tả sản phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mota-content" id="motaContent"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            loadThuongHieu();
            setupPriceCalculation();
            updateCreatePrice();
            updateEditPrice();

            document.getElementById('searchInput').addEventListener('input', function(e) {
                if (e.target.value.length >= 2 || e.target.value.length === 0) {
                    performSearch();
                }
            });

            document.getElementById('searchStatus').addEventListener('change', performSearch);
        });

        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            const statusFilter = document.getElementById('searchStatus').value;
            const rows = document.querySelectorAll('#productsTableBody tr');

            rows.forEach(row => {
                const maSP = row.getAttribute('data-ma').toLowerCase();
                const tenSP = row.getAttribute('data-ten').toLowerCase();
                const thuongHieu = row.getAttribute('data-thuonghieu').toLowerCase();
                const trangThai = row.getAttribute('data-trangthai');

                const matchesSearch = !searchTerm || 
                    maSP.includes(searchTerm) || 
                    tenSP.includes(searchTerm) || 
                    thuongHieu.includes(searchTerm);
                
                const matchesStatus = !statusFilter || trangThai === statusFilter;

                if (matchesSearch && matchesStatus) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('searchStatus').value = '';
            performSearch();
        }

        function hideAllErrors() {
            document.querySelectorAll('small.text-danger').forEach(el => {
                el.classList.add("d-none");
            });
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        async function loadThuongHieu() {
            try {
                const response = await fetch('/SanPham/GetThuongHieu');
                const thuongHieus = await response.json();
                
                const createSelect = document.getElementById('IdThuongHieu');
                const editSelect = document.getElementById('EditIdThuongHieu');
                
                createSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';
                editSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';
                
                thuongHieus.forEach(th => {
                    createSelect.innerHTML += `<option value="${th.idThuongHieu}">${th.tenThuongHieu}</option>`;
                    editSelect.innerHTML += `<option value="${th.idThuongHieu}">${th.tenThuongHieu}</option>`;
                });
            } catch (error) {
                console.error('Lỗi khi load thương hiệu:', error);
            }
        }

        function tinhGiaNiemYet(giaGoc, vat) {
            const vatValue = vat || 0;
            return giaGoc * (1 + vatValue / 100);
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        function setupPriceCalculation() {
            document.getElementById('GiaGoc').addEventListener('input', updateCreatePrice);
            document.getElementById('VAT').addEventListener('input', updateCreatePrice);
            document.getElementById('EditGiaGoc').addEventListener('input', updateEditPrice);
            document.getElementById('EditVAT').addEventListener('input', updateEditPrice);
        }

        function updateCreatePrice() {
            const giaGoc = parseFloat(document.getElementById('GiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('VAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('giaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        function updateEditPrice() {
            const giaGoc = parseFloat(document.getElementById('EditGiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('EditVAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('editGiaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        function showMotaModal(tenSanPham, moTa) {
            const modalTitle = document.getElementById('motaModalTitle');
            const motaContent = document.getElementById('motaContent');

            modalTitle.textContent = `Mô tả: ${tenSanPham}`;

            if (moTa && moTa.trim() !== '') {
                motaContent.textContent = moTa;
                motaContent.classList.remove('text-muted');
            } else {
                motaContent.textContent = 'Sản phẩm này chưa có mô tả.';
                motaContent.classList.add('text-muted');
            }

            const motaModal = new bootstrap.Modal(document.getElementById('motaModal'));
            motaModal.show();
        }

        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const sp = {
                MaSanPham: MaSanPham.value.trim(),
                TenSanPham: TenSanPham.value.trim(),
                IdThuongHieu: parseInt(IdThuongHieu.value),
                MoTa: MoTa.value.trim(),
                GiaGoc: parseFloat(GiaGoc.value),
                VAT: parseFloat(VAT.value) || 0,
                TrangThaiSP: TrangThaiSP.value
            };

            let hasError = false;

            if (!sp.MaSanPham) {
                showError("errorMaSanPham", "Phải nhập mã sản phẩm!");
                hasError = true;
            }
            if (!sp.TenSanPham) {
                showError("errorTenSanPham", "Phải nhập tên sản phẩm!");
                hasError = true;
            }
            if (!sp.IdThuongHieu || sp.IdThuongHieu === 0) {
                showError("errorIdThuongHieu", "Phải chọn thương hiệu!");
                hasError = true;
            }
            if (!sp.GiaGoc || sp.GiaGoc <= 0) {
                showError("errorGiaGoc", "Giá gốc phải lớn hơn 0!");
                hasError = true;
            }
            if (!sp.TrangThaiSP) {
                showError("errorTrangThaiSP", "Phải chọn trạng thái sản phẩm!");
                hasError = true;
            }

            if (hasError) return;

            const response = await fetch('/SanPham/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(sp)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.MaSanPham) showError("errorMaSanPham", data.MaSanPham);
                    if (data.TenSanPham) showError("errorTenSanPham", data.TenSanPham);
                    if (data.IdThuongHieu) showError("errorIdThuongHieu", data.IdThuongHieu);
                    if (data.GiaGoc) showError("errorGiaGoc", data.GiaGoc);
                    if (data.TrangThaiSP) showError("errorTrangThaiSP", data.TrangThaiSP);
                    return;
                }

                if (response.status === 409 && data.message) {
                    if (data.message.includes("Mã")) {
                        showError("errorMaSanPham", data.message);
                    } else if (data.message.includes("Tên")) {
                        showError("errorTenSanPham", data.message);
                    }
                    return;
                }

                alert(data.message || "Không thể thêm Sản Phẩm. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdSanPham.value = btn.dataset.id;
                EditMaSanPham.value = btn.dataset.ma;
                EditTenSanPham.value = btn.dataset.ten;
                EditIdThuongHieu.value = btn.dataset.thuonghieu;
                EditMoTa.value = btn.dataset.mota || '';
                EditGiaGoc.value = btn.dataset.giagoc;
                EditVAT.value = btn.dataset.vat || '';
                EditTrangThaiSP.value = btn.dataset.trangthai;

                updateEditPrice();
                new bootstrap.Modal(editModal).show();
            });
        });

        document.querySelectorAll(".btn-mota-detail").forEach(btn => {
            btn.addEventListener("click", () => {
                const tenSanPham = btn.dataset.ten;
                const moTa = btn.dataset.mota;
                showMotaModal(tenSanPham, moTa);
            });
        });

        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const id = EditIdSanPham.value;
            const sp = {
                IdSanPham: parseInt(id),
                MaSanPham: EditMaSanPham.value.trim(),
                TenSanPham: EditTenSanPham.value.trim(),
                IdThuongHieu: parseInt(EditIdThuongHieu.value),
                MoTa: EditMoTa.value.trim(),
                GiaGoc: parseFloat(EditGiaGoc.value),
                VAT: parseFloat(EditVAT.value) || 0,
                TrangThaiSP: EditTrangThaiSP.value
            };

            let hasError = false;

            if (!sp.MaSanPham) {
                showError("errorEditMaSanPham", "Phải nhập mã sản phẩm!");
                hasError = true;
            }
            if (!sp.TenSanPham) {
                showError("errorEditTenSanPham", "Phải nhập tên sản phẩm!");
                hasError = true;
            }
            if (!sp.IdThuongHieu || sp.IdThuongHieu === 0) {
                showError("errorEditIdThuongHieu", "Phải chọn thương hiệu!");
                hasError = true;
            }
            if (!sp.GiaGoc || sp.GiaGoc <= 0) {
                showError("errorEditGiaGoc", "Giá gốc phải lớn hơn 0!");
                hasError = true;
            }
            if (!sp.TrangThaiSP) {
                showError("errorEditTrangThaiSP", "Phải chọn trạng thái sản phẩm!");
                hasError = true;
            }

            if (hasError) return;

            const response = await fetch('/SanPham/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(sp)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.MaSanPham) showError("errorEditMaSanPham", data.MaSanPham);
                    if (data.TenSanPham) showError("errorEditTenSanPham", data.TenSanPham);
                    if (data.IdThuongHieu) showError("errorEditIdThuongHieu", data.IdThuongHieu);
                    if (data.GiaGoc) showError("errorEditGiaGoc", data.GiaGoc);
                    if (data.TrangThaiSP) showError("errorEditTrangThaiSP", data.TrangThaiSP);
                    return;
                }

                if (response.status === 409 && data.message) {
                    if (data.message.includes("Mã")) {
                        showError("errorEditMaSanPham", data.message);
                    } else if (data.message.includes("Tên")) {
                        showError("errorEditTenSanPham", data.message);
                    }
                    return;
                }

                alert(data.message || "Không thể cập nhật Sản Phẩm. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            hideAllErrors();
            updateCreatePrice();
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            hideAllErrors();
            updateEditPrice();
        });
    </script>
</body>
