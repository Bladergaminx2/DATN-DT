@model IEnumerable<DATN_DT.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản Phẩm";
    Layout = null;

    // Tham số từ query string
    string search = Context.Request.Query["search"].ToString();
    string status = Context.Request.Query["status"].ToString();
    int pageSize = 10;
    int pageNumber = 1;

    if (Context.Request.Query.ContainsKey("page"))
    {
        int.TryParse(Context.Request.Query["page"], out pageNumber);
    }

    // Lọc dữ liệu
    var filteredProducts = Model;

    if (!string.IsNullOrEmpty(search))
    {
        filteredProducts = filteredProducts.Where(p =>
            (p.MaSanPham != null && p.MaSanPham.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.TenSanPham != null && p.TenSanPham.Contains(search, StringComparison.OrdinalIgnoreCase)) ||
            (p.ThuongHieu != null && p.ThuongHieu.TenThuongHieu != null && p.ThuongHieu.TenThuongHieu.Contains(search, StringComparison.OrdinalIgnoreCase))
        );
    }

    if (!string.IsNullOrEmpty(status) && status != "all")
    {
        filteredProducts = filteredProducts.Where(p => p.TrangThaiSP == status);
    }

    // Phân trang
    int totalItems = filteredProducts.Count();
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    if (pageNumber > totalPages) pageNumber = totalPages;
    if (pageNumber < 1) pageNumber = 1;

    var paginatedProducts = filteredProducts
        .Skip((pageNumber - 1) * pageSize)
        .Take(pageSize)
        .ToList();

    // Tạo URL cho phân trang
    string CreatePageUrl(int page)
    {
        var queryParams = new Dictionary<string, string>();
        if (!string.IsNullOrEmpty(search)) queryParams["search"] = search;
        if (!string.IsNullOrEmpty(status) && status != "all") queryParams["status"] = status;
        queryParams["page"] = page.ToString();

        var queryString = string.Join("&", queryParams.Select(x => $"{x.Key}={Uri.EscapeDataString(x.Value)}"));
        return queryString.Length > 0 ? $"?{queryString}" : "";
    }
}

