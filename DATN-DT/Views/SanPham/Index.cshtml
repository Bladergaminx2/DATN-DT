@model IEnumerable<DATN_DT.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản Phẩm";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }

        .status-warning {
            color: #ffc107;
            font-weight: bold;
        }

        .status-info {
            color: #17a2b8;
            font-weight: bold;
        }

        .price {
            font-weight: bold;
            color: #4a90e2;
        }

        .vat-badge {
            background-color: #6f42c1;
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .form-control::placeholder {
            color: #888 !important;
            opacity: 1 !important;
        }

        .form-control:focus::placeholder {
            color: #666 !important;
        }

        .btn-action-group {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .btn-mota {
            background-color: #17a2b8;
            color: white;
            border: none;
        }

            .btn-mota:hover {
                background-color: #138496;
                color: white;
            }

        .btn-edit {
            background-color: #ffc107;
            color: black;
            border: none;
        }

            .btn-edit:hover {
                background-color: #e0a800;
                color: black;
            }

        .mota-content {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 400px;
            line-height: 1.5;
        }

        .search-container {
            background-color: #1e1e2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .search-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .search-input-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .btn-delete:hover {
                background-color: #c82333;
                color: white;
            }

        .btn-back {
            background-color: #6c757d;
            color: white;
            border: none;
            margin-right: 10px;
        }

        .btn-back:hover {
            background-color: #5a6268;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-cubes"></i> Quản Lý Sản Phẩm</h2>        
        </div>

        <div class="search-container">
            <div class="search-header">
                <h4 class="mb-0"><i class="fas fa-search"></i> Tìm kiếm sản phẩm</h4>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="fas fa-plus"></i> Thêm Sản Phẩm
                </button>
            </div>

            <div class="search-input-group">
                <input type="text" id="searchInput" class="form-control search-input"
                       placeholder="Tìm theo mã, tên sản phẩm, thương hiệu..." />
                <select id="searchStatus" class="form-control" style="width: 200px;">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Còn hàng">Còn hàng</option>
                    <option value="Hết hàng">Hết hàng</option>
                    <option value="Đang nhập hàng">Đang nhập hàng</option>
                    <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                </select>
                <button class="btn btn-primary" onclick="performSearch()">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
                <button class="btn btn-secondary" onclick="clearSearch()">
                    <i class="fas fa-undo"></i> Reset
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover text-center align-middle" id="productsTable">
                <thead>
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Thương hiệu</th>
                        <th>Giá gốc</th>
                        <th>Giá niêm yết</th>
                        <th>VAT</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="productsTableBody">
                    @foreach (var item in Model)
                    {
                        <tr data-ma="@item.MaSanPham" data-ten="@item.TenSanPham"
                            data-thuonghieu="@item.ThuongHieu?.TenThuongHieu" data-trangthai="@item.TrangThaiSP">
                            <td><code>@item.MaSanPham</code></td>
                            <td>@item.TenSanPham</td>
                            <td>
                                @if (item.ThuongHieu != null)
                                {
                                    <span class="badge bg-primary">@item.ThuongHieu.TenThuongHieu</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                            <td class="price">@item.GiaGoc?.ToString("N0") ₫</td>
                            <td class="price">@item.GiaNiemYet?.ToString("N0") ₫</td>
                            <td><span class="vat-badge">@(item.VAT?.ToString("F0") ?? "0")%</span></td>
                            <td>
                                @{
                                    var statusClass = "status-active";
                                    var statusIcon = "fa-check-circle";

                                    if (item.TrangThaiSP == "Ngừng kinh doanh")
                                    {
                                        statusClass = "status-inactive";
                                        statusIcon = "fa-times-circle";
                                    }
                                    else if (item.TrangThaiSP == "Hết hàng")
                                    {
                                        statusClass = "status-warning";
                                        statusIcon = "fa-exclamation-circle";
                                    }
                                    else if (item.TrangThaiSP == "Đang nhập hàng")
                                    {
                                        statusClass = "status-info";
                                        statusIcon = "fa-truck-loading";
                                    }
                                    else if (item.TrangThaiSP == "Còn hàng")
                                    {
                                        statusIcon = "fa-check-circle";
                                    }
                                }
                                <span class="@statusClass">
                                    <i class="fas @statusIcon"></i> @item.TrangThaiSP
                                </span>
                            </td>
                            <td>
                                <div class="btn-action-group">
                                    <a href="/SanPham/ModelSanPham/@item.IdSanPham"
                                       class="btn btn-sm btn-mota"
                                       title="Xem model sản phẩm">
                                        <i class="fas fa-mobile-alt"></i> Model
                                    </a>
                                    <button class="btn btn-sm btn-edit btn-edit-product"
                                            data-id="@item.IdSanPham"
                                            data-ma="@item.MaSanPham"
                                            data-ten="@item.TenSanPham"
                                            data-thuonghieu="@item.IdThuongHieu"
                                            data-mota="@item.MoTa"
                                            data-giagoc="@item.GiaGoc"
                                            data-vat="@item.VAT"
                                            data-trangthai="@item.TrangThaiSP">
                                        <i class="fas fa-edit"></i> Sửa
                                    </button>
                                    <button class="btn btn-sm btn-delete" onclick="deleteProduct(@item.IdSanPham, '@item.TenSanPham')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center mt-5">
                <i class="fas fa-box-open fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có sản phẩm nào</h4>
                <p class="text-muted">Nhấn "Thêm Sản Phẩm" để bắt đầu</p>
            </div>
        }
    </div>

    <!-- Modal Thêm Sản Phẩm -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-plus-circle"></i> Thêm Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="MaSanPham" class="form-control"
                                           placeholder="VD: IP15PM128" required />
                                    <small id="errorMaSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="TenSanPham" class="form-control"
                                           placeholder="VD: iPhone 15 Pro Max 128GB" required />
                                    <small id="errorTenSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="IdThuongHieu" class="form-control" required>
                                        <option value="">Đang tải thương hiệu...</option>
                                    </select>
                                    <small id="errorIdThuongHieu" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="TrangThaiSP" class="form-control" required>
                                        <option value="">Chọn trạng thái</option>
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorTrangThaiSP" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="number" id="GiaGoc" class="form-control"
                                               placeholder="VD: 25000000" min="0" step="1000" required />
                                        <span class="input-group-text">₫</span>
                                    </div>
                                    <small id="errorGiaGoc" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <div class="input-group">
                                        <input type="number" id="VAT" class="form-control"
                                               placeholder="VD: 10" min="0" max="100" step="0.1" value="10" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTa" class="form-control"
                                      placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong><i class="fas fa-calculator"></i> Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="giaNiemYetPreview" class="fw-bold ms-2">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times"></i> Hủy
                        </button>
                        <button type="submit" class="btn btn-primary" id="createSubmitBtn">
                            <i class="fas fa-save"></i> Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Sửa Sản Phẩm -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-edit"></i> Chỉnh sửa Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdSanPham" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditMaSanPham" class="form-control"
                                           placeholder="VD: IP15PM128" required />
                                    <small id="errorEditMaSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenSanPham" class="form-control"
                                           placeholder="VD: iPhone 15 Pro Max 128GB" required />
                                    <small id="errorEditTenSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="EditIdThuongHieu" class="form-control" required>
                                        <option value="">Đang tải thương hiệu...</option>
                                    </select>
                                    <small id="errorEditIdThuongHieu" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="EditTrangThaiSP" class="form-control" required>
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorEditTrangThaiSP" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="number" id="EditGiaGoc" class="form-control"
                                               placeholder="VD: 25000000" min="0" step="1000" required />
                                        <span class="input-group-text">₫</span>
                                    </div>
                                    <small id="errorEditGiaGoc" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <div class="input-group">
                                        <input type="number" id="EditVAT" class="form-control"
                                               placeholder="VD: 10" min="0" max="100" step="0.1" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTa" class="form-control"
                                      placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong><i class="fas fa-calculator"></i> Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="editGiaNiemYetPreview" class="fw-bold ms-2">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times"></i> Hủy
                        </button>
                        <button type="submit" class="btn btn-warning" id="editSubmitBtn">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Xác nhận xóa -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title text-danger"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="deleteConfirmMessage">Bạn có chắc chắn muốn xóa sản phẩm này?</p>
                    <p class="text-warning"><i class="fas fa-info-circle"></i> Lưu ý: Tất cả model và IMEI của sản phẩm này cũng sẽ bị xóa!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ============================
        // BIẾN TOÀN CỤC VÀ KHỞI TẠO
        // ============================
        let productToDelete = null;

        document.addEventListener('DOMContentLoaded', function () {
            loadThuongHieu();
            setupPriceCalculation();
            updateCreatePrice();
            updateEditPrice();
            setupEventListeners();
            setupSearch();
        });

        // ============================
        // TỰ ĐỘNG SINH MÃ SẢN PHẨM
        // ============================
        async function generateProductCode() {
            try {
                const response = await fetch('/SanPham/GenerateProductCode');
                if (response.ok) {
                    const data = await response.json();
                    if (data.success && data.code) {
                        document.getElementById('MaSanPham').value = data.code;
                    }
                }
            } catch (error) {
                console.error('Lỗi khi sinh mã sản phẩm:', error);
                // Nếu lỗi, để trống để người dùng nhập thủ công
            }
        }

        // ============================
        // XỬ LÝ THƯƠNG HIỆU
        // ============================
        async function loadThuongHieu() {
            try {
                console.log('🔄 Đang tải danh sách thương hiệu...');

                const createSelect = document.getElementById('IdThuongHieu');
                const editSelect = document.getElementById('EditIdThuongHieu');

                createSelect.innerHTML = '<option value="">Đang tải thương hiệu...</option>';
                editSelect.innerHTML = '<option value="">Đang tải thương hiệu...</option>';

                const response = await fetch('/SanPham/GetThuongHieu');

                console.log('📡 Response status:', response.status);

                if (!response.ok) {
                    throw new Error(`Lỗi HTTP! status: ${response.status}`);
                }

                const responseData = await response.json();
                console.log('📦 Dữ liệu thương hiệu nhận được:', responseData);

                createSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';
                editSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';

                // Kiểm tra response có success và data không
                if (responseData && responseData.success && responseData.data && Array.isArray(responseData.data)) {
                    const thuongHieuList = responseData.data;
                    console.log(`✅ Có ${thuongHieuList.length} thương hiệu`);

                    if (thuongHieuList.length > 0) {
                        thuongHieuList.forEach(th => {
                            const id = th.idThuongHieu || th.IdThuongHieu;
                            const ten = th.tenThuongHieu || th.TenThuongHieu;

                            if (id && ten) {
                                createSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                                editSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                            }
                        });

                        console.log('✅ Đã tải thương hiệu thành công');
                    } else {
                        createSelect.innerHTML += '<option value="" disabled>Không có thương hiệu nào</option>';
                        editSelect.innerHTML += '<option value="" disabled>Không có thương hiệu nào</option>';
                    }
                } else {
                    console.error('❌ Response không đúng định dạng:', responseData);
                    createSelect.innerHTML += '<option value="" disabled>Lỗi định dạng dữ liệu</option>';
                    editSelect.innerHTML += '<option value="" disabled>Lỗi định dạng dữ liệu</option>';
                }
            } catch (error) {
                console.error('❌ Lỗi khi tải thương hiệu:', error);

