                            <button type="button" class="btn-close btn-close-white me-2 m-auto" onclick="document.getElementById('${toastId}').remove()"></button>
                        </div>
                    `;

            const toastContainer = document.getElementById('toastContainer');
            toastContainer.appendChild(toast);

            setTimeout(() => {
                const toastElement = document.getElementById(toastId);
                if (toastElement) {
                    toastElement.remove();
                }
            }, 3000);
        }

        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        function truncateText(text, maxLength) {
            if (!text) return '';
            if (text.length <= maxLength) return text;
            return text.substring(0, maxLength) + '...';
        }

        // ========== USER PROFILE SYNC
        async function loadUserProfile() {
            try {
                const response = await fetch('/UserProfile/GetProfileData');
                if (response.ok) {
                    const data = await response.json();

                    // Lưu vào localStorage để đồng bộ
                    if (data) {
                        localStorage.setItem('userProfile', JSON.stringify({
                            hoTenKhachHang: data.hoTenKhachHang,
                            emailKhachHang: data.emailKhachHang,
                            defaultImage: data.defaultImage,
                            diemTichLuy: data.diemTichLuy
                        }));

                        // Cập nhật avatar trong header
                        updateUserAvatar(data.defaultImage);
                    }
                } else {
                    // Fallback: Lấy từ localStorage nếu có
                    const savedProfile = localStorage.getItem('userProfile');
                    if (savedProfile) {
                        const profile = JSON.parse(savedProfile);
                        updateUserAvatar(profile.defaultImage);
                    }
                }
            } catch (error) {
                console.error('Error loading user profile:', error);
                // Fallback: Lấy từ localStorage nếu có
                const savedProfile = localStorage.getItem('userProfile');
                if (savedProfile) {
                    const profile = JSON.parse(savedProfile);
                    updateUserAvatar(profile.defaultImage);
                }
            }
        }

        function updateUserAvatar(avatarUrl) {
            const userIcon = document.getElementById('userIcon');
            const userAvatar = document.getElementById('userAvatar');

            if (!userIcon || !userAvatar) {
                console.warn('User icon or avatar element not found');
                return;
            }

            if (avatarUrl && avatarUrl.trim() !== '') {
                // Cập nhật src với timestamp để tránh cache
                const newSrc = avatarUrl + '?t=' + new Date().getTime();
                userAvatar.src = newSrc;

                // Đặt lại display và position
                userAvatar.style.display = 'block';
                userAvatar.style.position = 'relative';

                userAvatar.onerror = function() {
                    // Nếu ảnh lỗi, hiển thị lại icon mặc định
                    this.style.display = 'none';
                    const iconElement = userIcon.querySelector('i');
                    if (iconElement) {
                        iconElement.style.display = 'flex';
                    }
                    userIcon.classList.remove('has-avatar');
                };

                userAvatar.onload = function() {
                    // Ảnh load thành công, ẩn icon mặc định
                    userIcon.classList.add('has-avatar');
                    const iconElement = userIcon.querySelector('i');
                    if (iconElement) {
                        iconElement.style.display = 'none';
                    }
                };

                console.log('Avatar updated:', newSrc);
            } else {
                userIcon.classList.remove('has-avatar');
                userAvatar.style.display = 'none';
                // Hiển thị lại icon mặc định
                const iconElement = userIcon.querySelector('i');
                if (iconElement) {
                    iconElement.style.display = 'flex';
                }
            }
        }

        // Lắng nghe custom event để đồng bộ khi user thay đổi profile
        window.addEventListener('userProfileUpdated', function(e) {
            if (e.detail && e.detail.defaultImage) {
                updateUserAvatar(e.detail.defaultImage);
                console.log('Avatar updated from custom event:', e.detail.defaultImage);
            }
        });

        // Lắng nghe sự kiện storage để đồng bộ khi user thay đổi profile ở tab khác
        window.addEventListener('storage', function(e) {
            if (e.key === 'userProfile') {
                try {
                    const profile = JSON.parse(e.newValue);
                    updateUserAvatar(profile.defaultImage);
                    console.log('Avatar updated from storage event:', profile.defaultImage);
                } catch (error) {
                    console.error('Error parsing userProfile from storage:', error);
                }
            }
        });

        // Đồng bộ khi quay lại từ UserProfile (sử dụng visibilitychange và focus)
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                // Trang được hiển thị lại, kiểm tra localStorage
                const savedProfile = localStorage.getItem('userProfile');
                if (savedProfile) {
                    try {
                        const profile = JSON.parse(savedProfile);
                        updateUserAvatar(profile.defaultImage);
                        console.log('Avatar updated on visibility change:', profile.defaultImage);
                    } catch (error) {
                        console.error('Error parsing userProfile:', error);
                    }
                }
            }
        });

        // Đồng bộ khi window focus (khi quay lại tab)
        window.addEventListener('focus', function() {
            loadUserProfile();
        });

        // Kiểm tra localStorage mỗi 1 giây để đồng bộ (nếu user thay đổi trong cùng tab)
        let lastAvatarUrl = '';
        setInterval(function() {
            const savedProfile = localStorage.getItem('userProfile');
            if (savedProfile) {
                try {
                    const profile = JSON.parse(savedProfile);
                    const newAvatarUrl = profile.defaultImage || '';

                    // Chỉ cập nhật nếu avatar thay đổi
                    if (newAvatarUrl !== lastAvatarUrl) {
                        lastAvatarUrl = newAvatarUrl;
                        updateUserAvatar(newAvatarUrl);
                        console.log('Avatar updated from interval check:', newAvatarUrl);
                    }
                } catch (error) {
                    console.error('Error checking userProfile:', error);
                }
            }
        }, 1000);

        // Kiểm tra khi trang được load (có thể từ UserProfile quay lại)
        // Sử dụng performance navigation để detect back/forward
        if (performance.navigation.type === 1 || performance.navigation.type === 2) {
            // Trang được reload hoặc navigate back/forward
            setTimeout(function() {
                loadUserProfile();
            }, 500);
        }

        // Kiểm tra khi page show (khi quay lại từ tab khác)
        document.addEventListener('pageshow', function(event) {
            // Nếu trang được load từ cache (back/forward cache)
            if (event.persisted) {
                loadUserProfile();
            }
        });

        // ========== EVENT LISTENERS
        document.getElementById('searchInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                searchProducts();
            }
        });
    </script>
