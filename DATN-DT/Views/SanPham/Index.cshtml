        async function updateSanPham() {
            if (!currentEditId) {
                console.error('No currentEditId!');
                showAlert('error', 'Không tìm thấy ID sản phẩm!');
                return;
            }

            console.log('=== UPDATE SAN PHAM START ===');
            console.log('Updating san pham ID:', currentEditId);

            hideError('errorEditMaSanPham');
            hideError('errorEditTenSanPham');
            hideError('errorEditIdThuongHieu');
            hideError('errorEditGiaGoc');
            hideError('errorEditTrangThaiSP');

            const sanPham = {
                IdSanPham: parseInt(currentEditId),
                MaSanPham: document.getElementById('editMaSanPham').value.trim(),
                TenSanPham: document.getElementById('editTenSanPham').value.trim(),
                IdThuongHieu: parseInt(document.getElementById('editIdThuongHieu').value) || 0,
                MoTa: document.getElementById('editMoTa').value.trim(),
                GiaGoc: parseFloat(document.getElementById('editGiaGoc').value) || 0,
                VAT: parseFloat(document.getElementById('editVAT').value) || 0,
                TrangThaiSP: document.getElementById('editTrangThaiSP').value
            };

            console.log('Update data:', sanPham);

            let isValid = true;

            if (!sanPham.MaSanPham) {
                showError('errorEditMaSanPham', 'Phải nhập mã sản phẩm!');
                isValid = false;
            }

            if (!sanPham.TenSanPham) {
                showError('errorEditTenSanPham', 'Phải nhập tên sản phẩm!');
                isValid = false;
            }

            if (!sanPham.IdThuongHieu) {
                showError('errorEditIdThuongHieu', 'Phải chọn thương hiệu!');
                isValid = false;
            }

            if (!sanPham.GiaGoc || sanPham.GiaGoc <= 0) {
                showError('errorEditGiaGoc', 'Giá gốc phải lớn hơn 0!');
                isValid = false;
            }

            if (!sanPham.TrangThaiSP) {
                showError('errorEditTrangThaiSP', 'Phải chọn trạng thái sản phẩm!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch(`/SanPham/Edit/${currentEditId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(sanPham)
                });

                console.log('Response status:', response.status);
                console.log('Response URL:', response.url);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Cập nhật thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            try {
                                data = JSON.parse(text);
                            } catch {
                                data = { message: text || 'Cập nhật thành công!' };
                            }
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                    if (response.ok) {
                        data = { message: 'Cập nhật thành công!' };
                    }
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Cập nhật sản phẩm thành công!');

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.MaSanPham) showError('errorEditMaSanPham', data.MaSanPham);
                        if (data.TenSanPham) showError('errorEditTenSanPham', data.TenSanPham);
                        if (data.IdThuongHieu) showError('errorEditIdThuongHieu', data.IdThuongHieu);
                        if (data.GiaGoc) showError('errorEditGiaGoc', data.GiaGoc);
                        if (data.TrangThaiSP) showError('errorEditTrangThaiSP', data.TrangThaiSP);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorEdit${field}`, error);
                            });
                        }
                        if (data.Message) showAlert('error', data.Message);
                    } else if (response.status === 404) {
                        showAlert('error', data.message || `Không tìm thấy sản phẩm với ID=${currentEditId}!`);
                    } else if (response.status === 409) {
                        if (data.message.includes("Mã")) {
                            showError('errorEditMaSanPham', data.message);
                        } else if (data.message.includes("Tên")) {
                            showError('errorEditTenSanPham', data.message);
                        } else {
                            showAlert('error', data.message || 'Sản phẩm đã tồn tại!');
                        }
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Update error:', error);
                showAlert('error', 'Lỗi kết nối đến server: ' + error.message);
            } finally {
                hideLoading();
                console.log('=== UPDATE SAN PHAM END ===');
            }
        }

        // ====== DELETE SAN PHAM ======
        let sanPhamToDelete = null;

        function confirmDelete(id, name) {
            console.log('Confirm delete for san pham ID:', id);
            sanPhamToDelete = id;
            document.getElementById('deleteSanPhamName').textContent = name;

            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
