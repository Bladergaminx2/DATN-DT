        // ============================
        // TÌM KIẾM
        // ============================
        function setupSearch() {
            document.getElementById('searchInput').addEventListener('input', function() {
                if (this.value.length >= 2 || this.value.length === 0) {
                    performSearch();
                }
            });

            document.getElementById('searchStatus').addEventListener('change', function() {
                performSearch();
            });
        }

        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            const statusFilter = document.getElementById('searchStatus').value;
            const rows = document.querySelectorAll('#productsTableBody tr');

            rows.forEach(row => {
                const maSP = row.getAttribute('data-ma').toLowerCase();
                const tenSP = row.getAttribute('data-ten').toLowerCase();
                const thuongHieu = row.getAttribute('data-thuonghieu').toLowerCase();
                const trangThai = row.getAttribute('data-trangthai');

                const matchesSearch = !searchTerm ||
                    maSP.includes(searchTerm) ||
                    tenSP.includes(searchTerm) ||
                    thuongHieu.includes(searchTerm);

                const matchesStatus = !statusFilter || trangThai === statusFilter;

                if (matchesSearch && matchesStatus) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('searchStatus').value = '';
            performSearch();
        }

        // ============================
        // XỬ LÝ LỖI
        // ============================
        function hideAllErrors() {
            document.querySelectorAll('small.text-danger').forEach(el => {
                el.classList.add("d-none");
            });
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            if (el) {
                el.textContent = msg;
                el.classList.remove("d-none");
            }
        }

        // ============================
        // ĐỊNH DẠNG TIỀN TỆ
        // ============================
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        function tinhGiaNiemYet(giaGoc, vat) {
            const vatValue = vat || 0;
            return giaGoc * (1 + vatValue / 100);
        }

        // ============================
        // TÍNH TOÁN GIÁ
        // ============================
        function setupPriceCalculation() {
            document.getElementById('GiaGoc').addEventListener('input', updateCreatePrice);
            document.getElementById('VAT').addEventListener('input', updateCreatePrice);
            document.getElementById('EditGiaGoc').addEventListener('input', updateEditPrice);
            document.getElementById('EditVAT').addEventListener('input', updateEditPrice);
        }

        function updateCreatePrice() {
            const giaGoc = parseFloat(document.getElementById('GiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('VAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('giaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        function updateEditPrice() {
            const giaGoc = parseFloat(document.getElementById('EditGiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('EditVAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('editGiaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        // ============================
        // XÓA SẢN PHẨM
        // ============================
        function deleteProduct(id, tenSanPham) {
            productToDelete = id;
            document.getElementById('deleteConfirmMessage').textContent =
                `Bạn có chắc chắn muốn xóa sản phẩm "${tenSanPham}"?`;

            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            if (!productToDelete) return;

            try {
                const response = await fetch('/SanPham/Delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: productToDelete })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    alert('Xóa sản phẩm thành công!');
                    location.reload();
                } else {
                    alert(data.message || 'Xóa sản phẩm thất bại!');
                }
            } catch (error) {
                console.error('Lỗi khi xóa sản phẩm:', error);
                alert('Có lỗi xảy ra khi xóa sản phẩm!');
            } finally {
                const deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal'));
                deleteModal.hide();
                productToDelete = null;
            }
        });

        // ============================
        // THÊM SẢN PHẨM
        // ============================
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const sp = {
                MaSanPham: document.getElementById('MaSanPham').value.trim(),
                TenSanPham: document.getElementById('TenSanPham').value.trim(),
                IdThuongHieu: parseInt(document.getElementById('IdThuongHieu').value),
                MoTa: document.getElementById('MoTa').value.trim(),
                GiaGoc: parseFloat(document.getElementById('GiaGoc').value) || 0,
                VAT: parseFloat(document.getElementById('VAT').value) || 0,
                TrangThaiSP: document.getElementById('TrangThaiSP').value
            };

            let hasError = false;

            if (!sp.MaSanPham) {
                showError("errorMaSanPham", "Phải nhập mã sản phẩm!");
                hasError = true;
            }
            if (!sp.TenSanPham) {
                showError("errorTenSanPham", "Phải nhập tên sản phẩm!");
                hasError = true;
            }
            if (!sp.IdThuongHieu || sp.IdThuongHieu === 0) {
                showError("errorIdThuongHieu", "Phải chọn thương hiệu!");
                hasError = true;
            }
            if (!sp.GiaGoc || sp.GiaGoc <= 0) {
                showError("errorGiaGoc", "Giá gốc phải lớn hơn 0!");
                hasError = true;
            }
            if (!sp.TrangThaiSP) {
                showError("errorTrangThaiSP", "Phải chọn trạng thái sản phẩm!");
                hasError = true;
            }

            if (hasError) return;

            // Disable button và hiển thị loading
            const submitBtn = document.getElementById('createSubmitBtn');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';
            submitBtn.disabled = true;

            try {
                const response = await fetch('/SanPham/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(sp)
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    alert("Thêm sản phẩm thành công!");
                    location.reload();
                } else {
                    if (response.status === 400) {
                        if (data.errors) {
                            Object.keys(data.errors).forEach(key => {
                                const errorField = `error${key}`;
                                if (document.getElementById(errorField)) {
                                    showError(errorField, data.errors[key]);
                                }
                            });
                        } else if (data.message) {
                            alert(data.message);
                        }
                    } else if (response.status === 409 && data.message) {
                        if (data.message.includes("Mã")) {
                            showError("errorMaSanPham", data.message);
                        } else if (data.message.includes("Tên")) {
                            showError("errorTenSanPham", data.message);
                        } else {
                            alert(data.message);
                        }
                    } else {
                        alert(data.message || "Có lỗi xảy ra khi thêm sản phẩm!");
                    }
                }
            } catch (error) {
                console.error('Lỗi khi thêm sản phẩm:', error);
                alert("Có lỗi kết nối xảy ra. Vui lòng thử lại!");
            } finally {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });

