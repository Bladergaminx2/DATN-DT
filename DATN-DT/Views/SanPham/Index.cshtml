<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Success Alert -->
    <div class="alert alert-success alert-dismissible fade show" id="successAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <span id="successMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('successAlert')"></button>
    </div>

    <!-- Error Alert -->
    <div class="alert alert-danger alert-dismissible fade show" id="errorAlert" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="errorMessage"></span>
        </div>
        <button type="button" class="btn-close btn-close-white" onclick="hideAlert('errorAlert')"></button>
    </div>

    <div class="container">
        <div class="card p-4">
            <h2 class="mb-4">📦 Quản Lý Sản Phẩm</h2>

            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="stats-box">
                        <div class="stat-label">Tổng số sản phẩm</div>
                        <div class="stat-value">@Model.Count()</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-box">
                        <div class="stat-label">Đang hiển thị</div>
                        <div class="stat-value">@totalItems</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-box">
                        <div class="stat-label">Trang hiện tại</div>
                        <div class="stat-value">@pageNumber/@(totalPages > 0 ? totalPages : 1)</div>
                    </div>
                </div>
            </div>

            <!-- Tìm kiếm và lọc -->
            <div class="search-filter-section">
                <form id="searchForm" method="get" action="@Url.Action("Index", "SanPham")">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <input type="text"
                                   class="form-control search-input"
                                   name="search"
                                   placeholder="Tìm kiếm theo mã, tên sản phẩm, thương hiệu..."
                                   value="@search">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select filter-select" name="status" id="statusFilter">
                                @{
                                    var statuses = new[]
                                    {
                                new { Value = "all", Text = "Tất cả trạng thái" },
                                new { Value = "Còn hàng", Text = "Còn hàng" },
                                new { Value = "Hết hàng", Text = "Hết hàng" },
                                new { Value = "Đang nhập hàng", Text = "Đang nhập hàng" },
                                new { Value = "Ngừng kinh doanh", Text = "Ngừng kinh doanh" }
                                };
                                }
                                @foreach (var s in statuses)
                                {
                                    if (status == s.Value)
                                    {
                                        <option value="@s.Value" selected>@s.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@s.Value">@s.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100" style="height: 45px;">
                                <i class="bi bi-funnel me-2"></i>Lọc
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-clear w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-2"></i>Xóa lọc
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Hiển thị bộ lọc hiện tại -->
                @if (!string.IsNullOrEmpty(search) || (!string.IsNullOrEmpty(status) && status != "all"))
                {
                    <div class="mt-3">
                        <small class="text-muted">Bộ lọc hiện tại:</small>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <span class="filter-badge ms-2">
                                Từ khóa: "@search"
                                <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeSearch()"></button>
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(status) && status != "all")
                        {
                            var statusText = status == "Còn hàng" ? "Còn hàng" :
                            status == "Hết hàng" ? "Hết hàng" :
                            status == "Đang nhập hàng" ? "Đang nhập hàng" : "Ngừng kinh doanh";
                            <span class="filter-badge ms-2">
                                Trạng thái: @statusText
                                <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.7rem;" onclick="removeStatusFilter()"></button>
                            </span>
                        }
                    </div>
                }
            </div>

            <!-- Header với nút thêm mới -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Hiển thị <strong>@paginatedProducts.Count()</strong> trong tổng số <strong>@totalItems</strong> sản phẩm
                </div>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle me-2"></i>Thêm Sản Phẩm Mới
                </button>
            </div>

            @if (paginatedProducts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-stt">STT</th>
                                <th class="col-ma">Mã SP</th>
                                <th class="col-ten">Tên sản phẩm</th>
                                <th class="col-thuonghieu">Thương hiệu</th>
                                <th class="col-gia">Giá gốc</th>
                                <th class="col-gia">Giá niêm yết</th>
                                <th class="col-vat">VAT</th>
                                <th class="col-trangthai">Trạng thái</th>
                                <th class="col-action">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = (pageNumber - 1) * pageSize + 1;
                            }
                            @foreach (var item in paginatedProducts)
                            {
                                <tr>
                                    <td class="text-center">@(counter++)</td>
                                    <td><strong>@item.MaSanPham</strong></td>
                                    <td>@item.TenSanPham</td>
                                    <td>
                                        @if (item.ThuongHieu != null)
                                        {
                                            <span class="badge bg-secondary">
                                                @item.ThuongHieu.TenThuongHieu
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có thương hiệu</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="price-badge">
                                            @item.GiaGoc?.ToString("N0") ₫
                                        </span>
                                    </td>
                                    <td>
                                        <span class="price-badge">
                                            @item.GiaNiemYet?.ToString("N0") ₫
                                        </span>
                                    </td>
                                    <td>
                                        <span class="vat-badge">
                                            @(item.VAT?.ToString("F0") ?? "0")%
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = "status-badge ";
                                            if (item.TrangThaiSP == "Ngừng kinh doanh")
                                            {
                                                statusClass += "status-inactive";
                                            }
                                            else if (item.TrangThaiSP == "Hết hàng")
                                            {
                                                statusClass += "status-warning";
                                            }
                                            else if (item.TrangThaiSP == "Đang nhập hàng")
                                            {
                                                statusClass += "status-info";
                                            }
                                            else
                                            {
                                                statusClass += "status-active";
                                            }
                                        }
                                        <span class="@statusClass">
                                            @item.TrangThaiSP
                                        </span>
                                    </td>
                                    <td class="col-action">
                                        <div class="action-buttons-horizontal">
