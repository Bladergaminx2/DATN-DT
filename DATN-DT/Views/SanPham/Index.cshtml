        // ====== CREATE SAN PHAM ======
        async function createSanPham() {
            console.log('=== CREATE SAN PHAM START ===');

            hideError('errorCreateMaSanPham');
            hideError('errorCreateTenSanPham');
            hideError('errorCreateIdThuongHieu');
            hideError('errorCreateGiaGoc');
            hideError('errorCreateTrangThaiSP');

            const sanPham = {
                MaSanPham: document.getElementById('createMaSanPham').value.trim(),
                TenSanPham: document.getElementById('createTenSanPham').value.trim(),
                IdThuongHieu: parseInt(document.getElementById('createIdThuongHieu').value) || 0,
                MoTa: document.getElementById('createMoTa').value.trim(),
                GiaGoc: parseFloat(document.getElementById('createGiaGoc').value) || 0,
                VAT: parseFloat(document.getElementById('createVAT').value) || 0,
                TrangThaiSP: document.getElementById('createTrangThaiSP').value
            };

            console.log('Creating san pham:', sanPham);

            let isValid = true;

            if (!sanPham.MaSanPham) {
                showError('errorCreateMaSanPham', 'Phải nhập mã sản phẩm!');
                isValid = false;
            }

            if (!sanPham.TenSanPham) {
                showError('errorCreateTenSanPham', 'Phải nhập tên sản phẩm!');
                isValid = false;
            }

            if (!sanPham.IdThuongHieu) {
                showError('errorCreateIdThuongHieu', 'Phải chọn thương hiệu!');
                isValid = false;
            }

            if (!sanPham.GiaGoc || sanPham.GiaGoc <= 0) {
                showError('errorCreateGiaGoc', 'Giá gốc phải lớn hơn 0!');
                isValid = false;
            }

            if (!sanPham.TrangThaiSP) {
                showError('errorCreateTrangThaiSP', 'Phải chọn trạng thái sản phẩm!');
                isValid = false;
            }

            if (!isValid) {
                console.log('Validation failed');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/SanPham/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(sanPham)
                });

                console.log('Response status:', response.status);

                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else if (response.status === 204) {
                        data = { message: 'Thêm thành công!' };
                    } else {
                        const text = await response.text();
                        console.log('Response text:', text);
                        if (text) {
                            data = JSON.parse(text);
                        }
                    }
                } catch (jsonError) {
                    console.warn('JSON parse error:', jsonError);
                }

                console.log('Response data:', data);

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    if (modal) modal.hide();

                    showAlert('success', data.message || 'Thêm sản phẩm thành công!');

                    document.getElementById('createForm').reset();
                    updateCreatePrice();

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    if (response.status === 400) {
                        if (data.MaSanPham) showError('errorCreateMaSanPham', data.MaSanPham);
                        if (data.TenSanPham) showError('errorCreateTenSanPham', data.TenSanPham);
                        if (data.IdThuongHieu) showError('errorCreateIdThuongHieu', data.IdThuongHieu);
                        if (data.GiaGoc) showError('errorCreateGiaGoc', data.GiaGoc);
                        if (data.TrangThaiSP) showError('errorCreateTrangThaiSP', data.TrangThaiSP);
                        if (data.Errors) {
                            Object.entries(data.Errors).forEach(([field, error]) => {
                                showError(`errorCreate${field}`, error);
                            });
                        }
                    } else if (response.status === 409) {
                        if (data.message.includes("Mã")) {
                            showError('errorCreateMaSanPham', data.message);
                        } else if (data.message.includes("Tên")) {
                            showError('errorCreateTenSanPham', data.message);
                        } else {
                            showAlert('error', data.message || 'Sản phẩm đã tồn tại!');
                        }
                    } else {
                        showAlert('error', data.message || `Lỗi ${response.status}: ${response.statusText}`);
                    }
                }
            } catch (error) {
                console.error('Create error:', error);
                showAlert('error', 'Lỗi kết nối đến server!');
            } finally {
                hideLoading();
                console.log('=== CREATE SAN PHAM END ===');
            }
        }

        // ====== EDIT SAN PHAM ======
        let currentEditId = null;

        function openEditModal(button) {
            const id = button.getAttribute('data-id');
            const maSanPham = button.getAttribute('data-ma');
            const tenSanPham = button.getAttribute('data-ten');
            const idThuongHieu = button.getAttribute('data-thuonghieu');
            const moTa = button.getAttribute('data-mota') || '';
            const giaGoc = button.getAttribute('data-giagoc');
            const vat = button.getAttribute('data-vat') || '0';
            const trangThai = button.getAttribute('data-trangthai');

            console.log('Opening edit modal for ID:', id);

            document.getElementById('editIdSanPham').value = id;
            document.getElementById('editMaSanPham').value = maSanPham;
            document.getElementById('editTenSanPham').value = tenSanPham;
            document.getElementById('editIdThuongHieu').value = idThuongHieu;
            document.getElementById('editMoTa').value = moTa;
            document.getElementById('editGiaGoc').value = giaGoc;
            document.getElementById('editVAT').value = vat;
            document.getElementById('editTrangThaiSP').value = trangThai;

            hideError('errorEditMaSanPham');
            hideError('errorEditTenSanPham');
            hideError('errorEditIdThuongHieu');
            hideError('errorEditGiaGoc');
            hideError('errorEditTrangThaiSP');

            currentEditId = id;

            updateEditPrice();

            // Tải lại danh sách thương hiệu
            loadThuongHieu().then(() => {
                document.getElementById('editIdThuongHieu').value = idThuongHieu;
            });

            const editModal = new bootstrap.Modal(document.getElementById('editModal'));
