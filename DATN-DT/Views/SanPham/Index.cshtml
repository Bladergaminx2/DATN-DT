@model IEnumerable<DATN_DT.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản Phẩm";

    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
        }

        .status-warning {
            color: #ffc107;
            font-weight: bold;
        }

        .status-info {
            color: #17a2b8;
            font-weight: bold;
        }

        .price {
            font-weight: bold;
            color: #4a90e2;
        }

        .vat-badge {
            background-color: #6f42c1;
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
        }

        .form-control::placeholder {
            color: #888 !important;
            opacity: 1 !important;
        }

        .form-control:focus::placeholder {
            color: #666 !important;
        }

        .btn-action-group {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .btn-mota {
            background-color: #6f42c1;
            color: white;
            border: none;
        }

            .btn-mota:hover {
                background-color: #5a32a3;
                color: white;
            }

        .btn-edit {
            background-color: #ffc107;
            color: black;
            border: none;
        }

            .btn-edit:hover {
                background-color: #e0a800;
                color: black;
            }

        .mota-content {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 400px;
            line-height: 1.5;
        }

        .search-container {
            background-color: #1e1e2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .search-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .search-input-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Sản Phẩm</h2>

        <div class="search-container">
            <div class="search-header">
                <h4 class="mb-0">Tìm kiếm sản phẩm</h4>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    + Thêm Sản Phẩm
                </button>
            </div>

            <div class="search-input-group">
                <input type="text" id="searchInput" class="form-control search-input" placeholder="Tìm theo mã, tên sản phẩm, thương hiệu..." />
                <select id="searchStatus" class="form-control" style="width: 200px;">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Còn hàng">Còn hàng</option>
                    <option value="Hết hàng">Hết hàng</option>
                    <option value="Đang nhập hàng">Đang nhập hàng</option>
                    <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                </select>
                <button class="btn btn-primary" onclick="performSearch()">
                    Tìm kiếm
                </button>
                <button class="btn btn-secondary" onclick="clearSearch()">
                    Reset
                </button>
            </div>
        </div>

        <table class="table table-hover text-center align-middle" id="productsTable">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Thương hiệu</th>
                    <th>Giá gốc</th>
                    <th>Giá niêm yết</th>
                    <th>VAT</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="productsTableBody">
                @foreach (var item in Model)

                {
                    <tr data-ma="@item.MaSanPham" data-ten="@item.TenSanPham" data-thuonghieu="@item.ThuongHieu?.TenThuongHieu" data-trangthai="@item.TrangThaiSP">
                        <td>@item.MaSanPham</td>
                        <td>@item.TenSanPham</td>
                        <td>@item.ThuongHieu?.TenThuongHieu</td>
                        <td class="price">@item.GiaGoc?.ToString("N0") ₫</td>
                        <td class="price">@item.GiaNiemYet?.ToString("N0") ₫</td>
                        <td><span class="vat-badge">@(item.VAT?.ToString("F0") ?? "0")%</span></td>
                        <td>
                            @{
                                var statusClass = "status-active";

                                if (item.TrangThaiSP == "Ngừng kinh doanh")

                                {

                                    statusClass = "status-inactive";

                                }

                                else if (item.TrangThaiSP == "Hết hàng")

                                {

                                    statusClass = "status-warning";

                                }

                                else if (item.TrangThaiSP == "Đang nhập hàng")

                                {

                                    statusClass = "status-info";

                                }
                            }
                            <span class="@statusClass">
                                @item.TrangThaiSP
                            </span>
                        </td>
                        <td>
                            <div class="btn-action-group">
                                <button class="btn btn-sm btn-mota btn-mota-detail"
                                        data-mota="@item.MoTa"
                                        data-ten="@item.TenSanPham">
                                    Mô tả
                                </button>
                                <button class="btn btn-sm btn-edit btn-edit-product"
                                        data-id="@item.IdSanPham"
                                        data-ma="@item.MaSanPham"
                                        data-ten="@item.TenSanPham"
                                        data-thuonghieu="@item.IdThuongHieu"
                                        data-mota="@item.MoTa"
                                        data-giagoc="@item.GiaGoc"
                                        data-vat="@item.VAT"
                                        data-trangthai="@item.TrangThaiSP">
                                    Sửa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal Thêm Sản Phẩm -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="MaSanPham" class="form-control" placeholder="VD: IP15PM128" />
                                    <small id="errorMaSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="TenSanPham" class="form-control" placeholder="VD: iPhone 15 Pro Max 128GB" />
                                    <small id="errorTenSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="IdThuongHieu" class="form-control">
                                        <option value="">Đang tải thương hiệu...</option>
                                    </select>
                                    <small id="errorIdThuongHieu" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="TrangThaiSP" class="form-control">
                                        <option value="">Chọn trạng thái</option>
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorTrangThaiSP" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <input type="number" id="GiaGoc" class="form-control" placeholder="VD: 25000000" min="0" step="1000" />
                                    <small id="errorGiaGoc" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <input type="number" id="VAT" class="form-control" placeholder="VD: 10" min="0" max="100" step="0.1" value="10" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTa" class="form-control" placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong>Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="giaNiemYetPreview">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary" id="createSubmitBtn">
                            Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Sửa Sản Phẩm -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Sản Phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdSanPham" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditMaSanPham" class="form-control" placeholder="VD: IP15PM128" />
                                    <small id="errorEditMaSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input type="text" id="EditTenSanPham" class="form-control" placeholder="VD: iPhone 15 Pro Max 128GB" />
                                    <small id="errorEditTenSanPham" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                                    <select id="EditIdThuongHieu" class="form-control">
                                        <option value="">Đang tải thương hiệu...</option>
                                    </select>
                                    <small id="errorEditIdThuongHieu" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                    <select id="EditTrangThaiSP" class="form-control">
                                        <option value="Còn hàng">Còn hàng</option>
                                        <option value="Hết hàng">Hết hàng</option>
                                        <option value="Đang nhập hàng">Đang nhập hàng</option>
                                        <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                                    </select>
                                    <small id="errorEditTrangThaiSP" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá gốc <span class="text-danger">*</span></label>
                                    <input type="number" id="EditGiaGoc" class="form-control" placeholder="VD: 25000000" min="0" step="1000" />
                                    <small id="errorEditGiaGoc" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">VAT (%)</label>
                                    <input type="number" id="EditVAT" class="form-control" placeholder="VD: 10" min="0" max="100" step="0.1" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTa" class="form-control" placeholder="Nhập mô tả chi tiết về sản phẩm..." rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="alert alert-info">
                                <strong>Giá niêm yết sẽ được tính tự động:</strong>
                                <span id="editGiaNiemYetPreview">0 ₫</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning" id="editSubmitBtn">
                            Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Mô tả -->
    <div class="modal fade" id="motaModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title" id="motaModalTitle">Mô tả sản phẩm</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mota-content" id="motaContent"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ============================
        // BIẾN TOÀN CỤC VÀ KHỞI TẠO
        // ============================
        document.addEventListener('DOMContentLoaded', function () {
            loadThuongHieu();
            setupPriceCalculation();
            updateCreatePrice();
            updateEditPrice();
            setupEventListeners();
        });

        // ============================
        // XỬ LÝ THƯƠNG HIỆU - SỬA LẠI HOÀN TOÀN
        // ============================
        async function loadThuongHieu() {
            try {
                console.log('🔄 Đang tải danh sách thương hiệu...');

                const createSelect = document.getElementById('IdThuongHieu');
                const editSelect = document.getElementById('EditIdThuongHieu');

                createSelect.innerHTML = '<option value="">Đang tải thương hiệu...</option>';
                editSelect.innerHTML = '<option value="">Đang tải thương hiệu...</option>';

                const response = await fetch('/SanPham/GetThuongHieu');

                console.log('📡 Response status:', response.status);

                if (!response.ok) {
                    throw new Error(`Lỗi HTTP! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('📦 Dữ liệu thương hiệu nhận được:', data);

                // Xóa options cũ
                createSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';
                editSelect.innerHTML = '<option value="">Chọn thương hiệu</option>';

                // Kiểm tra và thêm thương hiệu vào dropdown
                if (data && data.length > 0) {
                    console.log(`✅ Có ${data.length} thương hiệu`);

                    data.forEach(th => {
                        console.log('📝 Thương hiệu:', th);

                        // Xử lý tất cả các trường hợp property naming
                        const id = th.idThuongHieu !== undefined ? th.idThuongHieu :
                            th.IdThuongHieu !== undefined ? th.IdThuongHieu :
                                th.id !== undefined ? th.id :
                                    th.Id !== undefined ? th.Id : null;

                        const ten = th.tenThuongHieu !== undefined ? th.tenThuongHieu :
                            th.TenThuongHieu !== undefined ? th.TenThuongHieu :
                                th.ten !== undefined ? th.ten :
                                    th.Ten !== undefined ? th.Ten :
                                        th.tenThuongHieu !== undefined ? th.tenThuongHieu : null;

                        console.log(`🔍 ID: ${id}, Tên: ${ten}`);

                        if (id && ten) {
                            createSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                            editSelect.innerHTML += `<option value="${id}">${ten}</option>`;
                        } else {
                            console.warn('⚠️ Thương hiệu không hợp lệ:', th);
                        }
                    });

                    console.log('✅ Đã tải thương hiệu thành công');
                } else {
                    console.log('❌ Không có thương hiệu nào');
                    createSelect.innerHTML += '<option value="" disabled>Không có thương hiệu nào</option>';
                    editSelect.innerHTML += '<option value="" disabled>Không có thương hiệu nào</option>';
                }
            } catch (error) {
                console.error('❌ Lỗi khi tải thương hiệu:', error);

                const createSelect = document.getElementById('IdThuongHieu');
                const editSelect = document.getElementById('EditIdThuongHieu');

                createSelect.innerHTML = '<option value="">Lỗi khi tải thương hiệu</option>';
                editSelect.innerHTML = '<option value="">Lỗi khi tải thương hiệu</option>';

                alert('Không thể tải danh sách thương hiệu. Vui lòng thử lại sau!');
            }
        }

        // ============================
        // CÁC HÀM KHÁC GIỮ NGUYÊN
        // ============================
        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            const statusFilter = document.getElementById('searchStatus').value;
            const rows = document.querySelectorAll('#productsTableBody tr');

            rows.forEach(row => {
                const maSP = row.getAttribute('data-ma').toLowerCase();
                const tenSP = row.getAttribute('data-ten').toLowerCase();
                const thuongHieu = row.getAttribute('data-thuonghieu').toLowerCase();
                const trangThai = row.getAttribute('data-trangthai');

                const matchesSearch = !searchTerm ||
                    maSP.includes(searchTerm) ||
                    tenSP.includes(searchTerm) ||
                    thuongHieu.includes(searchTerm);

                const matchesStatus = !statusFilter || trangThai === statusFilter;

                if (matchesSearch && matchesStatus) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('searchStatus').value = '';
            performSearch();
        }

        function hideAllErrors() {
            document.querySelectorAll('small.text-danger').forEach(el => {
                el.classList.add("d-none");
            });
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            if (el) {
                el.textContent = msg;
                el.classList.remove("d-none");
            }
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        function tinhGiaNiemYet(giaGoc, vat) {
            const vatValue = vat || 0;
            return giaGoc * (1 + vatValue / 100);
        }

        function setupPriceCalculation() {
            document.getElementById('GiaGoc').addEventListener('input', updateCreatePrice);
            document.getElementById('VAT').addEventListener('input', updateCreatePrice);
            document.getElementById('EditGiaGoc').addEventListener('input', updateEditPrice);
            document.getElementById('EditVAT').addEventListener('input', updateEditPrice);
        }

        function updateCreatePrice() {
            const giaGoc = parseFloat(document.getElementById('GiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('VAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('giaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        function updateEditPrice() {
            const giaGoc = parseFloat(document.getElementById('EditGiaGoc').value) || 0;
            const vat = parseFloat(document.getElementById('EditVAT').value) || 0;
            const giaNiemYet = tinhGiaNiemYet(giaGoc, vat);
            document.getElementById('editGiaNiemYetPreview').textContent = formatCurrency(giaNiemYet);
        }

        function showMotaModal(tenSanPham, moTa) {
            const modalTitle = document.getElementById('motaModalTitle');
            const motaContent = document.getElementById('motaContent');

            modalTitle.textContent = `Mô tả: ${tenSanPham}`;

            if (moTa && moTa.trim() !== '') {
                motaContent.textContent = moTa;
                motaContent.classList.remove('text-muted');
            } else {
                motaContent.textContent = 'Sản phẩm này chưa có mô tả.';
                motaContent.classList.add('text-muted');
            }

            const motaModal = new bootstrap.Modal(document.getElementById('motaModal'));
            motaModal.show();
        }

        // Các hàm xử lý form giữ nguyên
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const sp = {
                MaSanPham: document.getElementById('MaSanPham').value.trim(),
                TenSanPham: document.getElementById('TenSanPham').value.trim(),
                IdThuongHieu: parseInt(document.getElementById('IdThuongHieu').value),
                MoTa: document.getElementById('MoTa').value.trim(),
                GiaGoc: parseFloat(document.getElementById('GiaGoc').value) || 0,
                VAT: parseFloat(document.getElementById('VAT').value) || 0,
                TrangThaiSP: document.getElementById('TrangThaiSP').value
            };

            let hasError = false;

            if (!sp.MaSanPham) {
                showError("errorMaSanPham", "Phải nhập mã sản phẩm!");
                hasError = true;
            }
            if (!sp.TenSanPham) {
                showError("errorTenSanPham", "Phải nhập tên sản phẩm!");
                hasError = true;
            }
            if (!sp.IdThuongHieu || sp.IdThuongHieu === 0) {
                showError("errorIdThuongHieu", "Phải chọn thương hiệu!");
                hasError = true;
            }
            if (!sp.GiaGoc || sp.GiaGoc <= 0) {
                showError("errorGiaGoc", "Giá gốc phải lớn hơn 0!");
                hasError = true;
            }
            if (!sp.TrangThaiSP) {
                showError("errorTrangThaiSP", "Phải chọn trạng thái sản phẩm!");
                hasError = true;
            }

            if (hasError) return;

            try {
                const response = await fetch('/SanPham/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(sp)
                });

                const data = await response.json();

                if (response.ok) {
                    alert("Thêm sản phẩm thành công!");
                    location.reload();
                } else {
                    if (response.status === 400) {
                        if (data.errors) {
                            Object.keys(data.errors).forEach(key => {
                                const errorField = `error${key}`;
                                if (document.getElementById(errorField)) {
                                    showError(errorField, data.errors[key]);
                                }
                            });
                        } else if (data.message) {
                            alert(data.message);
                        }
                    } else if (response.status === 409 && data.message) {
                        if (data.message.includes("Mã")) {
                            showError("errorMaSanPham", data.message);
                        } else if (data.message.includes("Tên")) {
                            showError("errorTenSanPham", data.message);
                        } else {
                            alert(data.message);
                        }
                    } else {
                        alert(data.message || "Có lỗi xảy ra khi thêm sản phẩm!");
                    }
                }
            } catch (error) {
                console.error('Lỗi khi thêm sản phẩm:', error);
                alert("Có lỗi kết nối xảy ra. Vui lòng thử lại!");
            }
        });

