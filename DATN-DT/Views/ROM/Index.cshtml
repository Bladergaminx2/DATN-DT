@model IEnumerable<DATN_DT.Models.ROM>

@{
    ViewData["Title"] = "Quản lý ROM";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý ROM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý ROM</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm ROM
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Dung lượng ROM</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdROM</td>
                        <td>@item.DungLuongROM</td>
                        <td>@item.MoTaROM</td>
                        <td>
                            <button class="btn btn-sm btn-warning btn-edit"
                                    data-id="@item.IdROM"
                                    data-dungluong="@item.DungLuongROM"
                                    data-mota="@item.MoTaROM">
                                Sửa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm ROM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng ROM <span class="text-danger">*</span></label>
                            <input type="text" id="DungLuongROM" class="form-control" placeholder="Nhập dung lượng ROM" />
                            <small id="errorDungLuongROM" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaROM" class="form-control" rows="3" placeholder="Nhập mô tả (nếu có)"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa ROM</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdROM" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Dung lượng ROM <span class="text-danger">*</span></label>
                            <input type="text" id="EditDungLuongROM" class="form-control" />
                            <small id="errorEditDungLuongROM" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaROM" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        //add
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const rom = {
                DungLuongROM: DungLuongROM.value.trim(),
                MoTaROM: MoTaROM.value.trim()
            };

            const response = await fetch('/ROM/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(rom)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            document.getElementById("errorDungLuongROM").classList.add("d-none");

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DungLuongROM) showError("errorDungLuongROM", data.DungLuongROM);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorDungLuongROM", data.message);
                    return;
                }

                alert(data.message || "Không thể thêm ROM. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

    
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdROM.value = btn.dataset.id;
                EditDungLuongROM.value = btn.dataset.dungluong;
                EditMoTaROM.value = btn.dataset.mota;
                new bootstrap.Modal(editModal).show();
            });
        });

        // update
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdROM.value;
            const rom = {
                IdROM: id,
                DungLuongROM: EditDungLuongROM.value.trim(),
                MoTaROM: EditMoTaROM.value.trim()
            };

            document.getElementById("errorEditDungLuongROM").classList.add("d-none");

            const response = await fetch('/ROM/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(rom)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DungLuongROM) showError("errorEditDungLuongROM", data.DungLuongROM);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorEditDungLuongROM", data.message);
                    return;
                }

                alert(data.message || "Không thể cập nhật ROM. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // Reset
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
</body>
</html>