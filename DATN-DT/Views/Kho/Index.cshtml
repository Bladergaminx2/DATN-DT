@model IEnumerable<DATN_DT.Models.Kho>

@{
    ViewData["Title"] = "Quản lý Kho";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Kho</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }

        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 300px;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Kho</h2>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Kho
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Kho</th>
                    <th>Địa Chỉ</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdKho</td>
                        <td>@item.TenKho</td>
                        <td class="description-cell">@item.DiaChiKho</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdKho"
                                        data-ten="@item.TenKho"
                                        data-diachi="@item.DiaChiKho">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.IdKho"
                                        data-ten="@item.TenKho">
                                    Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên Kho <span class="text-danger">*</span></label>
                            <input type="text" id="TenKho" class="form-control"
                                   placeholder="Nhập tên kho" />
                            <small id="errorTenKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ <span class="text-danger">*</span></label>
                            <textarea id="DiaChi" class="form-control" rows="3"
                                      placeholder="Nhập địa chỉ kho"></textarea>
                            <small id="errorDiaChi" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdKho" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên Kho <span class="text-danger">*</span></label>
                            <input type="text" id="EditTenKho" class="form-control"
                                   placeholder="Nhập tên kho" />
                            <small id="errorEditTenKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa Chỉ <span class="text-danger">*</span></label>
                            <textarea id="EditDiaChi" class="form-control" rows="3"
                                      placeholder="Nhập địa chỉ kho"></textarea>
                            <small id="errorEditDiaChi" class="text-danger d-none"></small>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị thông báo
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Hiển thị lỗi
        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.remove('d-none');
        }

        // Ẩn lỗi
        function hideError(fieldId) {
            const errorElement = document.getElementById(fieldId);
            errorElement.classList.add('d-none');
        }

        // Ẩn tất cả lỗi
        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add('d-none');
            });
        }

        // Mở modal edit và điền dữ liệu
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const ten = btn.dataset.ten;
                const diachi = btn.dataset.diachi;

                document.getElementById("EditIdKho").value = id;
                document.getElementById("EditTenKho").value = ten;
                document.getElementById("EditDiaChi").value = diachi;

                hideAllErrors();
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // Xử lý xóa kho
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const tenKho = btn.dataset.ten;

                if (confirm(`Bạn có chắc chắn muốn xóa kho "${tenKho}"?`)) {
                    try {
                        const response = await fetch(`/Kho/Delete?id=${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            const result = await response.json();
                            showAlert(result.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Lỗi khi xóa kho', 'danger');
                        }
                    } catch (error) {
                        showAlert('Lỗi kết nối: ' + error.message, 'danger');
                    }
                }
            });
        });

        // Xử lý thêm kho
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const khoData = {
                TenKho: document.getElementById("TenKho").value.trim(),
                DiaChiKho: document.getElementById("DiaChi").value.trim(),
            };

            // Kiểm tra validation
            let isValid = true;
            hideAllErrors();

            if (!khoData.TenKho) {
                showError("errorTenKho", "Phải nhập tên kho!");
                isValid = false;
            }
            if (!khoData.DiaChiKho) {
                showError("errorDiaChi", "Phải nhập địa chỉ!");
                isValid = false;
            }

            if (!isValid) return;

            try {
                const response = await fetch('/Kho/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(khoData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.TenKho) showError('errorTenKho', error.TenKho);
                        if (error.DiaChi) showError('errorDiaChi', error.DiaChi);
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showAlert(error.message, 'warning');
                    } else {
                        showAlert(error.message || 'Lỗi khi thêm kho', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Xử lý sửa kho
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = document.getElementById("EditIdKho").value;
            const khoData = {
                TenKho: document.getElementById("EditTenKho").value.trim(),
                DiaChiKho: document.getElementById("EditDiaChi").value.trim()
            };

            // Kiểm tra validation
            let isValid = true;
            hideAllErrors();

            if (!khoData.TenKho) {
                showError("errorEditTenKho", "Phải nhập tên kho!");
                isValid = false;
            }
            if (!khoData.DiaChiKho) {
                showError("errorEditDiaChi", "Phải nhập địa chỉ!");
                isValid = false;
            }

            if (!isValid) return;

            try {
                const response = await fetch(`/Kho/Edit?id=${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(khoData)
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();

                    if (response.status === 400 && typeof error === 'object') {
                        // Lỗi validation
                        if (error.TenKho) showError('errorEditTenKho', error.TenKho);
                        if (error.DiaChi) showError('errorEditDiaChi', error.DiaChi);
                    } else if (response.status === 409) {
                        // Lỗi trùng
                        showAlert(error.message, 'warning');
                    } else {
                        showAlert(error.message || 'Lỗi khi cập nhật kho', 'danger');
                    }
                }
            } catch (error) {
                showAlert('Lỗi kết nối: ' + error.message, 'danger');
            }
        });

        // Reset form và ẩn lỗi khi modal đóng
        document.getElementById('createModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('createForm').reset();
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editForm').reset();
            hideAllErrors();
        });
    </script>
</body>
</html>