@model IEnumerable<DATN_DT.Models.Kho>

@{
    ViewData["Title"] = "Quản lý Kho";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Kho</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

        .btn-create:hover {
            background-color: #357ab8;
        }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: none;
        }

        .text-danger {
            color: #ff4d4d !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Kho</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Kho
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên kho</th>
                    <th>Địa chỉ kho</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdKho</td>
                        <td>@item.TenKho</td>
                        <td>@item.DiaChiKho</td>
                        <td>
                            <button class="btn btn-sm btn-warning btn-edit"
                                    data-id="@item.IdKho"
                                    data-ten="@item.TenKho"
                                    data-diachi="@item.DiaChiKho">
                                Sửa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên kho <span class="text-danger">*</span></label>
                            <input type="text" id="TenKho" class="form-control" placeholder="Nhập tên kho" />
                            <small id="errorTenKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ kho <span class="text-danger">*</span></label>
                            <input type="text" id="DiaChiKho" class="form-control" placeholder="Nhập địa chỉ kho" />
                            <small id="errorDiaChiKho" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Kho</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdKho" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Tên kho <span class="text-danger">*</span></label>
                            <input type="text" id="EditTenKho" class="form-control" />
                            <small id="errorEditTenKho" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ kho <span class="text-danger">*</span></label>
                            <input type="text" id="EditDiaChiKho" class="form-control" />
                            <small id="errorEditDiaChiKho" class="text-danger d-none"></small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // dda
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const kho = {
                TenKho: TenKho.value.trim(),
                DiaChiKho: DiaChiKho.value.trim()
            };

            const response = await fetch('/Kho/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(kho)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            ["errorTenKho", "errorDiaChiKho"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.TenKho) showError("errorTenKho", data.TenKho);
                    if (data.DiaChiKho) showError("errorDiaChiKho", data.DiaChiKho);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorTenKho", data.message);
                    return;
                }

                alert(data.message || "Không thể thêm Kho. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdKho.value = btn.dataset.id;
                EditTenKho.value = btn.dataset.ten;
                EditDiaChiKho.value = btn.dataset.diachi;
                new bootstrap.Modal(editModal).show();
            });
        });

        // dateup
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdKho.value;
            const kho = {
                TenKho: EditTenKho.value.trim(),
                DiaChiKho: EditDiaChiKho.value.trim()
            };

            ["errorEditTenKho", "errorEditDiaChiKho"]
                .forEach(id => document.getElementById(id).classList.add("d-none"));

            const response = await fetch('/Kho/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(kho)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.TenKho) showError("errorEditTenKho", data.TenKho);
                    if (data.DiaChiKho) showError("errorEditDiaChiKho", data.DiaChiKho);
                    return;
                }

                if (response.status === 409 && data.message) {
                    showError("errorEditTenKho", data.message);
                    return;
                }

                alert(data.message || "Không thể cập nhật Kho. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        // Reset form
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
</body>
</html>