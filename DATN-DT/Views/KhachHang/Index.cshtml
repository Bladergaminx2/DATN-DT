@model IEnumerable<DATN_DT.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý Khách Hàng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 30px;
            max-width: 95%;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
            font-weight: 600;
        }

        .table-container {
            background-color: #1e1e2a;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        table {
            background-color: transparent;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 0;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
            font-weight: 600;
            border-bottom: 2px solid #4a90e2;
            padding: 15px 10px;
        }

        td {
            color: #ddd;
            padding: 12px 10px;
            vertical-align: middle;
            border-bottom: 1px solid #2b2b33;
        }

        tr:hover {
            background-color: #2b2b33;
            transition: 0.3s;
        }

        .btn-create {
            background: linear-gradient(135deg, #4a90e2, #357ab8);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 2px 4px rgba(74, 144, 226, 0.3);
        }

            .btn-create:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(74, 144, 226, 0.4);
                background: linear-gradient(135deg, #357ab8, #2a6495);
            }

        .btn-action {
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin: 2px;
            transition: all 0.3s ease;
        }

        .btn-edit {
            background-color: #ffc107;
            border: none;
            color: #000;
        }

            .btn-edit:hover {
                background-color: #e0a800;
                transform: translateY(-1px);
            }

        .btn-delete {
            background-color: #dc3545;
            border: none;
            color: white;
        }

            .btn-delete:hover {
                background-color: #c82333;
                transform: translateY(-1px);
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 15px;
            border: none;
        }

        .modal-header {
            border-bottom: 1px solid #444;
            padding: 20px;
        }

        .modal-title {
            font-weight: 600;
            color: #4a90e2;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            border-top: 1px solid #444;
            padding: 20px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
            border-radius: 8px;
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
                background-color: #1e1e2a;
                color: white;
            }

        .form-label {
            font-weight: 600;
            color: #ddd;
            margin-bottom: 8px;
        }

        .text-danger {
            color: #ff4d4d !important;
            font-size: 0.875rem;
        }

        /* Status styles */
        .status-active {
            color: #28a745;
            font-weight: bold;
            background-color: rgba(40, 167, 69, 0.1);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .status-inactive {
            color: #dc3545;
            font-weight: bold;
            background-color: rgba(220, 53, 69, 0.1);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .status-warning {
            color: #ffc107;
            font-weight: bold;
            background-color: rgba(255, 193, 7, 0.1);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .diem-tich-luy {
            font-weight: bold;
            color: #ffc107;
            background-color: rgba(255, 193, 7, 0.1);
            padding: 6px 12px;
            border-radius: 20px;
            display: inline-block;
            min-width: 80px;
        }

        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #4a90e2;
        }

        .search-box {
            background-color: #1e1e2a;
            border: 1px solid #444;
            border-radius: 10px;
            padding: 10px 15px;
            color: white;
            margin-bottom: 20px;
        }

            .search-box:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            }

        .table-responsive {
            border-radius: 10px;
        }

        .btn-close-white {
            filter: invert(1) grayscale(100%) brightness(200%);
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .stats-card {
            background: linear-gradient(135deg, #2b2b33, #1e1e2a);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid #4a90e2;
        }

        .stats-number {
            font-size: 2rem;
            font-weight: bold;
            color: #4a90e2;
        }

        .stats-label {
            color: #ddd;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-users me-2"></i>QUẢN LÝ KHÁCH HÀNG</h2>

        <!-- Thống kê -->
        <div class="row">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count()</div>
                    <div class="stats-label">Tổng số khách hàng</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count(kh => kh.TrangThaiKhachHang == 1)</div>
                    <div class="stats-label">Đang hoạt động</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Sum(kh => kh.DiemTichLuy ?? 0).ToString("N0")</div>
                    <div class="stats-label">Tổng điểm tích lũy</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count(kh => !string.IsNullOrEmpty(kh.EmailKhachHang))</div>
                    <div class="stats-label">Có email</div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <input type="text" id="searchInput" class="form-control search-box" placeholder="Tìm kiếm khách hàng..." style="width: 300px;">
                    <button class="btn btn-outline-secondary ms-2" onclick="clearSearch()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="fas fa-plus me-2"></i>Thêm Khách Hàng
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ Tên</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Điểm Tích Lũy</th>
                            <th>Trạng Thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="customerTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>#@item.IdKhachHang</strong></td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center" style="place-self:center">
                                        <img src="@(item.DefaultImage ?? null)"
                                             class="customer-avatar me-2"
                                             alt="Avatar"
                                             onerror="this.src='null'">
                                        @item.HoTenKhachHang
                                    </div>
                                </td>
                                <td>
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    @item.SdtKhachHang
                                </td>

                                <td class="text-center">@item.EmailKhachHang</td>
                                <td>
                                    <span class="diem-tich-luy">
                                        <i class="fas fa-star me-1"></i>
                                        @item.DiemTichLuy?.ToString("N0")
                                    </span>
                                </td>
                                <td>
                                    @{
                                        string statusName = "";
                                        string statusClass = "";

                                        switch (item.TrangThaiKhachHang)
                                        {
                                            case 0:
                                                statusName = "Ngừng hoạt động";
                                                statusClass = "status-inactive";
                                                break;
                                            case 1:
                                                statusName = "Hoạt động";
                                                statusClass = "status-active";
                                                break;
                                            case 2:
                                                statusName = "Khóa tạm thời";
                                                statusClass = "status-warning";
                                                break;
                                            default:
                                                statusName = "Không xác định";
                                                statusClass = "status-warning";
                                                break;
                                        }
                                    }
                                    <span class="@statusClass">@statusName</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-edit btn-action"
                                                data-id="@item.IdKhachHang"
                                                data-hoten="@item.HoTenKhachHang"
                                                data-sdt="@item.SdtKhachHang"
                                                data-email="@item.EmailKhachHang"
                                                data-trangthai="@item.TrangThaiKhachHang"
                                                title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-delete btn-action"
                                                data-id="@item.IdKhachHang"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Thêm Khách Hàng -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Thêm Khách Hàng</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên Khách Hàng <span class="text-danger">*</span></label>
                                    <input type="text" id="HoTenKhachHang" class="form-control" placeholder="Nhập họ tên khách hàng" />
                                    <small id="errorHoTenKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="SdtKhachHang" class="form-control" placeholder="Nhập số điện thoại" />
                                    <small id="errorSdtKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EmailKhachHang" class="form-control" placeholder="Nhập email (tùy chọn)" />
                                    <small id="errorEmailKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="TrangThaiKhachHang" class="form-control">
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Ngừng hoạt động</option>
                                        <option value="2">Khóa tạm thời</option>
                                    </select>
                                    <small id="errorTrangThaiKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Sửa Khách Hàng -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Chỉnh sửa Khách Hàng</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdKhachHang" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên Khách Hàng <span class="text-danger">*</span></label>
                                    <input type="text" id="EditHoTenKhachHang" class="form-control" />
                                    <small id="errorEditHoTenKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="EditSdtKhachHang" class="form-control" />
                                    <small id="errorEditSdtKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EditEmailKhachHang" class="form-control" />
                                    <small id="errorEditEmailKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="EditTrangThaiKhachHang" class="form-control">
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Ngừng hoạt động</option>
                                        <option value="2">Khóa tạm thời</option>
                                    </select>
                                    <small id="errorEditTrangThaiKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-sync-alt me-2"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Tìm kiếm khách hàng
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#customerTable tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            const rows = document.querySelectorAll('#customerTable tr');
            rows.forEach(row => row.style.display = '');
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add("d-none");
            });
        }

        // --- Thêm Khách Hàng ---
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const kh = {
                HoTenKhachHang: document.getElementById('HoTenKhachHang').value.trim(),
                SdtKhachHang: document.getElementById('SdtKhachHang').value.trim(),
                EmailKhachHang: document.getElementById('EmailKhachHang').value.trim() || null,
                TrangThaiKhachHang: parseInt(document.getElementById('TrangThaiKhachHang').value)
            };

            try {
                const response = await fetch('/KhachHang/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(kh)
                });

                const data = await response.json();

                if (!response.ok) {
                    if (response.status === 400 && typeof data === "object") {
                        // Lỗi Validation
                        if (data.HoTenKhachHang) showError("errorHoTenKhachHang", data.HoTenKhachHang);
                        if (data.SdtKhachHang) showError("errorSdtKhachHang", data.SdtKhachHang);
                        if (data.EmailKhachHang) showError("errorEmailKhachHang", data.EmailKhachHang);
                        return;
                    }

                    if (response.status === 409 && data.message) {
                        // Lỗi Trùng lặp (Conflict)
                        if (data.message.includes("Số điện thoại")) {
                            showError("errorSdtKhachHang", data.message);
                        } else if (data.message.includes("Email")) {
                            showError("errorEmailKhachHang", data.message);
                        }
                        return;
                    }

                    alert(data.message || "Không thể thêm Khách Hàng. Vui lòng thử lại!");
                    return;
                }

                // Thành công
                bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                alert("Thêm khách hàng thành công!");
                location.reload();

            } catch (error) {
                alert("Lỗi kết nối. Vui lòng thử lại!");
            }
        });

        // --- Lắng nghe sự kiện mở modal Sửa ---
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                document.getElementById('EditIdKhachHang').value = btn.dataset.id;
                document.getElementById('EditHoTenKhachHang').value = btn.dataset.hoten;
                document.getElementById('EditSdtKhachHang').value = btn.dataset.sdt;
                document.getElementById('EditEmailKhachHang').value = btn.dataset.email || '';
                document.getElementById('EditTrangThaiKhachHang').value = btn.dataset.trangthai;

                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // --- Cập nhật Khách Hàng ---
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const id = document.getElementById('EditIdKhachHang').value;
            const kh = {
                HoTenKhachHang: document.getElementById('EditHoTenKhachHang').value.trim(),
                SdtKhachHang: document.getElementById('EditSdtKhachHang').value.trim(),
                EmailKhachHang: document.getElementById('EditEmailKhachHang').value.trim() || null,
                TrangThaiKhachHang: parseInt(document.getElementById('EditTrangThaiKhachHang').value)
            };

            try {
                const response = await fetch('/KhachHang/Edit/' + id, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(kh)
                });

                const data = await response.json();

                if (!response.ok) {
                    if (response.status === 400 && typeof data === "object") {
                        // Lỗi Validation
                        if (data.HoTenKhachHang) showError("errorEditHoTenKhachHang", data.HoTenKhachHang);
                        if (data.SdtKhachHang) showError("errorEditSdtKhachHang", data.SdtKhachHang);
                        if (data.EmailKhachHang) showError("errorEditEmailKhachHang", data.EmailKhachHang);
                        return;
                    }

                    if (response.status === 409 && data.message) {
                        // Lỗi Trùng lặp (Conflict)
                        if (data.message.includes("Số điện thoại")) {
                            showError("errorEditSdtKhachHang", data.message);
                        } else if (data.message.includes("Email")) {
                            showError("errorEditEmailKhachHang", data.message);
                        }
                        return;
                    }

                    alert(data.message || "Không thể cập nhật Khách Hàng. Vui lòng thử lại!");
                    return;
                }

                // Thành công
                bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                alert("Cập nhật khách hàng thành công!");
                location.reload();

            } catch (error) {
                alert("Lỗi kết nối. Vui lòng thử lại!");
            }
        });

        // --- Xóa Khách Hàng ---
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const customerName = btn.closest('tr').querySelector('td:nth-child(2)').textContent.trim();

                const confirmDelete = confirm(`Bạn có chắc chắn muốn xóa khách hàng "${customerName}" (ID: ${id}) không?`);

                if (confirmDelete) {
                    try {
                        const response = await fetch('/KhachHang/Delete/' + id, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                        });

                        const data = await response.json();

                        if (response.ok) {
                            alert("Xóa khách hàng thành công!");
                            location.reload();
                        } else {
                            alert(data.message || "Lỗi khi xóa khách hàng. Vui lòng thử lại!");
                        }
                    } catch (error) {
                        alert("Lỗi kết nối. Vui lòng thử lại!");
                    }
                }
            });
        });

        // --- Reset form khi đóng modal ---
        document.getElementById('createModal').addEventListener('hidden.bs.modal', () => {
            document.getElementById('createForm').reset();
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', () => {
            hideAllErrors();
        });
    </script>
</body>
</html>