@model IEnumerable<DATN_DT.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý Khách Hàng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-sidebar: #1e293b;
            --bg-header: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: var(--text-primary);
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .table-container {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            box-shadow: var(--shadow-lg);
        }

        table {
            background-color: var(--bg-card);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 0;
        }

        th {
            background: linear-gradient(135deg, var(--bg-header) 0%, #0f172a 100%);
            color: var(--text-primary);
            font-weight: 600;
            border-bottom: 2px solid var(--border-color);
            padding: 15px;
            text-align: center;
        }

        td {
            color: var(--text-primary);
            padding: 12px 10px;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
        }

        tr:hover {
            background-color: rgba(99, 102, 241, 0.1);
            transition: 0.3s;
        }

        .btn-create {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-md);
        }

            .btn-create:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
                background: linear-gradient(135deg, var(--primary-hover) 0%, #7c3aed 100%);
            }

        .btn-action {
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin: 2px;
            transition: all 0.3s ease;
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
            border: none;
            color: white;
        }

            .btn-edit:hover {
                background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

        .btn-delete {
            background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
            border: none;
            color: white;
        }

            .btn-delete:hover {
                background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

        .modal-content {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 12px;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-bottom: 1px solid var(--border-color);
            padding: 20px 24px;
            color: white;
        }

        .modal-title {
            font-weight: 600;
            color: white;
            font-size: 20px;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            padding: 20px;
            background-color: var(--bg-card);
        }

        .form-control, .form-select {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: 8px;
            padding: 10px 15px;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
                background-color: #1e293b;
                color: var(--text-primary);
            }

        .form-label {
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .text-danger {
            color: var(--danger-color) !important;
            font-size: 0.875rem;
        }

        .text-muted {
            color: var(--text-secondary) !important;
        }

        /* Status styles */
        .status-active {
            color: var(--success-color);
            font-weight: 600;
            background-color: rgba(16, 185, 129, 0.1);
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            display: inline-block;
        }

        .status-inactive {
            color: var(--danger-color);
            font-weight: 600;
            background-color: rgba(239, 68, 68, 0.1);
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            display: inline-block;
        }

        .status-warning {
            color: var(--warning-color);
            font-weight: 600;
            background-color: rgba(245, 158, 11, 0.1);
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            display: inline-block;
        }

        .diem-tich-luy {
            font-weight: 700;
            color: var(--warning-color);
            background-color: rgba(245, 158, 11, 0.1);
            padding: 6px 12px;
            border-radius: 6px;
            display: inline-block;
            min-width: 80px;
        }

        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
        }

        .search-box {
            background-color: #1e293b;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 10px 15px;
            color: var(--text-primary);
            margin-bottom: 20px;
        }

            .search-box:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            }

        .table-responsive {
            border-radius: 10px;
        }

        .btn-close-white {
            filter: invert(1);
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        #alertContainer {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            max-width: 500px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-secondary {
            background: rgba(148, 163, 184, 0.2);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

            .btn-secondary:hover {
                background: rgba(148, 163, 184, 0.3);
                color: var(--text-primary);
            }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #475569;
            }

        #alertContainer .alert {
            border-radius: 12px;
            border: none;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            margin-bottom: 10px;
            animation: slideInRight 0.3s ease;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
            border-left: 4px solid #10b981;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border-left: 4px solid #ef4444;
        }

        .stats-card {
            background: linear-gradient(135deg, var(--bg-card) 0%, #0f172a 100%);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: var(--shadow-lg);
            border-left: 4px solid var(--primary-color);
        }

        .stats-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .stats-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-top: 8px;
        }
    </style>
</head>
<body>
    <!-- Alert Messages -->
    <div id="alertContainer" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>

    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 15px;">
            <h2 style="margin: 0; font-size: 28px; font-weight: 700; background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"><i class="fas fa-users me-2"></i>Quản Lý Khách Hàng</h2>
            <div style="display: flex; gap: 10px; align-items: center;">
                <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="fas fa-plus me-2"></i>+ Thêm Khách Hàng
                </button>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="row">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count()</div>
                    <div class="stats-label">Tổng số khách hàng</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count(kh => kh.TrangThaiKhachHang == 1)</div>
                    <div class="stats-label">Đang hoạt động</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Sum(kh => kh.DiemTichLuy ?? 0).ToString("N0")</div>
                    <div class="stats-label">Tổng điểm tích lũy</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number">@Model.Count(kh => !string.IsNullOrEmpty(kh.EmailKhachHang))</div>
                    <div class="stats-label">Có email</div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <input type="text" id="searchInput" class="form-control search-box" placeholder="Tìm kiếm khách hàng..." style="width: 300px;">
                    <button class="btn btn-secondary ms-2" onclick="clearSearch()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ Tên</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Điểm Tích Lũy</th>
                            <th>Trạng Thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="customerTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>#@item.IdKhachHang</strong></td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center" style="place-self:center">
                                        <img src="@(item.DefaultImage ?? null)"
                                             class="customer-avatar me-2"
                                             alt="Avatar"
                                             onerror="this.src='null'">
                                        @item.HoTenKhachHang
                                    </div>
                                </td>
                                <td>
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    @item.SdtKhachHang
                                </td>

                                <td class="text-center">@item.EmailKhachHang</td>
                                <td>
                                    <span class="diem-tich-luy">
                                        <i class="fas fa-star me-1"></i>
                                        @item.DiemTichLuy?.ToString("N0")
                                    </span>
                                </td>
                                <td>
                                    @{
                                        string statusName = "";
                                        string statusClass = "";

                                        switch (item.TrangThaiKhachHang)
                                        {
                                            case 0:
                                                statusName = "Ngừng hoạt động";
                                                statusClass = "status-inactive";
                                                break;
                                            case 1:
                                                statusName = "Hoạt động";
                                                statusClass = "status-active";
                                                break;
                                            case 2:
                                                statusName = "Khóa tạm thời";
                                                statusClass = "status-warning";
                                                break;
                                            default:
                                                statusName = "Không xác định";
                                                statusClass = "status-warning";
                                                break;
                                        }
                                    }
                                    <span class="@statusClass">@statusName</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-edit btn-action"
                                                data-id="@item.IdKhachHang"
                                                data-hoten="@item.HoTenKhachHang"
                                                data-sdt="@item.SdtKhachHang"
                                                data-email="@item.EmailKhachHang"
                                                data-trangthai="@item.TrangThaiKhachHang"
                                                title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-delete btn-action"
                                                data-id="@item.IdKhachHang"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Thêm Khách Hàng -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Thêm Khách Hàng</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên Khách Hàng <span class="text-danger">*</span></label>
                                    <input type="text" id="HoTenKhachHang" class="form-control" placeholder="Nhập họ tên khách hàng" />
                                    <small id="errorHoTenKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="SdtKhachHang" class="form-control" placeholder="Nhập số điện thoại" />
                                    <small id="errorSdtKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EmailKhachHang" class="form-control" placeholder="Nhập email (tùy chọn)" />
                                    <small id="errorEmailKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="TrangThaiKhachHang" class="form-control">
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Ngừng hoạt động</option>
                                        <option value="2">Khóa tạm thời</option>
                                    </select>
                                    <small id="errorTrangThaiKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Sửa Khách Hàng -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Chỉnh sửa Khách Hàng</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdKhachHang" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ Tên Khách Hàng <span class="text-danger">*</span></label>
                                    <input type="text" id="EditHoTenKhachHang" class="form-control" />
                                    <small id="errorEditHoTenKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                    <input type="text" id="EditSdtKhachHang" class="form-control" />
                                    <small id="errorEditSdtKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" id="EditEmailKhachHang" class="form-control" />
                                    <small id="errorEditEmailKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select id="EditTrangThaiKhachHang" class="form-control">
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Ngừng hoạt động</option>
                                        <option value="2">Khóa tạm thời</option>
                                    </select>
                                    <small id="errorEditTrangThaiKhachHang" class="text-danger d-none"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-sync-alt me-2"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Tìm kiếm khách hàng
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#customerTable tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            const rows = document.querySelectorAll('#customerTable tr');
            rows.forEach(row => row.style.display = '');
        }

        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        function hideAllErrors() {
            document.querySelectorAll('.text-danger').forEach(el => {
                el.classList.add("d-none");
            });
        }

        // --- Thêm Khách Hàng ---
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const kh = {
                HoTenKhachHang: document.getElementById('HoTenKhachHang').value.trim(),
                SdtKhachHang: document.getElementById('SdtKhachHang').value.trim(),
                EmailKhachHang: document.getElementById('EmailKhachHang').value.trim() || null,
                TrangThaiKhachHang: parseInt(document.getElementById('TrangThaiKhachHang').value)
            };

            try {
                const response = await fetch('/KhachHang/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(kh)
                });

                const data = await response.json();

                if (!response.ok) {
                    if (response.status === 400 && typeof data === "object") {
                        // Lỗi Validation
                        if (data.HoTenKhachHang) showError("errorHoTenKhachHang", data.HoTenKhachHang);
                        if (data.SdtKhachHang) showError("errorSdtKhachHang", data.SdtKhachHang);
                        if (data.EmailKhachHang) showError("errorEmailKhachHang", data.EmailKhachHang);
                        return;
                    }

                    if (response.status === 409 && data.message) {
                        // Lỗi Trùng lặp (Conflict)
                        if (data.message.includes("Số điện thoại")) {
                            showError("errorSdtKhachHang", data.message);
                        } else if (data.message.includes("Email")) {
                            showError("errorEmailKhachHang", data.message);
                        }
                        return;
                    }

                    alert(data.message || "Không thể thêm Khách Hàng. Vui lòng thử lại!");
                    return;
                }

                // Thành công
                bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                alert("Thêm khách hàng thành công!");
                location.reload();

            } catch (error) {
                alert("Lỗi kết nối. Vui lòng thử lại!");
            }
        });

        // --- Lắng nghe sự kiện mở modal Sửa ---
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                document.getElementById('EditIdKhachHang').value = btn.dataset.id;
                document.getElementById('EditHoTenKhachHang').value = btn.dataset.hoten;
                document.getElementById('EditSdtKhachHang').value = btn.dataset.sdt;
                document.getElementById('EditEmailKhachHang').value = btn.dataset.email || '';
                document.getElementById('EditTrangThaiKhachHang').value = btn.dataset.trangthai;

                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
        });

        // --- Cập nhật Khách Hàng ---
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            hideAllErrors();

            const id = document.getElementById('EditIdKhachHang').value;
            const kh = {
                HoTenKhachHang: document.getElementById('EditHoTenKhachHang').value.trim(),
                SdtKhachHang: document.getElementById('EditSdtKhachHang').value.trim(),
                EmailKhachHang: document.getElementById('EditEmailKhachHang').value.trim() || null,
                TrangThaiKhachHang: parseInt(document.getElementById('EditTrangThaiKhachHang').value)
            };

            try {
                const response = await fetch('/KhachHang/Edit/' + id, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(kh)
                });

                const data = await response.json();

                if (!response.ok) {
                    if (response.status === 400 && typeof data === "object") {
                        // Lỗi Validation
                        if (data.HoTenKhachHang) showError("errorEditHoTenKhachHang", data.HoTenKhachHang);
                        if (data.SdtKhachHang) showError("errorEditSdtKhachHang", data.SdtKhachHang);
                        if (data.EmailKhachHang) showError("errorEditEmailKhachHang", data.EmailKhachHang);
                        return;
                    }

                    if (response.status === 409 && data.message) {
                        // Lỗi Trùng lặp (Conflict)
                        if (data.message.includes("Số điện thoại")) {
                            showError("errorEditSdtKhachHang", data.message);
                        } else if (data.message.includes("Email")) {
                            showError("errorEditEmailKhachHang", data.message);
                        }
                        return;
                    }

                    alert(data.message || "Không thể cập nhật Khách Hàng. Vui lòng thử lại!");
                    return;
                }

                // Thành công
                bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                alert("Cập nhật khách hàng thành công!");
                location.reload();

            } catch (error) {
                alert("Lỗi kết nối. Vui lòng thử lại!");
            }
        });

        // --- Xóa Khách Hàng ---
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                const row = btn.closest('tr');
                const customerName = row.querySelector('td:nth-child(2)').textContent.trim();
                const customerEmail = row.querySelector('td:nth-child(4)').textContent.trim();
                const customerSdt = row.querySelector('td:nth-child(3)').textContent.trim();

                // Tạo modal xác nhận đẹp hơn
                const confirmMessage = `Bạn có chắc chắn muốn xóa khách hàng này?\n\n` +
                    `📋 Thông tin khách hàng:\n` +
                    `• Họ tên: ${customerName}\n` +
                    `• SĐT: ${customerSdt}\n` +
                    `• Email: ${customerEmail || 'N/A'}\n` +
                    `• ID: ${id}\n\n` +
                    `⚠️ Cảnh báo: Thao tác này không thể hoàn tác!`;

                if (!confirm(confirmMessage)) {
                    return;
                }

                // Hiển thị loading
                const originalHtml = btn.innerHTML;
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xóa...';

                try {
                    const response = await fetch('/KhachHang/Delete/' + id, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                    });

                    const data = await response.json();

                    if (response.ok) {
                        // Hiệu ứng xóa mượt mà
                        row.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                        row.style.opacity = '0';
                        row.style.transform = 'translateX(-20px)';
                        
                        setTimeout(() => {
                            showAlert('Xóa khách hàng thành công!', 'success');
                            location.reload();
                        }, 300);
                    } else {
                        btn.disabled = false;
                        btn.innerHTML = originalHtml;
                        
                        // Hiển thị lỗi chi tiết
                        let errorMsg = data.message || "Lỗi khi xóa khách hàng. Vui lòng thử lại!";
                        
                        if (data.hasConstraints) {
                            errorMsg += `\n\nKhách hàng này đã có ${data.count} ${data.constraintType} liên quan.`;
                        }
                        
                        showAlert(errorMsg, 'danger');
                    }
                } catch (error) {
                    btn.disabled = false;
                    btn.innerHTML = originalHtml;
                    showAlert("Lỗi kết nối. Vui lòng thử lại!", 'danger');
                }
            });
        });

        // Hàm hiển thị alert đẹp hơn
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            if (!alertContainer) {
                // Tạo container nếu chưa có
                const container = document.createElement('div');
                container.id = 'alertContainer';
                container.style.position = 'fixed';
                container.style.top = '20px';
                container.style.right = '20px';
                container.style.zIndex = '9999';
                container.style.maxWidth = '500px';
                document.body.appendChild(container);
            }

            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.style.minWidth = '350px';
            alert.style.maxWidth = '500px';
            alert.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.3)';
            alert.style.borderRadius = '12px';
            alert.style.border = 'none';
            alert.innerHTML = `
                <div style="display: flex; align-items: flex-start; gap: 12px;">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle'}" style="font-size: 20px; margin-top: 2px;"></i>
                    <div style="flex: 1; white-space: pre-line; line-height: 1.5;">${message}</div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" style="margin-top: 2px;"></button>
                </div>
            `;
            
            alertContainer.appendChild(alert);

            // Auto remove sau 5 giây
            setTimeout(() => {
                if (alert.parentElement) {
                    alert.classList.remove('show');
                    setTimeout(() => {
                        if (alert.parentElement) {
                            alert.remove();
                        }
                    }, 300);
                }
            }, 5000);
        }

        // --- Reset form khi đóng modal ---
        document.getElementById('createModal').addEventListener('hidden.bs.modal', () => {
            document.getElementById('createForm').reset();
            hideAllErrors();
        });

        document.getElementById('editModal').addEventListener('hidden.bs.modal', () => {
            hideAllErrors();
        });
    </script>
</body>
</html>