@model IEnumerable<DATN_DT.Models.CameraTruoc>

@{
    ViewData["Title"] = "Quản lý Camera Trước";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Camera Trước</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
        }

        table {
            background-color: #1e1e2a;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #2b2b33;
            color: #fff;
        }

        td {
            color: #ddd;
        }

        .btn-create {
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-create:hover {
                background-color: #357ab8;
            }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 10px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: none;
            }

        .text-danger {
            color: #ff4d4d !important;
        }

        .description-cell {
            white-space: pre-line;
            word-wrap: break-word;
            max-width: 200px;
            line-height: 1.5;
        }

        .btn-edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus::placeholder {
            color: transparent;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Quản Lý Camera Trước</h2>

        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-create" data-bs-toggle="modal" data-bs-target="#createModal">
                + Thêm Camera Trước
            </button>
        </div>

        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Độ phân giải</th>
                    <th>Tính năng</th>
                    <th>Quay video</th>
                    <th>Mô tả</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdCamTruoc</td>
                        <td>@item.DoPhanGiaiCamTruoc</td>
                        <td>@item.TinhNangCamTruoc</td>
                        <td>@item.QuayVideoCamTruoc</td>
                        <td class="description-cell">@item.MoTaCamTruoc</td>
                        <td>
                            <div class="btn-edit-container">
                                <button class="btn btn-sm btn-warning btn-edit"
                                        data-id="@item.IdCamTruoc"
                                        data-dophangiai="@item.DoPhanGiaiCamTruoc"
                                        data-tinhnang="@item.TinhNangCamTruoc"
                                        data-quayvideo="@item.QuayVideoCamTruoc"
                                        data-mota="@item.MoTaCamTruoc">
                                    Sửa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Form Create -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Camera Trước</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="DoPhanGiaiCamTruoc" class="form-control" placeholder="Ví dụ: 12MP, 32MP" />
                            <small id="errorDoPhanGiaiCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng <span class="text-danger">*</span></label>
                            <input type="text" id="TinhNangCamTruoc" class="form-control" placeholder="Ví dụ: Selfie góc rộng, Xóa phông, Quay video HD" />
                            <small id="errorTinhNangCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quay video <span class="text-danger">*</span></label>
                            <input type="text" id="QuayVideoCamTruoc" class="form-control" placeholder="Ví dụ: 1080p@30fps, 4K@30fps" />
                            <small id="errorQuayVideoCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="MoTaCamTruoc" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Form Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa Camera Trước</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <input type="hidden" id="EditIdCamTruoc" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Độ phân giải <span class="text-danger">*</span></label>
                            <input type="text" id="EditDoPhanGiaiCamTruoc" class="form-control" placeholder="Ví dụ: 12MP, 32MP" />
                            <small id="errorEditDoPhanGiaiCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tính năng <span class="text-danger">*</span></label>
                            <input type="text" id="EditTinhNangCamTruoc" class="form-control" placeholder="Ví dụ: Selfie góc rộng, Xóa phông, Quay video HD" />
                            <small id="errorEditTinhNangCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quay video <span class="text-danger">*</span></label>
                            <input type="text" id="EditQuayVideoCamTruoc" class="form-control" placeholder="Ví dụ: 1080p@30fps, 4K@30fps" />
                            <small id="errorEditQuayVideoCamTruoc" class="text-danger d-none"></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="EditMoTaCamTruoc" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showError(id, msg) {
            const el = document.getElementById(id);
            el.textContent = msg;
            el.classList.remove("d-none");
        }

        function hideAllErrors(errorIds) {
            errorIds.forEach(id => document.getElementById(id).classList.add("d-none"));
        }

        function validateCameraForm(formData) {
            const errors = {};

            if (!formData.DoPhanGiaiCamTruoc || formData.DoPhanGiaiCamTruoc.trim() === '') {
                errors.DoPhanGiaiCamTruoc = "Độ phân giải là bắt buộc";
            }

            if (!formData.TinhNangCamTruoc || formData.TinhNangCamTruoc.trim() === '') {
                errors.TinhNangCamTruoc = "Tính năng là bắt buộc";
            }

            if (!formData.QuayVideoCamTruoc || formData.QuayVideoCamTruoc.trim() === '') {
                errors.QuayVideoCamTruoc = "Quay video là bắt buộc";
            }

            return Object.keys(errors).length === 0 ? null : errors;
        }

        // Thêm Camera Trước
        document.getElementById("createForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const cam = {
                DoPhanGiaiCamTruoc: DoPhanGiaiCamTruoc.value.trim(),
                TinhNangCamTruoc: TinhNangCamTruoc.value.trim(),
                QuayVideoCamTruoc: QuayVideoCamTruoc.value.trim(),
                MoTaCamTruoc: MoTaCamTruoc.value.trim()
            };

            const errorIds = ["errorDoPhanGiaiCamTruoc", "errorTinhNangCamTruoc", "errorQuayVideoCamTruoc"];
            hideAllErrors(errorIds);

            const validationErrors = validateCameraForm(cam);
            if (validationErrors) {
                Object.keys(validationErrors).forEach(field => {
                    showError(`error${field}`, validationErrors[field]);
                });
                return;
            }

            const response = await fetch('/CameraTruoc/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cam)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DoPhanGiaiCamTruoc) showError("errorDoPhanGiaiCamTruoc", data.DoPhanGiaiCamTruoc);
                    if (data.TinhNangCamTruoc) showError("errorTinhNangCamTruoc", data.TinhNangCamTruoc);
                    if (data.QuayVideoCamTruoc) showError("errorQuayVideoCamTruoc", data.QuayVideoCamTruoc);
                    return;
                }

                if (response.status === 409 && data.message) {
                    errorIds.forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể thêm Camera Trước. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });


        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", () => {
                EditIdCamTruoc.value = btn.dataset.id;
                EditDoPhanGiaiCamTruoc.value = btn.dataset.dophangiai;
                EditTinhNangCamTruoc.value = btn.dataset.tinhnang;
                EditQuayVideoCamTruoc.value = btn.dataset.quayvideo;
                EditMoTaCamTruoc.value = btn.dataset.mota;
                new bootstrap.Modal(editModal).show();
            });
        });

        // Cập nhật Camera Trước
        document.getElementById("editForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const id = EditIdCamTruoc.value;
            const cam = {
                IdCamTruoc: id,
                DoPhanGiaiCamTruoc: EditDoPhanGiaiCamTruoc.value.trim(),
                TinhNangCamTruoc: EditTinhNangCamTruoc.value.trim(),
                QuayVideoCamTruoc: EditQuayVideoCamTruoc.value.trim(),
                MoTaCamTruoc: EditMoTaCamTruoc.value.trim()
            };

            // Validate client-side
            const errorIds = ["errorEditDoPhanGiaiCamTruoc", "errorEditTinhNangCamTruoc", "errorEditQuayVideoCamTruoc"];
            hideAllErrors(errorIds);

            const validationErrors = validateCameraForm(cam);
            if (validationErrors) {
                Object.keys(validationErrors).forEach(field => {
                    showError(`errorEdit${field}`, validationErrors[field]);
                });
                return;
            }

            const response = await fetch('/CameraTruoc/Edit/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cam)
            });

            let data = {};
            try { data = await response.json(); } catch { }

            if (!response.ok) {
                if (response.status === 400 && typeof data === "object") {
                    if (data.DoPhanGiaiCamTruoc) showError("errorEditDoPhanGiaiCamTruoc", data.DoPhanGiaiCamTruoc);
                    if (data.TinhNangCamTruoc) showError("errorEditTinhNangCamTruoc", data.TinhNangCamTruoc);
                    if (data.QuayVideoCamTruoc) showError("errorEditQuayVideoCamTruoc", data.QuayVideoCamTruoc);
                    return;
                }

                if (response.status === 409 && data.message) {
                    errorIds.forEach(id => showError(id, data.message));
                    return;
                }

                alert(data.message || "Không thể cập nhật Camera Trước. Vui lòng thử lại!");
                return;
            }

            location.reload();
        });

        // Reset form khi đóng modal
        createModal.addEventListener("hidden.bs.modal", () => {
            createForm.reset();
            document.querySelectorAll("#createForm small").forEach(e => e.classList.add("d-none"));
        });

        editModal.addEventListener("hidden.bs.modal", () => {
            editForm.reset();
            document.querySelectorAll("#editForm small").forEach(e => e.classList.add("d-none"));
        });
    </script>
</body>
</html>