    <script>
        // ========== INITIALIZATION
        document.addEventListener('DOMContentLoaded', async function () {
            // Khởi tạo sản phẩm từ database
            initializeProductsFromDatabase();
            // Cập nhật số lượng giỏ hàng từ database
            await updateCartCount();
            // Load thông tin user profile
            await loadUserProfile();
            setupMegaMenu();
            
            // Kiểm tra localStorage ngay lập tức
            const savedProfile = localStorage.getItem('userProfile');
            if (savedProfile) {
                try {
                    const profile = JSON.parse(savedProfile);
                    if (profile.defaultImage) {
                        updateUserAvatar(profile.defaultImage);
                    }
                } catch (error) {
                    console.error('Error parsing userProfile on init:', error);
                }
            }

            // Kiểm tra query parameter refreshProfile (khi quay lại từ UserProfile)
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('refreshProfile') === '1') {
                // Reload profile ngay lập tức
                setTimeout(async function() {
                    await loadUserProfile();
                    // Xóa query parameter để URL sạch
                    window.history.replaceState({}, document.title, window.location.pathname);
                }, 300);
            }

            // Kiểm tra sessionStorage để biết avatar đã được cập nhật
            const avatarUpdated = sessionStorage.getItem('avatarUpdated');
            if (avatarUpdated) {
                // Avatar đã được cập nhật, reload profile
                setTimeout(async function() {
                    await loadUserProfile();
                    // Xóa flag sau khi đã reload
                    sessionStorage.removeItem('avatarUpdated');
                }, 300);
            }
        });

        // ========== NAVIGATION FUNCTIONS
        // THÊM HÀM MỚI: Click logo quay lại trang chủ
        function goToHomePage() {
