                    price: product.giaBan || product.GiaBan || 0, // Giá sau khuyến mãi
                    giaGoc: product.giaGoc || product.GiaGoc || product.giaBan || product.GiaBan || 0, // Giá gốc
                    image: product.hinhAnh || product.HinhAnh || "/ImgResource/default-product.jpg",
                    isHot: product.isHot || product.IsHot || false, // Sản phẩm hot dựa trên số lượng đã bán
