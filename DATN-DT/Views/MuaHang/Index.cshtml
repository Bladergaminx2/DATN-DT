                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        IdModelSanPham: productId,
                        Quantity: quantityToAdd
                    })
                });

                const result = await response.json();

                if (result.Success) {
                    // Thành công: Cập nhật localStorage để cập nhật UI
                    if (existingItem) {
                        existingItem.quantity += quantityToAdd;
                    } else {
                        cart.push({
                            id: product.id,
                            name: product.name,
                            price: product.price,
                            image: product.image,
                            quantity: quantityToAdd,
                            stock: product.stock,
