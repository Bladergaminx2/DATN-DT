@model DATN_DT.DTO.hoadondtotest.ThanhToanViewModel
@{
    ViewData["Title"] = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var selectedItems = ViewBag.SelectedItems as string ?? "";
    var tongTien = ViewBag.TongTien ?? 0m;
}

<style>
    /* Hide Header */
    header {
        display: none !important;
    }

    /* Dark Theme Styles */
    body {
        background-color: #12121d;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    .container {
        min-height: calc(100vh - 100px);
        padding: 30px;
    }

    .card {
        background-color: #36363f;
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-bottom: none;
        color: #ffffff;
        padding: 20px;
        border-radius: 15px 15px 0 0 !important;
    }

    .card-body {
        background-color: #36363f;
        color: #ffffff;
        padding: 25px;
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Form controls */
    .form-control, .form-select, textarea {
        background-color: #2b2b33;
        border: 1px solid #444;
        color: #ffffff;
    }

        .form-control:focus, .form-select:focus, textarea:focus {
            background-color: #2b2b33;
            border-color: #667eea;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .form-control:read-only {
            background-color: #2b2b33;
            color: #aaa;
        }

    .form-control::placeholder {
        color: #aaa;
    }

    .form-label {
        color: #ffffff;
        font-weight: 500;
        margin-bottom: 8px;
    }

    /* User info card */
    .bg-light {
        background-color: #2b2b33 !important;
        border: 1px solid #444;
    }

    /* Address display */
    .border {
        border-color: #444 !important;
    }

    .bg-light.border {
        background-color: #2b2b33 !important;
        color: #ffffff;
    }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        font-weight: 500;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5568d3 0%, #653a8f 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(102, 126, 234, 0.3);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ee5a5a 0%, #dd4a5f 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 107, 107, 0.3);
        }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
        background-color: transparent;
    }

        .btn-outline-primary:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }

    .btn-secondary {
        background-color: #555;
        border-color: #555;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #666;
            border-color: #666;
        }

    /* Radio buttons */
    .form-check-input {
        background-color: #2b2b33;
        border: 2px solid #667eea;
    }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

    .form-check-label {
        color: #ffffff;
    }

    /* Table */
    .table {
        color: #ffffff;
        background-color: #36363f;
    }

    .table thead {
        background-color: #2b2b33;
        color: #ffffff;
    }

    .table tbody tr {
        border-bottom: 1px solid #444;
    }

    .table td, .table th {
        border-color: #444;
    }

    /* Text colors */
    .text-danger {
        color: #ff6b6b !important;
    }

    .text-muted {
        color: #aaa !important;
    }

    /* Summary card */
    .summary-card {
        background: #36363f;
        border-radius: 10px;
        padding: 20px;
        border: 1px solid #444;
    }

    /* Alert */
    .alert-success {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        border: none;
        color: white;
    }

    /* Modal */
    .modal-content {
        background-color: #36363f;
        color: #ffffff;
        border: none;
        border-radius: 15px;
    }

    .modal-header {
        background-color: #2b2b33;
        border-bottom: 1px solid #444;
        border-radius: 15px 15px 0 0;
    }

    .modal-body {
        background-color: #36363f;
    }

    .modal-footer {
        background-color: #36363f;
        border-top: 1px solid #444;
        border-radius: 0 0 15px 15px;
    }

    .btn-close, .btn-close-white {
        filter: invert(1);
    }

    /* CẢI THIỆN: Modal backdrop - Đảm bảo không bị tối quá và được xóa đúng cách */
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5) !important;
        opacity: 1 !important;
        z-index: 1040 !important;
    }

    .modal-backdrop.show {
        opacity: 1 !important;
    }

    .modal-backdrop.fade {
        opacity: 0;
        transition: opacity 0.15s linear;
    }

    .modal-backdrop.fade.show {
        opacity: 0.5;
    }

    /* Đảm bảo modal được hiển thị đúng */
    .modal.show {
        display: block !important;
    }

    /* Xóa backdrop khi modal đóng - cleanup */
    body.modal-open {
        overflow: hidden;
        padding-right: 0 !important;
    }

    /* Đảm bảo backdrop được xóa khi không có modal nào mở */
    body:not(.modal-open) .modal-backdrop {
        display: none !important;
        opacity: 0 !important;
    }

    /* Fix cho trường hợp backdrop bị stuck */
    .modal-backdrop:not(.show) {
        display: none !important;
    }

    /* Toast */
    .toast {
        background-color: #36363f;
        color: #ffffff;
        border: 1px solid #444;
    }

    /* Hide Footer */
    footer {
        display: none !important;
    }

    /* Back Link Styles - Nổi bật hơn */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #ffffff !important;
        text-decoration: none;
        font-size: 16px;
        font-weight: 600;
        border-radius: 12px;
        margin-bottom: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        border: none;
    }

    .back-link:hover {
        background: linear-gradient(135deg, #5568d3 0%, #653a8f 100%);
        color: #ffffff !important;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .back-link:active {
        transform: translateY(0);
        box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
    }

    .back-link i {
        font-size: 18px;
        margin-right: 0;
    }

    /* Voucher Detail Modal Styles */
    .voucher-detail-container {
        padding: 10px;
    }

    .voucher-header {
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
    }

    .voucher-code-badge {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 10px 20px;
        border-radius: 10px;
        display: inline-block;
        color: white;
    }

    .voucher-discount-section .card {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        color: white;
    }

    .discount-amount {
        margin-bottom: 10px;
    }

    .discount-value {
        font-size: 48px;
        font-weight: 700;
        color: white;
    }

    .discount-type {
        font-size: 24px;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.9);
        margin-left: 10px;
    }

    .voucher-info-section {
        background-color: #2b2b33;
        padding: 20px;
        border-radius: 10px;
    }

    .info-item {
        padding: 10px;
        background-color: #36363f;
        border-radius: 8px;
    }

    .info-item label {
        display: block;
        margin-bottom: 5px;
        font-size: 12px;
    }

    .info-value {
        color: #ffffff;
        font-weight: 500;
        font-size: 16px;
    }

    .voucher-conditions-section {
        background-color: #2b2b33;
        padding: 20px;
        border-radius: 10px;
    }

    .conditions-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .condition-item {
        padding: 12px 15px;
        background-color: #36363f;
        border-radius: 8px;
        border-left: 4px solid #667eea;
        display: flex;
        align-items: center;
    }

    .condition-item i {
        margin-right: 10px;
        color: #667eea;
        font-size: 18px;
    }

    .condition-item span {
        color: #ffffff;
        flex: 1;
    }

    /* Voucher List Modal Styles */
    .voucher-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 15px;
        padding: 20px;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .voucher-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        pointer-events: none;
    }

    .voucher-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .voucher-card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .voucher-code {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 8px 15px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 18px;
    }

    .voucher-discount-badge {
        background-color: rgba(255, 255, 255, 0.3);
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .voucher-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .voucher-description {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 15px;
        min-height: 40px;
    }

    .voucher-info-row {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        margin-bottom: 8px;
        opacity: 0.9;
    }

    .voucher-info-label {
        font-weight: 500;
    }

    .voucher-info-value {
        font-weight: 600;
    }

    .voucher-conditions-preview {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.3);
        font-size: 12px;
    }

    .voucher-condition-tag {
        display: inline-block;
        background-color: rgba(255, 255, 255, 0.2);
        padding: 4px 10px;
        border-radius: 12px;
        margin-right: 8px;
        margin-bottom: 5px;
    }

    .no-vouchers {
        text-align: center;
        padding: 60px 20px;
        color: #aaa;
    }

    .no-vouchers i {
        font-size: 64px;
        margin-bottom: 20px;
        opacity: 0.5;
    }
</style>

<!-- Toast container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
</div>

<!-- Success/Error Alert -->
<div class="alert alert-dismissible fade d-none" id="successAlertCheckout" role="alert" style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 400px; max-width: 600px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
    <div class="d-flex align-items-center">
        <i class="bi bi-check-circle-fill me-3 fs-3" id="alertIconCheckout"></i>
        <div class="flex-grow-1">
            <h5 class="alert-heading mb-1" id="alertTitleCheckout">Đặt hàng thành công!</h5>
            <p class="mb-0" id="successMessageCheckout">Đơn hàng của bạn đã được xử lý thành công.</p>
            <small class="text-muted" id="orderCodeCheckout"></small>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

<div class="container mt-4">
    <!-- Nút quay lại -->
    <a href="/GioHang/Cart" class="back-link">
        <i class="bi bi-arrow-left"></i> Trở về
    </a>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-cart-check me-2"></i>Thông Tin Đặt Hàng</h4>
                </div>
                <div class="card-body">
                    <form id="checkoutForm">
                        <!-- Thông tin người dùng -->
                        <div class="card mb-3 bg-light">
                            <div class="card-body">
                                <h6 class="mb-3"><i class="bi bi-person-circle me-2"></i>Thông tin người dùng</h6>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label"><strong>Họ và tên</strong></label>
                                        <input type="text" class="form-control" id="hoTenKhachHang" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label"><strong>Email</strong></label>
                                        <input type="email" class="form-control" id="email" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label"><strong>Số điện thoại</strong></label>
                                        <input type="text" class="form-control" id="sdtKhachHang" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ giao hàng</label>
                            <button type="button" class="btn btn-outline-primary btn-sm mb-2" id="btnDoiDiaChi">
                               Đổi địa chỉ
                            </button>

                            <div id="addressDisplay">
                                @if (Model?.DiaChi != null)
                                {
                                    <div class="p-3 border rounded" style="background-color: #2b2b33; border-color: #444 !important;">
                                        <div class="fw-bold text-white">
                                            @Model.DiaChi.Tennguoinhan - @Model.DiaChi.sdtnguoinhan
                                        </div>

                                        <div class="text-white">
                                            @Model.DiaChi.Diachicuthe,
                                            @Model.DiaChi.PhuongxaName,
                                            @Model.DiaChi.QuanhuyenName,
                                            @Model.DiaChi.ThanhphoName
                                        </div>

                                        <small class="text-muted">Địa chỉ mặc định</small>
                                    </div>

                                    <input type="hidden" id="diaChiId" value="@Model.DiaChi.Id" />
                                }
                            </div>
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" id="ghiChu" rows="2" placeholder="Ghi chú cho đơn hàng..."></textarea>
                        </div>

                        <!-- Voucher Section -->
                        <div class="mb-3">
                            <label class="form-label">Mã giảm giá / Voucher</label>
                            <div class="mb-2">
                                <button type="button" class="btn btn-outline-primary w-100" id="btnThemVoucher">
                                    <i class="bi bi-plus-circle me-2"></i>Thêm voucher
                                </button>
                            </div>
                            <div id="voucherInfo" class="d-none alert alert-success mb-2" style="background-color: rgba(16, 185, 129, 0.1); border-color: #10b981; color: #10b981;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong id="voucherName"></strong>
                                        <br>
                                        <small>Mã: <span id="voucherCode"></span> - Giảm: <span id="voucherDiscount"></span></small>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-link text-danger p-0" id="btnXoaVoucher">
                                        <i class="bi bi-x-circle"></i> Xóa
                                    </button>
                                </div>
                            </div>
                            <div id="voucherError" class="d-none alert alert-danger mb-2" style="background-color: rgba(239, 68, 68, 0.1); border-color: #ef4444; color: #ef4444;">
                                <small id="voucherErrorMessage"></small>
                            </div>
                            <input type="hidden" id="selectedVoucherId" />
                            <input type="hidden" id="selectedVoucherDiscount" value="0" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán *</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="phuongThucTT" id="cod" value="COD" checked>
                                    <label class="form-check-label" for="cod">
                                        <i class="bi bi-truck me-1"></i>Thanh toán khi nhận hàng (COD)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="phuongThucTT" id="chuyenKhoan" value="Chuyển khoản ngân hàng">
                                    <label class="form-check-label" for="chuyenKhoan">
                                        <i class="bi bi-bank me-1"></i>Chuyển khoản ngân hàng (PayOS)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Thông tin đơn hàng -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Đơn Hàng Của Bạn</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.SelectedCartItems != null)
                                {
                                    foreach (var item in Model.SelectedCartItems)
                                    {
                                        // SỬA LỖI Ở ĐÂY: Sử dụng List<AnhSanPhamViewModel> thay vì anonymous type
                                        var anhDaiDien = item.ModelSanPham.AnhSanPhams.FirstOrDefault()?.DuongDan ?? "/images/default-product.jpg";
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@anhDaiDien" alt="@item.ModelSanPham.SanPham.TenSanPham" class="product-image me-2">
                                                    <div>
                                                        <small class="d-block fw-bold">@item.ModelSanPham.SanPham.TenSanPham</small>
                                                        <small class="text-muted">
                                                            @item.ModelSanPham.TenModel - @item.ModelSanPham.Mau<br>
                                                            @item.ModelSanPham.RAM?.DungLuongRAM - @item.ModelSanPham.ROM?.DungLuongROM<br>
                                                            Số lượng: @item.SoLuong
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <strong>@string.Format("{0:N0} ₫", item.ThanhTien)</strong>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span>@string.Format("{0:N0} ₫", Model.TongTien)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2" id="voucherDiscountRow" style="display: none !important;">
                        <span>Giảm giá voucher:</span>
                        <span class="text-success" id="voucherDiscountAmount">-0 ₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span>@string.Format("{0:N0} ₫", Model.PhiVanChuyen)</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-danger fs-5" id="tongCong">
                            @string.Format("{0:N0} ₫", Model.TongTien + Model.PhiVanChuyen)
                        </strong>
                    </div>

                    <button type="button" class="btn btn-danger w-100 btn-lg" id="btnXacNhanThanhToan">
                        <i class="bi bi-credit-card me-2"></i>XÁC NHẬN ĐẶT HÀNG
                    </button>

                    <div class="text-center mt-2">
                        <small class="text-muted">Bằng cách đặt hàng, bạn đồng ý với <a href="#">điều khoản</a> của chúng tôi</small>
                    </div>
                </div>
            </div>

            <!-- Hỗ trợ -->
            <div class="card">
                <div class="card-body text-center">
                    <h6><i class="bi bi-headset me-2"></i>Hỗ Trợ 24/7</h6>
                    <p class="mb-1">Hotline: <strong>1900 1000</strong></p>
                    <small class="text-muted">Chúng tôi luôn sẵn sàng hỗ trợ bạn</small>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal đổi địa chỉ với thông tin người dùng -->
<div class="modal fade" id="diaChiModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-geo-alt me-2"></i>Quản lý địa chỉ giao hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
