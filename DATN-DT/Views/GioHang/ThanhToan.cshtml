@section Scripts {
    <script src="~/js/thanhtoan.js" asp-append-version="true"></script>
    <script>
        // CẢI THIỆN: Cleanup backdrop cho tất cả modal khi đóng
        document.addEventListener('DOMContentLoaded', function() {
            // Lắng nghe sự kiện đóng modal cho tất cả modal
            const modals = ['diaChiModal', 'addAddressModalCheckout', 'editAddressModalCheckout', 'voucherListModal', 'voucherDetailModal', 'qrPaymentModal'];
            
            modals.forEach(modalId => {
                const modalEl = document.getElementById(modalId);
                if (modalEl) {
                    modalEl.addEventListener('hidden.bs.modal', function() {
                        // Xóa tất cả backdrop còn lại
                        const backdrops = document.querySelectorAll('.modal-backdrop');
                        backdrops.forEach(backdrop => {
                            backdrop.remove();
                        });
                        
                        // Xóa class modal-open và style khỏi body
                        document.body.classList.remove('modal-open');
                        document.body.style.overflow = '';
                        document.body.style.paddingRight = '';
                    });
                }
            });
        });

        document.addEventListener('DOMContentLoaded', () => {

            // Hàm load thông tin người dùng
            async function loadUserInfoForCheckout() {
                try {
                    const response = await fetch('/UserProfile/GetProfileData');
                    if (response.ok) {
                        const data = await response.json();
                        
                        const hoTenEl = document.getElementById('hoTenKhachHang');
                        const emailEl = document.getElementById('email');
                        const sdtEl = document.getElementById('sdtKhachHang');

                        if (hoTenEl) hoTenEl.value = data.hoTenKhachHang || '';
                        if (emailEl) emailEl.value = data.emailKhachHang || '';
                        if (sdtEl) sdtEl.value = data.sdtKhachHang || '';
                    }
                } catch (error) {
                    console.error('Error loading user info:', error);
                }
            }

            const apiUrl = '@Url.Action("XacNhanThanhToan", "GioHang")';

            // Lấy thẳng ID giỏ hàng chi tiết từ Model (chuẩn nhất)
            @{
                var cartItemIdsList = Model?.SelectedCartItems?.Select(x => x.IdGioHangChiTiet).ToList() ?? new List<int>();
                var cartItemIdsJson = System.Text.Json.JsonSerializer.Serialize(cartItemIdsList);
                var tongTienJson = System.Text.Json.JsonSerializer.Serialize(Model?.TongTien ?? 0);
            }
            const cartItemIds = @Html.Raw(cartItemIdsJson);
            const tongTien = @Html.Raw(tongTienJson);

            const btn = document.getElementById('btnXacNhanThanhToan');
            if (!btn) return;

            // Debug: nhìn ngay xem có ID chưa
            console.log('[Checkout] cartItemIds from Model:', cartItemIds);

            const diaChiIdElInit = document.getElementById('diaChiId');
            if (!diaChiIdElInit || !diaChiIdElInit.value) {
                btn.disabled = true;
                btn.classList.add('disabled');
            }

            // Load thông tin người dùng khi trang load
            loadUserInfoForCheckout();

            // ========== VOUCHER HANDLING ==========
            const tongTienGoc = @Html.Raw(tongTienJson);
            const phiVanChuyen = @Model.PhiVanChuyen;
            let voucherDiscount = 0;
            let voucherId = null;

            // Mở modal danh sách voucher
            document.getElementById('btnThemVoucher')?.addEventListener('click', async function() {
                const modal = new bootstrap.Modal(document.getElementById('voucherListModal'));
                modal.show();
                await loadVoucherList();
            });

            // Load danh sách voucher
            async function loadVoucherList() {
                const container = document.getElementById('voucherListContainer');
                container.innerHTML = '<div class="col-12 text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Đang tải...</span></div></div>';

                try {
                    const response = await fetch('/Voucher/GetActiveVouchers');
                    const result = await response.json();

                    if (result.success && result.data && result.data.length > 0) {
                        voucherListData = result.data;
                        container.innerHTML = '';
                        result.data.forEach((voucher, index) => {
                            const voucherCard = createVoucherCard(voucher, index);
                            container.appendChild(voucherCard);
                        });
                    } else {
                        container.innerHTML = `
                            <div class="col-12">
                                <div class="no-vouchers">
                                    <i class="bi bi-ticket-perforated"></i>
                                    <h5>Hiện tại không có voucher nào</h5>
                                    <p class="text-muted">Vui lòng quay lại sau</p>
                                </div>
                            </div>
                        `;
                    }
                } catch (error) {
                    console.error('Error loading vouchers:', error);
                    container.innerHTML = `
                        <div class="col-12">
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Có lỗi xảy ra khi tải danh sách voucher
                            </div>
                        </div>
                    `;
                }
            }

            // Lưu danh sách voucher để truy cập
            let voucherListData = [];

            // Tạo card voucher
            function createVoucherCard(voucher, index) {
                const col = document.createElement('div');
                col.className = 'col-md-6 col-lg-4';

                const discountText = voucher.loaiGiam === 'PhanTram' 
                    ? `${voucher.giaTri}%` 
                    : `${voucher.giaTri.toLocaleString('vi-VN')} ₫`;

                const conditions = [];
                if (voucher.donHangToiThieu && voucher.donHangToiThieu > 0) {
                    conditions.push(`Đơn tối thiểu: ${voucher.donHangToiThieu.toLocaleString('vi-VN')} ₫`);
                }
                if (voucher.soLuongMoiKhachHang && voucher.soLuongMoiKhachHang > 0) {
                    conditions.push(`${voucher.soLuongMoiKhachHang} lần/KH`);
                } else {
                    conditions.push('Không giới hạn');
                }

                const ngayBatDau = new Date(voucher.ngayBatDau);
                const ngayKetThuc = new Date(voucher.ngayKetThuc);

                col.innerHTML = `
                    <div class="voucher-card" data-voucher-index="${index}">
                        <div class="voucher-card-header">
                            <div class="voucher-code">${voucher.maVoucher}</div>
                            <div class="voucher-discount-badge">${discountText}</div>
                        </div>
                        <div class="voucher-title">${voucher.tenVoucher}</div>
                        <div class="voucher-description">${voucher.moTa || 'Không có mô tả'}</div>
                        <div class="voucher-info-row">
                            <span class="voucher-info-label">Bắt đầu:</span>
                            <span class="voucher-info-value">${ngayBatDau.toLocaleDateString('vi-VN')}</span>
                        </div>
                        <div class="voucher-info-row">
                            <span class="voucher-info-label">Kết thúc:</span>
                            <span class="voucher-info-value">${ngayKetThuc.toLocaleDateString('vi-VN')}</span>
                        </div>
                        <div class="voucher-conditions-preview">
                            ${conditions.map(c => `<span class="voucher-condition-tag">${c}</span>`).join('')}
                        </div>
                    </div>
                `;

                // Thêm event listener
                const card = col.querySelector('.voucher-card');
                card.addEventListener('click', () => selectVoucher(voucher));

                return col;
            }

            // Chọn voucher từ danh sách
            async function selectVoucher(voucher) {
                // Đóng modal danh sách
                const listModal = bootstrap.Modal.getInstance(document.getElementById('voucherListModal'));
                if (listModal) listModal.hide();

                // Validate voucher
                try {
                    const response = await fetch('/Voucher/ValidateVoucher', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            maVoucher: voucher.maVoucher,
                            tongTienDonHang: tongTienGoc,
                            danhSachIdSanPham: cartItemIds
                        })
                    });

                    if (!response.ok) {
                        let errorData;
                        try {
                            errorData = await response.json();
                        } catch (e) {
                            errorData = { message: `Lỗi ${response.status}: ${response.statusText}` };
                        }
                        showVoucherError(errorData.message || `Lỗi ${response.status}: ${response.statusText}`);
                        return;
                    }

                    const result = await response.json();
                    if (result.success) {
                        // Hiển thị modal chi tiết voucher với dữ liệu đã validate
                        showVoucherDetailModal(result.data);
                    } else {
                        showVoucherError(result.message || 'Voucher không hợp lệ');
                    }
                } catch (error) {
                    console.error('Error validating voucher:', error);
                    showVoucherError('Có lỗi xảy ra khi kiểm tra voucher: ' + error.message);
                }
            }

            // Xóa voucher
            document.getElementById('btnXoaVoucher')?.addEventListener('click', function() {
                voucherDiscount = 0;
                voucherId = null;
                document.getElementById('maVoucher').value = '';
                document.getElementById('voucherInfo').classList.add('d-none');
                document.getElementById('voucherError').classList.add('d-none');
                document.getElementById('selectedVoucherId').value = '';
                document.getElementById('selectedVoucherDiscount').value = '0';
                updateTotalWithVoucher();
            });

            // Hàm hiển thị lỗi voucher
            function showVoucherError(message) {
                const errorDiv = document.getElementById('voucherError');
                const errorMessage = document.getElementById('voucherErrorMessage');
                if (errorDiv && errorMessage) {
                    errorMessage.textContent = message;
                    errorDiv.classList.remove('d-none');
                }
            }

            // Hàm hiển thị modal chi tiết voucher
            function showVoucherDetailModal(voucherData) {
                // Điền thông tin vào modal
                document.getElementById('modalVoucherCode').textContent = voucherData.maVoucher;
                document.getElementById('modalVoucherName').textContent = voucherData.tenVoucher;
                document.getElementById('modalVoucherMoTa').textContent = voucherData.moTa || 'Không có mô tả';
                
                // Hiển thị giảm giá
                if (voucherData.loaiGiam === 'PhanTram') {
                    document.getElementById('modalDiscountValue').textContent = voucherData.giaTri + '%';
                    document.getElementById('modalDiscountType').textContent = 'Giảm theo phần trăm';
                } else {
                    document.getElementById('modalDiscountValue').textContent = voucherData.giaTri.toLocaleString('vi-VN') + ' ₫';
                    document.getElementById('modalDiscountType').textContent = 'Giảm theo số tiền';
                }
                
                document.getElementById('modalSoTienGiam').textContent = voucherData.soTienGiam.toLocaleString('vi-VN') + ' ₫';
                
                // Hiển thị ngày tháng
                const ngayBatDau = new Date(voucherData.ngayBatDau);
                const ngayKetThuc = new Date(voucherData.ngayKetThuc);
                document.getElementById('modalNgayBatDau').textContent = ngayBatDau.toLocaleDateString('vi-VN', { 
                    day: '2-digit', 
                    month: '2-digit', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                document.getElementById('modalNgayKetThuc').textContent = ngayKetThuc.toLocaleDateString('vi-VN', { 
                    day: '2-digit', 
                    month: '2-digit', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                // Hiển thị điều kiện
                const conditionsList = document.getElementById('modalConditions');
                conditionsList.innerHTML = '';
                
                // Điều kiện đơn hàng tối thiểu
                if (voucherData.donHangToiThieu && voucherData.donHangToiThieu > 0) {
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-cart-check"></i>
                        <span>Đơn hàng tối thiểu: <strong>${voucherData.donHangToiThieu.toLocaleString('vi-VN')} ₫</strong></span>
                    `;
                    conditionsList.appendChild(conditionItem);
                }
                
                // Giảm tối đa (nếu có)
                if (voucherData.giamToiDa && voucherData.giamToiDa > 0) {
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-tag"></i>
                        <span>Giảm tối đa: <strong>${voucherData.giamToiDa.toLocaleString('vi-VN')} ₫</strong></span>
                    `;
                    conditionsList.appendChild(conditionItem);
                }
                
                // Số lượng sử dụng tổng
                if (voucherData.soLuongSuDung && voucherData.soLuongSuDung > 0) {
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-people"></i>
                        <span>Tổng số lần sử dụng: <strong>${voucherData.soLuongSuDung}</strong> (Đã dùng: ${voucherData.soLuongDaSuDung || 0})</span>
                    `;
                    conditionsList.appendChild(conditionItem);
                }
                
                // Số lượng mỗi khách hàng
                if (voucherData.soLuongMoiKhachHang && voucherData.soLuongMoiKhachHang > 0) {
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-person-check"></i>
                        <span>Mỗi khách hàng được sử dụng tối đa: <strong>${voucherData.soLuongMoiKhachHang} lần</strong></span>
                    `;
                    conditionsList.appendChild(conditionItem);
                } else {
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-person-check"></i>
                        <span>Mỗi khách hàng: <strong>Không giới hạn số lần sử dụng</strong></span>
                    `;
                    conditionsList.appendChild(conditionItem);
                }
                
                // Áp dụng cho
                if (voucherData.apDungCho) {
                    let apDungText = '';
                    switch(voucherData.apDungCho) {
                        case 'TatCa':
                            apDungText = 'Tất cả sản phẩm';
                            break;
                        case 'SanPham':
                            apDungText = 'Sản phẩm cụ thể';
                            break;
                        case 'DanhMuc':
                            apDungText = 'Danh mục sản phẩm';
                            break;
                        case 'ThuongHieu':
                            apDungText = 'Thương hiệu cụ thể';
                            break;
                        default:
                            apDungText = voucherData.apDungCho;
                    }
                    const conditionItem = document.createElement('div');
                    conditionItem.className = 'condition-item';
                    conditionItem.innerHTML = `
                        <i class="bi bi-box-seam"></i>
                        <span>Áp dụng cho: <strong>${apDungText}</strong></span>
                    `;
                    conditionsList.appendChild(conditionItem);
                }
                
                // Lưu dữ liệu voucher để áp dụng khi xác nhận
                window.pendingVoucherData = voucherData;
                
                // Hiển thị modal
                const modal = new bootstrap.Modal(document.getElementById('voucherDetailModal'));
                modal.show();
            }
            
            // Xác nhận áp dụng voucher
            document.getElementById('btnXacNhanVoucher')?.addEventListener('click', function() {
                if (!window.pendingVoucherData) return;
                
                const data = window.pendingVoucherData;
                voucherDiscount = data.soTienGiam;
                voucherId = data.idVoucher;
                
                // Hiển thị thông tin voucher trong form
                document.getElementById('voucherName').textContent = data.tenVoucher;
                document.getElementById('voucherCode').textContent = data.maVoucher;
                const discountText = data.loaiGiam === 'PhanTram' 
                    ? `${data.giaTri}%` 
                    : `${data.giaTri.toLocaleString('vi-VN')} ₫`;
                document.getElementById('voucherDiscount').textContent = discountText;
                
                document.getElementById('voucherInfo').classList.remove('d-none');
                document.getElementById('voucherError').classList.add('d-none');
                
                const selectedVoucherIdEl = document.getElementById('selectedVoucherId');
                const selectedVoucherDiscountEl = document.getElementById('selectedVoucherDiscount');
                
                if (selectedVoucherIdEl) selectedVoucherIdEl.value = voucherId;
                if (selectedVoucherDiscountEl) selectedVoucherDiscountEl.value = voucherDiscount;
                
                // Đóng modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('voucherDetailModal'));
                if (modal) modal.hide();
                
                // Cập nhật tổng tiền
                updateTotalWithVoucher();
                
                // Xóa dữ liệu tạm
                window.pendingVoucherData = null;
            });

            // Xóa voucher
            document.getElementById('btnXoaVoucher')?.addEventListener('click', function() {
                voucherDiscount = 0;
                voucherId = null;
                document.getElementById('voucherInfo').classList.add('d-none');
                document.getElementById('voucherError').classList.add('d-none');
                
                const selectedVoucherIdEl = document.getElementById('selectedVoucherId');
                const selectedVoucherDiscountEl = document.getElementById('selectedVoucherDiscount');
                
                if (selectedVoucherIdEl) selectedVoucherIdEl.value = '';
                if (selectedVoucherDiscountEl) selectedVoucherDiscountEl.value = '0';
                
                updateTotalWithVoucher();
            });

            // Hàm cập nhật tổng tiền với voucher
            function updateTotalWithVoucher() {
                const tongTien = tongTienGoc - voucherDiscount + phiVanChuyen;
                const tongCongEl = document.getElementById('tongCong');
                const voucherDiscountRow = document.getElementById('voucherDiscountRow');
                const voucherDiscountAmount = document.getElementById('voucherDiscountAmount');
                
                if (tongCongEl) {
                    tongCongEl.textContent = tongTien.toLocaleString('vi-VN') + ' ₫';
                }
                
                if (voucherDiscount > 0) {
                    if (voucherDiscountRow) voucherDiscountRow.style.display = 'flex';
                    if (voucherDiscountAmount) voucherDiscountAmount.textContent = `-${voucherDiscount.toLocaleString('vi-VN')} ₫`;
                } else {
                    if (voucherDiscountRow) voucherDiscountRow.style.display = 'none';
                }
            }

            function buildErrorMessage(result) {
                let msg = result?.Message || result?.message || 'Không xác định';
                const errs = result?.Errors || result?.errors;
                if (Array.isArray(errs) && errs.length > 0) {
                    msg += '\n\n' + errs.map((e, i) => `${i + 1}. ${e}`).join('\n');
                }
                return msg;
            }

            btn.addEventListener('click', async () => {

                const form = document.getElementById('checkoutForm');
                if (form && !form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                const diaChiIdEl = document.getElementById('diaChiId');
                const diaChiId = diaChiIdEl?.value ? Number(diaChiIdEl.value) : NaN;
                if (!Number.isFinite(diaChiId) || diaChiId <= 0) {
                    alert('Vui lòng chọn địa chỉ giao hàng trước khi đặt hàng.');
                    return;
                }

                // Dùng trực tiếp mảng ID từ Model
                if (!Array.isArray(cartItemIds) || cartItemIds.length === 0) {
                    alert('Không có sản phẩm nào được chọn để thanh toán.');
                    return;
                }

                // Kiểm tra phương thức thanh toán
                const phuongThucTT = document.querySelector('input[name="phuongThucTT"]:checked')?.value || 'COD';
                
                // Kiểm tra nếu là chuyển khoản (PayOS)
                if (phuongThucTT && (phuongThucTT.toLowerCase().includes('chuyển khoản') || phuongThucTT.toLowerCase().includes('chuyenkhoan'))) {
                    // Hiển thị modal PayOS payment
                    await showQRPaymentModal(diaChiId);
                    return;
                }

                // Xử lý COD như bình thường
                await processCODCheckout(diaChiId);
            });

            // Hàm xử lý thanh toán COD
            async function processCODCheckout(diaChiId) {
                const btn = document.getElementById('btnXacNhanThanhToan');
                btn.disabled = true;

                const payload = {
                    diaChiId: diaChiId,
                    phuongThucTT: 'COD',
                    ghiChu: document.getElementById('ghiChu')?.value?.trim() || '',
                    selectedCartItems: cartItemIds,
                    email: document.getElementById('email')?.value?.trim() || '',
                    tongTien: tongTienGoc - voucherDiscount + phiVanChuyen,
                    idVoucher: voucherId ? parseInt(voucherId) : null,
                    soTienGiamVoucher: voucherDiscount
                };

                console.log('[Checkout] POST', apiUrl, payload);

                try {
                    const res = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const result = await res.json();

                    console.log('[Checkout] Response', res.status, result);

                    const isSuccess = (res.ok && (result?.Success === true || result?.success === true));
                    
                    if (isSuccess) {
                        const maDon = result?.Data?.MaDon || result?.data?.maDon || 
                                     result?.Data?.IdHoaDon || result?.data?.idHoaDon;
                        
                        showSuccessAlert(maDon);
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        
                        const form = document.getElementById('checkoutForm');
                        if (form) {
                            form.reset();
                        }
                        
                        // Redirect sau 3 giây
                        setTimeout(() => {
                            window.location.href = '/DonHang';
                        }, 3000);
                        
                        return;
                    }

                    const isError = (!res.ok || result?.Success === false || result?.success === false);
                    if (isError) {
                        showErrorAlert(buildErrorMessage(result));
                    } else {
                        console.warn('[Checkout] Unexpected response format:', result);
                        showSuccessAlert(null);
                    }
                }
                catch (err) {
                    console.error(err);
                    showErrorAlert('Có lỗi xảy ra khi xử lý đơn hàng. Vui lòng thử lại.');
                }
                finally {
                    btn.disabled = false;
                }
            }

            // Hàm hiển thị modal QR code thanh toán
            async function showQRPaymentModal(diaChiId) {
                const modal = new bootstrap.Modal(document.getElementById('qrPaymentModal'));
                modal.show();

                const content = document.getElementById('qrPaymentContent');
                const btnConfirmPaid = document.getElementById('btnConfirmPaid');
                
                content.innerHTML = `
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p>Đang tạo mã QR thanh toán...</p>
                `;
                btnConfirmPaid.style.display = 'none';

                try {
                    // Tạo đơn hàng với trạng thái "Chờ thanh toán"
                    const payload = {
                        diaChiId: diaChiId,
                        phuongThucTT: 'Chuyển khoản ngân hàng', // Giá trị khớp với backend
                        ghiChu: document.getElementById('ghiChu')?.value?.trim() || '',
                        selectedCartItems: cartItemIds,
                        email: document.getElementById('email')?.value?.trim() || '',
                        tongTien: tongTienGoc - voucherDiscount + phiVanChuyen,
                        idVoucher: voucherId ? parseInt(voucherId) : null,
                        soTienGiamVoucher: voucherDiscount
                    };

                    const res = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const result = await res.json();

                    if (res.ok && (result?.Success === true || result?.success === true)) {
                        const idHoaDon = result?.Data?.IdHoaDon || result?.data?.idHoaDon;
                        const tongTien = result?.Data?.TongTien || result?.data?.tongTien || (tongTienGoc - voucherDiscount + phiVanChuyen);

                        // Tạo payment link PayOS
                        const paymentRes = await fetch('/HoaDon/CreatePayOSPayment', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                idHoaDon: idHoaDon
                            })
                        });

                        const paymentData = await paymentRes.json();

                        if (paymentRes.ok && paymentData.success) {
                            // Đóng modal và chuyển hướng trực tiếp đến trang PayOS
                            const modalInstance = bootstrap.Modal.getInstance(document.getElementById('qrPaymentModal'));
                            if (modalInstance) {
                                modalInstance.hide();
                            }
                            
                            // Chuyển hướng đến trang thanh toán PayOS
                            window.location.href = paymentData.paymentUrl;
                            
                            // Lưu idHoaDon để check sau (nếu cần)
                            window.currentPaymentIdHoaDon = idHoaDon;
                        } else {
                            content.innerHTML = `
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Lỗi tạo payment link:</strong><br>
                                    ${paymentData.message || 'Không thể tạo link thanh toán PayOS. Vui lòng thử lại hoặc liên hệ hỗ trợ.'}
                                </div>
                                <div class="text-center mt-3">
                                    <button type="button" class="btn btn-primary" onclick="location.reload()">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Thử lại
                                    </button>
                                </div>
                            `;
                        }
                    } else {
                        content.innerHTML = `
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                ${result?.Message || result?.message || 'Không thể tạo đơn hàng. Vui lòng thử lại.'}
                            </div>
                        `;
                    }
                } catch (error) {
                    console.error('Error creating payment:', error);
                    content.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Có lỗi xảy ra khi tạo mã QR thanh toán. Vui lòng thử lại.
                        </div>
                    `;
                }
            }

            // Hàm kiểm tra trạng thái thanh toán
            async function checkPaymentStatus(idHoaDon) {
                try {
                    // Kiểm tra trạng thái từ HoaDon API
                    const res = await fetch(`/HoaDon/GetInvoiceDetail?id=${idHoaDon}`);
                    const result = await res.json();

                    if (res.ok && result.success && result.data) {
                        const trangThai = result.data.trangThai?.toLowerCase() || '';
                        const isPaid = trangThai.includes('đã thanh toán') || 
                                      trangThai.includes('đã xác nhận') ||
                                      trangThai.includes('đang giao hàng');

                        if (isPaid) {
                            // Thanh toán thành công
                            if (window.paymentCheckInterval) {
                                clearInterval(window.paymentCheckInterval);
                                window.paymentCheckInterval = null;
                            }
                            
                            const modal = bootstrap.Modal.getInstance(document.getElementById('qrPaymentModal'));
                            if (modal) modal.hide();
                            
                            const maDon = result.data.maDon || `HD${String(idHoaDon).padStart(6, '0')}`;
                            showSuccessAlert(maDon);
                            window.scrollTo({ top: 0, behavior: 'smooth' });
                            
                            // Redirect sau 3 giây
                            setTimeout(() => {
                                window.location.href = '/DonHang';
                            }, 3000);
                        } else {
                            // Chưa thanh toán - hiển thị thông báo
                            console.log('Payment status:', trangThai);
                        }
                    }
                } catch (error) {
                    console.error('Error checking payment status:', error);
                }
            }

            // Hàm copy payment link
            function copyPaymentLink(url) {
                navigator.clipboard.writeText(url).then(() => {
                    showToast('Đã sao chép link thanh toán!', 'success');
                }).catch(err => {
                    console.error('Failed to copy:', err);
                    alert('Không thể sao chép link. Vui lòng copy thủ công: ' + url);
                });
            }

            // Cleanup khi đóng modal
            document.getElementById('qrPaymentModal')?.addEventListener('hidden.bs.modal', function() {
                if (window.paymentCheckInterval) {
                    clearInterval(window.paymentCheckInterval);
                }
            });

            // Hàm hiển thị thông báo thành công
            function showSuccessAlert(maDon) {
                const alertEl = document.getElementById('successAlertCheckout');
                const messageEl = document.getElementById('successMessageCheckout');
                const orderCodeEl = document.getElementById('orderCodeCheckout');
                const alertIconEl = document.getElementById('alertIconCheckout');
                const alertTitleEl = document.getElementById('alertTitleCheckout');
                
                if (alertEl && messageEl) {
                    // Đặt lại class thành success
                    alertEl.classList.remove('alert-danger', 'd-none');
                    alertEl.classList.add('alert-success');
                    
                    // Cập nhật icon và tiêu đề
                    if (alertIconEl) {
                        alertIconEl.className = 'bi bi-check-circle-fill me-3 fs-3 text-success';
                    }
                    if (alertTitleEl) {
                        alertTitleEl.textContent = 'Đặt hàng thành công!';
                    }
                    
                    // Cập nhật nội dung
                    messageEl.textContent = 'Đơn hàng của bạn đã được xử lý thành công.';
                    
                    // Hiển thị mã đơn nếu có
                    if (orderCodeEl && maDon) {
                        orderCodeEl.textContent = 'Mã đơn hàng: ' + maDon;
                    } else if (orderCodeEl) {
                        orderCodeEl.textContent = '';
                    }
                    
                    // Hiển thị alert với animation
                    alertEl.classList.add('show');
                    
                    // Tự động ẩn sau 10 giây
                    setTimeout(() => {
                        if (alertEl.classList.contains('show')) {
                            const bsAlert = new bootstrap.Alert(alertEl);
                            bsAlert.close();
                        }
                    }, 10000);
                }
            }

            // Hàm hiển thị thông báo lỗi
            function showErrorAlert(message) {
                const alertEl = document.getElementById('successAlertCheckout');
                const messageEl = document.getElementById('successMessageCheckout');
                const orderCodeEl = document.getElementById('orderCodeCheckout');
                const alertIconEl = document.getElementById('alertIconCheckout');
                const alertTitleEl = document.getElementById('alertTitleCheckout');
                
                if (alertEl && messageEl) {
                    // Đổi thành alert-danger
                    alertEl.classList.remove('alert-success', 'd-none');
                    alertEl.classList.add('alert-danger');
                    
                    // Cập nhật icon và tiêu đề
                    if (alertIconEl) {
                        alertIconEl.className = 'bi bi-exclamation-triangle-fill me-3 fs-3 text-danger';
                    }
                    if (alertTitleEl) {
                        alertTitleEl.textContent = 'Đặt hàng thất bại!';
                    }
                    
                    // Cập nhật nội dung
                    messageEl.textContent = message;
                    
                    if (orderCodeEl) orderCodeEl.textContent = '';
                    
                    // Hiển thị alert
                    alertEl.classList.add('show');
                    
                    // Tự động ẩn sau 5 giây
                    setTimeout(() => {
                        if (alertEl.classList.contains('show')) {
                            const bsAlert = new bootstrap.Alert(alertEl);
                            bsAlert.close();
                        }
                    }, 5000);
                } else {
                    // Fallback nếu không tìm thấy element
                    alert(message);
                }
            }
        });
    </script>
}
