@model DATN_DT.DTO.hoadondtotest.ThanhToanViewModel
@{
    ViewData["Title"] = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var selectedItems = ViewBag.SelectedItems as string ?? "";
    var tongTien = ViewBag.TongTien ?? 0m;
}

<style>
    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
    }

    .summary-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
    }

    .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-cart-check me-2"></i>Thông Tin Thanh Toán</h4>
                </div>
                <div class="card-body">
                    <form id="checkoutForm">

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ giao hàng</label
                            <button type="button" class="btn btn-outline-primary btn-sm" id="btnDoiDiaChi">
                               Đổi địa chỉ
                            </button>

                            @if (Model?.DiaChi != null)
                            {
                                <div class="p-3 border rounded bg-light">
                                    <div class="fw-bold">
                                        @Model.DiaChi.Tennguoinhan - @Model.DiaChi.sdtnguoinhan
                                    </div>

                                    <div>
                                        @Model.DiaChi.Diachicuthe,
                                        @Model.DiaChi.PhuongxaName,
                                        @Model.DiaChi.QuanhuyenName,
                                        @Model.DiaChi.ThanhphoName
                                    </div>

                                    <small class="text-muted">Địa chỉ mặc định</small>
                                </div>

                                <input type="hidden" id="diaChiId" value="@Model.DiaChi.Id" />
                            }
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" id="ghiChu" rows="2" placeholder="Ghi chú cho đơn hàng..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán *</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="phuongThucTT" id="cod" value="COD" checked>
                                    <label class="form-check-label" for="cod">
                                        <i class="bi bi-truck me-1"></i>Thanh toán khi nhận hàng (COD)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="phuongThucTT" id="chuyenKhoan" value="ChuyenKhoan">
                                    <label class="form-check-label" for="chuyenKhoan">
                                        <i class="bi bi-bank me-1"></i>Chuyển khoản ngân hàng
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Thông tin đơn hàng -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Đơn Hàng Của Bạn</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.SelectedCartItems != null)
                                {
                                    foreach (var item in Model.SelectedCartItems)
                                    {
                                        // SỬA LỖI Ở ĐÂY: Sử dụng List<AnhSanPhamViewModel> thay vì anonymous type
                                        var anhDaiDien = item.ModelSanPham.AnhSanPhams.FirstOrDefault()?.DuongDan ?? "/images/default-product.jpg";
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@anhDaiDien" alt="@item.ModelSanPham.SanPham.TenSanPham" class="product-image me-2">
                                                    <div>
                                                        <small class="d-block fw-bold">@item.ModelSanPham.SanPham.TenSanPham</small>
                                                        <small class="text-muted">
                                                            @item.ModelSanPham.TenModel - @item.ModelSanPham.Mau<br>
                                                            @item.ModelSanPham.RAM?.DungLuongRAM - @item.ModelSanPham.ROM?.DungLuongROM<br>
                                                            Số lượng: @item.SoLuong
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <strong>@string.Format("{0:N0} ₫", item.ThanhTien)</strong>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span>@string.Format("{0:N0} ₫", Model.TongTien)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span>@string.Format("{0:N0} ₫", Model.PhiVanChuyen)</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-danger fs-5">
                            @string.Format("{0:N0} ₫", Model.TongTien + Model.PhiVanChuyen)
                        </strong>
                    </div>

                    <button type="button" class="btn btn-danger w-100 btn-lg" id="btnXacNhanThanhToan">
                        <i class="bi bi-credit-card me-2"></i>XÁC NHẬN ĐẶT HÀNG
                    </button>

                    <div class="text-center mt-2">
                        <small class="text-muted">Bằng cách đặt hàng, bạn đồng ý với <a href="#">điều khoản</a> của chúng tôi</small>
                    </div>
                </div>
            </div>

            <!-- Hỗ trợ -->
            <div class="card">
                <div class="card-body text-center">
                    <h6><i class="bi bi-headset me-2"></i>Hỗ Trợ 24/7</h6>
                    <p class="mb-1">Hotline: <strong>1900 1000</strong></p>
                    <small class="text-muted">Chúng tôi luôn sẵn sàng hỗ trợ bạn</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal loading -->
<div class="modal fade" id="loadingModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Đang xử lý đơn hàng...</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="diaChiModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Chọn địa chỉ giao hàng</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div id="diaChiList" class="list-group">
          <!-- JS render -->
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const apiUrl = '@Url.Action("XacNhanThanhToan", "GioHang")';

            // Lấy thẳng ID giỏ hàng chi tiết từ Model (chuẩn nhất)
            const cartItemIds = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                            Model?.SelectedCartItems?.Select(x => x.IdGioHangChiTiet).ToList() ?? new List<int>()
                    ));

        const tongTien = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model?.TongTien ?? 0));

            const btn = document.getElementById('btnXacNhanThanhToan');
            if (!btn) return;

            // Debug: nhìn ngay xem có ID chưa
            console.log('[Checkout] cartItemIds from Model:', cartItemIds);

            const diaChiIdElInit = document.getElementById('diaChiId');
            if (!diaChiIdElInit || !diaChiIdElInit.value) {
                btn.disabled = true;
                btn.classList.add('disabled');
            }

            const loadingModalEl = document.getElementById('loadingModal');
            const loadingModal = loadingModalEl ? new bootstrap.Modal(loadingModalEl) : null;

            function buildErrorMessage(result) {
                let msg = result?.Message || result?.message || 'Không xác định';
                const errs = result?.Errors || result?.errors;
                if (Array.isArray(errs) && errs.length > 0) {
                    msg += '\n\n' + errs.map((e, i) => `${i + 1}. ${e}`).join('\n');
                }
                return msg;
            }

            btn.addEventListener('click', async () => {

                const form = document.getElementById('checkoutForm');
                if (form && !form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                const diaChiIdEl = document.getElementById('diaChiId');
                const diaChiId = diaChiIdEl?.value ? Number(diaChiIdEl.value) : NaN;
                if (!Number.isFinite(diaChiId)) {
                    alert('Bạn chưa có địa chỉ mặc định. Vui lòng thêm địa chỉ trước khi đặt hàng.');
                    return;
                }

                // Dùng trực tiếp mảng ID từ Model
                if (!Array.isArray(cartItemIds) || cartItemIds.length === 0) {
                    alert('Không có sản phẩm nào được chọn để thanh toán.');
                    return;
                }

                btn.disabled = true;

                const payload = {
                    diaChiId: diaChiId,
                    phuongThucTT: document.querySelector('input[name="phuongThucTT"]:checked')?.value || 'COD',
                    ghiChu: document.getElementById('ghiChu')?.value?.trim() || '',
                    selectedCartItems: cartItemIds,
                    email: document.getElementById('email')?.value?.trim() || '',
                    tongTien: tongTien
                };

                console.log('[Checkout] POST', apiUrl, payload);

                loadingModal?.show();

                try {
                    const res = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const result = await res.json();
                    loadingModal?.hide();

                    console.log('[Checkout] Response', res.status, result);

                    // chú ý case-sensitive (Success/Data)
                    if (res.ok && result?.Success === true) {
                        const maDon = result?.Data?.MaDon || result?.data?.maDon;
                        window.location.href = '/GioHang/CamOn?maDon=' + encodeURIComponent(maDon);
                        return;
                    }

                    alert('Lỗi: ' + buildErrorMessage(result));
                }
                catch (err) {
                    loadingModal?.hide();
                    console.error(err);
                    alert('Có lỗi xảy ra khi xử lý đơn hàng. Vui lòng thử lại.');
                }
                finally {
                    btn.disabled = false;
                }
            });
        });
    </script>
}
