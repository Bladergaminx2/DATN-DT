@{
    ViewData["Title"] = "Quản lý địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Quản lý địa chỉ</h4>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                            <i class="bi bi-plus-circle"></i> Thêm địa chỉ mới
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row diachi-list">
                        <!-- Danh sách địa chỉ sẽ được load bằng JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm địa chỉ -->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAddressModalLabel">Thêm địa chỉ mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addAddressForm">
                    <input type="hidden" id="idKhachHang" value="1" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tennguoinhan">Tên người nhận *</label>
                                <input type="text" class="form-control" id="tennguoinhan" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="sdtnguoinhan">Số điện thoại *</label>
                                <input type="text" class="form-control" id="sdtnguoinhan" required>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="selectTinh">Tỉnh/Thành phố *</label>
                                <select class="form-control" id="selectTinh" required>
                                    <option value="">Chọn Tỉnh/Thành</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="selectQuan">Quận/Huyện *</label>
                                <select class="form-control" id="selectQuan" required>
                                    <option value="">Chọn Quận/Huyện</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="selectPhuong">Phường/Xã *</label>
                                <select class="form-control" id="selectPhuong" required>
                                    <option value="">Chọn Phường/Xã</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="detailInput">Địa chỉ cụ thể *</label>
                        <textarea class="form-control" id="detailInput" rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnSaveAddress">Lưu địa chỉ</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa địa chỉ -->
<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAddressModalLabel">Sửa địa chỉ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editAddressForm">
                    <input type="hidden" id="editId">
                    <input type="hidden" id="editTrangThai">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editTenNguoiNhan">Tên người nhận *</label>
                                <input type="text" class="form-control" id="editTenNguoiNhan" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editSdtNguoiNhan">Số điện thoại *</label>
                                <input type="text" class="form-control" id="editSdtNguoiNhan" required>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="editTinh">Tỉnh/Thành phố *</label>
                                <select class="form-control" id="editTinh" required>
                                    <option value="">Chọn Tỉnh/Thành</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="editQuan">Quận/Huyện *</label>
                                <select class="form-control" id="editQuan" required>
                                    <option value="">Chọn Quận/Huyện</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="editPhuong">Phường/Xã *</label>
                                <select class="form-control" id="editPhuong" required>
                                    <option value="">Chọn Phường/Xã</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="editDiaChiCuThe">Địa chỉ cụ thể *</label>
                        <textarea class="form-control" id="editDiaChiCuThe" rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnUpdateAddress">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/diachi.js"></script>
}
