@{
    ViewData["Title"] = "Quản lý Hóa Đơn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản lý Hóa Đơn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #12121d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            margin-top: 30px;
            max-width: 95%;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f5f5f5;
            font-weight: 600;
        }

        .table-container {
            background-color: #1e1e2a;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        table {
            background-color: transparent;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 0;
        }

        th {
            background-color: #2b2b33 !important;
            color: #ffffff !important;
            font-weight: 600;
            border-bottom: 2px solid #4a90e2;
            padding: 15px 10px;
        }

        td {
            color: #ffffff !important;
            padding: 12px 10px;
            vertical-align: middle;
            border-bottom: 1px solid #2b2b33;
        }

        tr:hover {
            background-color: #2b2b33;
            transition: 0.3s;
        }

        .btn-action {
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin: 2px;
            transition: all 0.3s ease;
        }

        .btn-view {
            background-color: #4a90e2;
            border: none;
            color: white;
        }

        .btn-view:hover {
            background-color: #357ab8;
            transform: translateY(-1px);
        }

        .btn-update-status {
            background-color: #28a745;
            border: none;
            color: white;
        }

        .btn-update-status:hover {
            background-color: #218838;
            transform: translateY(-1px);
        }

        .modal-content {
            background-color: #2b2b33;
            color: white;
            border-radius: 15px;
            border: none;
        }

        .modal-header {
            border-bottom: 1px solid #444;
            padding: 20px;
        }

        .modal-title {
            font-weight: 600;
            color: #4a90e2;
        }

        .modal-body {
            padding: 20px;
            color: #ffffff;
        }

        .modal-body * {
            color: #ffffff;
        }

        .modal-footer {
            border-top: 1px solid #444;
            padding: 20px;
        }

        .form-control {
            background-color: #1e1e2a;
            color: white;
            border: 1px solid #444;
            border-radius: 8px;
            padding: 10px 15px;
        }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            background-color: #1e1e2a;
            color: white;
        }

        .form-label {
            font-weight: 600;
            color: #ddd;
            margin-bottom: 8px;
        }

        .filter-container {
            background-color: #1e1e2a;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-0 {
            background-color: rgba(255, 193, 7, 0.2);
            color: #ffc107;
        }

        .status-1 {
            background-color: rgba(0, 123, 255, 0.2);
            color: #007bff;
        }

        .status-2 {
            background-color: rgba(23, 162, 184, 0.2);
            color: #17a2b8;
        }

        .status-3 {
            background-color: rgba(40, 167, 69, 0.2);
            color: #28a745;
        }

        .status-4 {
            background-color: rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }

        .invoice-item {
            background-color: #2b2b33;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .invoice-item * {
            color: #ffffff;
        }

        .invoice-detail-row {
            display: flex;
            gap: 15px;
            padding: 10px;
            background-color: #1e1e2a;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .invoice-detail-row img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 6px;
        }

        .nav-pills .nav-link {
            color: #aaa;
            background-color: #2b2b33;
            border: 1px solid #444;
            margin-right: 5px;
            margin-bottom: 5px;
        }

        .nav-pills .nav-link.active {
            background-color: #4a90e2;
            color: white;
            border-color: #4a90e2;
        }

        .nav-pills .nav-link:hover {
            color: #fff;
            background-color: #357ab8;
            border-color: #357ab8;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="bi bi-receipt me-2"></i>Quản lý Hóa Đơn</h2>

        <!-- Filter Section -->
        <div class="filter-container">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" id="searchInput" class="form-control" placeholder="Mã đơn, tên khách hàng, SĐT...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" id="fromDate" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" id="toDate" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary w-100" onclick="loadInvoices()">
                        <i class="bi bi-search me-1"></i>Tìm kiếm
                    </button>
                </div>
            </div>

            <!-- Status Filter Tabs -->
            <ul class="nav nav-pills" id="statusFilterTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-status="" type="button">
                        <i class="bi bi-list-ul me-1"></i>Tất cả
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="status0-tab" data-status="0" type="button">
                        <i class="bi bi-hourglass-split me-1"></i>Chờ xác nhận
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="status1-tab" data-status="1" type="button">
                        <i class="bi bi-check-circle me-1"></i>Đã xác nhận
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="status2-tab" data-status="2" type="button">
                        <i class="bi bi-truck me-1"></i>Đang vận chuyển
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="status3-tab" data-status="3" type="button">
                        <i class="bi bi-check2-circle me-1"></i>Giao hàng thành công
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="status4-tab" data-status="4" type="button">
                        <i class="bi bi-x-circle me-1"></i>Hủy đơn hàng
                    </button>
                </li>
            </ul>
        </div>

        <!-- Table Container -->
        <div class="table-container">
            <div id="invoicesTableContainer">
                <p class="text-center text-muted">Đang tải dữ liệu...</p>
            </div>
        </div>
    </div>

    <!-- Modal Chi tiết Hóa đơn -->
    <div class="modal fade" id="invoiceDetailModal" tabindex="-1" aria-labelledby="invoiceDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="invoiceDetailModalLabel">
                        <i class="bi bi-receipt me-2"></i>Chi tiết Hóa đơn
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="invoiceDetailContent">
                    <p class="text-muted">Đang tải chi tiết...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Cập nhật trạng thái -->
    <div class="modal fade" id="updateStatusModal" tabindex="-1" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateStatusModalLabel">
                        <i class="bi bi-pencil-square me-2"></i>Cập nhật trạng thái
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="currentInvoiceId">
                    <div class="mb-3">
                        <label class="form-label">Trạng thái mới</label>
                        <select id="newStatus" class="form-control">
                            <option value="0">Chờ xác nhận</option>
                            <option value="1">Đã xác nhận</option>
                            <option value="2">Đang vận chuyển</option>
                            <option value="3">Giao hàng thành công</option>
                            <option value="4">Hủy đơn hàng</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary" onclick="confirmUpdateStatus()">
                        <i class="bi bi-check-circle me-1"></i>Cập nhật
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        var currentStatusFilter = null;

        // Format tiền
        function formatMoney(amount) {
            return new Intl.NumberFormat('vi-VN').format(amount) + ' ₫';
        }

        // Lấy tên trạng thái từ số
        function getStatusName(statusNum) {
            switch (statusNum) {
                case 0: return 'Chờ xác nhận';
                case 1: return 'Đã xác nhận';
                case 2: return 'Đang vận chuyển';
                case 3: return 'Giao hàng thành công';
                case 4: return 'Hủy đơn hàng';
                default: return 'Không xác định';
            }
        }

        // Load danh sách hóa đơn
        async function loadInvoices() {
            try {
                var search = document.getElementById('searchInput').value;
                var fromDate = document.getElementById('fromDate').value;
                var toDate = document.getElementById('toDate').value;
                var status = currentStatusFilter;

                var url = '/HoaDon/GetInvoices?';
                if (status !== null) url += 'status=' + status + '&';
                if (search) url += 'search=' + encodeURIComponent(search) + '&';
                if (fromDate) url += 'fromDate=' + encodeURIComponent(fromDate) + '&';
                if (toDate) url += 'toDate=' + encodeURIComponent(toDate) + '&';

                const response = await fetch(url);
                const result = await response.json();

                var container = document.getElementById('invoicesTableContainer');
                if (!result.success || !result.data || result.data.length === 0) {
                    container.innerHTML = '<p class="text-center text-muted">Không có hóa đơn nào.</p>';
                    return;
                }

                var html = '<table class="table table-hover">' +
                    '<thead>' +
                    '<tr>' +
                    '<th style="color: #ffffff !important;">Mã đơn</th>' +
                    '<th style="color: #ffffff !important;">Khách hàng</th>' +
                    '<th style="color: #ffffff !important;">Ngày lập</th>' +
                    '<th style="color: #ffffff !important;">Trạng thái</th>' +
                    '<th style="color: #ffffff !important;">Tổng tiền</th>' +
                    '<th style="color: #ffffff !important;">Số lượng SP</th>' +
                    '<th style="color: #ffffff !important;">Thao tác</th>' +
                    '</tr>' +
                    '</thead>' +
                    '<tbody>';

                for (var i = 0; i < result.data.length; i++) {
                    var invoice = result.data[i];
                    var statusClass = 'status-' + invoice.trangThaiSo;
                    var statusName = getStatusName(invoice.trangThaiSo);

                    html += '<tr>' +
                        '<td style="color: #ffffff !important;"><strong>' + (invoice.maDon || '') + '</strong></td>' +
                        '<td style="color: #ffffff !important;">' +
                        '<div>' + (invoice.hoTenKhachHang || '') + '</div>' +
                        '<small class="text-muted" style="color: #aaa !important;">' + (invoice.sdtKhachHang || '') + '</small>' +
                        '</td>' +
                        '<td style="color: #ffffff !important;">' + (invoice.ngayLap || '') + '</td>' +
                        '<td><span class="status-badge ' + statusClass + '">' + statusName + '</span></td>' +
                        '<td style="color: #ffffff !important;"><strong>' + formatMoney(invoice.tongTien || 0) + '</strong></td>' +
                        '<td style="color: #ffffff !important;">' + (invoice.soLuongSanPham || 0) + '</td>' +
                        '<td>' +
                        '<button class="btn btn-view btn-action" onclick="showInvoiceDetail(' + invoice.idHoaDon + ')">' +
                        '<i class="bi bi-eye me-1"></i>Chi tiết</button>' +
                        '<button class="btn btn-update-status btn-action" onclick="openUpdateStatusModal(' + invoice.idHoaDon + ', ' + invoice.trangThaiSo + ')">' +
                        '<i class="bi bi-pencil me-1"></i>Đổi trạng thái</button>' +
                        '</td>' +
                        '</tr>';
                }

                html += '</tbody></table>';
                container.innerHTML = html;
            } catch (error) {
                console.error('Error loading invoices:', error);
                document.getElementById('invoicesTableContainer').innerHTML =
                    '<p class="text-center text-danger">Lỗi khi tải danh sách hóa đơn.</p>';
            }
        }

        // Xem chi tiết hóa đơn
        async function showInvoiceDetail(id) {
            try {
                const response = await fetch('/HoaDon/GetInvoiceDetail?id=' + id);
                const result = await response.json();

                if (!result.success || !result.data) {
                    alert('Không tìm thấy chi tiết hóa đơn');
                    return;
                }

                var invoice = result.data;
                var statusClass = 'status-' + invoice.trangThaiSo;
                var statusName = getStatusName(invoice.trangThaiSo);

                var chiTietHtml = '';
                if (invoice.chiTiet && invoice.chiTiet.length > 0) {
                    for (var i = 0; i < invoice.chiTiet.length; i++) {
                        var item = invoice.chiTiet[i];
                        chiTietHtml += '<div class="invoice-detail-row">' +
                            '<img src="' + (item.hinhAnh || '/images/default-product.jpg') + '" alt="' + (item.tenSanPham || '') + '" ' +
                            'onerror="this.src=\'/images/default-product.jpg\'">' +
                            '<div class="flex-grow-1">' +
                            '<h6 style="color: #ffffff !important;">' + (item.tenSanPham || '') + '</h6>' +
                            '<p class="text-muted mb-1" style="color: #aaa !important;">Model: ' + (item.tenModel || '') + ' - Màu: ' + (item.mau || '') + '</p>' +
                            '<p class="mb-1" style="color: #ffffff !important;">Số lượng: ' + (item.soLuong || 0) + '</p>' +
                            '<p class="mb-1" style="color: #ffffff !important;">Đơn giá: ' + formatMoney(item.donGia || 0) + '</p>' +
                            '<p class="mb-0" style="color: #ffffff !important;"><strong>Thành tiền: ' + formatMoney(item.thanhTien || 0) + '</strong></p>' +
                            '</div>' +
                            '</div>';
                    }
                }

                var detailHtml = '<div class="invoice-item">' +
                    '<h6>Thông tin hóa đơn</h6>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Mã đơn:</strong> ' + (invoice.maDon || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Ngày lập:</strong> ' + (invoice.ngayLap || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Trạng thái:</strong> <span class="status-badge ' + statusClass + '">' + statusName + '</span></p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Phương thức thanh toán:</strong> ' + (invoice.phuongThucThanhToan || 'COD') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Tổng tiền:</strong> <strong class="text-primary">' + formatMoney(invoice.tongTien || 0) + '</strong></p>' +
                    '</div>' +
                    '<div class="invoice-item">' +
                    '<h6>Thông tin khách hàng</h6>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Họ tên:</strong> ' + (invoice.hoTenKhachHang || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>SĐT:</strong> ' + (invoice.sdtKhachHang || '') + '</p>' +
                    '<p class="mb-1" style="color: #ffffff !important;"><strong>Email:</strong> ' + (invoice.emailKhachHang || '') + '</p>' +
                    '</div>' +
                    '<div class="invoice-item">' +
                    '<h6>Chi tiết sản phẩm</h6>' +
                    chiTietHtml +
                    '</div>';

                document.getElementById('invoiceDetailContent').innerHTML = detailHtml;

                var modal = new bootstrap.Modal(document.getElementById('invoiceDetailModal'));
                modal.show();
            } catch (error) {
                console.error('Error loading invoice detail:', error);
                alert('Lỗi khi tải chi tiết hóa đơn');
            }
        }

        // Mở modal cập nhật trạng thái
        function openUpdateStatusModal(id, currentStatus) {
            document.getElementById('currentInvoiceId').value = id;
            document.getElementById('newStatus').value = currentStatus;

            var modal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
            modal.show();
        }

        // Xác nhận cập nhật trạng thái
        async function confirmUpdateStatus() {
            var id = document.getElementById('currentInvoiceId').value;
            var newStatus = parseInt(document.getElementById('newStatus').value);

            if (!id || isNaN(newStatus)) {
                alert('Dữ liệu không hợp lệ');
                return;
            }

            try {
                const response = await fetch('/HoaDon/UpdateStatus?id=' + id, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ TrangThai: newStatus })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message || 'Cập nhật trạng thái thành công!');
                    var modal = bootstrap.Modal.getInstance(document.getElementById('updateStatusModal'));
                    if (modal) modal.hide();
                    loadInvoices();
                } else {
                    alert(result.message || 'Cập nhật trạng thái thất bại!');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('Lỗi khi cập nhật trạng thái');
            }
        }

        // Filter theo trạng thái
        function filterByStatus(status) {
            currentStatusFilter = status === '' ? null : parseInt(status);

            // Update active tab
            var tabs = document.querySelectorAll('#statusFilterTabs .nav-link');
            for (var i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove('active');
                if (tabs[i].getAttribute('data-status') === status) {
                    tabs[i].classList.add('active');
                }
            }

            loadInvoices();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            loadInvoices();

            // Setup status filter tabs
            var statusTabs = document.querySelectorAll('#statusFilterTabs .nav-link');
            for (var i = 0; i < statusTabs.length; i++) {
                statusTabs[i].addEventListener('click', function (e) {
                    var status = this.getAttribute('data-status');
                    filterByStatus(status);
                });
            }

            // Search on Enter
            document.getElementById('searchInput').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    loadInvoices();
                }
            });
        });
    </script>
</body>
</html>

